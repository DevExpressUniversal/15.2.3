<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Gauges">
    <Style TargetType="local:DigitalGaugeControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DigitalGaugeControl">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                        <Grid x:Name="PART_BaseLayoutElement">
                            <Border Padding="{Binding Path=ActualModel.InnerPadding, RelativeSource={RelativeSource TemplatedParent}}">
                                <local:SymbolsPanel DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                                    <local:SymbolsLayoutControl/>
                                </local:SymbolsPanel>
                            </Border>
                            <core:DXContentPresenter Content="{TemplateBinding ActualModel}" />
                            <local:GaugeItemsControl x:Name="PART_Elements" 
                                                     ItemsSource="{TemplateBinding Elements}"
                                                     DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                                     StretchItemsToAvailableSize="False">
                                <local:GaugeItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <local:DigitalGaugeElementsPanel/> 
                                    </ItemsPanelTemplate>
                                </local:GaugeItemsControl.ItemsPanel>
                            </local:GaugeItemsControl>
                        </Grid>                        
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>