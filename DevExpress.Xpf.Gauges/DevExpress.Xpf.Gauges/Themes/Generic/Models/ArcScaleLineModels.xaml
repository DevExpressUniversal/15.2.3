                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core">
    <Style TargetType="local:DefaultArcScaleLineControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DefaultArcScaleLineControl">
                    <Rectangle RenderTransformOrigin="0.5, 0.5" Fill="{Binding Path=Presentation.ActualFill}">
                    </Rectangle>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
