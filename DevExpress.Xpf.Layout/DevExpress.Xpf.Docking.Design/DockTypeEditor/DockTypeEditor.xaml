<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
    xmlns:localVE="clr-namespace:DevExpress.Xpf.Docking.Design;assembly=DevExpress.Xpf.Docking.v15.2.Design">


    <Style x:Key="Dock-button" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="grid">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="border">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="border1">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0.35" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="border" BorderBrush="#FFA9BED7" BorderThickness="1" Background="#FFC6D9EE" />
                        <Border x:Name="border1" BorderBrush="#FFD69FAD" BorderThickness="1" Background="#FFEBBCC8" Visibility="Collapsed" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Dock-button-center" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="grid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="0.7*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*" />
                            <RowDefinition Height="0.2*" />
                        </Grid.RowDefinitions>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="border">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="border1">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="border_Copy">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="border1_Copy">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0.35" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="border" BorderBrush="#FFA9BED7" BorderThickness="1" Background="#FFC6D9EE" Grid.ColumnSpan="2" />
                        <Border x:Name="border1" BorderBrush="#FFD69FAD" BorderThickness="1" Background="#FFEBBCC8" Visibility="Collapsed" Grid.ColumnSpan="2" />
                        <Border x:Name="border_Copy" BorderBrush="#FFA9BED7" BorderThickness="1,0,1,1" Background="#FFC6D9EE" Grid.RowSpan="1" Grid.Row="1" Margin="0,-1,0,0" />
                        <Border x:Name="border1_Copy" BorderBrush="#FFD69FAD" BorderThickness="1,0,1,1" Background="#FFEBBCC8" Visibility="Collapsed" Grid.RowSpan="1" Grid.Row="1" Margin="0,-1,0,0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="DockTypeEditorTemplate" TargetType="localVE:DockTypeEditor">
        <Border Background="White" BorderBrush="#FF8E9299" BorderThickness="1" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="150">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <localVE:DockButton x:Name="PART_TopButton" Content="Button" Style="{StaticResource Dock-button}" Height="14" Grid.ColumnSpan="3" Margin="2" DockType="Top" IsCenter="False"/>
                <localVE:DockButton x:Name="PART_RightButton" Content="Button" Style="{StaticResource Dock-button}" Margin="2,0" Grid.Column="2" d:LayoutOverrides="GridBox" Width="14" Grid.Row="1" DockType="Right" IsCenter="False" />
                <localVE:DockButton x:Name="PART_BottomButton" Content="Button" Style="{StaticResource Dock-button}" Height="14" Margin="2" d:LayoutOverrides="GridBox" Grid.ColumnSpan="3" Grid.Row="2" DockType="Bottom" IsCenter="False"/>
                <localVE:DockButton x:Name="PART_LeftButton" Content="Button" Style="{StaticResource Dock-button}" Margin="2,0" d:LayoutOverrides="GridBox" Grid.Row="1" Width="14" DockType="Left" IsCenter="False" />
                <Grid Margin="0" Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <localVE:DockButton x:Name="PART_CenterTopButton" Content="Button" Style="{StaticResource Dock-button}" Height="10" Margin="1" Grid.Column="1" DockType="Top" IsCenter="True"/>
                    <localVE:DockButton x:Name="PART_CenterRightButton" Content="Button" Style="{StaticResource Dock-button}" Margin="1" Grid.Column="2" Grid.Row="1" Width="10" DockType="Right" IsCenter="True" />
                    <localVE:DockButton x:Name="PART_CenterBottomButton" Content="Button" Style="{StaticResource Dock-button}" Height="10" Margin="1" Grid.Column="1" Grid.Row="2" DockType="Bottom" IsCenter="True" />
                    <localVE:DockButton x:Name="PART_CenterLeftButton" Content="Button" Style="{StaticResource Dock-button}" Margin="1" Grid.Row="1" Width="10" DockType="Left" IsCenter="True"  />
                    <Grid Grid.Row="1" Grid.Column="1" Margin="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.25*" />
                            <RowDefinition Height="0.75*" />
                        </Grid.RowDefinitions>
                        <Border Background="#FFC2C4C7" Grid.RowSpan="2" CornerRadius="1" />
                        <Border Background="#FFE4E5E7" Margin="1,1,1,0" />
                        <Border Background="White" Margin="1,0,1,1" Grid.Row="1" />
                        <localVE:DockButton x:Name="PART_CenterButton" Content="Button" Style="{StaticResource Dock-button-center}" Grid.Row="1" Margin="3,2,3,3" DockType="Fill" IsCenter="True" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </ControlTemplate>
    <Style x:Key="DockTypeEditorStyle" TargetType="localVE:DockTypeEditor">
        <Style.Setters>
            <Setter Property="Template" Value="{StaticResource DockTypeEditorTemplate}" />
        </Style.Setters>
    </Style>
</ResourceDictionary>