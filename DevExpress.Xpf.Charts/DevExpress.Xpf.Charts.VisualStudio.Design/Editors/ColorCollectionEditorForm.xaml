<dx:DXWindow x:Class="DevExpress.Xpf.Charts.VisualStudio.Design.ColorCollectionEditorForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxtk="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"        
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Color Collection Editor"
    x:Name="colorCollectionEditor"
    WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" 
    dx:ThemeManager.ThemeName="Office2007Silver" mc:Ignorable="d" 
    d:DesignHeight="378" d:DesignWidth="642" SizeToContent="WidthAndHeight" Height="Auto" Width="Auto" Activated="DXWindow_Activated">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <dxe:ColorChooser x:Name="colorChooser" Margin="0, 0, 0, -7"></dxe:ColorChooser>
        </Grid>
        <Grid Margin="12,12,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <dxe:ListBoxEdit x:Name="listBoxColors" Grid.ColumnSpan="2" SelectedIndexChanged="listBoxColors_SelectedIndexChanged"
                             ItemsSource="{Binding Path=Colors, ElementName=colorCollectionEditor}">
                <dxe:ListBoxEdit.ItemContainerStyle>
                    <Style TargetType="{x:Type dxe:ListBoxEditItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </dxe:ListBoxEdit.ItemContainerStyle>
                <dxe:ListBoxEdit.ItemTemplate>
                    <DataTemplate>
                        <Border Height="14" Margin="0,1,0,1">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding Path=Color}" />
                            </Border.Background>
                        </Border>
                    </DataTemplate>
                </dxe:ListBoxEdit.ItemTemplate>
            </dxe:ListBoxEdit>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Right">
                <dxe:SpinButton x:Name="btnAdd" Width="37" Height="20" Click="btnAdd_Click">
                    <Image Source="../Images/add.png" HorizontalAlignment="Left" Stretch="None" />
                </dxe:SpinButton>
                <dxe:SpinButton x:Name="btnRemove" Width="37" Height="20" IsEnabled="False" Margin="3, 0, 0, 0" Click="btnRemove_Click">
                    <Image Source="../Images/delete.png" HorizontalAlignment="Left" Stretch="None" />
                </dxe:SpinButton>
                <dxe:SpinButton x:Name="btnUp" Width="37" Height="20" IsEnabled="False" Margin="3, 0, 0, 0" Click="btnUp_Click">
                    <Image Source="../Images/up.png" HorizontalAlignment="Left" Stretch="None" />
                </dxe:SpinButton>
                <dxe:SpinButton x:Name="btnDown" Width="37" Height="20" IsEnabled="False" Margin="3, 0, 0, 0" Click="btnDown_Click">
                    <Image Source="../Images/down.png" HorizontalAlignment="Left" Stretch="None" />
                </dxe:SpinButton>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0, 7, 0, 0" Orientation="Vertical">
            <Border BorderBrush="#FFBBBABA" BorderThickness="1" Height="1" />
            <Border BorderBrush="#FFF6F6FA" BorderThickness="1" Height="1" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,12,12" Orientation="Horizontal" HorizontalAlignment="Right">
            <dxe:SpinButton x:Name="btnOK" Width="75" Height="24" Margin="0, 0, 6, 0" Click="btnOK_Click">OK</dxe:SpinButton>
            <dxe:SpinButton x:Name="btnCancel" Width="75" Height="24" Click="btnCancel_Click">Cancel</dxe:SpinButton>
        </StackPanel>
    </Grid>
</dx:DXWindow>
