<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                    
                    xmlns:dxt="clr-namespace:DevExpress.Xpf.Charts.Themes">

    <SolidColorBrush x:Key="{dxt:ChartBrushesThemeKey ResourceKey=Domain3DBrush}" Color="#FFFFFFFF" />

    <ControlTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=XYDiagram3DWrapperTemplate}" TargetType="ContentControl">
        <Border Margin="0"
                Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}"
                BorderThickness="{TemplateBinding BorderThickness}"              
                BorderBrush="{TemplateBinding BorderBrush}"
                Visibility="{TemplateBinding Visibility}">
            <ContentPresenter />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=SimpleDiagram3DWrapperTemplate}" TargetType="ContentControl">
        <Border Margin="0"
                Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}"
                BorderThickness="{TemplateBinding BorderThickness}"              
                BorderBrush="{TemplateBinding BorderBrush}"
                Visibility="{TemplateBinding Visibility}">
            <ContentPresenter />
        </Border>
    </ControlTemplate>
</ResourceDictionary>