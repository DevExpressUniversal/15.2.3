<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxt="clr-namespace:DevExpress.Xpf.Charts.Themes"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Charts">

    <SolidColorBrush x:Key="{dxt:ChartBrushesThemeKey ResourceKey=SeriesLabelForeground}" Color="#FFFFFFFF" />
    <local:BrushOverlayConverter x:Key="brushConverter"/>
    
    <DataTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=SeriesLabelTemplate}">
        <Border Padding="8,1,8,1" CornerRadius="8,8,8,8" Background="{Binding Path=Color, Converter={StaticResource brushConverter}}">
            <TextBlock Text="{Binding Text}" />
        </Border>
    </DataTemplate>
</ResourceDictionary>