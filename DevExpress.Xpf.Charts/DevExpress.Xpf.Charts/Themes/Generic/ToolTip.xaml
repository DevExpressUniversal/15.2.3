<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxt="clr-namespace:DevExpress.Xpf.Charts.Themes"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Charts">

    <DataTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=ToolTipTemplate}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1" Text="{Binding ToolTipText}" VerticalAlignment="Center"
                       Foreground="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=ToolTipForeground}}"/>
            <local:ChartContentPresenter Grid.Column="0" Focusable="False"  Content="{Binding Hint}"/>
        </Grid>
    </DataTemplate>

    <Style TargetType="{x:Type local:ToolTipControl}">
        <Setter Property="Template" Value="{DynamicResource {dxt:ChartControlThemeKey ResourceKey=ToolTipPresentationTemplate}}"/>
    </Style>

    <DataTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=CrosshairSeriesLabelContentTemplate}">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding HeaderText}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2"
                       Foreground="{Binding Foreground}" 
                       FontWeight="{Binding FontWeight}"
                       FontStyle="{Binding FontStyle}"
                       FontSize="{Binding FontSize}"
                       FontStretch="{Binding FontStretch}"
                       FontFamily="{Binding FontFamily}"
                       Visibility="{Binding HeaderTextVisibility}"/>
            <StackPanel Orientation="Horizontal" Margin="0,2">
            <Grid Width="{DynamicResource {dxt:ChartControlThemeKey ResourceKey=LegendMarkerWidth}}" Height="{DynamicResource {dxt:ChartControlThemeKey ResourceKey=LegendMarkerHeight}}"
                  VerticalAlignment="Top" Margin="0, 3, 0, 0"
                  Visibility="{Binding MarkerVisibility}">
                <Rectangle Stretch="Uniform" Fill="Transparent"/>
                <ContentPresenter Content="{Binding MarkerItem}" ContentTemplate="{Binding RelativeSource={RelativeSource Self}, Path= Content.MarkerTemplate}"/>
            </Grid>
            <TextBlock Grid.Column="1" Text="{Binding Text}" VerticalAlignment="Center" Margin="{DynamicResource {dxt:ChartControlThemeKey ResourceKey=LegendItemTextMargin}}"
                       Foreground="{Binding Foreground}" 
                       FontWeight="{Binding FontWeight}"
                       FontStyle="{Binding FontStyle}"
                       FontSize="{Binding FontSize}"
                       FontStretch="{Binding FontStretch}"
                       FontFamily="{Binding FontFamily}"
                       Visibility="{Binding TextVisibility}"/>
            </StackPanel>
            <TextBlock Text="{Binding FooterText}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2"
                       Foreground="{Binding Foreground}" 
                       FontWeight="{Binding FontWeight}"
                       FontStyle="{Binding FontStyle}"
                       FontSize="{Binding FontSize}"
                       FontStretch="{Binding FontStretch}"
                       FontFamily="{Binding FontFamily}"
                       Visibility="{Binding FooterTextVisibility}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="CrosshairAxisLabelPresentationTemplate">
        <Border Padding="5,1,5,1" Background="{Binding Background}">
            <TextBlock Text="{Binding Text}"
                       Foreground="{Binding Foreground}" 
                       FontWeight="{Binding FontWeight}"
                       FontStyle="{Binding FontStyle}"
                       FontSize="{Binding FontSize}"
                       FontStretch="{Binding FontStretch}"
                       FontFamily="{Binding FontFamily}"
                       />
        </Border>
    </DataTemplate>
</ResourceDictionary>
    