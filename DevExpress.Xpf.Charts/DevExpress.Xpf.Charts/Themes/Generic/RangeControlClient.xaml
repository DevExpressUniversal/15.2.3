<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxt="clr-namespace:DevExpress.Xpf.Charts.Themes"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Charts.RangeControlClient">

    <Style x:Key="RangeControlClientStyle" TargetType="local:ChartRangeControlClient">
        <Setter Property="ArgumentLabelTemplate" Value="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=RangeControlClientLabelTemplate}}" />
        <Setter Property="GridLinesBrush" Value="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=RangeControlClientGridLineBrush}}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="local:ChartRangeControlClient">
                    <local:RangeClientItemsControl x:Name="PART_ItemsContainer" DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                        <local:RangeClientItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <local:RangeClientItemsPanel/>
                            </ItemsPanelTemplate>
                        </local:RangeClientItemsControl.ItemsPanel>
                        <local:RangeClientItemsControl.ItemTemplateSelector>
                            <local:RangeClientItemTemplateSelector>
                                <local:RangeClientItemTemplateSelector.LabelTemplate>
                                    <DataTemplate>
                                        <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Template}"/>
                                    </DataTemplate>
                                </local:RangeClientItemTemplateSelector.LabelTemplate>
                                <local:RangeClientItemTemplateSelector.GridLinesTemplate>
                                    <DataTemplate>
                                        <Path Data="{Binding Geometry}" Stroke="{Binding Brush}" StrokeThickness="1"/> 
                                    </DataTemplate>
                                </local:RangeClientItemTemplateSelector.GridLinesTemplate>
                            </local:RangeClientItemTemplateSelector>
                        </local:RangeClientItemsControl.ItemTemplateSelector>
                    </local:RangeClientItemsControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:DateTimeChartRangeControlClient}" BasedOn="{StaticResource RangeControlClientStyle}" >
        <Setter Property="ArgumentLabelFormatString" Value="{}{0:d}"/>
        <Setter Property="ThumbLabelFormatString" Value="{}{0:d}"/>
    </Style>
    <Style TargetType="{x:Type local:NumericChartRangeControlClient}" BasedOn="{StaticResource RangeControlClientStyle}" >
        <Setter Property="ArgumentLabelFormatString" Value="{}{0}"/>
        <Setter Property="ThumbLabelFormatString" Value="{}{0}"/>
    </Style>

    <Style x:Key="RangeControlClientViewKey" TargetType="{x:Type local:RangeControlClientView}">
        <Setter Property="Brush" Value="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=RangeControlClientViewBrush}}"/>
    </Style>
    <Style TargetType="{x:Type local:RangeControlClientLineView}" BasedOn="{StaticResource RangeControlClientViewKey}">
        <Setter Property="ShowMarkers" Value="True"/>
        <Setter Property="MarkerSize" Value="5"/>
        <Setter Property="MarkerBrush" Value="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=RangeControlClientViewMarkerBrush}}"/>
    </Style>
    
    <Style TargetType="{x:Type local:RangeControlClientAreaView}" BasedOn="{StaticResource RangeControlClientViewKey}">
        <Setter Property="ShowMarkers" Value="False"/>
        <Setter Property="MarkerSize" Value="5"/>
        <Setter Property="MarkerBrush" Value="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=RangeControlClientViewMarkerBrush}}"/>
        <Setter Property="AreaOpacity" Value="0.5"/>
    </Style>
    <Style TargetType="{x:Type local:RangeControlClientBarView}" BasedOn="{StaticResource RangeControlClientViewKey}">
        <Setter Property="BarDistance" Value="2"/>
    </Style>

    

</ResourceDictionary>