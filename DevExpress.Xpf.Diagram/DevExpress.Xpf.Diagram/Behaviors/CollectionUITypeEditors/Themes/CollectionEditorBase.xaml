<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
            xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
            xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:local="clr-namespace:DevExpress.Xpf.Diagram"  >


    <Style x:Key="ImageOpacityTrigger" TargetType="{x:Type Image}">
        <Setter Property="Margin" Value="4" />
        <Setter Property="Image.Opacity" Value="0.5" />
        <Style.Triggers>
            <Trigger Property="Button.IsEnabled" Value="True">
                <Setter Property="Image.Opacity" Value="1.0" />
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="local:CollectionEditorBase">        
        <Setter Property="ItemsControlTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ContentControl Grid.Row="0" Grid.Column="0" Content="{x:Null}" 
                                        ContentTemplate="{Binding Path=(local:CollectionEditorBase.Editor).ItemsControlHeaderTemplate, RelativeSource={RelativeSource Self}}"
                        />

                        <ContentControl Grid.Row="1" Grid.Column="0" Content="{x:Null}" 
                                        ContentTemplate="{Binding Path=(local:CollectionEditorBase.Editor).ItemsListTemplate, RelativeSource={RelativeSource Self}}" 
                        />

                        <ContentControl Grid.Row="2" Grid.Column="0" Content="{x:Null}" 
                                        ContentTemplate="{Binding Path=(local:CollectionEditorBase.Editor).ActionButtonsTemplate, RelativeSource={RelativeSource Self}}" 
                        />
                        <ContentControl Grid.Row="1" Grid.Column="1" Content="{x:Null}" Margin="2,0" 
                                        ContentTemplate="{Binding Path=(local:CollectionEditorBase.Editor).NavigationPanelTemplate, RelativeSource={RelativeSource Self}}" 
                        />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemsControlHeaderTemplate" >
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="Collection Items:" Margin="5,5,5,10"  />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Margin="5,0,0,0" />
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ActionButtonsTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button Content="Add" Command="{Binding Path=(local:CollectionEditorBase.Editor).AddItemCommand, RelativeSource={RelativeSource Self}}" Margin="0,9,2,0" Padding="0,5"  />
                        <Button Grid.Column="1" 
                                    Content="Remove" 
                                    Command="{Binding Path=(local:CollectionEditorBase.Editor).RemoveItemCommand, RelativeSource={RelativeSource Self}}"
                                    Margin="2,9,0,0" Padding="0,5" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="NavigationPanelTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel>
                        <Button Command="{Binding Path=(local:CollectionEditorBase.Editor).MoveUpCommand, RelativeSource={RelativeSource Self}}" Margin="4,0,4,4">
                            <Image Source="{dx:DXImage Image=MoveUp_16x16.png}" Style="{StaticResource ImageOpacityTrigger}" />
                        </Button>
                        <Button Command="{Binding Path=(local:CollectionEditorBase.Editor).MoveDownCommand, RelativeSource={RelativeSource Self}}" Margin="4,0">
                            <Image Source="{dx:DXImage Image=MoveDown_16x16.png}" Style="{StaticResource ImageOpacityTrigger}" />
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="DialogFooterTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <dx:DialogButton DialogResult="OK" />
                            <dx:DialogButton DialogResult="Cancel" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CollectionEditorBase">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <ContentControl Grid.Column="0" Grid.Row="0" Content="{x:Null}"  Margin="12,6,0,6"
                                            ContentTemplate="{Binding ItemsControlTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                                            local:CollectionEditorBase.Editor="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                        />

                        <ContentControl Grid.Column="1" Grid.Row="0" Content="{x:Null}" Margin="0,6,12,6"
                                       ContentTemplate="{Binding ItemDetailedDescriptionTemplateWrapper, RelativeSource={RelativeSource TemplatedParent}}"
                                       local:CollectionEditorBase.Editor="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                        />

                        <dx:DialogFooter>
                            <ContentControl Content="{x:Null}"
                                          ContentTemplate="{Binding DialogFooterTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                                          local:CollectionEditorBase.Editor="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                        </dx:DialogFooter>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

   
</ResourceDictionary>