<#@ template language="C#" hostspecific="true"  #>
<#@ assembly name="System.Core" #>
<#@ import namespace="System.Linq" #>
<#@ import namespace="System.Text" #>
<#@ import namespace="System" #>
<#@ import namespace="System.IO" #>
<#@ import namespace="System.Collections.Generic" #>

using System.Windows;
using System.Windows.Input;
using WinCursor = System.Windows.Forms.Cursor;
using WinCursors = System.Windows.Forms.Cursors;


namespace DevExpress.Diagram.Core {
<#=GenerateDiagramCursors()#>
}
<#+
string GenerateDiagramCursors() {
	string path = Host.ResolvePath("..//Images//Cursors//");
	string[] cursorsNames = Directory.GetFiles(path);
	StringBuilder cursors = new StringBuilder();
	cursors.Append("public static partial class DiagramCursorExtensions {");
	cursors.AppendLine();
	foreach(string cursorPath in cursorsNames) {
		string cursor = Path.GetFileName(cursorPath);
		cursor = cursor.Split('.').First();
		if(cursor.EndsWith("Win"))
			continue;
		cursors.Append(string.Format("	static readonly Cursor {0}Cursor = GetCursor(\"{0}.cur\");", cursor));
		cursors.AppendLine();
		cursors.Append(string.Format("	static readonly WinCursor {0}WinCursor = GetWinCursor(\"{0}.cur\");", cursor));
		cursors.AppendLine();
	}
	cursors.Append("}");
	return cursors.ToString();
}
#>