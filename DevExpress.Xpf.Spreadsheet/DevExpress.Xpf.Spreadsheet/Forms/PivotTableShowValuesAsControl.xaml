<UserControl x:Class="DevExpress.Xpf.Spreadsheet.Forms.PivotTableShowValuesAsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxsps="clr-namespace:DevExpress.Xpf.Spreadsheet" 
             mc:Ignorable="d" 
             Height="100" Width="300"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <dxc:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <dxsps:SpreadsheetControlStringIdConverter x:Key="stringIdConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10,10,12,6" Text="{Binding CalculationType}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Grid Grid.Row="1" Margin="10,0,12,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableShowValuesAsFormBaseField, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <dxe:ComboBoxEdit x:Name="edtBaseField"
                              Grid.Column="1"
                              Margin="0,3,0,3"
                              ItemsSource="{Binding BaseFieldNames}"
                              EditValue="{Binding CurrentBaseFieldName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <Grid Grid.Row="2" Margin="10,0,12,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableShowValuesAsFormBaseItem, Converter={StaticResource stringIdConverter}}" 
                       Visibility="{Binding BaseItemEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ResourceKey=boolToVisibilityConverter}, ConverterParameter=CollapsedOnFalse}"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            <dxe:ComboBoxEdit x:Name="edtBaseItem"
                              Grid.Column="1"
                              Margin="0,3,0,3"
                              ItemsSource="{Binding BaseItemNames}"
                              EditValue="{Binding CurrentBaseItemName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Visibility="{Binding BaseItemEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ResourceKey=boolToVisibilityConverter}, ConverterParameter=CollapsedOnFalse}"/>
        </Grid>
    </Grid>
</UserControl>
