<UserControl x:Class="DevExpress.Xpf.Spreadsheet.Forms.FormatCellsNumberControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"    
      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
      xmlns:dxspscore="clr-namespace:DevExpress.XtraSpreadsheet.Forms;assembly=DevExpress.Spreadsheet.v15.2.Core"
      xmlns:local="clr-namespace:DevExpress.Xpf.Spreadsheet.Forms"
      xmlns:dxsps="clr-namespace:DevExpress.Xpf.Spreadsheet" 
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <dxc:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <dxsps:SpreadsheetControlStringIdConverter x:Key="stringIdConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="246"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,0,0,3"
               Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_FormatCellsFormNumberCategory, Converter={StaticResource stringIdConverter}}"
               HorizontalAlignment="Left"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="105"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <dxe:ListBoxEdit ItemsSource="{Binding NumberCategories}" 
                             SelectedItem="{Binding NumberCategory, Mode=TwoWay}"/>
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GroupBox Margin="0,-5,0,0" 
                          Header="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_FormatCellsFormNumberSample, Converter={StaticResource stringIdConverter}}">
                    <TextBlock Text="{Binding NumberSampleText, Mode=OneWay}" />
                </GroupBox>
                <TextBlock Grid.Row="1"
                           Margin="0,3,0,0"
                           TextWrapping="Wrap"
                           Text="{Binding NumberDescription, Mode=OneWay}"/>
                <local:FormatNumberDecimalControl Grid.Row="1"
                                                  Margin="0,3,0,0"
                                                  Visibility="{Binding NumberDecimalControlVisible, Converter={StaticResource boolToVisibilityConverter}, Mode=OneWay}"/>
                <local:FormatNumberTypeControl Grid.Row="1"
                                               Margin="0,3,0,0"
                                               Visibility="{Binding NumberTypeControlVisible, Converter={StaticResource boolToVisibilityConverter}, Mode=OneWay}"/>
                <local:FormatNumberCustomControl Grid.Row="1"
                                               Margin="0,3,0,0"
                                               Visibility="{Binding NumberCustomControlVisible, Converter={StaticResource boolToVisibilityConverter}, Mode=OneWay}"/>
            </Grid>
        </Grid>
        <TextBlock Grid.Row="2"
                   Margin="0,3,0,0"
                   TextWrapping="Wrap"
                   Text="{Binding CategoryDescription, Mode=OneWay}"/>
    </Grid>
</UserControl>