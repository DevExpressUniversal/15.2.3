<UserControl x:Class="DevExpress.Xpf.Spreadsheet.Forms.OptionsPivotTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxsps="clr-namespace:DevExpress.Xpf.Spreadsheet"
             xmlns:dxspsi="clr-namespace:DevExpress.Xpf.Spreadsheet.Internal"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             Height="500" Width="450"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <dxc:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <dxsps:SpreadsheetControlStringIdConverter x:Key="stringIdConverter" />
        <dxspsi:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,3,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="10,3,0,0" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableName, Converter={StaticResource stringIdConverter}}" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            <dxe:TextEdit Grid.Column="1" 
                          Margin="5,3,0,0"
                          Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
        </Grid>
        <dxc:DXTabControl Margin="5,5" Grid.Row="1" x:Name="tabControl" MinHeight="300">
            <dxc:DXTabControl.Items>
                <dxc:DXTabItem x:Name="tabLayoutAndFormat" Header="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTabLayoutAndFormat, Converter={StaticResource stringIdConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatLayout, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <dxe:CheckEdit Grid.Row="1" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatMergeAndCenterCells, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding MergeItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Grid Grid.Row="2" Margin="0, 0, 0, 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Margin="10,3,0,3"    
                                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatIndentRowLabels, Converter={StaticResource stringIdConverter}}" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"/>
                            <dxe:SpinEdit 
                                       Grid.Column="1"
                                       Margin="5,3,0,3"
                                       AllowNullInput="True"
                                       IsFloatValue="False"
                                       Value="{Binding Indent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock 
                                       Grid.Column="2" 
                                       Margin="5,3,0,3"    
                                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatCharacters, Converter={StaticResource stringIdConverter}}" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Separator Width="375" HorizontalAlignment="Left" Grid.Row="3" Margin="0,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Margin="10,3,0,3"
                                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatReportFilterArea, Converter={StaticResource stringIdConverter}}" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"/>
                            <dxe:ComboBoxEdit Grid.Column="1"
                                              Margin="3,3,0,3" 
                                              ItemsSource="{Binding FieldsReportFilterList}"
                                              SelectedItem="{Binding FieldsReportFilterAreaMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              IsTextEditable="False"/>
                        </Grid>
                        <Grid Grid.Row="5" Margin="10, 0, 0, 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="75"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Margin="0,3,0,3"    
                                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatReportFilterFields, Converter={StaticResource stringIdConverter}}" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                                       Margin="3,3,0,3"    
                                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatColumn, Converter={StaticResource stringIdConverter}}"
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"
                                       Visibility="{Binding ColumnTextVisible, Converter={StaticResource ResourceKey=boolToVisibilityConverter}, ConverterParameter=HiddenOnFalse}"/>
                            <TextBlock Grid.Column="1" 
                                       Margin="3,3,0,3"    
                                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatRow, Converter={StaticResource stringIdConverter}}"
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"
                                       Visibility="{Binding RowTextVisible, Converter={StaticResource ResourceKey=boolToVisibilityConverter}, ConverterParameter=HiddenOnFalse}"/>
                            <dxe:SpinEdit Grid.Column="3"
                                          Margin="3,3,0,3"
                                          AllowNullInput="True"
                                          IsFloatValue="False"
                                          Value="{Binding PageWrap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatFormat, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="75"/>
                            </Grid.ColumnDefinitions>
                            <dxe:CheckEdit Grid.Column="0"
                                           Margin="10,3,0,0" 
                                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatErrorValuesShow, Converter={StaticResource stringIdConverter}}"
                                           EditValue="{Binding ShowError, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <dxe:TextEdit Grid.Column="1" 
                                          Margin="3,3,0,0"
                                          Text="{Binding ErrorCaption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding ErrorCaptionEnabled, Mode=OneWay, UpdateSourceTrigger=LostFocus}"/>
                        </Grid>
                        <Grid Grid.Row="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="75"/>
                            </Grid.ColumnDefinitions>
                            <dxe:CheckEdit Grid.Column="0"
                                           Margin="10,3,0,0" 
                                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatEmptyCellsShow, Converter={StaticResource stringIdConverter}}"
                                           EditValue="{Binding ShowMissing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <dxe:TextEdit Grid.Column="1" 
                                          Margin="3,3,0,0"
                                          Text="{Binding MissingCaption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding MissingCaptionEnabled, Mode=OneWay, UpdateSourceTrigger=LostFocus}"/>
                        </Grid>
                        <Separator Width="375" HorizontalAlignment="Left" Grid.Row="9" Margin="0,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        <dxe:CheckEdit Grid.Row="10" 
                                       Grid.Column="0" 
                                       Margin="10,3,0,0" 
                                       Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatAutofitColumnWidths, Converter={StaticResource stringIdConverter}}"
                                       EditValue="{Binding UseAutoFormatting, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="11" 
                                       Grid.Column="0" 
                                       Margin="10,3,0,0" 
                                       Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableLayoutAndFormatPreserveCellFormatting, Converter={StaticResource stringIdConverter}}"
                                       EditValue="{Binding PreserveFormatting, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </dxc:DXTabItem>
                <dxc:DXTabItem x:Name="tabTotalsAndFilters" Header="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTabTotalsAndFilters, Converter={StaticResource stringIdConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTotalsAndFiltersGrandTotals, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <dxe:CheckEdit Grid.Row="1" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTotalsAndFiltersRowGrandTotals, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding RowGrandTotals, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="2" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTotalsAndFiltersColumnsGrandTotals, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ColumnGrandTotals, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTotalsAndFiltersFilters, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <dxe:CheckEdit Grid.Row="4" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTotalsAndFiltersSubtotalPageItems, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding SubtotalHiddenItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding SubtotalHiddenItemsEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="5" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTotalsAndFiltersMultipleFilters, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding MultipleFieldFilters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTotalsAndFiltersSorting, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <dxe:CheckEdit Grid.Row="7" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTotalsAndFiltersUseCustomList, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding CustomListSort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </dxc:DXTabItem>
                <dxc:DXTabItem x:Name="tabDisplay" Header="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTabDisplay, Converter={StaticResource stringIdConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!--<RowDefinition Height="Auto"/>-->
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayDisplay, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <dxe:CheckEdit Grid.Row="1" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayExpandCollapsButtons, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ShowDrill, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Separator Width="375" HorizontalAlignment="Left" Grid.Row="2" Margin="0,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        <dxe:CheckEdit Grid.Row="3" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayContextualTooltips, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ShowDataTips, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="4" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayPropertiesInTooltips, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ShowMemberPropertyTips, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding ShowMemberPropertyTipsEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Separator Width="375" HorizontalAlignment="Left" Grid.Row="5" Margin="0,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        <dxe:CheckEdit Grid.Row="6" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayFieldCaptionsFilterDropDowns, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ShowHeaders, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <!--<dxe:CheckEdit Grid.Row="7" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayClassicPivotTableLayout, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding GridDropZones, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->
                        <dxe:CheckEdit Grid.Row="7" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayShowValuesRow, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ShowValuesRow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding ShowValuesRowEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Separator Width="375" HorizontalAlignment="Left" Grid.Row="8" Margin="0,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        <dxe:CheckEdit Grid.Row="9" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayItemsNoDataRows, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ShowEmptyRow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding ShowEmptyRowEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="10" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayItemsNoDataColumns, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ShowEmptyColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding ShowEmptyColumnEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Separator Width="375" HorizontalAlignment="Left" Grid.Row="11" Margin="0,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        <dxe:CheckEdit Grid.Row="12" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayItemLabelsWhenNoFieldsInValuesArea, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ShowItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding ShowItemsEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Grid Grid.Row="13">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplayFieldList, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="14" Margin="10,3,0,3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <RadioButton Margin="0,3,0,3" 
                         Grid.Row="0" 
                         Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplaySortAToZ, Converter={StaticResource stringIdConverter}}"
                         IsChecked="{Binding Path=FieldListSortAscending, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <RadioButton Margin="0,3,0,3" 
                         Grid.Row="1" 
                         Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDisplaySortInDataSourceOrder, Converter={StaticResource stringIdConverter}}" 
                         IsChecked="{Binding Path=FieldListSortAscending, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource InverseBoolConverter}}"/>
                        </Grid>
                    </Grid>
                </dxc:DXTabItem>
                <dxc:DXTabItem x:Name="tabPrinting" Header="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTabPrinting, Converter={StaticResource stringIdConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTablePrintingPrint, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <dxe:CheckEdit Grid.Row="1" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTablePrintingExpandCollapseButtonDisplayedPivotTable, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding PrintDrill, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="2" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTablePrintingRepeatRowLabels, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ItemPrintTitles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="3" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTablePrintingSetPrintTitles, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding FieldPrintTitles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </dxc:DXTabItem>
                <dxc:DXTabItem x:Name="tabData" Header="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTabData, Converter={StaticResource stringIdConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDataPivotTableData, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <dxe:CheckEdit Grid.Row="1" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDataSaveSourceData, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding SaveData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="2" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDataEnableShowDetails, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding EnableDrill, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <dxe:CheckEdit Grid.Row="3" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDataRefreshData, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding RefreshOnLoad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDataRetainItemsDeleted, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Margin="0,3,0,3"
                                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDataNumberOfItemsToRetainPerField, Converter={StaticResource stringIdConverter}}" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center" />
                            <dxe:ComboBoxEdit Grid.Column="1"
                                              Margin="3,3,0,3" 
                                              ItemsSource="{Binding MissingItemsLimitList}"
                                              SelectedItem="{Binding MissingItemsLimitMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              IsTextEditable="False"/>
                        </Grid>
                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDataWhatIfAnalysis, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <dxe:CheckEdit Grid.Row="7" 
                           Grid.Column="0" 
                           Margin="10,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableDataEnableCellEditing, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding EditData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding EditDataEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </dxc:DXTabItem>
                <dxc:DXTabItem x:Name="tabAltText" Header="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableTabAltText, Converter={StaticResource stringIdConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableAltTextTitle, Converter={StaticResource stringIdConverter}}" 
                                                HorizontalAlignment="Left" 
                                                VerticalAlignment="Center"/>
                        <dxe:TextEdit Grid.Row="1" 
                                      Margin="0,3,0,3"
                                      Text="{Binding AltText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                        <TextBlock Grid.Row="2" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableAltTextDescription, Converter={StaticResource stringIdConverter}}" 
                                                HorizontalAlignment="Left" 
                                                VerticalAlignment="Center"/>
                        <dxe:TextEdit Grid.Row="3" 
                                      Margin="0,3,0,3"
                                      Text="{Binding AltTextSummary, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                      VerticalContentAlignment="Top"
                                      TextWrapping="Wrap"
                                      AcceptsReturn="True"/>
                        <TextBlock Grid.Row="4" Margin="0,3,0,3"
                                                Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OptionsPivotTableAltTextDescriptionText, Converter={StaticResource stringIdConverter}}" 
                                                HorizontalAlignment="Left" 
                                                VerticalAlignment="Center"
                                                TextAlignment="Left"
                                                TextWrapping="Wrap" />
                    </Grid>
                </dxc:DXTabItem>
            </dxc:DXTabControl.Items>
        </dxc:DXTabControl>
    </Grid>
</UserControl>
