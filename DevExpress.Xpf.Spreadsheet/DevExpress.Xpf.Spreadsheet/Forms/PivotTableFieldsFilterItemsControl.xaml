<UserControl x:Class="DevExpress.Xpf.Spreadsheet.Forms.PivotTableFieldsFilterItemsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxsps="clr-namespace:DevExpress.Xpf.Spreadsheet" 
             mc:Ignorable="d" 
             Width="300" Height="300"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <dxc:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <dxsps:SpreadsheetControlStringIdConverter x:Key="stringIdConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <dxe:ListBoxEdit x:Name="lbItems"
                         Grid.Row="0"
                         Margin="5,5,5,0"
                         StyleSettings="{Binding ElementName='chkListBoxItems'}" >
        </dxe:ListBoxEdit>
        <dxe:CheckedListBoxEditStyleSettings x:Name="chkListBoxItems" />
        <dxe:CheckEdit x:Name="chkEdit"
                       Grid.Row="1"
                       Margin="5,5,5,0"
                       Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTablePageFieldFilterItemsSelectMultipleItems, Converter={StaticResource stringIdConverter}}"
                       EditValue="{Binding SelectMultipleItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                       Visibility="{Binding SelectMultipleItemsVisible, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ResourceKey=boolToVisibilityConverter}, ConverterParameter=CollapsedOnFalse}"/>
    </Grid>
</UserControl>
