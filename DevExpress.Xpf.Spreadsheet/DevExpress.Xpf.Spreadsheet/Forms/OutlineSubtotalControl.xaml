<UserControl x:Class="DevExpress.Xpf.Spreadsheet.Forms.OutlineSubtotalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxsps="clr-namespace:DevExpress.Xpf.Spreadsheet" 
             mc:Ignorable="d" 
             Width="230"
             d:DesignHeight="300" >
    <UserControl.Resources>
        <dxsps:SpreadsheetControlStringIdConverter x:Key="stringIdConverter" />
    </UserControl.Resources>
    <Grid Margin="5,5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" 
                   Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OutlineSubtotalFormAtEachChangeIn, Converter={StaticResource stringIdConverter}}" 
                   HorizontalAlignment="Left"/>
        <dxe:ComboBoxEdit Grid.Row="1" 
                          Margin="0,3,0,0"
                          ItemsSource="{Binding ColumnNames}"
                          SelectedIndex="0" />
        <TextBlock Grid.Row="2" 
                   Margin="0,3,0,0"
                   Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OutlineSubtotalFormUseFunction, Converter={StaticResource stringIdConverter}}" 
                   HorizontalAlignment="Left"/>
        <dxe:ComboBoxEdit Grid.Row="3" 
                          Margin="0,3,0,0"
                          ItemsSource="{Binding FunctionItems, Mode=OneWay}"
                          SelectedIndex="{Binding FunctionIndex, Mode=TwoWay}" 
                          SelectedItem="{Binding FunctionText, Mode=OneWayToSource}"/>
        <TextBlock Grid.Row="4" 
                   Margin="0,3,0,0"
                   Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OutlineSubtotalFormAddSubtotalTo, Converter={StaticResource stringIdConverter}}" 
                   HorizontalAlignment="Left"/>
        <dxe:ListBoxEdit Grid.Row="5"
                         x:Name="lbColumnIndex"
                         StyleSettings="{Binding ElementName='chkListBoxColumnIndex'}"
                         Height="120"
                         Margin="0,3,0,0"
                         ItemsSource="{Binding ColumnNames, Mode=OneWay}"
                         EditValueChanged="OnEditValueChanged" />
        <dxe:CheckedListBoxEditStyleSettings x:Name="chkListBoxColumnIndex"/>
        <dxe:CheckEdit Grid.Row="6"
                       Margin="0,3,0,0" 
                       Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OutlineSubtotalFormReplaceCurrentSubtotal, Converter={StaticResource stringIdConverter}}"
                       EditValue="{Binding ReplaceCurrentSubtotals, Mode=TwoWay}" />
        <dxe:CheckEdit Grid.Row="7"
                       Margin="0,3,0,0" 
                       Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OutlineSubtotalFormPageBreakBetweenGroups, Converter={StaticResource stringIdConverter}}"
                       EditValue="{Binding PageBreakBeetwenGroups, Mode=TwoWay}" />
        <dxe:CheckEdit Grid.Row="8"
                       Margin="0,3,0,0" 
                       Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_OutlineSubtotalFormSummaryBelowData, Converter={StaticResource stringIdConverter}}"
                       EditValue="{Binding ShowRowSumsBelow, Mode=TwoWay}" />
    </Grid>
</UserControl>
