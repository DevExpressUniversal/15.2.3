<dxc:DXWindow x:Class="DevExpress.Xpf.Spreadsheet.Forms.FieldsPanelPivotTableControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
      xmlns:dxsps="clr-namespace:DevExpress.Xpf.Spreadsheet" 
      mc:Ignorable="d" 
      Width="396" Height="611" MinWidth="300" MinHeight="300" MaxHeight="900" MaxWidth="900" ShowIcon="False" SizeToContent="Manual" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ScrollViewer.CanContentScroll="True">

    <dxc:DXWindow.Resources>
        <dxsps:SpreadsheetControlStringIdConverter x:Key="stringIdConverter" />
        <Style x:Key="GridSplitterStyle1" TargetType="{x:Type GridSplitter}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridSplitter}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Canvas Margin="0,5,0,0" RenderOptions.EdgeMode="Aliased" UseLayoutRounding="True"
                                    Height="10" VerticalAlignment="Center"
                                    Width="35" HorizontalAlignment="Center">
                                <Line X1="0" X2="35" Y1="0" Y2="0"
                                      Stroke="White" StrokeThickness="1.5"/>
                                <Line X1="0" X2="35" Y1="1" Y2="1"
                                      Stroke="#A0A0A0" StrokeThickness="1.5"/>
                            </Canvas>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </dxc:DXWindow.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="0.5*" MinHeight="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="70"/>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock VerticalAlignment="Center" Grid.Row="0" 
                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableFieldsFormChooseFields, Converter={StaticResource stringIdConverter}}" />
        <dxe:ListBoxEdit x:Name="lstFields" Grid.Row="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowItemHighlighting="False" />
        
        <GridSplitter Margin="0,5,0,0" x:Name="splitter" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Cursor="SizeNS" Style="{DynamicResource GridSplitterStyle1}" />

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock VerticalAlignment="Center" Grid.ColumnSpan="3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableFieldsFormDragFields, Converter={StaticResource stringIdConverter}}" />

            <Image x:Name="iconFilters" Margin="5,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" MaxHeight="16" MaxWidth="16" Grid.Row="2" Grid.Column="0" Source="pack://application:,,,/DevExpress.Xpf.Spreadsheet.v15.2;component/Images/PivotFieldListFilter_16x16.png" />
            <TextBlock Margin="30,5,0,0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableFieldsFilters, Converter={StaticResource stringIdConverter}}" />
            <Image x:Name="iconColumns" Margin="5,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" MaxHeight="16" MaxWidth="16"  Grid.Row="2" Grid.Column="2" Source="pack://application:,,,/DevExpress.Xpf.Spreadsheet.v15.2;component/Images/PivotFieldListColumn_16x16.png" />
            <TextBlock Margin="30,5,0,0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableFieldsColumns, Converter={StaticResource stringIdConverter}}" />

            <dxe:ListBoxEdit x:Name="lstFilters" Margin="0,10,0,0" Grid.Row="3" Grid.Column="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowItemHighlighting="False" />
            <dxe:ListBoxEdit x:Name="lstColumns" Margin="0,10,0,0" Grid.Row="3" Grid.Column="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowItemHighlighting="False"/>

            <Image x:Name="iconRows" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" MaxHeight="16" MaxWidth="16" Grid.Row="5" Grid.Column="0" Source="pack://application:,,,/DevExpress.Xpf.Spreadsheet.v15.2;component/Images/PivotFieldListRow_16x16.png" />
            <TextBlock Margin="30,0,0,0" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableFieldsRows, Converter={StaticResource stringIdConverter}}" />
            <Image x:Name="iconValues" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" MaxHeight="16" MaxWidth="16" Grid.Row="5" Grid.Column="2" Source="pack://application:,,,/DevExpress.Xpf.Spreadsheet.v15.2;component/Images/PivotFieldListData_16x16.png" />
            <TextBlock Margin="30,0,0,0" VerticalAlignment="Center" Grid.Row="5" Grid.Column="2" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableFieldsValues, Converter={StaticResource stringIdConverter}}" />

            <dxe:ListBoxEdit x:Name="lstRows" Margin="0,5,0,0" Grid.Row="6" Grid.Column="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowItemHighlighting="False"/>
            <dxe:ListBoxEdit x:Name="lstValues" Margin="0,5,0,0" Grid.Row="6" Grid.Column="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowItemHighlighting="False"/>
        </Grid>
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="30" />
            </Grid.RowDefinitions>
            <dxe:CheckEdit x:Name="chkDeferUpdate" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Column="0"
                              Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableFieldsDeferLayoutUpdate, 
                              Converter={StaticResource stringIdConverter}}" EditValue="{Binding DeferLayoutUpdate, UpdateSourceTrigger=PropertyChanged}"/>
            <Button x:Name="btnUpdate" VerticalAlignment="Center" HorizontalAlignment="Right" Width="72" Height="22" Grid.Column="1" 
                       Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableFieldsButtonUpdate, 
                       Converter={StaticResource stringIdConverter}}" Click="btnUpdate_Click" IsEnabled="{Binding DeferLayoutUpdate}" />
        </Grid>
   </Grid>
</dxc:DXWindow>
