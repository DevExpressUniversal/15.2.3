<UserControl x:Class="DevExpress.Xpf.Spreadsheet.Forms.PivotTableTop10FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxsps="clr-namespace:DevExpress.Xpf.Spreadsheet"
             xmlns:dxspsi="clr-namespace:DevExpress.Xpf.Spreadsheet.Internal"
             mc:Ignorable="d" 
             Width="450" Height="60"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <dxc:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <dxsps:SpreadsheetControlStringIdConverter x:Key="stringIdConverter" />
        <dxspsi:DecimalToDoubleConverter x:Key="decimalToDoubleConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10,10,12,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,3,0,3" Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableTop10FilterFormShow, Converter={StaticResource stringIdConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Separator Margin="10,3,0,3" Grid.Column="1" VerticalAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1" Margin="10,0,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <dxe:ComboBoxEdit Grid.Column="0" 
                              Margin="10,0,0,0"
                              ItemsSource="{Binding TopBottomList}"
                              EditValue="{Binding FilterByTop, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMember="Text" 
                              ValueMember="Value"/>
            <dxe:SpinEdit Grid.Column="1" 
                          Margin="10,0,0,0"
                          AllowNullInput="True"
                          EditValue="{Binding Value, Mode=TwoWay, Converter={StaticResource decimalToDoubleConverter}, UpdateSourceTrigger=PropertyChanged}"
                          HorizontalAlignment="Stretch" />
            <dxe:ComboBoxEdit Grid.Column="2" 
                              Margin="10,0,0,0"
                              ItemsSource="{Binding FilterTypesDataSource}"
                              EditValue="{Binding FilterTypeValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="3" 
                       Margin="10,3,0,3" 
                       Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PivotTableTop10FilterFormBy, Converter={StaticResource stringIdConverter}}" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            <dxe:ComboBoxEdit Grid.Column="4" 
                              Margin="10,0,0,0"
                              ItemsSource="{Binding DataFieldNames}"
                              EditValue="{Binding CurrentDataFieldName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </Grid>
</UserControl>
