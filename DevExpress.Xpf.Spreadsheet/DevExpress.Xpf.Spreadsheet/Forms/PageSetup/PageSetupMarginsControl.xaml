<UserControl x:Class="DevExpress.Xpf.Spreadsheet.Forms.PageSetupMarginsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxspsi="clr-namespace:DevExpress.Xpf.Spreadsheet.Internal"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <dx:BoolInverseConverter x:Key="BoolInverseConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <dxspsi:PageMarginsPreviewControl Grid.Row="0" 
                  TopMargin="{Binding TopMargin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  BottomMargin="{Binding BottomMargin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  LeftMargin="{Binding LeftMargin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  RightMargin="{Binding RightMargin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  HeaderMargin="{Binding HeaderMargin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  FooterMargin="{Binding FooterMargin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  CenterHorizontally="{Binding CenterHorizontally, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  CenterVertically="{Binding CenterVertically, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  OrientationPortrait="{Binding OrientationPortrait, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
        <Grid Grid.Row="1">
            <dxspsi:PageSetupPrintButtonsControl/>
        </Grid>
    </Grid>
</UserControl>
