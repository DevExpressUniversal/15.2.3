<UserControl x:Class="DevExpress.Xpf.Spreadsheet.Forms.PageSetupHeaderFooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxsps="clr-namespace:DevExpress.Xpf.Spreadsheet" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxspsi="clr-namespace:DevExpress.Xpf.Spreadsheet.Internal"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" 
             Loaded="OnControlLoaded">
    <UserControl.Resources>
        <dxsps:SpreadsheetControlStringIdConverter x:Key="stringIdConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <dxspsi:HeaderFooterPreviewControl x:Name="headerPreview"
                                               HeaderFooterValue="{Binding OddHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                               Provider="{Binding Provider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <TextBlock Grid.Row="1" 
                   Margin="0,3,0,0"
                   Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PageSetupFormHeaderFooterHeader, Converter={StaticResource stringIdConverter}}" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"/>
        <dxe:ComboBoxEdit Grid.Row="2" 
                          Margin="0,3,0,0"
                          IsTextEditable="False"
                          ItemsSource="{Binding PredefinedHeaderFooterList}"
                          EditValue="{Binding PredefinedHeaderValueForList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEnabled="{Binding PredefinedHeaderFooterListEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                          EditValueChanged="OnHeaderValueChanged"/>
        <Button Grid.Row="3" 
                x:Name="btnCustomHeaderFooter" 
                HorizontalAlignment="Center"
                Margin="0,3,0,0" 
                Click="OnCustomHeaderFooterClick"
                Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PageSetupFormHeaderFooterCustomHeaderFooter, Converter={StaticResource stringIdConverter}}" />
        <TextBlock Grid.Row="4" 
                   Margin="0,3,0,0"
                   Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PageSetupFormHeaderFooterFooter, Converter={StaticResource stringIdConverter}}" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"/>
        <dxe:ComboBoxEdit Grid.Row="5" 
                          Margin="0,3,0,0"
                          IsTextEditable="False"
                          ItemsSource="{Binding PredefinedHeaderFooterList}"
                          EditValue="{Binding PredefinedFooterValueForList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEnabled="{Binding PredefinedHeaderFooterListEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                          EditValueChanged="OnFooterValueChanged"/>
        <Grid Grid.Row="6">
            <dxspsi:HeaderFooterPreviewControl x:Name="footerPreview"
                                               HeaderFooterValue="{Binding OddFooter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                               Provider="{Binding Provider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <dxe:CheckEdit Grid.Row="7" 
                           Grid.Column="0" 
                           Margin="0,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PageSetupFormHeaderFooterDifferentOddAndEvenPages, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding DifferentOddEven, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <dxe:CheckEdit Grid.Row="8" 
                           Grid.Column="0" 
                           Margin="0,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PageSetupFormHeaderFooterDifferentFirstPage, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding DifferentFirstPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <dxe:CheckEdit Grid.Row="9" 
                           Grid.Column="0"
                           Margin="0,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PageSetupFormHeaderFooterScaleWithDocument, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding ScaleWithDocument, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <dxe:CheckEdit Grid.Row="10" 
                           Grid.Column="0" 
                           Margin="0,3,0,0" 
                           Content="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_PageSetupFormHeaderFooterAlignWithPageMargins, Converter={StaticResource stringIdConverter}}"
                           EditValue="{Binding AlignWithMargins, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <dxspsi:PageSetupPrintButtonsControl Grid.Row="11" />
    </Grid>
</UserControl>
