<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Themes"
                    xmlns:designer="clr-namespace:DevExpress.Xpf.Reports.UserDesigner"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:designernative="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Native">
    <Style TargetType="designer:RibbonPageSelector">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="designer:RibbonPageSelector">
                    <Grid ClipToBounds="True">
                        <dx:DXTabControl Padding="0" VerticalAlignment="Bottom" BorderThickness="0" Margin="0,0,0,-2">
                            <dxmvvm:Interaction.Behaviors>
                                <designernative:TabControlRibbonPageSelectorBehavior Ribbon="{Binding Path=Ribbon, RelativeSource={RelativeSource TemplatedParent}}" />
                            </dxmvvm:Interaction.Behaviors>
                            <dx:DXTabControl.ItemContainerStyle>
                                <Style TargetType="dx:DXTabItem">
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </dx:DXTabControl.ItemContainerStyle>
                            <dx:DXTabControl.ItemHeaderTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding RibbonPage.Caption}"/>
                                </DataTemplate>
                            </dx:DXTabControl.ItemHeaderTemplate>
                            <dx:DXTabControl.ContentHostTemplate>
                                <DataTemplate />
                            </dx:DXTabControl.ContentHostTemplate>
                        </dx:DXTabControl>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>