<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxdiag="clr-namespace:DevExpress.Xpf.Diagram;assembly=DevExpress.Xpf.Diagram.v15.2"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:designer="clr-namespace:DevExpress.Xpf.Reports.UserDesigner"
            xmlns:dxda="clr-namespace:DevExpress.Xpf.DataAccess.DataSourceWizard;assembly=DevExpress.Xpf.DataAccess.v15.2"
            xmlns:reportsui="clr-namespace:DevExpress.XtraReports.UI;assembly=DevExpress.XtraReports.v15.2"
            xmlns:wizard="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.ReportWizard"
            xmlns:xrdiagram="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.XRDiagram"
            xmlns:designernative="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Native"
            xmlns:designereditors="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Editors">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/XRDiagramContainerItemBase.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/LinkStyle.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/SubContextMenuStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="xrdiagram:XRDiagramRoot" BasedOn="{StaticResource XRDiagramContainerBase}">
        <Setter Property="xrdiagram:XRDiagramItemBase.ContextMenuTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxb:PopupMenu>
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.SmartTag}}">
                            <dxmvvm:Interaction.Behaviors>
                                <dxe:DialogServiceEditorBehavior Commands="{x:Null}" Content="{Binding}">
                                    <dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                        <DataTemplate>
                                            <ContentControl>
                                                <dx:DialogService DialogStyle="{StaticResource SmartTagDialogStyle}" DialogWindowStartupLocation="CenterOwner">
                                                    <dx:DialogService.ViewTemplate>
                                                        <DataTemplate>
                                                            <dxlc:LayoutControl Orientation="Vertical" DataContext="{Binding Content.DataContext}">
                                                                <dxlc:LayoutItem Label="Data Source" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.DataSource}">
                                                                    <designernative:ComboBoxEditEx Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.DataSource}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Data Member" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.DataMember}">
                                                                    <dxe:ComboBoxEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.DataMember}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Filter String" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.FilterString}">
                                                                    <dxe:ButtonEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.FilterString}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Detail Count at Design Time" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.DetailCountAtDesignTime}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.DetailCountAtDesignTime}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Measure Units" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ReportUnit}">
                                                                    <dxe:ComboBoxEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ReportUnit}}" />
                                                                </dxlc:LayoutItem>
                                                            </dxlc:LayoutControl>
                                                        </DataTemplate>
                                                    </dx:DialogService.ViewTemplate>
                                                </dx:DialogService>
                                            </ContentControl>
                                        </DataTemplate>
                                    </dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                </dxe:DialogServiceEditorBehavior>
                            </dxmvvm:Interaction.Behaviors>
                        </dxb:BarButtonItem>
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.DesignInReportWizard}}" />
                        <!--<dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.EditAndReorderBands}}" />-->
                        <!--<dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.EditBindings}}" />-->
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.FormattingRules}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.FormattingRuleSheet}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.StyleSheet}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Watermark}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Paste}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Delete}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarSubItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.InsertBand}}" />
                        <dxb:BarSubItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.InsertDetailReport}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Properties}}" />
                    </dxb:PopupMenu>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>