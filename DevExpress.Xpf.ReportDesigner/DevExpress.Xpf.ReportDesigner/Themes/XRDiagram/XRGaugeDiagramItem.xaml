<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxdiag="clr-namespace:DevExpress.Xpf.Diagram;assembly=DevExpress.Xpf.Diagram.v15.2"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:xrdiagram="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.XRDiagram"
            xmlns:gauges="clr-namespace:DevExpress.XtraGauges.Core.Customization;assembly=DevExpress.XtraGauges.v15.2.Core"
            xmlns:designernative="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Native"
            xmlns:designereditors="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Editors">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/XRDiagramItem.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/LinkStyle.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/SubContextMenuStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type xrdiagram:XRGaugeDiagramItem}" BasedOn="{StaticResource {x:Type xrdiagram:XRDiagramItem}}">
        <Setter Property="xrdiagram:XRDiagramItemBase.ContextMenuTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxb:PopupMenu>
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.SmartTag}}">
                            <dxmvvm:Interaction.Behaviors>
                                <dxe:DialogServiceEditorBehavior Commands="{x:Null}" Content="{Binding}">
                                    <dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                        <DataTemplate>
                                            <ContentControl>
                                                <dx:DialogService DialogStyle="{StaticResource SmartTagDialogStyle}" DialogWindowStartupLocation="CenterOwner">
                                                    <dx:DialogService.ViewTemplate>
                                                        <DataTemplate>
                                                            <dxlc:LayoutControl Orientation="Vertical" DataContext="{Binding Content.DataContext, UpdateSourceTrigger=PropertyChanged}">
                                                                <dxlc:LayoutItem Label="View Type" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ViewType}">
                                                                    <dxe:ComboBoxEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ViewType}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="View Style" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ViewStyle}">
                                                                    <dxe:ComboBoxEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ViewStyle}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="View Theme" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ViewTheme}">
                                                                    <dxe:ComboBoxEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ViewTheme}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Actual Value" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ActualValue}">
                                                                    <dxe:TextEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ActualValue}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Data Binding" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.DataBindingActualValue}">
                                                                    <designereditors:PopupTreeListEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.DataBindingActualValue}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Actual Value" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.TargetValue}">
                                                                    <dxe:TextEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.TargetValue}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Data Binding" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.DataBindingTargetValue}">
                                                                    <designereditors:PopupTreeListEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.DataBindingTargetValue}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Minimum" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Minimum}">
                                                                    <dxe:TextEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Minimum}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Data Binding" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.DataBindingMinimum}">
                                                                    <designereditors:PopupTreeListEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.DataBindingMinimum}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Maximum" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Minimum}">
                                                                    <dxe:TextEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Minimum}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Data Binding" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.DataBindingMaximum}">
                                                                    <designereditors:PopupTreeListEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.DataBindingMaximum}}" />
                                                                </dxlc:LayoutItem>
                                                            </dxlc:LayoutControl>
                                                        </DataTemplate>
                                                    </dx:DialogService.ViewTemplate>
                                                </dx:DialogService>
                                            </ContentControl>
                                        </DataTemplate>
                                    </dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                </dxe:DialogServiceEditorBehavior>
                            </dxmvvm:Interaction.Behaviors>
                        </dxb:BarButtonItem>
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Cut}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Copy}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Paste}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Delete}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Properties}}" />
                    </dxb:PopupMenu>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>