<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxdiag="clr-namespace:DevExpress.Xpf.Diagram;assembly=DevExpress.Xpf.Diagram.v15.2"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        xmlns:xrdiagram="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.XRDiagram">
    <Style TargetType="xrdiagram:XRAdorner">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="xrdiagram:XRAdorner">
                    <Grid>
                        <Border BorderBrush="#BFBFBF" BorderThickness="1"
                                Visibility="{Binding Path=DiagramItem.(xrdiagram:XRDiagramItemBase.ShowBorders), RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}, Mode=OneWay}" />
                        <Image HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,2,0" Stretch="None" Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Images/Binding.png"
                               Visibility="{Binding Path=DiagramItem.(xrdiagram:XRDiagramItemBase.ShowBindingIcon), RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}, Mode=OneWay}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Visibility" Value="{Binding Path=DiagramItem.(xrdiagram:XRDiagramItemBase.BandContentVisible), RelativeSource={RelativeSource Self}, Converter={dxmvvm:BooleanToVisibilityConverter}, Mode=OneWay}" />
    </Style>
</ResourceDictionary>
