<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xrdiagram="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.XRDiagram">

    <Style TargetType="xrdiagram:XRDiagramRootMarginsAdorner">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="xrdiagram:XRDiagramRootMarginsAdorner">
                    <xrdiagram:XRDiagramMarginsPanel AdornerLeftMargin="{TemplateBinding AdornerLeftMargin}" AdornerRightMargin="{TemplateBinding AdornerRightMargin}">
                        <Line Stroke="#BFBFBF" StrokeThickness="1" StrokeDashArray="4 4" />
                        <Line Stroke="#BFBFBF" StrokeThickness="1" StrokeDashArray="4 4" />
                    </xrdiagram:XRDiagramMarginsPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>