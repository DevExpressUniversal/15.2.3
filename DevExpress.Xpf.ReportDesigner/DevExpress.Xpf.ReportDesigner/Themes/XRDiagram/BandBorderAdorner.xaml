<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        xmlns:xrdiagram="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.XRDiagram"
        xmlns:designernative="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Native">

    <Style TargetType="xrdiagram:BandBorderAdorner">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="xrdiagram:BandBorderAdorner">
                    <Rectangle Stroke="#BFBFBF" Height="1" StrokeThickness="1" StrokeDashArray="4 4" VerticalAlignment="Bottom" SnapsToDevicePixels="True" Margin="0,1,0,-1"
                               Visibility="{Binding Path=DiagramItem.(xrdiagram:XRDiagramItemBase.BandContentVisible), RelativeSource={RelativeSource TemplatedParent}, Converter={dx:BooleanToVisibilityConverter}}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>