<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:designereditors="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Editors">
    
    <Style x:Key="DXDialogWindowDialogStyleBase" TargetType="{x:Type dx:DXDialogWindow}">
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="ShowIcon" Value="False" />
    </Style>
    <designereditors:BindingDataHierarchicalPathProvider x:Key="bindingDataHierarchicalPathProvider" />
    <designereditors:BindingDataPopupSelectionValidator x:Key="bindingDataPopupSelectionValidator" />
    <designereditors:ReportExplorerHierarchicalPathProvider x:Key="reportExplorerHierarchicalPathProvider" />
    <designereditors:ReportExplorerPopupSelectionValidator x:Key="reportExplorerPopupSelectionValidator" />
    <Style x:Key="WatermarkDialogStyle" TargetType="{x:Type dx:DXDialogWindow}" BasedOn="{StaticResource DXDialogWindowDialogStyleBase}">
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="Width" Value="720" />
        <Setter Property="Height" Value="400" />
        <Setter Property="Title" Value="Watermark" />
    </Style>
</ResourceDictionary>