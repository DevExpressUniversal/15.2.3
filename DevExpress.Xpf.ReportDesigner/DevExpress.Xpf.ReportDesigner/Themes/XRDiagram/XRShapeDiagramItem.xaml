<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxdiag="clr-namespace:DevExpress.Xpf.Diagram;assembly=DevExpress.Xpf.Diagram.v15.2"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:xrdiagram="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.XRDiagram"
            xmlns:designer="clr-namespace:DevExpress.Xpf.Reports.UserDesigner"
            xmlns:designernative="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Native"
            xmlns:designereditors="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Editors"
            xmlns:reportexplorernative="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.ReportExplorer.Native">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/XRDiagramItem.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/LinkStyle.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/SubContextMenuStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="xrdiagram:XRShapeDiagramItem" BasedOn="{StaticResource {x:Type xrdiagram:XRDiagramItem}}">
        <Setter Property="xrdiagram:XRDiagramItemBase.ContextMenuTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxb:PopupMenu>
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.SmartTag}}">
                            <dxmvvm:Interaction.Behaviors>
                                <dxe:DialogServiceEditorBehavior Commands="{x:Null}" Content="{Binding}">
                                    <dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                        <DataTemplate>
                                            <ContentControl>
                                                <dx:DialogService DialogStyle="{StaticResource SmartTagDialogStyle}" DialogWindowStartupLocation="CenterOwner">
                                                    <dx:DialogService.ViewTemplate>
                                                        <DataTemplate>
                                                            <dxlc:LayoutControl Orientation="Vertical" DataContext="{Binding Content.DataContext, UpdateSourceTrigger=PropertyChanged}">
                                                                <dxlc:LayoutItem dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Stretch}">
                                                                    <dxe:CheckEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Stretch}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Fill Color" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.FillColor}">
                                                                    <dxe:PopupColorEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.FillColor}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Line Width" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.LineWidth}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.LineWidth}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Angle" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.AngleShape}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.AngleShape}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Bookmark" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Bookmark}">
                                                                    <dxe:TextEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Bookmark}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Parent Bookmark" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ParentBookmark}">
                                                                    <designereditors:PopupTreeListEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ParentBookmark}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Shape" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Shape}">
                                                                    <dxe:ComboBoxEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Shape}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Fillet" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Fillet}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Fillet}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Fillet}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Arrow Height" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ArrowHeight}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Arrow}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ArrowHeight}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Arrow Width" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ArrowWidth}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Arrow}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ArrowWidth}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Number of Sides" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.NumberOfSides}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Polygon}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.NumberOfSides}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Count of Star Points" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.StarPointCount}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Star}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.StarPointCount}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Concavity" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Concavity}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Star}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Concavity}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Horizontal Line Width" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.HorizontalLineWidth}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Cross}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.HorizontalLineWidth}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Vertical Line Width" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.VerticalLineWidth}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Cross}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.VerticalLineWidth}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Tip's Length" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.TipLength}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Bracket}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.TipLength}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Tail's Length" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.TailLength}" Visibility="{Binding Path=Diagram.(designer:ReportDesigner.Document).ReportModel.SelectedModel.XRObjectBase.Shape, Converter={designernative:ShapeBaseTypeToVisibilityConverter Type=Brace}}">
                                                                    <dxe:SpinEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.TailLength}}" />
                                                                </dxlc:LayoutItem>
                                                            </dxlc:LayoutControl>
                                                        </DataTemplate>
                                                    </dx:DialogService.ViewTemplate>
                                                </dx:DialogService>
                                            </ContentControl>
                                        </DataTemplate>
                                    </dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                </dxe:DialogServiceEditorBehavior>
                            </dxmvvm:Interaction.Behaviors>
                        </dxb:BarButtonItem>
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.FormattingRules}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Cut}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Copy}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Paste}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Delete}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Properties}}" />
                    </dxb:PopupMenu>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>