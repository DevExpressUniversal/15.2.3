<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:xrdiagram="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.XRDiagram"
            xmlns:designer="clr-namespace:DevExpress.Xpf.Reports.UserDesigner"
            xmlns:designereditors="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Editors"
            xmlns:designernative="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Native"
            xmlns:reportexplorernative="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.ReportExplorer.Native">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/XRDiagramContainerItem.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/LinkStyle.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/SubContextMenuStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="xrdiagram:XRTableDiagramItem_NewTable" BasedOn="{StaticResource {x:Type xrdiagram:XRDiagramList}}">
        <Setter Property="xrdiagram:XRDiagramItemBase.ContextMenuTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxb:PopupMenu>
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.SmartTag}}">
                            <dxmvvm:Interaction.Behaviors>
                                <dxe:DialogServiceEditorBehavior Commands="{x:Null}" Content="{Binding}">
                                    <dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                        <DataTemplate>
                                            <ContentControl>
                                                <dx:DialogService DialogStyle="{StaticResource SmartTagDialogStyle}" DialogWindowStartupLocation="CenterOwner">
                                                    <dx:DialogService.ViewTemplate>
                                                        <DataTemplate>
                                                            <dxlc:LayoutControl Orientation="Vertical" DataContext="{Binding Content.DataContext, UpdateSourceTrigger=PropertyChanged}">
                                                                <dxlc:LayoutItem Label="Bookmark" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Bookmark}">
                                                                    <dxe:TextEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Bookmark}}" />
                                                                </dxlc:LayoutItem>
                                                                <dxlc:LayoutItem Label="Parent Bookmark" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ParentBookmark}">
                                                                    <designereditors:PopupTreeListEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ParentBookmark}}" />
                                                                </dxlc:LayoutItem>
                                                            </dxlc:LayoutControl>
                                                        </DataTemplate>
                                                    </dx:DialogService.ViewTemplate>
                                                </dx:DialogService>
                                            </ContentControl>
                                        </DataTemplate>
                                    </dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                </dxe:DialogServiceEditorBehavior>
                            </dxmvvm:Interaction.Behaviors>
                        </dxb:BarButtonItem>
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ConvertToLables}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Cut}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Copy}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Paste}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Delete}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Properties}}" />
                    </dxb:PopupMenu>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="xrdiagram:XRTableDiagramItem" BasedOn="{StaticResource {x:Type xrdiagram:XRDiagramContainer}}">
        <Setter Property="xrdiagram:XRDiagramItemBase.ContextMenuTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxb:PopupMenu>
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.SmartTag}}">
                            <dxb:BarButtonItem.Resources>
                                <dxlc:LayoutControl Orientation="Vertical" x:Key="SmartTagContextMenu">
                                    <dxlc:LayoutItem Label="Bookmark" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.Bookmark}">
                                        <dxe:TextEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Bookmark}}" />
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="Parent Bookmark" dx:XamlHelper.Name="{x:Static xrdiagram:XRDiagramControlBarItemNames.ParentBookmark}">
                                        <designereditors:PopupTreeListEdit Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ParentBookmark}}" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutControl>
                            </dxb:BarButtonItem.Resources>
                        </dxb:BarButtonItem>
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.ConvertToLables}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Cut}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Copy}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Paste}}" />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Delete}}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Style="{StaticResource {x:Static xrdiagram:XRDiagramControlBarItemNames.Properties}}" />
                    </dxb:PopupMenu>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>