    <Style x:Key="BaseScaleStyle" TargetType="{x:Type xrdiagram:XRRulerScaleBase}">
        <!--<Setter Property="TextBlock.Foreground" Value="{StaticResource RulerForeground}"/>-->
        <Setter Property="TextBlock.FontSize" Value="9"/>
    </Style>
    <Style TargetType="{x:Type xrdiagram:XRHorizontalRulerScale}" BasedOn="{StaticResource BaseScaleStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type xrdiagram:XRHorizontalRulerScale}">
                    <dxdiag:RulerScalePresenter
                                TickBrush="Black"
                                Margin="0,3,0,0"
                                Offset="{Binding Padding.Left, RelativeSource={RelativeSource TemplatedParent}, Converter={dx:NegativeConverter}}" 
                                Orientation="Horizontal"
                                LabelOffset="3,-3"
                                Zoom="{TemplateBinding Zoom}"
                                MeasureUnit="{TemplateBinding MeasureUnit}"
                    />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type xrdiagram:XRVerticalRulerScale}" BasedOn="{StaticResource BaseScaleStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type xrdiagram:XRVerticalRulerScale}">
                    <dxdiag:RulerScalePresenter
                                TickBrush="Black"
                                Margin="3,0,0,0"
                                Orientation="Vertical"
                                LabelOffset="-3,3"
                                Zoom="{TemplateBinding Zoom}"
                                MeasureUnit="{TemplateBinding MeasureUnit}"
                    />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type xrdiagram:XRVerticalRulerScaleBackground}">
        <Setter Property="Background" Value="#FFFEE7AB" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="BorderBrush" Value="Black" />
    </Style>
    <Style TargetType="{x:Type xrdiagram:XRHorizontalRulerScaleBackground}">
        <Setter Property="Background" Value="#FFFEE7AB" />
        <Setter Property="BorderThickness" Value="0,1,0,1" />
        <Setter Property="BorderBrush" Value="Black" />
    </Style>
    <Style TargetType="{x:Type xrdiagram:XRLayersHost}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type xrdiagram:XRLayersHost}">
                    <Canvas x:Name="DiagramArea" Background="Transparent" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
