<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dxdiag="clr-namespace:DevExpress.Xpf.Diagram;assembly=DevExpress.Xpf.Diagram.v15.2"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:designer="clr-namespace:DevExpress.Xpf.Reports.UserDesigner"
            xmlns:designernativemetadata="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Native.Metadata"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:designereditors="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Editors">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Diagram.v15.2;component/Behaviors/CollectionUITypeEditors/Themes/SingleSelectionCollectionEditor.xaml" />
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/XRDiagram/BaseStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="designereditors:SubBandCollectionUITypeEditor" BasedOn="{StaticResource {x:Type dxdiag:SingleSelectionCollectionEditor}}" >
        <Setter Property="ItemsListTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxe:ListBoxEdit Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Path=(dxdiag:CollectionEditorBase.Editor).EditValue, RelativeSource={RelativeSource Self}}" 
                                         EditValue="{Binding Path=(dxdiag:CollectionEditorBase.Editor).SelectedItem, RelativeSource={RelativeSource Self}, UpdateSourceTrigger=PropertyChanged}" 
                                         ItemTemplate="{Binding Path=(dxdiag:CollectionEditorBase.Editor).ItemTemplate, RelativeSource={RelativeSource Self}}"
                                         SelectionMode="Single">

                        <dxe:ListBoxEdit.Resources>
                            <designereditors:DiagramItemTypeToVisibilityConverter x:Key="DiagramItemTypeToVisibilityMultiBindingConverter" />
                        </dxe:ListBoxEdit.Resources>
                        
                        <dxe:ListBoxEdit.ItemContainerStyle>
                            <Style TargetType="dxe:ListBoxEditItem">
                                <Setter Property="Visibility" >
                                    <Setter.Value>
                                        <MultiBinding Converter="{designereditors:DiagramItemTypeToVisibilityConverter}">
                                            <Binding Path="(dxdiag:CollectionEditorBase.Editor).IsEditorItem" RelativeSource="{RelativeSource Self}" />
                                            <Binding />
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                                      
                            </Style>
                        </dxe:ListBoxEdit.ItemContainerStyle>
                    </dxe:ListBoxEdit>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        
        <Setter Property="ItemDetailedDescriptionTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxpg:PropertyGridControl SelectedObject="{Binding}" ExpandCategoriesWhenSelectedObjectChanged="True">
                        <dxpg:PropertyGridControl.Resources>
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.Styles}">
                                <dxpg:PropertyDefinition IsReadOnly="False">
                                    <dxpg:PropertyDefinition.CellTemplate>
                                        <DataTemplate>
                                            <dxe:ComboBoxEdit x:Name="PART_Editor" 
                                                              ItemsSource="{Binding Path=(dxdiag:CollectionEditorBase.Editor).ReportModel.Styles, RelativeSource={RelativeSource Self}}" 
                                                              IsTextEditable="False" DisplayMember="Name">
                                                <dxe:ComboBoxEdit.Buttons>
                                                    <dxe:ButtonInfo GlyphKind="Plus" Command="{Binding Path=(dxdiag:CollectionEditorBase.Editor).ReportModel.DiagramItemBase.Diagram.XRCommands.AddNewStyle, RelativeSource={RelativeSource Self}}" CommandParameter="{Binding PropertyName}" />
                                                </dxe:ComboBoxEdit.Buttons>
                                            </dxe:ComboBoxEdit>
                                        </DataTemplate>
                                    </dxpg:PropertyDefinition.CellTemplate>
                                </dxpg:PropertyDefinition>
                            </DataTemplate>
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.BorderWidth}">
                                <dxpg:PropertyDefinition IsReadOnly="False">
                                    <dxpg:PropertyDefinition.EditSettings>
                                        <dxe:SpinEditSettings MinValue="0" />
                                    </dxpg:PropertyDefinition.EditSettings>
                                </dxpg:PropertyDefinition>
                            </DataTemplate>
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.BorderSide}">
                                <dxpg:PropertyDefinition IsReadOnly="False">
                                    <dxpg:PropertyDefinition.EditSettings>
                                        <dxe:PopupBaseEditSettings AllowDefaultButton="False" IsTextEditable="False">
                                            <dxe:PopupBaseEditSettings.Buttons>
                                                <dxe:ButtonInfo GlyphKind="DropDown" IsDefaultButton="True">
                                                    <dxmvvm:Interaction.Behaviors>
                                                        <dxe:PopupEditorBehavior>
                                                            <dxe:PopupEditorBehavior.ContentTemplate>
                                                                <DataTemplate>
                                                                    <designereditors:BordersUITypeEditor EditValue="{Binding Value}" />
                                                                </DataTemplate>
                                                            </dxe:PopupEditorBehavior.ContentTemplate>
                                                        </dxe:PopupEditorBehavior>
                                                    </dxmvvm:Interaction.Behaviors>
                                                </dxe:ButtonInfo>
                                            </dxe:PopupBaseEditSettings.Buttons>
                                        </dxe:PopupBaseEditSettings>
                                    </dxpg:PropertyDefinition.EditSettings>
                                </dxpg:PropertyDefinition>
                            </DataTemplate>
                            
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.FormattingRuleCollection}">
                                <dxpg:PropertyDefinition IsReadOnly="False" UseTypeConverterToStringConversion="True">
                                    <dxpg:PropertyDefinition.EditSettings>
                                        <dxe:ButtonEditSettings AllowDefaultButton="False">
                                            <dxe:ButtonEditSettings.Buttons>
                                                <dxe:ButtonInfo GlyphKind="Regular">
                                                    <dxmvvm:Interaction.Behaviors>
                                                        <dxe:DialogServiceEditorBehavior Commands="{dxe:UICommandContainerGenerator Buttons=OKCancel}" Content="{Binding Path=AssociatedObject.(dxdiag:CollectionEditorBase.Editor).ReportModel, RelativeSource={RelativeSource Self}}">
                                                            <dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                                                <DataTemplate>
                                                                    <ContentControl>
                                                                        <dxdiag:CollectionDialogService>
                                                                            <dxdiag:CollectionDialogService.DialogStyle>
                                                                                <Style TargetType="dx:DXDialogWindow" BasedOn="{StaticResource DXDialogWindowDialogStyleBase}">
                                                                                    <Setter Property="Width" Value="600" />
                                                                                    <Setter Property="Height" Value="350" />
                                                                                    <Setter Property="MinWidth" Value="420" />
                                                                                    <Setter Property="MinHeight" Value="240" />
                                                                                    <Setter Property="Title" Value="Formatting Rules Editor" />
                                                                                </Style>
                                                                            </dxdiag:CollectionDialogService.DialogStyle>
                                                                            <dxdiag:CollectionDialogService.ViewTemplate>
                                                                                <DataTemplate>
                                                                                    <designereditors:FormattingRulesUITypeEditor EditValue="{Binding Value}" ReportModel="{Binding Content}" />
                                                                                </DataTemplate>
                                                                            </dxdiag:CollectionDialogService.ViewTemplate>
                                                                        </dxdiag:CollectionDialogService>
                                                                    </ContentControl>
                                                                </DataTemplate>
                                                            </dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                                        </dxe:DialogServiceEditorBehavior>
                                                    </dxmvvm:Interaction.Behaviors>
                                                </dxe:ButtonInfo>
                                            </dxe:ButtonEditSettings.Buttons>
                                        </dxe:ButtonEditSettings>
                                    </dxpg:PropertyDefinition.EditSettings>
                                </dxpg:PropertyDefinition>
                            </DataTemplate>
                            
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.ForUseTypeConverterToStringConversion}">
                                <dxpg:PropertyDefinition IsReadOnly="False" UseTypeConverterToStringConversion="True" />
                            </DataTemplate>
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.XRControlStyleSheet}">
                                <dxpg:PropertyDefinition IsReadOnly="False" UseTypeConverterToStringConversion="True">
                                    <dxpg:PropertyDefinition.EditSettings>
                                        <dxe:ButtonEditSettings AllowDefaultButton="False">
                                            <dxe:ButtonEditSettings.Buttons>
                                                <dxe:ButtonInfo GlyphKind="Regular">
                                                    <dxmvvm:Interaction.Behaviors>
                                                        <dxe:DialogServiceEditorBehavior Commands="{dxe:UICommandContainerGenerator Buttons=OKCancel}" Content="{Binding Path=AssociatedObject.(dxdiag:CollectionEditorBase.Editor).ReportModel, RelativeSource={RelativeSource Self}}">
                                                            <dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                                                <DataTemplate>
                                                                    <ContentControl>
                                                                        <dxdiag:CollectionDialogService>
                                                                            <dxdiag:CollectionDialogService.DialogStyle>
                                                                                <Style TargetType="dx:DXDialogWindow" BasedOn="{StaticResource DXDialogWindowDialogStyleBase}">
                                                                                    <Setter Property="Width" Value="600" />
                                                                                    <Setter Property="Height" Value="350" />
                                                                                    <Setter Property="MinWidth" Value="420" />
                                                                                    <Setter Property="MinHeight" Value="240" />
                                                                                    <Setter Property="Title" Value="Formatting Rule Sheet Editor" />
                                                                                </Style>
                                                                            </dxdiag:CollectionDialogService.DialogStyle>
                                                                            <dxdiag:CollectionDialogService.ViewTemplate>
                                                                                <DataTemplate>
                                                                                    <designereditors:FormattingRuleSheetUITypeEditor EditValue="{Binding Value}" ReportModel="{Binding Content}" />
                                                                                </DataTemplate>
                                                                            </dxdiag:CollectionDialogService.ViewTemplate>
                                                                        </dxdiag:CollectionDialogService>
                                                                    </ContentControl>
                                                                </DataTemplate>
                                                            </dxe:DialogServiceEditorBehavior.DialogServiceTemplate>
                                                        </dxe:DialogServiceEditorBehavior>
                                                    </dxmvvm:Interaction.Behaviors>
                                                </dxe:ButtonInfo>
                                            </dxe:ButtonEditSettings.Buttons>
                                        </dxe:ButtonEditSettings>
                                    </dxpg:PropertyDefinition.EditSettings>
                                </dxpg:PropertyDefinition>
                            </DataTemplate>
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.Scripts}">
                                <dxpg:PropertyDefinition IsReadOnly="False">
                                    <dxpg:PropertyDefinition.CellTemplate>
                                        <DataTemplate>
                                            <dxe:ComboBoxEdit x:Name="PART_Editor" ItemsSource="{Binding Path=(dxdiag:CollectionEditorBase.Editor).ReportModel.Scripts, RelativeSource={RelativeSource Self}}" IsTextEditable="False">
                                                <dxe:ComboBoxEdit.Buttons>
                                                    <dxe:ButtonInfo GlyphKind="Plus" 
                                                                    Command="{Binding Path=(dxdiag:CollectionEditorBase.Editor).ReportModel.DiagramItem.Diagram.XRCommands.AddNewScript, RelativeSource={RelativeSource Self}}"
                                                                    CommandParameter="{Binding Header}" />
                                                </dxe:ComboBoxEdit.Buttons>
                                            </dxe:ComboBoxEdit>
                                        </DataTemplate>
                                    </dxpg:PropertyDefinition.CellTemplate>
                                </dxpg:PropertyDefinition>
                            </DataTemplate>
                            
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.Color}">
                                <dxpg:PropertyDefinition IsReadOnly="False">
                                    <dxpg:PropertyDefinition.EditSettings>
                                        <dxe:PopupColorEditSettings />
                                    </dxpg:PropertyDefinition.EditSettings>
                                </dxpg:PropertyDefinition>
                            </DataTemplate>
                          
                            <DataTemplate x:Key="{x:Static designernativemetadata:MetadataPropertyGridEditorTemplateKeys.Font}">
                                <dxpg:PropertyDefinition IsReadOnly="False">
                                    <dxpg:PropertyDefinition.EditSettings>
                                        <dxe:ButtonEditSettings AllowDefaultButton="False">
                                            <dxe:ButtonEditSettings.Buttons>
                                                <dxe:ButtonInfo GlyphKind="Regular">
                                                    <dxmvvm:Interaction.Behaviors>
                                                        <dxe:CustomDialogServiceEditorBehavior>
                                                            <dxe:CustomDialogServiceEditorBehavior.DialogServiceTemplate>
                                                                <DataTemplate>
                                                                    <ContentControl>
                                                                        <designereditors:FontDialogService />
                                                                    </ContentControl>
                                                                </DataTemplate>
                                                            </dxe:CustomDialogServiceEditorBehavior.DialogServiceTemplate>
                                                        </dxe:CustomDialogServiceEditorBehavior>
                                                    </dxmvvm:Interaction.Behaviors>
                                                </dxe:ButtonInfo>
                                            </dxe:ButtonEditSettings.Buttons>
                                        </dxe:ButtonEditSettings>
                                    </dxpg:PropertyDefinition.EditSettings>
                                </dxpg:PropertyDefinition>
                            </DataTemplate>
                        </dxpg:PropertyGridControl.Resources>
                    </dxpg:PropertyGridControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary> 