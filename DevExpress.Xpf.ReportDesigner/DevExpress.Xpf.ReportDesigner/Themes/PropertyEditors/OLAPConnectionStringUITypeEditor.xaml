<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:designereditors="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Editors">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.ReportDesigner.v15.2;component/Themes/PropertyEditors/GroupBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type designereditors:OLAPConnectionStringUITypeEditor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type designereditors:OLAPConnectionStringUITypeEditor}">
                    <Grid>
                        <dxpg:PropertyGridControl
                                    SelectedObject="{Binding ConnectionStringBuilder, RelativeSource={RelativeSource TemplatedParent}}"
                                    ShowCategories="False"
                                    ShowToolPanel="False"
                                    ShowSearchBox="False"
                                    Margin="10">
                            <dxpg:PropertyGridControl.PropertyDefinitions>
                                <dxpg:PropertyDefinition Path="QueryTimeout" Visibility="{Binding ShowAdvancedProperties, RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}}" />
                                <dxpg:PropertyDefinition Path="LocaleIdentifier" Visibility="{Binding ShowAdvancedProperties, RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}}" UseTypeConverterToStringConversion="True" />
                                <dxpg:PropertyDefinition Path="ConnectionTimeout" Visibility="{Binding ShowAdvancedProperties, RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}}" />
                                <dxpg:PropertyDefinition Path="UserId" Visibility="{Binding ShowAdvancedProperties, RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}}" />
                                <dxpg:PropertyDefinition Path="Password" Visibility="{Binding ShowAdvancedProperties, RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}}" />
                                <dxpg:PropertyDefinition Path="Roles" Visibility="{Binding ShowAdvancedProperties, RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}}" />
                                <dxpg:PropertyDefinition Path="CustomData" Visibility="{Binding ShowAdvancedProperties, RelativeSource={RelativeSource TemplatedParent}, Converter={dxmvvm:BooleanToVisibilityConverter}}" />
                            </dxpg:PropertyGridControl.PropertyDefinitions>
                        </dxpg:PropertyGridControl>
                        <dx:DialogFooter>
                            <Grid>
                                <dxe:CheckEdit Content="Show Advanced Properties" EditValue="{Binding ShowAdvancedProperties, RelativeSource={RelativeSource TemplatedParent}}" />
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <dx:DialogButton DialogResult="OK" Command="{Binding SaveCommand, RelativeSource={RelativeSource TemplatedParent}}" />
                                    <dx:DialogButton DialogResult="Cancel" />
                                </StackPanel>
                            </Grid>
                        </dx:DialogFooter>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>