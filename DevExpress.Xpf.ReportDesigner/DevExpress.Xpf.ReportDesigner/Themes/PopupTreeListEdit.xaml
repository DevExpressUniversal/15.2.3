<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:designerEditors="clr-namespace:DevExpress.Xpf.Reports.UserDesigner.Editors">

    <Style TargetType="{x:Type designerEditors:PopupTreeListEdit}" BasedOn="{StaticResource {x:Type dxe:PopupBaseEdit}}">
        <Setter Property="PopupContentTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <dxg:GridControl x:Name="PART_GridControl" ShowBorder="False">
                        <dxg:GridControl.View>
                            <dxg:TreeListView
                                AllowEditing="False" AutoWidth="True" VerticalScrollbarVisibility="Auto" ExpandCollapseNodesOnNavigation="True"
                                ShowHorizontalLines="False" ShowVerticalLines="False" ShowIndicator="False" ShowColumnHeaders="False"
                                TreeDerivationMode="ChildNodesSelector">
                            </dxg:TreeListView>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
