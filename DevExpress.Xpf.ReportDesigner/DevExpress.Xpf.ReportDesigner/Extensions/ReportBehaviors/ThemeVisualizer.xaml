<UserControl x:Class="DevExpress.Xpf.Reports.UserDesigner.Extensions.ThemeVisualizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <StackPanel.Resources>
            <Style TargetType="ItemsControl">
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Border Background="{Binding}" Width="30" Height="30" Margin="3"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </StackPanel.Resources>
        <StackPanel Orientation="Horizontal">
            <ItemsControl ItemsSource="{Binding LightColor1}" />
            <ItemsControl ItemsSource="{Binding DarkColor1}" />
            <ItemsControl ItemsSource="{Binding LightColor2}" />
            <ItemsControl ItemsSource="{Binding DarkColor2}" />
            <ItemsControl ItemsSource="{Binding Accents[0]}" />
            <ItemsControl ItemsSource="{Binding Accents[1]}" />
            <ItemsControl ItemsSource="{Binding Accents[2]}" />
            <ItemsControl ItemsSource="{Binding Accents[3]}" />
            <ItemsControl ItemsSource="{Binding Accents[4]}" />
            <ItemsControl ItemsSource="{Binding Accents[5]}" />
        </StackPanel>
    </StackPanel>
</UserControl>
