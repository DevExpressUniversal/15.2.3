<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" 
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing">
    <DataTemplate x:Key="ReportBehaviorPrintDesignBarItemsTemplate">
        <TextBlock Text="{Binding Caption}" />
    </DataTemplate>
    <DataTemplate x:Key="RenameDialogTemplate">
        <DockPanel>
            <dx:DialogButtonsControl DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="10">
                <dx:DialogButton Content="{dx:DXMessageBoxStringId StringId=Ok}" IsEnabled="{Binding IsOKEnabled}" Command="{Binding OKCommand}" IsDefault="True" />
                <dx:DialogButton Content="{dx:DXMessageBoxStringId StringId=Cancel}" Command="{Binding CancelCommand}" IsCancel="True" />
            </dx:DialogButtonsControl>
            <Grid Height="25" Width="250" Margin="10,10,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Center" Text="{dxp:PrintingStringId StringId=ReportBehavior_RenameDialogNameLabel}" Margin="0,0,10,0"/>
                <dxe:TextEdit VerticalAlignment="Center" Grid.Column="1" EditValue="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <dxmvvm:Interaction.Behaviors>
                        <dxmvvm:FocusBehavior/>
                    </dxmvvm:Interaction.Behaviors>
                </dxe:TextEdit>
            </Grid>
        </DockPanel>
    </DataTemplate>
    <DataTemplate x:Key="DeleteDialogTemplate">
        <DockPanel>
            <dx:DialogButtonsControl DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="10">
                <dx:DialogButton Content="{dx:DXMessageBoxStringId StringId=Ok}" Command="{Binding OKCommand}" IsDefault="True" />
                <dx:DialogButton Content="{dx:DXMessageBoxStringId StringId=Cancel}" Command="{Binding CancelCommand}" IsCancel="True" />
            </dx:DialogButtonsControl>
            <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                <TextBlock Text="{Binding AreYouSureMessage}"/>
            </StackPanel>
        </DockPanel>
    </DataTemplate>
    <Style x:Key="ReportServiceReportNameDialogWindowStyle" TargetType="dx:DXDialogWindow">
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
    </Style>
</ResourceDictionary>