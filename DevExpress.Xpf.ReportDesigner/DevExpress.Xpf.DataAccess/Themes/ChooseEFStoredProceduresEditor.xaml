<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxdae="clr-namespace:DevExpress.Xpf.DataAccess.Editors">

    <Style TargetType="{x:Type dxdae:ChooseEFStoredProceduresEditor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxdae:ChooseEFStoredProceduresEditor">
                    <dxe:ListBoxEdit
                                EditValue="{Binding EditValue, RelativeSource={RelativeSource TemplatedParent}}"
                                ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource TemplatedParent}}"
                                SelectionMode="Extended"
                                Margin="10"
                    />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>