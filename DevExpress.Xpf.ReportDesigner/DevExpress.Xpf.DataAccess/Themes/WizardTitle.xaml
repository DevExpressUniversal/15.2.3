<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:localnative="clr-namespace:DevExpress.Xpf.DataAccess.Native">

    <Style TargetType="{x:Type localnative:WizardTitle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localnative:WizardTitle">
                    <Grid Margin="-1,-1,-1,0">
                        <dxe:TextEdit IsReadOnly="True" IsHitTestVisible="False" />
                        <dx:BackgroundPanel Margin="1" />
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource TemplatedParent}}" Padding="50,15" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>