<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            xmlns:localization="clr-namespace:DevExpress.Xpf.DataAccess.Localization"
            xmlns:localnative="clr-namespace:DevExpress.Xpf.DataAccess.Native">

    <Style TargetType="{x:Type localnative:PasswordRequestDialog}">
        <Setter Property="OpenFileDialogServiceTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ContentControl>
                        <dxmvvm:OpenFileDialogService />
                    </ContentControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type localnative:PasswordRequestDialog}">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding JustificationText}" Grid.ColumnSpan="2" Margin="0,0,0,30" />
                        <TextBlock Text="{localization:DataAccessUIStringId StringId=PasswordRequest_FileName}"  Grid.Row="1" Margin="0,0,3,0" />
                        <dxe:ButtonEdit EditValue="{Binding FileName}" AllowDefaultButton="False" Grid.Column="1" Grid.Row="1" Margin="0,0,0,3">
                            <dxe:ButtonEdit.Buttons>
                                <dxe:ButtonInfo GlyphKind="Regular" Command="{Binding SelectFileCommand, RelativeSource={RelativeSource TemplatedParent}}" />
                            </dxe:ButtonEdit.Buttons>
                        </dxe:ButtonEdit>
                        <TextBlock Text="{localization:DataAccessUIStringId StringId=PasswordRequest_Password}" Grid.Row="2" Margin="0,0,3,0" />
                        <dxe:PasswordBoxEdit EditValue="{Binding Password}" Grid.Column="1" Grid.Row="2" />
                        <dxe:CheckEdit Content="{localization:DataAccessUIStringId StringId=PasswordRequest_SavePassword}" EditValue="{Binding SavePassword}" Grid.ColumnSpan="2" Grid.Row="3" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>