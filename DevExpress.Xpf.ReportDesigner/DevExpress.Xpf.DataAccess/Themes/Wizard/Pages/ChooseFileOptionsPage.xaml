<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                    xmlns:dxdaexcel="clr-namespace:DevExpress.DataAccess.Excel;assembly=DevExpress.DataAccess.v15.2"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:localization="clr-namespace:DevExpress.Xpf.DataAccess.Localization"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DataAccess.DataSourceWizard"
                    xmlns:localnative="clr-namespace:DevExpress.Xpf.DataAccess.Native">

    <DataTemplate x:Key="{x:Type local:ChooseFileOptionsPage}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <localnative:WizardTitle Title="Specify import settings" />
            <StackPanel Grid.Row="1" Margin="50,20">
                <dxlc:LayoutControl Orientation="Vertical">
                    <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" Header="Options">
                        <dxe:CheckEdit Content="Use first row as header" EditValue="{Binding SourceOptionsViewModel.UseFirstRowAsHeader, UpdateSourceTrigger=PropertyChanged}" />
                        <dxe:CheckEdit Content="Skip empty rows" EditValue="{Binding SourceOptionsViewModel.SkipEmptyRows, UpdateSourceTrigger=PropertyChanged}" />
                        <dxlc:LayoutGroup Orientation="Vertical" Visibility="{Binding DocumentFormat, Converter={local:ExcelDocumentFormatToVisibilityConverter}}">
                            <dxlc:LayoutGroup Orientation="Horizontal">
                                <dxlc:LayoutItem Label="Encoding" IsEnabled="{Binding SourceOptionsViewModel.DetectEncoding, Converter={dxmvvm:BooleanNegationConverter}}">
                                    <dxg:LookUpEdit ItemsSource="{Binding Encodings}" EditValue="{Binding SourceOptionsViewModel.Encoding, UpdateSourceTrigger=PropertyChanged, Converter={local:EncodingToEncodingInfoConverter}}" DisplayMember="DisplayName" IsTextEditable="False" AutoPopulateColumns="False">
                                        <dxg:LookUpEdit.PopupContentTemplate>
                                            <ControlTemplate>
                                                <dxg:GridControl Name="PART_GridControl">
                                                    <dxg:GridControl.Columns>
                                                        <dxg:GridColumn FieldName="DisplayName" Header="Name" />
                                                    </dxg:GridControl.Columns>
                                                    <dxg:GridControl.View>
                                                        <dxg:TableView AutoWidth="True" />
                                                    </dxg:GridControl.View>
                                                </dxg:GridControl>
                                            </ControlTemplate>
                                        </dxg:LookUpEdit.PopupContentTemplate>
                                    </dxg:LookUpEdit>
                                </dxlc:LayoutItem>
                                <dxe:CheckEdit Content="Detect automatically" EditValue="{Binding SourceOptionsViewModel.DetectEncoding, UpdateSourceTrigger=PropertyChanged}" />
                            </dxlc:LayoutGroup>
                            <dxlc:LayoutGroup Orientation="Horizontal">
                                <dxlc:LayoutItem Label="Newline type" IsEnabled="{Binding SourceOptionsViewModel.DetectNewlineType, Converter={dxmvvm:BooleanNegationConverter}}">
                                    <dxe:ComboBoxEdit ItemsSource="{dxe:EnumItemsSource EnumType={x:Type dxdaexcel:CsvNewlineType}}" EditValue="{Binding SourceOptionsViewModel.NewlineType, UpdateSourceTrigger=PropertyChanged}" />
                                </dxlc:LayoutItem>
                                <dxe:CheckEdit Content="Detect automatically" EditValue="{Binding SourceOptionsViewModel.DetectNewlineType, UpdateSourceTrigger=PropertyChanged}" />
                            </dxlc:LayoutGroup>
                            <dxlc:LayoutGroup Orientation="Horizontal">
                                <dxlc:LayoutItem Label="Value separator" IsEnabled="{Binding SourceOptionsViewModel.DetectValueSeparator, Converter={dxmvvm:BooleanNegationConverter}}">
                                    <dxg:LookUpEdit ItemsSource="{Binding ValueSeparators}" EditValue="{Binding SourceOptionsViewModel.ValueSeparator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMember="Value" ValueMember="Value" AutoPopulateColumns="False" MaxLength="1">
                                        <dxg:LookUpEdit.PopupContentTemplate>
                                            <ControlTemplate>
                                                <dxg:GridControl Name="PART_GridControl">
                                                    <dxg:GridControl.Columns>
                                                        <dxg:GridColumn FieldName="DisplayName" Header="Name" />
                                                    </dxg:GridControl.Columns>
                                                    <dxg:GridControl.View>
                                                        <dxg:TableView AutoWidth="True" />
                                                    </dxg:GridControl.View>
                                                </dxg:GridControl>
                                            </ControlTemplate>
                                        </dxg:LookUpEdit.PopupContentTemplate>
                                    </dxg:LookUpEdit>
                                </dxlc:LayoutItem>
                                <dxe:CheckEdit Content="Detect automatically" EditValue="{Binding SourceOptionsViewModel.DetectValueSeparator, UpdateSourceTrigger=PropertyChanged}" />
                            </dxlc:LayoutGroup>
                            <dxlc:LayoutGroup Orientation="Horizontal">
                                <dxlc:LayoutItem Label="Culture">
                                    <dxg:LookUpEdit ItemsSource="{Binding Cultures}" EditValue="{Binding SourceOptionsViewModel.Culture, UpdateSourceTrigger=PropertyChanged}" DisplayMember="DisplayName" IsTextEditable="False" AutoPopulateColumns="False">
                                        <dxg:LookUpEdit.PopupContentTemplate>
                                            <ControlTemplate>
                                                <dxg:GridControl Name="PART_GridControl">
                                                    <dxg:GridControl.Columns>
                                                        <dxg:GridColumn FieldName="DisplayName" Header="Name" />
                                                    </dxg:GridControl.Columns>
                                                    <dxg:GridControl.View>
                                                        <dxg:TableView AutoWidth="True" />
                                                    </dxg:GridControl.View>
                                                </dxg:GridControl>
                                            </ControlTemplate>
                                        </dxg:LookUpEdit.PopupContentTemplate>
                                    </dxg:LookUpEdit>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem />
                            </dxlc:LayoutGroup>
                            <dxlc:LayoutGroup Orientation="Horizontal">
                                <dxlc:LayoutItem Label="Text Qualifier">
                                    <dxe:TextEdit EditValue="{Binding SourceOptionsViewModel.TextQualifier, UpdateSourceTrigger=PropertyChanged}" />
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem />
                            </dxlc:LayoutGroup>
                            <dxe:CheckEdit Content="Trim Blanks" EditValue="{Binding SourceOptionsViewModel.TrimBlanks, UpdateSourceTrigger=PropertyChanged}" />
                        </dxlc:LayoutGroup>
                        <dxlc:LayoutGroup Orientation="Vertical" Visibility="{Binding DocumentFormat, Converter={local:ExcelDocumentFormatToVisibilityConverter Inverse=True}}">
                            <dxe:CheckEdit Content="Skip hidden rows" EditValue="{Binding SourceOptionsViewModel.SkipHiddenRows, UpdateSourceTrigger=PropertyChanged}" />
                            <dxe:CheckEdit Content="Skip hidden columns" EditValue="{Binding SourceOptionsViewModel.SkipHiddenColumns, UpdateSourceTrigger=PropertyChanged}" />
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutControl>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>