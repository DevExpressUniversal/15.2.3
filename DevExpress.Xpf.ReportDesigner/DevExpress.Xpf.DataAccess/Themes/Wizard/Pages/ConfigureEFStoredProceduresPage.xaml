<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxco="http://schemas.devexpress.com/winfx/2008/xaml/controls"
            xmlns:local="clr-namespace:DevExpress.Xpf.DataAccess.DataSourceWizard"
            xmlns:localization="clr-namespace:DevExpress.Xpf.DataAccess.Localization"
            xmlns:localnative="clr-namespace:DevExpress.Xpf.DataAccess.Native">
    
    <DataTemplate x:Key="{x:Type local:ConfigureEFStoredProceduresPage}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <localnative:WizardTitle Grid.ColumnSpan="2" Title="{localization:DataAccessUIStringId StringId=EFStoredProcsEditorTitle}" />
            <dxe:ListBoxEdit Grid.Row="1" EditValue="{Binding SelectedItem}" ItemsSource="{Binding Procedures}" Margin="10,10,5,0" Width="Auto" />
            <local:ParameterEditor
                        Grid.Row="1"
                        Grid.Column="1"
                        ItemsSource="{Binding Parameters}"
                        ReportParameters="{Binding ReportParameters}"
                        Margin="0,10,10,0"
            />
            <dx:DialogFooter>
                <Grid>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Add}" HorizontalAlignment="Left" Command="{Binding AddCommand}" IsEnabled="{Binding AddIsEnabled, UpdateSourceTrigger=PropertyChanged}" />
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Remove}" HorizontalAlignment="Left" Command="{Binding RemoveCommand}" />
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Preview}" HorizontalAlignment="Left" Command="{Binding PreviewCommand}" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Previous}" dxco:Wizard.IsButtonBack="True" />
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Next}" dxco:Wizard.IsButtonNext="True" />
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Finish}" dxco:Wizard.IsButtonFinish="True" />
                    </StackPanel>
                </Grid>
            </dx:DialogFooter>
        </Grid>
    </DataTemplate>
</ResourceDictionary>