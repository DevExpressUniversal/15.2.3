<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxco="http://schemas.devexpress.com/winfx/2008/xaml/controls"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DataAccess.DataSourceWizard"
                    xmlns:localization="clr-namespace:DevExpress.Xpf.DataAccess.Localization"
                    xmlns:localnative="clr-namespace:DevExpress.Xpf.DataAccess.Native">
    
    <DataTemplate x:Key="{x:Type local:ConfigureExcelFileColumnsPage}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <localnative:WizardTitle Title="{localization:DataAccessUIStringId StringId=WizardPageConfigureExcelFileColumns}" />
            <dxg:GridControl Grid.Row="1" ItemsSource="{Binding Schema}">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="Selected" EditSettings="{dxe:CheckSettings}" />
                    <dxg:GridColumn FieldName="Name" />
                    <dxg:GridColumn FieldName="Type" EditSettings="{dxe:ComboBoxSettings ItemsSource={x:Static localnative:ListsWithNamesValues.FieldInfoTypes}, IsTextEditable=False, ValueMember=Value, DisplayMember=Name}" />
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView AutoWidth="True" ShowGroupPanel="False" />
                </dxg:GridControl.View>
            </dxg:GridControl>
            <dx:DialogFooter>
                <Grid>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Preview}" HorizontalAlignment="Left" Command="{Binding PreviewCommand}" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Previous}" dxco:Wizard.IsButtonBack="True" />
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Next}" dxco:Wizard.IsButtonNext="True" />
                        <dxco:WizardButton Content="{localization:DataAccessUIStringId StringId=Button_Finish}" dxco:Wizard.IsButtonFinish="True" />
                    </StackPanel>
                </Grid>
            </dx:DialogFooter>
        </Grid>
    </DataTemplate>
</ResourceDictionary>