<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxgcore="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

	<Style x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CardRowHeaderTextStyle}" TargetType="{x:Type TextBlock}">
		<Setter Property="Margin" Value="0,2,0,2" />
	</Style>

    <dxg:DefaultStyle x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellStyle}" TargetType="{x:Type dxgcore:CellContentPresenter}">
		<Setter Property="Border.CornerRadius" Value="1" />
        <Setter Property="dxg:CellContentPresenter.BorderThickness" Value="1" />
		<Style.Triggers>
			<Trigger Property="dxg:GridViewBase.IsFocusedCell" Value="True">
                <Setter Property="dxg:CellContentPresenter.Background" Value="White" />
                <Setter Property="dxg:CellContentPresenter.BorderBrush">
					<Setter.Value>
						<LinearGradientBrush EndPoint="0.5,1.003" StartPoint="0.5,-0.003">
							<GradientStop Color="#FF4c535c" Offset="0" />
							<GradientStop Color="#FFb6bbc3" Offset="1" />
							<GradientStop Color="#FF90969f" Offset="0.1" />
							<GradientStop Color="#FFa7adb6" Offset="0.9" />
						</LinearGradientBrush>
					</Setter.Value>
				</Setter>
			</Trigger>
		</Style.Triggers>
    </dxg:DefaultStyle>

    <Thickness x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellContentPresenterMargin}">0,0,0,0</Thickness>

    <DataTemplate x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=SeparatorTemplate}">
		<Grid x:Name="container">
			<Border x:Name="border" Background="#FFF0F1F2" MinWidth="2" MinHeight="2" />
		</Grid>
		<DataTemplate.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" TargetName="border" Value="#FFCDD1D6" />
			</Trigger>
			<DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Horizontal">
				<Setter Property="Margin" TargetName="container" Value="0,3,0,3" />
			</DataTrigger>
			<DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Vertical">
				<Setter Property="Margin" TargetName="container" Value="3,0,3,0" />
			</DataTrigger>
		</DataTemplate.Triggers>
	</DataTemplate>
</ResourceDictionary>