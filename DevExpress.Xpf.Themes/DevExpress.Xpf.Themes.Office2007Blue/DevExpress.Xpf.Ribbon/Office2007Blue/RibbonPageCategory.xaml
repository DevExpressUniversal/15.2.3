    <ControlTemplate x:Key="CollapseButtonTemplate" TargetType="{x:Type ToggleButton}">
        <Grid Background="Transparent" Margin="2,0,2,0" SnapsToDevicePixels="True">
            <Grid x:Name="PART_Hover" Opacity="0">
                <Grid>
                    <Border Margin="-1,3,-1,0">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFDAEAFE" Offset="0.5"/>
                                <GradientStop Color="#3FDAEAFE" Offset="1"/>
                                <GradientStop Color="#26DAEAFE" Offset="0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border
                        Background="#FF99BBE8"
                        CornerRadius="4,4,0,0">
                        <Border
                            Margin="1,1,1,0"
                            CornerRadius="3,3,0,0">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFEFF6FF" Offset="0.75"/>
                                    <GradientStop Color="#FFC7E0FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid Margin="1,1,1,0">
                                <Border CornerRadius="2,2,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFE4E6E0" Offset="0.5"/>
                                            <GradientStop Color="#FFE3D099" Offset="1"/>
                                            <GradientStop Color="#FFD2E5FE"/>
                                            <GradientStop Color="#FFDDDDD0" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <Path
                                    Stretch="Fill"
                                    StrokeLineJoin="Round"
                                    Data="F1 M 369,270L 404,270C 404,270 405,285 387,285C 369,285 369,271 369,270 Z "
                                    Margin="1,0"
                                    Height="18"
                                    Opacity="0.25">
                                    <Path.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox">
                                            <GradientStop Color="#FFD2E5FE" Offset="0.5"/>
                                            <GradientStop Color="#3ED2E5FE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Path.Fill>
                                </Path>
                            </Grid>
                        </Border>
                    </Border>
                </Grid>
            </Grid>
            <Grid x:Name="PART_Checked" Opacity="0">
                <Grid>
                    <Border 
                        Margin="0,3,-2,1" 
                        CornerRadius="0,4,0,0" 
                        Background="#FF000000" 
                        Opacity="0.08"/>
                    <Border
                        Background="#FF8DB2E3"
                        CornerRadius="4,4,0,0">
                        <Border
                            Margin="1,1,1,0"
                            Background="#FFD0FBFF"
                            CornerRadius="3,3,0,0">
                            <Border
                                Margin="1,1,1,-1"
                                CornerRadius="2,2,0,0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFF1F7FF" Offset="0"/>
                                        <GradientStop Color="#FFE0EAF6" Offset="1"/>
                                        <GradientStop Color="#FFF7FAFF" Offset="0.25"/>
                                        <GradientStop Color="#FFECF4FE" Offset="0.25"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Border>
                </Grid>
            </Grid>
     
            <Grid Margin="0,0,0,-3">            
                <Path x:Name="Path" Stretch="Fill" Fill="#FF678CBD" Data="F1 M 6,12L 10,8L 9,7L 6,10L 3,7L 2,8L 6,12 Z " Margin="6" Width="8" Height="5" />
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="PART_Hover" Property="Opacity" Value="1"/>
            </Trigger>
            <Trigger Property="ToggleButton.IsChecked" Value="True">
                <Setter TargetName="PART_Checked" Property="Opacity" Value="1"/>
            </Trigger>            
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="{dxrt:RibbonPageCategoryThemeKey ResourceKey=CollapseButtonStyle}" TargetType="{x:Type ToggleButton}">
        <Setter Property="Content" Value="V"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template" Value="{StaticResource CollapseButtonTemplate}"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
    </Style>
    <Style x:Key="{dxrt:RibbonPageCategoryThemeKey ResourceKey=AeroCollapseButtonStyle}" TargetType="{x:Type ToggleButton}">
        <Setter Property="Content" Value="V"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template" Value="{StaticResource CollapseButtonTemplate}"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
    </Style>
</ResourceDictionary>