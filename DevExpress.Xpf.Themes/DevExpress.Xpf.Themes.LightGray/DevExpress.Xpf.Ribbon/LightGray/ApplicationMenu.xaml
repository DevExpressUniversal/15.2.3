<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys" xmlns:interop="clr-namespace:System.Windows.Interop;assembly=PresentationFramework" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <!-- LightGray: Application Menu -->
    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBackgroundTemplate}" TargetType="{x:Type Control}">
        <Border Background="#FFFAFAFA" />
    </ControlTemplate>
    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2007}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="PART_AppMenu" Margin="0,0,3,3">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border x:Name="Shadow" Margin="3,3,-3,-3" SnapsToDevicePixels="True" CornerRadius="6" Background="#FF3D3D3D" Opacity="0.25" Grid.RowSpan="2" />
            <Border x:Name="Border" Background="#FF3D3D3D" CornerRadius="6" Grid.RowSpan="2" />
            <Border x:Name="Header" BorderThickness="0,0,0,1" BorderBrush="#FFC4C4C4" CornerRadius="5,5,0,0" SnapsToDevicePixels="True" Margin="1,1,1,0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEFEFEF" Offset="0" />
                        <GradientStop Color="Gainsboro" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="Content" Background="#FF3D3D3D" CornerRadius="6" SnapsToDevicePixels="True" Grid.Row="1">
                <ContentPresenter Content="{TemplateBinding Content}" Margin="1,0,1,1" />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static interop:BrowserInteropHelper.IsBrowserHosted}}" Value="True">
                <Setter Property="Visibility" TargetName="Shadow" Value="Collapsed" />
                <Setter Property="Margin" TargetName="PART_AppMenu" Value="0" />
                <Setter Property="CornerRadius" TargetName="Header" Value="0" />
                <!--<Setter Property="CornerRadius" TargetName="Border" Value="0"/>-->
                <Setter Property="CornerRadius" TargetName="Content" Value="0" />
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <!-- LightGray ... -->
    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuContentControlBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border BorderBrush="#FF535353" BorderThickness="0,1,0,0" SnapsToDevicePixels="True">
            <ContentPresenter Content="{TemplateBinding Content}" SnapsToDevicePixels="True" />
        </Border>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuRightPaneTemplate}" TargetType="{x:Type ContentControl}">
        <Border SnapsToDevicePixels="True" BorderThickness="1,0,0,0" Background="White" BorderBrush="#FFC4C4C4">
            <ContentPresenter />
        </Border>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBottomPaneTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="MainBorder" SnapsToDevicePixels="True" BorderThickness="0,1,0,0" BorderBrush="#FFC4C4C4" CornerRadius="0,0,5,5" VerticalAlignment="Bottom">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Gainsboro" Offset="0" />
                </LinearGradientBrush>
            </Border.Background>
            <ContentPresenter HorizontalAlignment="Right" Margin="2" />
        </Border>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static interop:BrowserInteropHelper.IsBrowserHosted}}" Value="True">
                <Setter Property="CornerRadius" TargetName="MainBorder" Value="0" />
            </DataTrigger>
        </ControlTemplate.Triggers>

    </ControlTemplate>
    <!-- LightGray ... -->
    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2010}" TargetType="{x:Type ContentControl}">
        <ContentControl Template="{DynamicResource {dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2007}}">
            <ContentPresenter />
        </ContentControl>
    </ControlTemplate>

</ResourceDictionary>