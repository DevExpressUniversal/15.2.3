<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=ItemContentStyle}" TargetType="{x:Type ContentControl}">
        
    </Style>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=HeaderContentStyle}" TargetType="{x:Type ContentControl}">
        
    </Style>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=SeparatorContentStyle}" TargetType="{x:Type ContentControl}">

    </Style>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=ItemLayoutStyle}" TargetType="{x:Type dx:Items2Panel}">
        <Setter Property="HorizontalIndent" Value="4"/>
    </Style>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=HeaderLayoutStyle}" TargetType="{x:Type dx:Items2Panel}">
        <Setter Property="HorizontalIndent" Value="4"/>
    </Style>
    
    <DataTemplate x:Key="{dxt:SuperTipThemeKey ResourceKey=ItemContentTemplate}">
        <TextBlock Text="{Binding}">
            <!--ONLY SL<TextBlock.Foreground>White</TextBlock.Foreground>ONLY SL-->
            <!--BEGIN WPF-->
            <TextBlock.Foreground>
                <SolidColorBrush Color="White"/>
            </TextBlock.Foreground>
            <!--END WPF-->
        </TextBlock>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:SuperTipThemeKey ResourceKey=HeaderContentTemplate}">
        <TextBlock Text="{Binding}" FontWeight="Bold">
            <!--ONLY SL<TextBlock.Foreground>White</TextBlock.Foreground>ONLY SL-->
            <!--BEGIN WPF-->
            <TextBlock.Foreground>
                <SolidColorBrush Color="White"/>
            </TextBlock.Foreground>
            <!--END WPF-->
        </TextBlock>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:SuperTipThemeKey ResourceKey=SeparatorContentTemplate}">
        <Border Background="White" Height="1" />
    </DataTemplate>
    
    <ControlTemplate x:Key="{dxt:SuperTipThemeKey ResourceKey=BorderTemplate}">
        <ContentPresenter />
    </ControlTemplate>

</ResourceDictionary>