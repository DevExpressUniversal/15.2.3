    <Thickness x:Key="{dxbt:BarItemThemeKey ResourceKey=Margin}">0</Thickness>
    <Thickness x:Key="{dxbt:BarItemThemeKey ResourceKey=InMenuClientPadding}">0,0,0,0</Thickness>
    <Thickness x:Key="{dxbt:BarItemThemeKey ResourceKey=InMenuContentMargin}">5,3,15,3</Thickness>
    <Thickness x:Key="{dxbt:BarItemThemeKey ResourceKey=InMenuKeyGestureMargin}">5,3,15,3</Thickness>
    
    <ControlTemplate x:Key="ItemContentTemplate" TargetType="{x:Type ContentControl}">
        <ContentPresenter Content="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" ContentTemplate="{Binding Path=ContentTemplate, RelativeSource={RelativeSource TemplatedParent}}"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarItemBorderThemeKey ResourceKey=Normal}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid>
            <Grid x:Name="PART_Customization" Opacity="0.0">
                <Border BorderBrush="#FF656565" BorderThickness="2" CornerRadius="3"/>
            </Grid>
            <Grid x:Name="PART_Hover" Opacity="0.0">
                <Border x:Name="hover_border1" Margin="0,1,0,1" Padding="1" CornerRadius="4" SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Color="#19000000" />
                            <GradientStop Color="#00000000" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="hover_border2" CornerRadius="3" Padding="1" SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#FF7E7E7E" />
                                <GradientStop Color="#FF9D9D9D" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border x:Name="hover_border3" CornerRadius="2" Padding="3" SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop Color="#FFDBDBDB" />
                                    <GradientStop Color="#FFF7F7F7" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
                <Border x:Name="disabled_border1" Margin="0,1,0,1" Padding="1" CornerRadius="4" SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Color="#19000000" />
                            <GradientStop Color="#00000000" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="disabled_border2" CornerRadius="3" Padding="1" SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#807E7E7E" />
                                <GradientStop Color="#809D9D9D" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border x:Name="disabled_border3" CornerRadius="2" Padding="3" SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop Color="#80DBDBDB" />
                                    <GradientStop Color="#80F7F7F7" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PART_Pressed" Opacity="0.0">
                <Border x:Name="pressed_border1" Margin="0,1,0,1" Padding="1" CornerRadius="4" SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Color="#7FFFFFFF" />
                            <GradientStop Color="#00FFFFFF" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="pressed_border2" CornerRadius="3" Padding="1" SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#FF707070" />
                                <GradientStop Color="#FF929292" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border x:Name="pressed_border3" CornerRadius="2" Padding="3" SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop Color="#FFA9A9AA" />
                                    <GradientStop Color="#FFBABAB9" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="HideBorderSide">
                    <VisualState x:Name="None"/>
                    <VisualState x:Name="Left">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="0,1,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="0,1,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="0,1,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border2" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="0,1,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border2" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="0,1,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border2" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="0,1,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,4,4,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,4,4,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,3,3,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,3,3,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,2,2,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,2,2,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,4,4,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,3,3,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,2,2,0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Right">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,1,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="4,0,0,4"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="4,0,0,4"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="3,0,0,3"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="3,0,0,3"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,0,0,2"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,0,0,2"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="4,0,0,4"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="3,0,0,3"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,0,0,2"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Top">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,0,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,0,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,0,0,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,0,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,0,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,0,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border2" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,0,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border2" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,0,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border2" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,0,1,1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,4,4"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,4,4"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,3,3"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,3,3"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,2,2"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,2,2"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,4,4"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,3,3"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,0,2,2"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Bottom">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="Margin" dxcn:ValueSetter.Thickness="0,1,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,1,1,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,1,1,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="Padding" dxcn:ValueSetter.Thickness="1,1,1,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="4,4,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="4,4,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="3,3,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="3,3,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,2,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,2,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="4,4,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border2" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="3,3,0,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border3" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,2,0,0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="All"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="ArrowHideBorderSide">
                    <VisualState x:Name="ArrowNone"/>
                    <VisualState x:Name="ArrowLeft"/>
                    <VisualState x:Name="ArrowTop"/>
                    <VisualState x:Name="ArrowRight"/>
                    <VisualState x:Name="ArrowBottom"/>
                    <VisualState x:Name="ArrowAll"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="ActiveState">
                    <VisualState x:Name="Active">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Opacity" Duration="0" To="1.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Inactive">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="Opacity" Duration="0" To="1.0"/>
                            <DoubleAnimation Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Customization" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled" >
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Customization" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Customization" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Opacity" Duration="0" To="1.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Customization" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Opacity" Duration="0" To="1.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Customization" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Opacity" Duration="0" To="1.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HoverChecked">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Customization" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Opacity" Duration="0" To="1.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Indetermintate">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Customization" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Opacity" Duration="0" To="0.6"/>
                        </Storyboard>
                    </VisualState>                    
                    <VisualState x:Name="Focused" />
                    <VisualState x:Name="Customization">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Customization" Storyboard.TargetProperty="Opacity" Duration="0" To="1.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                            <DoubleAnimation Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxbt:BarItemBorderInMainMenuThemeKey ResourceKey=Normal}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid>
            <Grid x:Name="PART_Customization" Opacity="0.0">
                <Border BorderBrush="#FFE4E4E4" BorderThickness="2"  CornerRadius="3"/>
            </Grid>
            <Grid x:Name="PART_Hover" Opacity="0.0">
                <Grid>
                    <Border Background="#FF9D9D9D" CornerRadius="2" Margin="1" x:Name="hover_border1" Grid.ColumnSpan="1" SnapsToDevicePixels="True" />
                    <Border Background="#809D9D9D" CornerRadius="2" Margin="1" x:Name="disabled_border1" Grid.ColumnSpan="1" SnapsToDevicePixels="True" />
                </Grid>
            </Grid>
            <Grid x:Name="PART_Pressed" Opacity="0.0">
                <Grid>
                    <Border Background="#FFFFFFFF" CornerRadius="2,2,0,0" x:Name="pressed_border1" Margin="1,1,1,0" SnapsToDevicePixels="True" />
                </Grid>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="HideBorderSide">
                    <VisualState x:Name="None"/>
                    <VisualState x:Name="Left">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,2,2,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,2,2,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="0,2,2,0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Right">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="hover_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,0,0,2"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="disabled_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,0,0,2"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pressed_border1" Storyboard.TargetProperty="CornerRadius" dxcn:ValueSetter.CornerRadius="2,0,0,2"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Top">
