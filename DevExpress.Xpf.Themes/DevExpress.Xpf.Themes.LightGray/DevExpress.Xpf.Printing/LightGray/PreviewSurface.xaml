<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/printing" 
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core" 
                    xmlns:native="http://schemas.devexpress.com/winfx/2008/xaml/printing/native" 
                    xmlns:docking="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                    xmlns:themekeys="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys" 
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">    
    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Printing.Native.PreviewSurface}" TargetType="{x:Type native:PreviewSurface}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border Background="#FF6E6E6E" />
                    </ControlTemplate>
                </Setter.Value>                
            </Setter>
        </Style.Setters>        
    </Style>
</ResourceDictionary>