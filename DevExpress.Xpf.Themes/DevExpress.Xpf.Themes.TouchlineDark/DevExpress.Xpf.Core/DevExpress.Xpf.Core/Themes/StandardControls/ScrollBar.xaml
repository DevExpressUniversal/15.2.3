                    <Track.DecreaseRepeatButton>
                        <RepeatButton Style="{DynamicResource {dxdst:ScrollBarThemeKey ThemeName=TouchlineDark, ResourceKey=PageButtonTouchStyle}}" Command="{x:Static ScrollBar.PageLeftCommand}" />
                    </Track.DecreaseRepeatButton>
