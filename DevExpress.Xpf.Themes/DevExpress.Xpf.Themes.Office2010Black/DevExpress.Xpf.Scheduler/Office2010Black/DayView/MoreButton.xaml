                        <Grid x:Name="Root" Width="16" Height="16">
                            <Border x:Name="NormalState" Background="#FF6A6A6A" CornerRadius="64" Opacity="0" cs:Name="Border_0001">
                                <Border CornerRadius="64" Margin="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" cs:Name="LinearGradientBrush_0709">
