                                        <GradientStop Color="#BFB89407" Offset="1" cs:Name="GradientStop_0004" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border CornerRadius="64" Margin="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" cs:Name="LinearGradientBrush_0711">
                                            <GradientStop Color="#FFFFFAE6" Offset="0" cs:Name="GradientStop_0005" />
                                            <GradientStop Color="#FFFFFFED" Offset="1" cs:Name="GradientStop_0006" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="64" Margin="1">
