                                                <GradientStop Color="#FFFFE277" Offset="0.5" cs:Name="GradientStop_0009" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Border>
                            <Border x:Name="PressedState" CornerRadius="64" Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" cs:Name="LinearGradientBrush_0713">
                                        <GradientStop Color="#FFC28F36" Offset="0" cs:Name="GradientStop_0010" />
                                        <GradientStop Color="#FFC2A34C" Offset="1" cs:Name="GradientStop_0011" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border CornerRadius="64" Margin="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" cs:Name="LinearGradientBrush_0714">
                                            <GradientStop Color="#FFFFE575" Offset="0" cs:Name="GradientStop_0012" />
                                            <GradientStop Color="#FFFFF37F" Offset="1" cs:Name="GradientStop_0013" />
                                            <GradientStop Color="#FFFFD86C" Offset="0.5" cs:Name="GradientStop_0014" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>
                            <Path x:Name="GlyphUp" Stretch="Fill" Fill="#FF3C3C3C" Data="F1 M 209,6.00006L 201,6.00006L 205,2L 209,6.00006 Z" Width="8" Height="4" Margin="0,0,0,2" HorizontalAlignment="Center" VerticalAlignment="Center" cs:Name="Path_0001" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
