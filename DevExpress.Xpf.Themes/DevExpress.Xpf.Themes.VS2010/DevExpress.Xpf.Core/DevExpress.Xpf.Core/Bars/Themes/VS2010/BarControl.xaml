<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal">

    <sys:Double x:Key="{dxbt:BarControlThemeKey ResourceKey=ClientPanelMinHeight}">23</sys:Double> 
    <Thickness x:Key="{dxbt:BarControlThemeKey ResourceKey=ClientPanelPadding}">1,1,0,0</Thickness>
     
    <!--BEGIN WPF-->
    <SolidColorBrush x:Key="BackgroundSquare" Color="#FF2D3F5D"/> 
    <SolidColorBrush x:Key="DarkSquare" Color="#FF35496A" />
    <SolidColorBrush x:Key="LightSquare" Color="#FF293955" />
    <DrawingBrush x:Key="StatusBarBackground" Viewport="0,0,4,4" ViewportUnits="Absolute" Stretch="None" TileMode="Tile">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="{StaticResource BackgroundSquare}">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,0,0,0"/>
                            <RectangleGeometry Rect="0,0,4,4"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="{StaticResource LightSquare}">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,0,1,1"/>
                            <RectangleGeometry Rect="2,2,1,1"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="{StaticResource DarkSquare}">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,1,1,1"/>
                            <RectangleGeometry Rect="2,3,1,1"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    <!--END WPF-->

    <!--ONLY SL
    <SolidColorBrush x:Key="StatusBarBackground" Color="#FF2D3F5D" />
    ONLY SL-->

    <LinearGradientBrush x:Key="QuickCustomizationButtonBackgroundBrushHover"
                         EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFFF8ED" Offset="0"/>
        <GradientStop Color="#FFFFC176" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="QuickCustomizationButtonBackgroundBrushPressed"
                         EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFE9552" Offset="0"/>
        <GradientStop Color="#FFFFD995" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="QuickCustomizationButtonBackgroundBrushChecked"
                         EndPoint="0.5,1" StartPoint="0.5,0"> 
        <GradientStop Color="#FFFE9552" Offset="0"/>
        <GradientStop Color="#FFFFD995" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="QuickCustomizationButtonBackgroundBrushInMainMenuHover"
                         EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFFF8ED" Offset="0"/>
        <GradientStop Color="#FFFFC176" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="QuickCustomizationButtonBackgroundBrushInMainMenuPressed"
                         EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFE9552" Offset="0"/>
        <GradientStop Color="#FFFFD995" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="QuickCustomizationButtonBackgroundBrushInMainMenuChecked"
                         EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFE9552" Offset="0"/>
        <GradientStop Color="#FFFFD995" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="QuickCustomizationButtonArrowHover" Color="#FF000000"/>

    <SolidColorBrush x:Key="QuickCustomizationButtonArrowPressed" Color="#FF000000"/>

    <SolidColorBrush x:Key="QuickCustomizationButtonArrowChecked" Color="#FF000000"/>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=DragWidgetTemplate}" TargetType="{x:Type dxb:DragWidget}">
        <Border Background="Transparent">
            <Grid Margin="4,0,2,-1">
                <Path Stretch="Fill" Fill="#FF5C6778"
                      Data="F1 M 538,357L 540,357L 540,359L 538,359L 538,357 Z M 538,361L 540,361L 540,363L 538,363L 538,361 Z M 538,365L 540,365L 540,367L 538,367L 538,365 Z M 538,369L 540,369L 540,371L 538,371L 538,369 Z "
                      Width="2" Height="14" />
                <Path Stretch="Fill" Fill="#3FFFFFFF"
                      Data="F1 M 539,358L 541,358L 541,360L 539,360L 539,358 Z M 539,362L 541,362L 541,364L 539,364L 539,362 Z M 539,366L 541,366L 541,368L 539,368L 539,366 Z M 539,370L 541,370L 541,372L 539,372L 539,370 Z "
                      Width="2" Height="14" Margin="1,1,0,0" />
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=QuickCustomizationButtonTemplate}" TargetType="{x:Type dxb:BarQuickCustomizationButton}">
        <Grid Background="Transparent">
            <Border x:Name="HoverState" CornerRadius="0,2,2,0" Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFCF3" Offset="0"/>
                        <GradientStop Color="#FFFFECB5" Offset="1"/>
                        <GradientStop Color="#FFFFF3CE" Offset="0.5"/>
                        <GradientStop Color="#FFFFECB5" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid x:Name="Glyph"
                  Margin="2,2,2,0" Height="5" Width="8"
                  SnapsToDevicePixels="True">
                <Path x:Name="Path1"
                      Stretch="Fill" Fill="#7FFFFFFF"
                      Data="F1 M 54,23L 54,24L 58,28L 62,24L 62,23L 54,23 Z"/>
                <Path x:Name="Path2"
                      Stretch="Fill" Fill="#FF1B293E"
                      Data="F1 M 54,23L 62,23L 58,27L 54,23 Z"
                      Margin="0,0,0,1"/>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="HoverState" Storyboard.TargetProperty="Opacity" Duration="0" To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="HoverState" Storyboard.TargetProperty="Opacity" Duration="0" To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="HoverState" Storyboard.TargetProperty="Opacity" Duration="0" To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Glyph" Storyboard.TargetProperty="Opacity" Duration="0" To="0.35"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="OrientationStates">
                    <VisualState x:Name="Horizontal"/>
                    <VisualState x:Name="Vertical">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Glyph" Storyboard.TargetProperty="Margin"
                                                           dxcn:ValueSetter.Thickness="2,3,2,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Glyph" Storyboard.TargetProperty="VerticalAlignment"
                                                           dxcn:ValueSetter.VerticalAlignment="Top"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Glyph" Storyboard.TargetProperty="RenderTransform">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <RotateTransform CenterX="3.5" CenterY="3.5" Angle="180"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=StatusBarContentTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="{StaticResource StatusBarBackground}" x:Name="Border">
            <ContentPresenter Content="{TemplateBinding Content}"
                              ContentStringFormat="{TemplateBinding ContentStringFormat}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=MainMenuContentTemplate}" TargetType="{x:Type ContentControl}"> 
        <Grid>
            <Border>
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFCAD3E2" Offset="0"/>
                        <GradientStop Color="#FFAEB9CD" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <ContentPresenter />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=QuickCustomizationButtonInMainMenuTemplate}" TargetType="{x:Type dxb:BarQuickCustomizationButton}">
        <Grid>
         
                <Grid x:Name="Glyph"
                      Margin="3" Height="5" Width="8">
                    <Path x:Name="Path1" Stretch="Fill" Fill="#9AFFFFFF"
                          Data="F1 M 54,23L 54,24L 58,28L 62,24L 62,23L 54,23 Z"/>
                    <Path x:Name="Path2" Stretch="Fill" Fill="#FFBDCADE"
                          Data="F1 M 54,23L 62,23L 58,27L 54,23 Z"
                          Margin="0,0,0,1"/>
                </Grid>         
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Path2">
                                <EasingColorKeyFrame KeyTime="0" Value="#FF8897AF"/>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Path2">
                                <EasingColorKeyFrame KeyTime="0" Value="#FF8897AF"/>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Path2">
                                <EasingColorKeyFrame KeyTime="0" Value="#FF8897AF"/>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Glyph" Storyboard.TargetProperty="Opacity" Duration="0" To="0.35"/>
                            <DoubleAnimation Storyboard.TargetName="Path1" Storyboard.TargetProperty="Opacity" Duration="0" To="0.0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="OrientationStates">
                    <VisualState x:Name="Horizontal"/>
                    <VisualState x:Name="Vertical">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Glyph" Storyboard.TargetProperty="Margin"
                                                           dxcn:ValueSetter.Thickness="2,3,2,0"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Glyph" Storyboard.TargetProperty="VerticalAlignment"
                                                           dxcn:ValueSetter.VerticalAlignment="Top"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Glyph" Storyboard.TargetProperty="RenderTransform">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <RotateTransform CenterX="3.5" CenterY="3.5" Angle="180"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=ThumbTemplate}" TargetType="{x:Type Thumb}">
        <Grid Background="{StaticResource StatusBarBackground}">
            <Grid Background="Transparent" Margin="1,1,2,2" Height="10" Width="10" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Path Stretch="Fill" Fill="#7FFFFFFF" Data="F1 M 0,7.99999L 2,7.99999L 2,9.99999L 0,9.99999L 0,7.99999 Z M 3.99997,8L 5.99997,8L 5.99997,10L 3.99997,10L 3.99997,8 Z M 7.99998,8L 9.99998,8L 9.99998,10L 7.99998,10L 7.99998,8 Z M 7.99998,4L 9.99998,4L 9.99998,6L 7.99998,6L 7.99998,4 Z M 7.99999,0L 9.99999,0L 9.99999,2L 7.99999,2L 7.99999,0 Z M 4,4L 6,4L 6,6L 4,6L 4,4 Z "/>
            </Grid>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=BarContentTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter Content="{TemplateBinding Content}"
                          ContentStringFormat="{TemplateBinding ContentStringFormat}"
                          ContentTemplate="{TemplateBinding ContentTemplate}"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=DropIndicatorTemplate}" TargetType="{x:Type ContentControl}">
        <!--First element MUST have a name "PART_Content"-->
        <Grid x:Name="PART_Content" SnapsToDevicePixels="True">
            <Grid.RenderTransform>
                <TranslateTransform X="-3" Y="0"/>
            </Grid.RenderTransform>
            <Border Background="#FF000000" BorderBrush="#FFFFFFFF" BorderThickness="1"
                    Width="9" Height="3" VerticalAlignment="Top"/>
            <Border Background="#FF000000" BorderBrush="#FFFFFFFF" BorderThickness="1"
                    Width="9" Height="3" VerticalAlignment="Bottom"/>
            <dx:PixelSnapper HorizontalAlignment="Center" Margin="0,2,0,2">
                <Border Background="#FF000000" BorderBrush="#FFFFFFFF" BorderThickness="1,0,1,0" Width="3"/>
            </dx:PixelSnapper>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="Orientation">
                    <VisualState x:Name="Horizontal">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Content" Storyboard.TargetProperty="RenderTransform">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <TransformGroup x:Name="HorizontalTransform">
                                            <TranslateTransform Y="0" X="-3"/>
                                        </TransformGroup>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Vertical">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Content" Storyboard.TargetProperty="RenderTransform">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <TransformGroup x:Name="VerticalTransform">
                                            <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                            <TranslateTransform Y="3" X="0"/>
                                        </TransformGroup>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxbt:BarControlThemeKey ResourceKey=BarContentStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF1B293E"/>
        <Setter Property="FontWeight" Value="Normal" />
		<Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="{dxbt:BarControlThemeKey ResourceKey=MenuContentStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF1B293E"/>
        <Setter Property="FontWeight" Value="Normal" />
		<Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <!--ONLY SL
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        ONLY SL-->
    </Style>

    <Style x:Key="{dxbt:BarControlThemeKey ResourceKey=MainMenuContentStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF1B293E"/>
    </Style>

    <Style x:Key="{dxbt:BarControlThemeKey ResourceKey=StatusBarContentStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF1B293E"/>
    </Style>

    <Style x:Key="{dxbt:BarControlThemeKey ResourceKey=BarStyle}" TargetType="{x:Type ContentControl}">
    </Style>

    <Style x:Key="{dxbt:BarControlThemeKey ResourceKey=FloatingBarStyle}" TargetType="{x:Type ContentControl}">
    </Style>    
    
    <Style x:Key="{dxbt:BarControlThemeKey ResourceKey=MainMenuStyle}" TargetType="{x:Type ContentControl}">
    </Style>

    <Style x:Key="{dxbt:BarControlThemeKey ResourceKey=StatusBarStyle}" TargetType="{x:Type ContentControl}">
    </Style>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=BarTemplate}" TargetType="{x:Type ContentControl}">
        <Grid Margin="0,0,1,1">
            <Border Background="#FFC9D2E1" Padding="1" CornerRadius="3">
                <Border Background="#FFBCC7D8" CornerRadius="2"/>
            </Border>
            <ContentPresenter/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=MainMenuTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FF9CAAC1">
            <ContentPresenter/> 
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=StatusBarTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="{StaticResource StatusBarBackground}" x:Name="Border">
            <ContentPresenter Content="{TemplateBinding Content}" 
                              ContentStringFormat="{TemplateBinding ContentStringFormat}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
        </Border>
    </ControlTemplate>

</ResourceDictionary>