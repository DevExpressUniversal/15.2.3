<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.VS2010.v15.2;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Themes/StandardControls/Brushes.xaml" />
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.VS2010.v15.2;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Themes/StandardControls/SharedResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=System.Windows.Controls.TabItem}" TargetType="{x:Type TabItem}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="BorderBrush" Value="{StaticResource TabItem.BorderBrush}" />
        <Setter Property="Background" Value="{StaticResource TabItem.Background}" />
        <Setter Property="Foreground" Value="{StaticResource Text.Foreground}" />
        <Setter Property="Padding" Value="{StaticResource TabItem.Padding}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Grid x:Name="Root" Margin="0,0,-1,0" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <Grid x:Name="DefaultState">
                            <Border x:Name="DefaultStateBorder" Background="{TemplateBinding BorderBrush}" Padding="{StaticResource TabItem.SelectedState.Top.Item.Padding}" CornerRadius="3,3,0,0">
                                <Border x:Name="DefaultStateHighlightedBorder" Background="{StaticResource TabItem.HighlightedBorder}" Padding="{StaticResource TabItem.SelectedState.Top.Item.Padding}" CornerRadius="2,2,0,0">
                                    <Border x:Name="DefaultStateBackground" Background="{TemplateBinding Background}" CornerRadius="1,1,0,0" />
                                </Border>
                            </Border>
                        </Grid>
                        <Grid x:Name="HoverState" Opacity="0">
                            <Border x:Name="HoverStateBorder" Background="{StaticResource TabItem.HoverState.Border}" Padding="{StaticResource TabItem.SelectedState.Top.Item.Padding}" CornerRadius="3,3,0,0">
                                <Border x:Name="HoverStateHighlightedBorder" Background="{StaticResource TabItem.HoverState.HighlightedBorder}" Padding="{StaticResource TabItem.SelectedState.Top.Item.Padding}" CornerRadius="2,2,0,0">
                                    <Border x:Name="HoverStateBackground" Background="{StaticResource TabItem.HoverState.Background}" CornerRadius="1,1,0,0" />
                                </Border>
                            </Border>
                        </Grid>
                        <Grid x:Name="SelectedState" Opacity="0">
                            <Border x:Name="SelectedStateBorder" Background="{StaticResource TabItem.SelectedState.Border}" Margin="{StaticResource TabItem.SelectedState.Top.Item.Margin}" Padding="{StaticResource TabItem.SelectedState.Top.Item.Padding}" CornerRadius="3,3,0,0">
                                <Border x:Name="SelectedStateHighlightedBorder" Background="{StaticResource TabItem.SelectedState.HighlightedBorder}" Padding="{StaticResource TabItem.SelectedState.Top.Item.Padding}" CornerRadius="2,2,0,0">
                                    <Border x:Name="SelectedStateBackground" Background="{StaticResource TabItem.SelectedState.Background}" CornerRadius="1,1,0,0" />
                                </Border>
                            </Border>
                            <Border x:Name="FocusedState" BorderBrush="{StaticResource TabItem.FocusedState}" BorderThickness="2,2,2,0" CornerRadius="3,3,0,0" Margin="0,0,0,-1" Opacity="0" />
                        </Grid>
                        <ContentPresenter x:Name="Content" Margin="{TemplateBinding Padding}" ContentSource="Header" RecognizesAccessKey="True" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HoverState" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="SelectedState" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="TabStripPlacement" Value="Top">
                            <Setter TargetName="Root" Property="Margin" Value="0,0,-1,0" />
                            <Setter TargetName="DefaultStateBorder" Property="CornerRadius" Value="3,3,0,0" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="CornerRadius" Value="2,2,0,0" />
                            <Setter TargetName="DefaultStateBackground" Property="CornerRadius" Value="1,1,0,0" />
                            <Setter TargetName="HoverStateBorder" Property="CornerRadius" Value="3,3,0,0" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="CornerRadius" Value="2,2,0,0" />
                            <Setter TargetName="HoverStateBackground" Property="CornerRadius" Value="1,1,0,0" />
                            <Setter TargetName="SelectedStateBorder" Property="CornerRadius" Value="3,3,0,0" />
                            <Setter TargetName="SelectedStateHighlightedBorder" Property="CornerRadius" Value="2,2,0,0" />
                            <Setter TargetName="SelectedStateBackground" Property="CornerRadius" Value="1,1,0,0" />
                            <Setter TargetName="DefaultStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Top.Item.Padding}" />
                            <Setter TargetName="HoverStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Top.Item.Padding}" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Top.Item.Padding}" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Top.Item.Padding}" />
                            <Setter TargetName="SelectedStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Top.Item.Padding}" />
                            <Setter TargetName="FocusedState" Property="BorderThickness" Value="2,2,2,0" />
                            <Setter TargetName="FocusedState" Property="CornerRadius" Value="2,2,0,0" />
                            <Setter TargetName="FocusedState" Property="Margin" Value="0,0,0,-1" />
                            <Setter TargetName="Content" Property="Margin" Value="{StaticResource TabItem.TopPadding}" />
                            <Setter TargetName="Content" Property="VerticalAlignment" Value="Top" />
                            <Setter TargetName="DefaultStateBorder" Property="Background" Value="{StaticResource TabItem.BorderBrush}" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.HighlightedBorder}" />
                            <Setter TargetName="DefaultStateBackground" Property="Background" Value="{StaticResource TabItem.Background}" />
                            <Setter TargetName="HoverStateBorder" Property="Background" Value="{StaticResource TabItem.HoverState.Border}" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.HoverState.HighlightedBorder}" />
                            <Setter TargetName="HoverStateBackground" Property="Background" Value="{StaticResource TabItem.HoverState.Background}" />
                            <Setter TargetName="SelectedStateBorder" Property="Background" Value="{StaticResource TabItem.SelectedState.Border}" />
                            <Setter TargetName="SelectedStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.SelectedState.Background}" />
                            <Setter TargetName="SelectedStateBackground" Property="Background" Value="{StaticResource TabItem.SelectedState.Background}" />
                        </Trigger>
                        <Trigger Property="TabStripPlacement" Value="Bottom">
                            <Setter TargetName="Root" Property="Margin" Value="0,0,-1,0" />
                            <Setter TargetName="DefaultStateBorder" Property="CornerRadius" Value="0,0,3,3" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="CornerRadius" Value="0,0,2,2" />
                            <Setter TargetName="DefaultStateBackground" Property="CornerRadius" Value="0,0,1,1" />
                            <Setter TargetName="HoverStateBorder" Property="CornerRadius" Value="0,0,3,3" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="CornerRadius" Value="0,0,2,2" />
                            <Setter TargetName="HoverStateBackground" Property="CornerRadius" Value="0,0,1,1" />
                            <Setter TargetName="SelectedStateBorder" Property="CornerRadius" Value="0,0,3,3" />
                            <Setter TargetName="SelectedStateHighlightedBorder" Property="CornerRadius" Value="0,0,2,2" />
                            <Setter TargetName="SelectedStateBackground" Property="CornerRadius" Value="0,0,1,1" />
                            <Setter TargetName="DefaultStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Bottom.Item.Padding}" />
                            <Setter TargetName="HoverStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Bottom.Item.Padding}" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Bottom.Item.Padding}" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Bottom.Item.Padding}" />
                            <Setter TargetName="SelectedStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Bottom.Item.Padding}" />
                            <Setter TargetName="FocusedState" Property="CornerRadius" Value="0,0,2,2" />
                            <Setter TargetName="FocusedState" Property="BorderThickness" Value="2,0,2,2" />
                            <Setter TargetName="FocusedState" Property="Margin" Value="0,-1,0,0" />
                            <Setter TargetName="Content" Property="Margin" Value="{StaticResource TabItem.BottomPadding}" />
                            <Setter TargetName="Content" Property="VerticalAlignment" Value="Bottom" />
                            <Setter TargetName="DefaultStateBorder" Property="Background" Value="{StaticResource TabItem.BorderBrush.Bottom}" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.HighlightedBorder.Bottom}" />
                            <Setter TargetName="DefaultStateBackground" Property="Background" Value="{StaticResource TabItem.Background.Bottom}" />
                            <Setter TargetName="HoverStateBorder" Property="Background" Value="{StaticResource TabItem.HoverState.Border.Bottom}" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.HoverState.HighlightedBorder.Bottom}" />
                            <Setter TargetName="HoverStateBackground" Property="Background" Value="{StaticResource TabItem.HoverState.Background.Bottom}" />
                            <Setter TargetName="SelectedStateBorder" Property="Background" Value="{StaticResource TabItem.SelectedState.Border.Bottom}" />
                            <Setter TargetName="SelectedStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.SelectedState.Background.Bottom}" />
                            <Setter TargetName="SelectedStateBackground" Property="Background" Value="{StaticResource TabItem.SelectedState.Background.Bottom}" />
                        </Trigger>
                        <Trigger Property="TabStripPlacement" Value="Left">
                            <Setter TargetName="Root" Property="Margin" Value="0,0,0,-1" />
                            <Setter TargetName="DefaultStateBorder" Property="CornerRadius" Value="3,0,0,3" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="CornerRadius" Value="2,0,0,2" />
                            <Setter TargetName="DefaultStateBackground" Property="CornerRadius" Value="1,0,0,1" />
                            <Setter TargetName="HoverStateBorder" Property="CornerRadius" Value="3,0,0,3" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="CornerRadius" Value="2,0,0,2" />
                            <Setter TargetName="HoverStateBackground" Property="CornerRadius" Value="1,0,0,1" />
                            <Setter TargetName="SelectedStateBorder" Property="CornerRadius" Value="3,0,0,3" />
                            <Setter TargetName="SelectedStateHighlightedBorder" Property="CornerRadius" Value="2,0,0,2" />
                            <Setter TargetName="SelectedStateBackground" Property="CornerRadius" Value="1,0,0,1" />
                            <Setter TargetName="DefaultStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Left.Item.Padding}" />
                            <Setter TargetName="HoverStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Left.Item.Padding}" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Left.Item.Padding}" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Left.Item.Padding}" />
                            <Setter TargetName="SelectedStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Left.Item.Padding}" />
                            <Setter TargetName="FocusedState" Property="CornerRadius" Value="2,0,0,2" />
                            <Setter TargetName="FocusedState" Property="BorderThickness" Value="2,2,0,2" />
                            <Setter TargetName="FocusedState" Property="Margin" Value="0,0,-1,0" />
                            <Setter TargetName="Content" Property="HorizontalAlignment" Value="Left" />
                            <Setter TargetName="DefaultStateBorder" Property="Background" Value="{StaticResource TabItem.BorderBrush.Left}" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.HighlightedBorder.Left}" />
                            <Setter TargetName="DefaultStateBackground" Property="Background" Value="{StaticResource TabItem.Background.Left}" />
                            <Setter TargetName="HoverStateBorder" Property="Background" Value="{StaticResource TabItem.HoverState.Border.Left}" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.HoverState.HighlightedBorder.Left}" />
                            <Setter TargetName="HoverStateBackground" Property="Background" Value="{StaticResource TabItem.HoverState.Background.Left}" />
                            <Setter TargetName="SelectedStateBorder" Property="Background" Value="{StaticResource TabItem.SelectedState.Border.Left}" />
                            <Setter TargetName="SelectedStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.SelectedState.Background.Left}" />
                            <Setter TargetName="SelectedStateBackground" Property="Background" Value="{StaticResource TabItem.SelectedState.Background.Left}" />
                        </Trigger>
                        <Trigger Property="TabStripPlacement" Value="Right">
                            <Setter TargetName="Root" Property="Margin" Value="0,0,0,-1" />
                            <Setter TargetName="DefaultStateBorder" Property="CornerRadius" Value="0,3,3,0" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="CornerRadius" Value="0,2,2,0" />
                            <Setter TargetName="DefaultStateBackground" Property="CornerRadius" Value="0,1,1,0" />
                            <Setter TargetName="HoverStateBorder" Property="CornerRadius" Value="0,3,3,0" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="CornerRadius" Value="0,2,2,0" />
                            <Setter TargetName="HoverStateBackground" Property="CornerRadius" Value="0,1,1,0" />
                            <Setter TargetName="SelectedStateBorder" Property="CornerRadius" Value="0,3,3,0" />
                            <Setter TargetName="SelectedStateHighlightedBorder" Property="CornerRadius" Value="0,2,2,0" />
                            <Setter TargetName="SelectedStateBackground" Property="CornerRadius" Value="0,1,1,0" />
                            <Setter TargetName="DefaultStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Right.Item.Padding}" />
                            <Setter TargetName="HoverStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Right.Item.Padding}" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Right.Item.Padding}" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Right.Item.Padding}" />
                            <Setter TargetName="SelectedStateBorder" Property="Padding" Value="{StaticResource TabItem.SelectedState.Right.Item.Padding}" />
                            <Setter TargetName="FocusedState" Property="CornerRadius" Value="0,2,2,0" />
                            <Setter TargetName="FocusedState" Property="BorderThickness" Value="0,2,2,2" />
                            <Setter TargetName="FocusedState" Property="Margin" Value="-1,0,0,0" />
                            <Setter TargetName="Content" Property="HorizontalAlignment" Value="Right" />
                            <Setter TargetName="DefaultStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.HighlightedBorder.Right}" />
                            <Setter TargetName="DefaultStateBackground" Property="Background" Value="{StaticResource TabItem.Background.Right}" />
                            <Setter TargetName="HoverStateBorder" Property="Background" Value="{StaticResource TabItem.HoverState.Border.Right}" />
                            <Setter TargetName="HoverStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.HoverState.HighlightedBorder.Right}" />
                            <Setter TargetName="HoverStateBackground" Property="Background" Value="{StaticResource TabItem.HoverState.Background.Right}" />
                            <Setter TargetName="SelectedStateBorder" Property="Background" Value="{StaticResource TabItem.SelectedState.Border.Right}" />
                            <Setter TargetName="SelectedStateHighlightedBorder" Property="Background" Value="{StaticResource TabItem.SelectedState.Background.Right}" />
                            <Setter TargetName="SelectedStateBackground" Property="Background" Value="{StaticResource TabItem.SelectedState.Background.Right}" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="TabStripPlacement" Value="Top" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Root" Property="Margin" Value="{StaticResource TabItem.SelectedState.Top.Root.Margin}" />
                            <Setter TargetName="SelectedStateBorder" Property="Margin" Value="{StaticResource TabItem.SelectedState.Top.Item.Margin}" />
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="TabStripPlacement" Value="Bottom" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Root" Property="Margin" Value="{StaticResource TabItem.SelectedState.Bottom.Root.Margin}" />
                            <Setter TargetName="SelectedStateBorder" Property="Margin" Value="{StaticResource TabItem.SelectedState.Bottom.Item.Margin}" />
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="TabStripPlacement" Value="Left" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Root" Property="Margin" Value="{StaticResource TabItem.SelectedState.Left.Root.Margin}" />
                            <Setter TargetName="SelectedStateBorder" Property="Margin" Value="{StaticResource TabItem.SelectedState.Left.Item.Margin}" />
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="TabStripPlacement" Value="Right" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Root" Property="Margin" Value="{StaticResource TabItem.SelectedState.Right.Root.Margin}" />
                            <Setter TargetName="SelectedStateBorder" Property="Margin" Value="{StaticResource TabItem.SelectedState.Right.Item.Margin}" />
                        </MultiTrigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="FocusedState" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.35" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>