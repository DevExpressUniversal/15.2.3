                        <Grid Background="Transparent" SnapsToDevicePixels="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="19" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Path x:Name="GlyphClose" Stretch="Fill" Fill="#FF000000" Data="F1 M 583,362L 588,367L 588,369L 583,364L 578,369L 578,367L 583,362 Z M 583,366L 588,371L 588,373L 583,368L 578,373L 578,371L 583,366 Z " Width="10" Height="11" />
