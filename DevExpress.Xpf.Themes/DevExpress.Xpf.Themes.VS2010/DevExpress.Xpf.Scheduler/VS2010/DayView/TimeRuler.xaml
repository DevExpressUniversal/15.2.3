<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys" xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <!--BEGIN WPF-->
    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.VS2010.v15.2;component/DevExpress.Xpf.Scheduler/VS2010/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <!--END WPF-->

    <sys:Double x:Key="{dxscht:DayViewThemeKey ResourceKey=TimeRulersMinWidth}">40</sys:Double>

    <Thickness x:Key="{dxscht:DayViewThemeKey ResourceKey=TimeRulerMargin}">0</Thickness>

    <Style x:Key="{dxscht:DayViewThemeKey ResourceKey=TimeRulerFontStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource TimeRulerTextForeground}" />
    </Style>

    <DataTemplate x:Key="{dxscht:DayViewThemeKey ResourceKey=TimeRulerMinuteItemTemplate}">
        <Grid MinWidth="22" VerticalAlignment="Top">
            <Border Background="#FFBAC2D1" Margin="0,-1,0,0" Height="1" Width="16"
                    HorizontalAlignment="Right" VerticalAlignment="Top" />
            <TextBlock Style="{DynamicResource {dxscht:DayViewThemeKey ResourceKey=TimeRulerFontStyle}}"
                       Text="{Binding Caption}" FontSize="11"
                       Margin="35,2,5,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxscht:DayViewThemeKey ResourceKey=TimeRulerHourItemTemplate}">
        <Grid dxschd:SharedSizePanel.Span="{Binding MinuteItems.Count}"
              VerticalAlignment="Top">
            <Border Background="#FFBAC2D1" Width="16"
                    Height="1" Margin="0,-1,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" />
            <TextBlock Style="{DynamicResource {dxscht:DayViewThemeKey ResourceKey=TimeRulerFontStyle}}"
                       Text="{Binding Caption}" FontSize="16"
                       Margin="2,0,24,0" HorizontalAlignment="Right" VerticalAlignment="Top" />
        </Grid>
    </DataTemplate>

    <ControlTemplate x:Key="{dxscht:DayViewThemeKey ResourceKey=TimeRulerHeaderSeparatorTemplate}">
        <Rectangle Fill="{StaticResource DefaultBorderBrush}" Height="1" VerticalAlignment="Top" />
    </ControlTemplate>

</ResourceDictionary>