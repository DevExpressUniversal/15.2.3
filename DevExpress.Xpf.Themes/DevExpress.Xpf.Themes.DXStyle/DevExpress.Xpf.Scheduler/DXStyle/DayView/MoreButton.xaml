                            <Border x:Name="HoverState" Background="#FFA9ACB5" CornerRadius="24" Opacity="0">
                                <Border CornerRadius="64" Margin="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
