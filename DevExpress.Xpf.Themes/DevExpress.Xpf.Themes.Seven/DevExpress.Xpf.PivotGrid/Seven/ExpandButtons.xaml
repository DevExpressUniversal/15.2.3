<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid"
                    xmlns:dxpgi="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid/internal"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <dx:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>
    <dx:BooleanToVisibilityConverter x:Key="invertBoolToVisibilityConverter" Invert="True"/>

    <ControlTemplate x:Key="{dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonTemplate}" TargetType="{x:Type dx:ToggleStateButton}">
        <Grid Background="Transparent" SnapsToDevicePixels="True">
            <Grid>
                <Border x:Name="HoverHighlight" Width="14" Height="14" Opacity="0">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF1CC4F7"/>
                            <GradientStop Color="#001CC4F7" Offset="1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>
                <Grid Width="7" Height="7" Margin="0,0,1,1"
                      Visibility="{Binding IsChecked, Converter={StaticResource boolToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}">
                    <Path x:Name="GlyphClosePath1"
                          Stretch="Fill" Fill="#FF303336"
                          Data="F1 M 5.98438,24.9948L 12.9428,24.9948L 13.9222,24.0155L 13.9222,16.91L 5.98438,24.9948 Z "/>
                    <Path x:Name="GlyphClosePath2" Stretch="Fill" Fill="#FF303336"
                          Data="F1 M 5.98438,24.9948L 12.9428,24.9948L 13.9222,24.0155L 13.9222,16.91L 5.98438,24.9948 Z "/>
                    <Path x:Name="GlyphClosePath3" Stretch="Fill" Fill="#FF87898A"
                          Data="F1 M 13.0677,23.9948L 13.0677,19.0358L 8.06719,24.0363L 13.0677,23.9948 Z"
                          Margin="2,2,1,1"/>
                </Grid>
                <Grid Width="5" Height="10" Margin="1,0,0,0"
                      Visibility="{Binding IsChecked, Converter={StaticResource invertBoolToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}">
                    <Path x:Name="GlyphOpenPath1" Stretch="Fill" Fill="#FF818181"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z "/>
                    <Path x:Name="GlyphOpenPath2" Stretch="Fill" Fill="#FF818181"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z "/>
                    <Path x:Name="GlyphOpenPath3" Stretch="Fill" Fill="#FFF8F8F8"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z"
                          Margin="1" Width="3" Height="6"/>
                </Grid>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="GlyphClosePath1" To="#FF1CC4F7" />
                            <ColorAnimation Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="GlyphClosePath2" To="#FF1CC4F7" />
                            <ColorAnimation Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="GlyphClosePath3" To="#FFCDEEFB" />
                            <ColorAnimation Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="GlyphOpenPath1" To="#FF1CC4F7" />
                            <ColorAnimation Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="GlyphOpenPath2" To="#FF1CC4F7" />
                            <ColorAnimation Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="GlyphOpenPath3" To="#FFCDEEFB" />
                            <DoubleAnimation To="0.15" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="HoverHighlight" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonStyle}" TargetType="{x:Type dx:ToggleStateButton}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="13"/>
        <Setter Property="Height" Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template"
                Value="{DynamicResource {dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonTemplate}}"/>
    </Style>

</ResourceDictionary>