<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxdiag="http://schemas.devexpress.com/winfx/2008/xaml/diagram"
                    xmlns:dxdiagt="http://schemas.devexpress.com/winfx/2008/xaml/diagram/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Thickness x:Key="{dxdiagt:ControlsThemeKeys ResourceKey=PageBorderThickness}">1</Thickness>
    <sys:Double x:Key="{dxdiagt:RulerThemeKey ResourceKey=Size}">20</sys:Double>

    <ControlTemplate x:Key="{dxdiagt:DiagramControlThemeKeys ResourceKey=BackgroundTemplate}" TargetType="ContentControl">
        <Border Background="{TemplateBinding Background}">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxdiagt:DiagramControlThemeKeys ResourceKey=PageBackgroundTemplate}" TargetType="ContentControl">
        <Grid>
            <Grid Margin="-3">
                <Border Background="#FF000000" CornerRadius="5" Opacity="0.01"/>
                <Border Background="#FF000000" Margin="1" CornerRadius="4" Opacity="0.02"/>
                <Border Background="#FF000000" Margin="2" CornerRadius="3" Opacity="0.03"/>
            </Grid>
            <Border Background="{TemplateBinding Background}" BorderBrush="#26000000" BorderThickness="{TemplateBinding BorderThickness}">
                 <ContentPresenter ClipToBounds="True"/>
            </Border>
        </Grid>
    </ControlTemplate>
    <DataTemplate x:Key="{dxdiagt:AdornersThemeKeys ResourceKey=SizeSnapLineTemplate}">
        <Grid>
            <Path Stroke="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}" 
                  Fill="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}" VerticalAlignment="Center" HorizontalAlignment="Left" 
                  Margin="1,3,0,0" 
                  Data="M0,0 L6,-3 L6,3 z"/>
            <Path Stroke="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}" 
                  Fill="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}" VerticalAlignment="Center" HorizontalAlignment="Right" 
                  Margin="0,3,1,0" Data="M0,0 L-6,-3 L-6,3 z"/>
            <Border Height="1" Background="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}" VerticalAlignment="Center"/>
            <Border BorderBrush="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}" VerticalAlignment="Stretch" 
                    BorderThickness="1,0,1,0"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>