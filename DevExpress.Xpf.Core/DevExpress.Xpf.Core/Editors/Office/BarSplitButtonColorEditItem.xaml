<local:BarSplitButtonEditItem x:Class="DevExpress.Xpf.Office.UI.BarSplitButtonColorEditItem"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:local="clr-namespace:DevExpress.Xpf.Office.UI"
                              xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars">

    <local:BarSplitButtonEditItem.GlyphTemplate>
        <DataTemplate>
            <Grid>
                <Image Source="{Binding ActualGlyph, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxb:BarSplitButtonItemLinkControl}}"/>

                <Border x:Name="colorIndicator" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
            </Grid>
        </DataTemplate>
    </local:BarSplitButtonEditItem.GlyphTemplate>
</local:BarSplitButtonEditItem>
