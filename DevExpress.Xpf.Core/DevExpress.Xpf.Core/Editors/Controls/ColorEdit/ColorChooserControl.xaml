<UserControl x:Class="DevExpress.Xpf.Editors.ColorChooserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
        xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
        xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />                
            </Grid.RowDefinitions>
            <dxe:ColorChooser x:Name="colorChooser" />
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="12,0,12,12">
                <Button Name="okButton" MinWidth="75" Content="OK" Click="okButton_Click" />
                <Button Name="Cancel" MinWidth="75" Content="Cancel" Click="cancelButton_Click" Margin="6,0,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
