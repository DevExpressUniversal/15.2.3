<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dxet="clr-namespace:DevExpress.Xpf.Editors.Themes"
	xmlns:dx="clr-namespace:DevExpress.Xpf.Core">
    <!--BEGIN WPF-->
    <ResourceDictionary.MergedDictionaries>
        <dxtEx:ResourceDictionaryEx Source="{dx:EditorsResource Themes/Generic/Flyout.xaml}"/>
    </ResourceDictionary.MergedDictionaries>
    <!--END WPF-->
    
    <SolidColorBrush x:Key="{dxet:FlyoutControlThemeKey ResourceKey=Foreground}" Color="#FFFFFFFF"></SolidColorBrush>
    <SolidColorBrush x:Key="{dxet:FlyoutControlThemeKey ResourceKey=Background}" Color="#FF6D8EBD"></SolidColorBrush>
    <Thickness x:Key="{dxet:FlyoutControlThemeKey ResourceKey=BorderThickness}">1</Thickness>
    <Thickness x:Key="{dxet:FlyoutControlThemeKey ResourceKey=Padding}">4</Thickness>
    <SolidColorBrush x:Key="{dxet:FlyoutControlThemeKey ResourceKey=BorderBrush}" Color="#FF466392"></SolidColorBrush>

</ResourceDictionary> 