<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
                    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
                    xmlns:dxer="clr-namespace:DevExpress.Xpf.Editors.RangeControl"
                    xmlns:dxt="clr-namespace:DevExpress.Xpf.Editors.Themes">
    <ResourceDictionary.MergedDictionaries>
        <dxtEx:ResourceDictionaryEx Source="{dx:EditorsResource Themes/Generic/RangeControl.xaml}"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="{dxt:CalendarClientThemeKey ResourceKey=CalendarClientForegroundBrush}" Color="White"/>
    <Thickness x:Key="{dxt:RangeControlThemeKey ResourceKey=LeftLabelMargin}" Left="1" Top="1" Right="10" Bottom="1"/>
    <Thickness x:Key="{dxt:RangeControlThemeKey ResourceKey=RightLabelMargin}" Left="10" Top="1" Right="1" Bottom="1"/>

    <!-- CalendarSelectionMarker -->
    <DataTemplate x:Key="{dxt:CalendarClientThemeKey ResourceKey=CalendarSelectionMarkerTemplate}">
        <Ellipse Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"
                 Fill="{DynamicResource {dxt:CalendarClientThemeKey ResourceKey=CalendarClientForegroundBrush}}"/>
    </DataTemplate>

    <!-- ToolTips -->

    <DataTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=LabelTemplate}">
        <Border Background="#FF294375" MinWidth="80" MinHeight="22" VerticalAlignment="Top">
            <TextBlock Foreground="#FFFFFFFF" Text="{Binding}" Margin="12,4,12,4" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
    </DataTemplate>

    <!-- Left & Right Navigation Buttons -->

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=LeftNavigationButtonTemplate}" TargetType="{x:Type Button}">
        <Grid Background="Transparent" Margin="16,0,0,0">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Ellipse" Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)" Duration="0" To="#FFB9BAC3" />
                            <ColorAnimation Storyboard.TargetName="Glyph" Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Duration="0" To="#BFFFFFFF" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Ellipse" Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)" Duration="0" To="#cbcbd2" />
                            <ColorAnimation Storyboard.TargetName="Glyph" Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Duration="0" To="#FFFFFFFF" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Ellipse" Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)" Duration="0" To="#adadb8" />
                            <ColorAnimation Storyboard.TargetName="Glyph" Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Duration="0" To="#7FFFFFFF" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Ellipse x:Name="Ellipse" Stretch="Fill" Stroke="#FF294375" StrokeThickness="1" Width="32" Height="32">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF6288C0" Offset="0" />
                        <GradientStop Color="#FF688DC3" Offset="1" />
                        <GradientStop Color="#FF244985" Offset="0.5" />
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Path x:Name="Glyph" Stretch="Fill" Fill="#BFFFFFFF" Data="F1 M 0,5L 6,0L 6,10L 0,5" Width="6" Height="10" Margin="-1,0,1,0" />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=RightNavigationButtonTemplate}" TargetType="{x:Type Button}">
        <Grid Background="Transparent" Margin="0,0,16,0">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Ellipse" Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)" Duration="0" To="#FFB9BAC3" />
                            <ColorAnimation Storyboard.TargetName="Glyph" Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Duration="0" To="#BFFFFFFF" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Ellipse" Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)" Duration="0" To="#cbcbd2" />
                            <ColorAnimation Storyboard.TargetName="Glyph" Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Duration="0" To="#FFFFFFFF" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Ellipse" Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)" Duration="0" To="#adadb8" />
                            <ColorAnimation Storyboard.TargetName="Glyph" Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)" Duration="0" To="#7FFFFFFF" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Ellipse x:Name="Ellipse" Stretch="Fill" Stroke="#FF294375" StrokeThickness="1" Width="32" Height="32">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF6288C0" Offset="0" />
                        <GradientStop Color="#FF688DC3" Offset="1" />
                        <GradientStop Color="#FF244985" Offset="0.5" />
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Path x:Name="Glyph" Stretch="Fill" Fill="#BFFFFFFF" Data="F1 M 0,0L 0,10L 6,5L 0,0 Z " Width="6" Height="10" Margin="1,0,-1,0" />
        </Grid>
    </ControlTemplate>


    <!-- Calendar -->

    <ControlTemplate x:Key="{dxt:CalendarClientThemeKey ResourceKey=CalendarGroupItemTemplate}" TargetType="{x:Type dxer:CalendarGroupItem}">
        <Border Background="#FF909090">
            <TextBlock Text="{TemplateBinding Text}" TextAlignment="Center" VerticalAlignment="Center" Margin="20,0" />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:CalendarClientThemeKey ResourceKey=CalendarItemTemplate}" TargetType="{x:Type dxer:CalendarItem}">
        <Border x:Name="Border" Background="#FF909090" BorderThickness="0">
            <TextBlock x:Name="Text" Text="{TemplateBinding Text}" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter TargetName="Border" Property="Background" Value="#FF8EB8E6" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Range Bar -->

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FFFFFFFF" BorderBrush="#FF294375" BorderThickness="1">
            <ContentPresenter />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=RangeBarRootBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border BorderBrush="#FF294375" BorderThickness="0,1,0,0">
            <ContentPresenter />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=RangeBarLeftResizeThumbTemplate}">
        <Border BorderBrush="#FF294375" BorderThickness="0,0,1,0" Width="8">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6288C0" Offset="0" />
                    <GradientStop Color="#FF688DC3" Offset="1" />
                    <GradientStop Color="#FF244985" Offset="0.5" />
                </LinearGradientBrush>
            </Border.Background>
            <Path Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 375,379L 376,379L 376,380L 375,380L 375,379 Z M 377,379.001L 378,379.001L 378,380.001L 377,380.001L 377,379.001 Z M 375,381.001L 376,381.001L 376,382.001L 375,382.001L 375,381.001 Z M 377,381.001L 378,381.001L 378,382.001L 377,382.001L 377,381.001 Z M 375,383.001L 376,383.001L 376,384.001L 375,384.001L 375,383.001 Z M 377,383L 378,383L 378,384L 377,384L 377,383 Z M 375,385L 376,385L 376,386L 375,386L 375,385 Z M 377,385L 378,385L 378,386L 377,386L 377,385 Z M 375,387L 376,387L 376,388L 375,388L 375,387 Z M 377,387L 378,387L 378,388L 377,388L 377,387 Z M 375,389L 376,389L 376,390L 375,390L 375,389 Z M 377,389L 378,389L 378,390L 377,390L 377,389 Z " Width="3" Height="11" />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=RangeBarRightResizeThumbTemplate}">
        <Border BorderBrush="#FF294375" BorderThickness="0,0,1,0" Width="8">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6288C0" Offset="0" />
                    <GradientStop Color="#FF688DC3" Offset="1" />
                    <GradientStop Color="#FF244985" Offset="0.5" />
                </LinearGradientBrush>
            </Border.Background>
            <Path Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 375,379L 376,379L 376,380L 375,380L 375,379 Z M 377,379.001L 378,379.001L 378,380.001L 377,380.001L 377,379.001 Z M 375,381.001L 376,381.001L 376,382.001L 375,382.001L 375,381.001 Z M 377,381.001L 378,381.001L 378,382.001L 377,382.001L 377,381.001 Z M 375,383.001L 376,383.001L 376,384.001L 375,384.001L 375,383.001 Z M 377,383L 378,383L 378,384L 377,384L 377,383 Z M 375,385L 376,385L 376,386L 375,386L 375,385 Z M 377,385L 378,385L 378,386L 377,386L 377,385 Z M 375,387L 376,387L 376,388L 375,388L 375,387 Z M 377,387L 378,387L 378,388L 377,388L 377,387 Z M 375,389L 376,389L 376,390L 375,390L 375,389 Z M 377,389L 378,389L 378,390L 377,390L 377,389 Z " Width="3" Height="11" />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=LeftSelectionThumbTemplate}" TargetType="{x:Type Thumb}">
        <Grid Background="Transparent" Width="15" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="Button" BorderBrush="#FF294375" BorderThickness="1,0,1,0" Width="9" Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FF6288C0" Offset="0" />
                        <GradientStop Color="#FF688DC3" Offset="1" />
                        <GradientStop Color="#FF244985" Offset="0.5" />
                    </LinearGradientBrush>
                </Border.Background>
                <Path Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 375,379L 376,379L 376,380L 375,380L 375,379 Z M 377,379.001L 378,379.001L 378,380.001L 377,380.001L 377,379.001 Z M 375,381.001L 376,381.001L 376,382.001L 375,382.001L 375,381.001 Z M 377,381.001L 378,381.001L 378,382.001L 377,382.001L 377,381.001 Z M 375,383.001L 376,383.001L 376,384.001L 375,384.001L 375,383.001 Z M 377,383L 378,383L 378,384L 377,384L 377,383 Z M 375,385L 376,385L 376,386L 375,386L 375,385 Z M 377,385L 378,385L 378,386L 377,386L 377,385 Z M 375,387L 376,387L 376,388L 375,388L 375,387 Z M 377,387L 378,387L 378,388L 377,388L 377,387 Z M 375,389L 376,389L 376,390L 375,390L 375,389 Z M 377,389L 378,389L 378,390L 377,390L 377,389 Z " Width="3" Height="11" />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxer:RangeControl.OwnerRangeControl).IsSelectionMoving, RelativeSource={RelativeSource Self}}" Value="True" />
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=RightSelectionThumbTemplate}" TargetType="{x:Type Thumb}">
        <Grid Background="Transparent" Width="15" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="Button" BorderBrush="#FF294375" BorderThickness="1,0,1,0" Width="9" Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FF6288C0" Offset="0" />
                        <GradientStop Color="#FF688DC3" Offset="1" />
                        <GradientStop Color="#FF244985" Offset="0.5" />
                    </LinearGradientBrush>
                </Border.Background>
                <Path Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 375,379L 376,379L 376,380L 375,380L 375,379 Z M 377,379.001L 378,379.001L 378,380.001L 377,380.001L 377,379.001 Z M 375,381.001L 376,381.001L 376,382.001L 375,382.001L 375,381.001 Z M 377,381.001L 378,381.001L 378,382.001L 377,382.001L 377,381.001 Z M 375,383.001L 376,383.001L 376,384.001L 375,384.001L 375,383.001 Z M 377,383L 378,383L 378,384L 377,384L 377,383 Z M 375,385L 376,385L 376,386L 375,386L 375,385 Z M 377,385L 378,385L 378,386L 377,386L 377,385 Z M 375,387L 376,387L 376,388L 375,388L 375,387 Z M 377,387L 378,387L 378,388L 377,388L 377,387 Z M 375,389L 376,389L 376,390L 375,390L 375,389 Z M 377,389L 378,389L 378,390L 377,390L 377,389 Z " Width="3" Height="11" />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxer:RangeControl.OwnerRangeControl).IsSelectionMoving, RelativeSource={RelativeSource Self}}" Value="True" />
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Styles -->

    <Style x:Key="{dxt:RangeControlThemeKey ResourceKey=SelectionRectangleStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#7FFFFFFF" />
    </Style>

    <Style x:Key="{dxt:RangeControlThemeKey ResourceKey=OutOfRangeAreaBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#BF5579B4" />
    </Style>

    <Style x:Key="{dxt:RangeControlThemeKey ResourceKey=RangeBarOutOfRangeBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6288C0" Offset="0" />
                    <GradientStop Color="#FF688DC3" Offset="1" />
                    <GradientStop Color="#FF244985" Offset="0.5" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{dxt:RangeControlThemeKey ResourceKey=RangeBarOutOfSelectionBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#FFABCDF9" />
    </Style>

    <Style x:Key="{dxt:RangeControlThemeKey ResourceKey=RangeBarSelectionBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="#FFFFFFFF" />
    </Style>

    <Style x:Key="{dxt:RangeControlThemeKey ResourceKey=RangeBarBottomBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Height" Value="15" />
    </Style>


</ResourceDictionary>