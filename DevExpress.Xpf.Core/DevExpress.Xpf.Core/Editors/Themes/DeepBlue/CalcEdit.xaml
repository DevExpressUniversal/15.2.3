    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver" />
                    <VisualState x:Name="Pressed" />
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0" Storyboard.TargetName="PART_Default" Storyboard.TargetProperty="Opacity" To="0" />
                            <DoubleAnimation Duration="0" Storyboard.TargetName="PART_Disabled" Storyboard.TargetProperty="Opacity" To="1" />
                            <ColorAnimation Duration="0" Storyboard.TargetName="Content" Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)" To="#983B5A82" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid.Resources>
                <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                <dx:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter" />
                <dx:BoolToThicknessConverter x:Key="BoolToThicknessConverter" ThicknessTrue="12,13,12,13" ThicknessFalse="12,12,12,14" />
            </Grid.Resources>
            <Border Background="#FF476CA1" BorderThickness="0" CornerRadius="2,2,0,0" Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Margin="0,0,0,1" Background="#FFB8CEEB" BorderThickness="0" CornerRadius="2,2,0,0">
                    <Border Margin="0,1,0,0" BorderThickness="0" CornerRadius="2,2,0,0" BorderBrush="#FFB8CEEB">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF8EACD6" Offset="0.009" />
                                <GradientStop Color="#FF7294C5" Offset="1" />
                                <GradientStop Color="#FF7495C6" Offset="0.5" />
                                <GradientStop Color="#FF6588BB" Offset="0.5" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <Border Background="#FF8BACDA" Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityInverseConverter}}" />
            <Grid Margin="{Binding ShowBorder, Converter={StaticResource BoolToThicknessConverter}}">
                <Border Background="#59FFFFFF" BorderBrush="{x:Null}" BorderThickness="0" CornerRadius="2" Padding="0">
                    <Border x:Name="Display1" CornerRadius="2" Padding="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF94AECF" Offset="0" />
                                <GradientStop Color="#FFA0BADB" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="0">
                            <Grid x:Name="PART_Disabled" Opacity="0">
                                <Border CornerRadius="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFD1D9E7" Offset="0" />
                                            <GradientStop Color="White" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <Border CornerRadius="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFDAE2EC" Offset="0" />
                                            <GradientStop Color="#FFF1F3F8" Offset="0.1" />
                                            <GradientStop Color="#FFFBFDFE" Offset="1" />
                                            <GradientStop Color="#FFE8EDF3" Offset="0.5" />
                                            <GradientStop Color="#FFE3E7ED" Offset="0.5" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <Grid x:Name="PART_Default">
                                <Border CornerRadius="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFD1D9E7" Offset="0" />
                                            <GradientStop Color="White" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <Border CornerRadius="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFE0ECFF" Offset="0" />
                                            <GradientStop Color="#FFF4F8FF" Offset="0.1" />
                                            <GradientStop Color="#FFFFFFFF" Offset="1" />
                                            <GradientStop Color="#FFE9F2FF" Offset="0.5" />
                                            <GradientStop Color="#FFE4EEFF" Offset="0.5" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <ContentControl x:Name="Content" Template="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayContentTemplate}}" dx:FocusHelper2.Focusable="False">
                                <ContentControl.Foreground>
                                    <SolidColorBrush Color="#E83B5A82" />
                                </ContentControl.Foreground>
                            </ContentControl>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Grid>
    </ControlTemplate>
    <Style x:Key="{dxet:CalculatorThemeKey ResourceKey=DisplayStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="dx:FocusHelper2.Focusable" Value="False" />
        <Setter Property="FontSize" Value="21" />
        <Setter Property="Margin" Value="-12,-12,-12,12" />
        <Setter Property="Template" Value="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}}" />
    </Style>
    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Grid.Resources>
                <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                <dx:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter" />
                <dx:BoolToThicknessConverter x:Key="BoolToThicknessConverter" ThicknessTrue="13,13,13,13" ThicknessFalse="12,12,12,12" />
            </Grid.Resources>
            <Border Background="#FF476CA1" CornerRadius="3" Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border BorderThickness="0" Margin="1" CornerRadius="2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFB9CFF1" Offset="0" />
                            <GradientStop Color="#FFA5C1E9" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFB9CFF1" Offset="0" />
                        <GradientStop Color="#FFA5C1E9" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <ContentPresenter Margin="{Binding ShowBorder, Converter={StaticResource BoolToThicknessConverter}}" />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=PopupContentContainerTemplate}" TargetType="{x:Type ContentControl}">
        <Border>
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB9CFF1" Offset="0" />
                    <GradientStop Color="#FFA5C1E9" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <ContentPresenter Margin="11" />
        </Border>
    </ControlTemplate>

</ResourceDictionary>