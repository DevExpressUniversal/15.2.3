<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
                    xmlns:dxc="clr-namespace:DevExpress.Xpf.Core"
                    xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors"
                    xmlns:dxet="clr-namespace:DevExpress.Xpf.Editors.Themes"
                    xmlns:dxef="clr-namespace:DevExpress.Xpf.Editors.Filtering">
    <Style x:Key="{dxet:FilterPanelControlBaseThemeKey ResourceKey=FilterPanelBorderStyle}" TargetType="Border">
        <Setter Property="Margin" Value="2,-2,2,0"/>
        <Setter Property="Padding" Value="0,2,0,1"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#FF668CC4" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="{dxet:FilterPanelControlBaseThemeKey ResourceKey=FilterPanelEnableFilterStyle}" TargetType="{x:Type dxe:CheckEdit}">
        <Setter Property="Margin" Value="0,3,4,1" />
    </Style>
    <Style x:Key="{dxet:FilterPanelControlBaseThemeKey ResourceKey=FilterPanelTextStyle}" TargetType="{x:Type dxe:TextEdit}">
        <Setter Property="Margin" Value="1,0,0,1" />
    </Style>
    <ControlTemplate x:Key="{dxet:FilterPanelControlBaseThemeKey ResourceKey=ClearFilterButtonTemplate}" TargetType="{x:Type Button}">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="00:00:00.1" To="MouseOver" />
                        <VisualTransition GeneratedDuration="00:00:00.1" To="Pressed" />
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetName="path" Storyboard.TargetProperty="Fill">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FF9B1125" />
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetName="path" Storyboard.TargetProperty="Fill">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FF062B63" />
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled" />
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="border">
                <Grid HorizontalAlignment="Left" Margin="1,1,0,0" VerticalAlignment="Top" Width="15" Height="16" Background="Transparent">
                    <Path Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 5.5,1C 8.53757,1 11,3.46246 11,6.5C 11,9.53757 8.53757,12 5.5,12C 2.46243,12 0,9.53757 0,6.5C 0,3.46246 2.46243,1 5.5,1 Z " Margin="0,1,0,0" Opacity="0.35" />
                    <Path Stretch="Fill" Fill="#FF233C6D" Data="F1 M 5.5,0C 8.53757,0 11,2.46246 11,5.5C 11,8.53757 8.53757,11 5.5,11C 2.46243,11 0,8.53757 0,5.5C 0,2.46246 2.46243,0 5.5,0 Z " Margin="0,0,0,1" x:Name="path" />
                    <Path Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 8.99997,3.00003L 6.5,5.5L 9,8L 8,9L 5.5,6.5L 2.99997,9.00003L 1.99997,8.00003L 4.5,5.5L 2,3L 3,2L 5.5,4.5L 7.99997,2.00003L 8.99997,3.00003 Z " Margin="3,3,3,4" />
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxet:FilterPanelControlBaseThemeKey ResourceKey=FilterControlButtonTemplate}" TargetType="{x:Type Button}">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="00:00:00.1" To="MouseOver"/>
                        <VisualTransition GeneratedDuration="00:00:00.1" To="Pressed"/>
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetName="path2" Storyboard.TargetProperty="Fill">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FF2F4C8A"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetName="path2" Storyboard.TargetProperty="Fill">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FF102142"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="border">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" Background="Transparent">
                    <Path Stretch="Fill"
						Fill="#FF233C6D"
						Data="F1 M 640,394C 643,394 645,396 645,399L 636,408L 631,408L 631,403L 640,394 Z M 642,400C 642,399.713 641.946,399.426 641.849,399.151L 635.846,405.154C 635.945,405.43 636,405.716 636,406L 642,400 Z M 640.517,397.483L 634.513,403.487C 634.907,403.748 635.253,404.095 635.511,404.489L 641.517,398.483C 641.259,398.088 640.912,397.741 640.517,397.483 Z M 639,397L 633,403C 633.287,403 633.573,403.054 633.848,403.152L 639.85,397.15C 639.574,397.053 639.288,397 639,397 Z M 635,407C 635,405.49 633.49,404 632,404L 632,407L 635,407 Z "
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Width="14"
						Height="14"
						x:Name="path2" />
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxet:FilterPanelControlBaseThemeKey ResourceKey=MRUComboBoxTemplate}">
        <dxc:DXDockPanel>
            <Path dxc:DXDockPanel.Dock="Right" x:Name="Path_Copy1" Fill="{TemplateBinding Foreground}" Stretch="Fill" Data="F1 M 605,479L 598,479L 601,485L 602,485L 605,479 Z " Width="5" Height="4" Margin="3,2,3,0">
                <Path.Visibility>
                    <Binding Path="(dxe:BaseEdit.OwnerEdit).ShowEditorButtons" RelativeSource="{RelativeSource TemplatedParent}">
                        <Binding.Converter>
                            <dxc:BooleanToVisibilityConverter />
                        </Binding.Converter>
                    </Binding>
                </Path.Visibility>
            </Path>
            <TextBlock Text="{Binding Path=(dxe:BaseEdit.OwnerEdit).EditValue, RelativeSource={RelativeSource TemplatedParent}}" TextTrimming="WordEllipsis" TextDecorations="{Binding Path=(dxe:BaseEdit.OwnerEdit).TextDecorations, RelativeSource={RelativeSource TemplatedParent}}"/>
        </dxc:DXDockPanel>
    </ControlTemplate>
    <Style TargetType="dxef:FilterPanelCaptionControl">
        <Setter Property="Foreground" Value="#FF4B6CA7"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxef:FilterPanelCaptionControl">
                    <ContentPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>