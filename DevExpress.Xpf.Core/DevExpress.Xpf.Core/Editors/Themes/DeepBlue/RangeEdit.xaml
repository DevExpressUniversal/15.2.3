    <DataTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelIntervalViewerLeftTemplate}">
        <Border BorderBrush="Gray" BorderThickness="1,1,0,1" Background="DarkGray" />
    </DataTemplate>
    <DataTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelIntervalViewerRightTemplate}">
        <Border BorderBrush="Gray" BorderThickness="0,1,1,1" Background="DarkGray" />
    </DataTemplate>
    <DataTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelIntervalViewerCenterTemplate}">
        <Border BorderBrush="Gray" BorderThickness="0,1,0,1" Background="LightGray"/>
    </DataTemplate>
    <DataTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelSelectorIntervalViewerLeftTemplate}">
        <Border/>
    </DataTemplate>
    <DataTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelSelectorIntervalViewerRightTemplate}">
        <Border/>
    </DataTemplate>
    <DataTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelSelectorIntervalViewerCenterTemplate}">
        <Border BorderBrush="Black" BorderThickness="1,1,1,1" />
    </DataTemplate>

    <ControlTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelSelectorCenterHorizontalThumbTemplate}">
        <Border Background="Transparent" BorderBrush="DarkGray" BorderThickness="1,1,1,1" />
    </ControlTemplate>
    <ControlTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=PanelSelectorLeftHorizontalThumbTemplate}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Background="DarkGray" Margin="-3,0,-4,0"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=PanelSelectorRightHorizontalThumbTemplate}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Background="DarkGray" Margin="-4,0,-3,0"/>
        </Grid>
    </ControlTemplate>
    <DataTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelGroupIntervalItemTemplate}">
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,1,1">
            <dxe:RangeEditHitTestManager.HitTestNode>
                <dxe:RangeEditHitTestNode HitTestNodeType="GroupInterval" />
            </dxe:RangeEditHitTestManager.HitTestNode>
            <TextBlock Text="{Binding Path=Interval.Label}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="{dxet:RangeEditThemeKey ResourceKey=DateTimePanelItemIntervalItemTemplate}">
        <Grid Background="Transparent">
            <dxe:RangeEditHitTestManager.HitTestNode>
                <dxe:RangeEditHitTestNode HitTestNodeType="ItemInterval" />
            </dxe:RangeEditHitTestManager.HitTestNode>
