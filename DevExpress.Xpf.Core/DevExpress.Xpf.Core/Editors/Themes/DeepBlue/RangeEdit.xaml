                <RowDefinition Height="18"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,1,0" Height="18">
                <TextBlock Text="{Binding Path=Interval.Label}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </Border>
