                <Border 
                    Background="Purple" 
                    Visibility="{Binding Path=IsMouseDirectlyOver, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibility}}"
                    Opacity="0.15">
                </Border>
            </Border>
        </Grid>
    </DataTemplate>
