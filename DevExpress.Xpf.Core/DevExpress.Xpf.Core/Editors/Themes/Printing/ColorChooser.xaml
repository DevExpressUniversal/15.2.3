<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors"
    xmlns:dxet="clr-namespace:DevExpress.Xpf.Editors.Themes">

    <Style x:Key="ZThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="True" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Canvas Width="20" Height="10" SnapsToDevicePixels="True">
                        <Rectangle Width="20" Height="10" Fill="Transparent" />
                        <Path Width="5" Height="10" Data="M0,0 L5,5 0,10 z" Fill="#FF000000">
                        </Path>
                        <Path Width="5" Height="10" Data="M 5,0 L0,5 5,10 z" Fill="#FF000000" Canvas.Left="15">
                        </Path>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="XYThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false" />
        <Setter Property="Width" Value="21" />
        <Setter Property="Height" Value="21" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Canvas Width="21" Height="21" SnapsToDevicePixels="True">
                        <Rectangle Width="21" Height="21" Fill="Transparent" />

                        <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M0,9 L8,9" Canvas.Left="0" Canvas.Top="9" />
                        <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FF000000" Data="M0,10 L8,10" Canvas.Left="0" Canvas.Top="10" />
                        <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M0,11 L8,11" Canvas.Left="0" Canvas.Top="11" />

                        <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M0,9 L8,9" Canvas.Left="12" Canvas.Top="9" />
                        <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FF000000" Data="M0,10 L8,10" Canvas.Left="12" Canvas.Top="10" />
                        <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M0,11 L8,11" Canvas.Left="12" Canvas.Top="11" />

                        <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M9,0 L9,8" Canvas.Left="9" Canvas.Top="0" />
                        <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FF000000" Data="M10,0 L10,8" Canvas.Left="10" Canvas.Top="0" />
                        <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M11,0 L11,8" Canvas.Left="11" Canvas.Top="0" />

                        <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M9,0 L9,8" Canvas.Left="9" Canvas.Top="12" />
                        <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FF000000" Data="M10,0 L10,8" Canvas.Left="10" Canvas.Top="12" />
                        <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M11,0 L11,8" Canvas.Left="11" Canvas.Top="12" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="{dxet:ColorChooserThemeKey ResourceKey=ControlTemplate}" TargetType="{x:Type dxe:ColorChooser}">
        <Border Background="{TemplateBinding Background}" Padding="6" SnapsToDevicePixels="True">
            <StackPanel>
                <Border>
                    <Grid Height="194">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderThickness="1" BorderBrush="DarkGray" Width="Auto" Height="Auto">
                            <Canvas x:Name="PART_xyColorArea" Width="192" Height="192" ClipToBounds="True">
                                <Rectangle Fill="#FFFFFFFF" Width="192" Height="192">
                                </Rectangle>
                                <Rectangle x:Name="PART_xColorAreaRect" Width="192" Height="192" RenderTransformOrigin="0.5,0.5">
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="-90" />
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop x:Name="xColorStart" Color="#00000000" Offset="0" />
                                            <GradientStop x:Name="xColorEnd" Color="#FFFF0000" Offset="1" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle x:Name="PART_yColorAreaRect" Width="192" Height="192" RenderTransformOrigin="0.5,0.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop x:Name="yColorStart" Color="#00000000" Offset="0" />
                                            <GradientStop x:Name="yColorEnd" Color="#FF000000" Offset="1" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Canvas Width="21" Height="21" Canvas.Left="{Binding Path=ActualXYThumbXOffset, RelativeSource={RelativeSource TemplatedParent}}" Canvas.Top="{Binding Path=ActualXYThumbYOffset, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Rectangle Width="21" Height="21" Fill="Transparent" />

                                    <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M0,9 L8,9" Canvas.Left="0" Canvas.Top="9" />
                                    <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FF000000" Data="M0,10 L8,10" Canvas.Left="0" Canvas.Top="10" />
                                    <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M0,11 L8,11" Canvas.Left="0" Canvas.Top="11" />

                                    <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M0,9 L8,9" Canvas.Left="12" Canvas.Top="9" />
                                    <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FF000000" Data="M0,10 L8,10" Canvas.Left="12" Canvas.Top="10" />
                                    <Path Width="9" Height="1" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M0,11 L8,11" Canvas.Left="12" Canvas.Top="11" />

                                    <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M9,0 L9,8" Canvas.Left="9" Canvas.Top="0" />
                                    <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FF000000" Data="M10,0 L10,8" Canvas.Left="10" Canvas.Top="0" />
                                    <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M11,0 L11,8" Canvas.Left="11" Canvas.Top="0" />

                                    <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M9,0 L9,8" Canvas.Left="9" Canvas.Top="12" />
                                    <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FF000000" Data="M10,0 L10,8" Canvas.Left="10" Canvas.Top="12" />
                                    <Path Width="1" Height="9" Fill="#FF000000" Stretch="Fill" Stroke="#FFFFFFFF" Data="M11,0 L11,8" Canvas.Left="11" Canvas.Top="12" />
                                </Canvas>
                            </Canvas>
                        </Border>
                        <Border BorderThickness="1" BorderBrush="DarkGray" Grid.Column="1" Margin="5,0,0,0" ClipToBounds="True">
                            <Grid>
                                <Canvas Width="20" x:Name="PART_resColorArea">
                                    <Rectangle x:Name="PART_resColorAreaRect" Height="192" Width="20" IsHitTestVisible="True">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush x:Name="zColor" EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop x:Name="zColor1" Color="#FFFF0000" Offset="0" />
                                                <GradientStop x:Name="zColor2" Color="#FFFFFF00" Offset="0.166666" />
                                                <GradientStop x:Name="zColor3" Color="#FF00FF00" Offset="0.333333" />
                                                <GradientStop x:Name="zColor4" Color="#FF00FFFF" Offset="0.5" />
                                                <GradientStop x:Name="zColor5" Color="#FF0000FF" Offset="0.666666" />
                                                <GradientStop x:Name="zColor6" Color="#FFFF00FF" Offset="0.833333" />
                                                <GradientStop x:Name="zColor7" Color="#FFFF0000" Offset="1" />
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Path x:Name="PART_zThumbLeft" Width="5" Height="10" Data="M0,0 L5,5 0,10 z" Fill="#FF000000" Canvas.Top="{Binding Path=ActualZThumbOffset, RelativeSource={RelativeSource TemplatedParent}}" IsHitTestVisible="False" />
                                    <Path x:Name="PART_zThumbRight" Width="5" Height="10" Data="M 5,0 L0,5 5,10 z" Fill="#FF000000" Canvas.Left="15" Canvas.Top="{Binding Path=ActualZThumbOffset, RelativeSource={RelativeSource TemplatedParent}}" IsHitTestVisible="False" />
                                </Canvas>
                            </Grid>
                        </Border>
                        <DockPanel Grid.Column="2" LastChildFill="False">
                            <Grid DockPanel.Dock="Top" Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="R" Width="15" Margin="15,0,5,0" VerticalAlignment="Center" />
                                <dxe:TextEdit TextElement.Foreground="Black" 
									x:Name="PART_rChannel" 
									Width="80" 
									Grid.Column="1"
									MaskType="RegEx" 
									Mask="([01]?\d\d?|2[0-4]\d|25[0-5])"
									>
                                </dxe:TextEdit>
                            </Grid>
                            <Grid DockPanel.Dock="Top" Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="G" Width="15" Margin="15,0,5,0" VerticalAlignment="Center" />
                                <dxe:TextEdit MaskType="RegEx" 
									Mask="([01]?\d\d?|2[0-4]\d|25[0-5])"
									TextElement.Foreground="Black" 
									x:Name="PART_gChannel" 
									Width="80" 
									Grid.Column="1"
									>
                                </dxe:TextEdit>
                            </Grid>
                            <Grid DockPanel.Dock="Top" Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="B" Width="15" Margin="15,0,5,0" VerticalAlignment="Center" />
                                <dxe:TextEdit MaskType="RegEx" 
									Mask="([01]?\d\d?|2[0-4]\d|25[0-5])"
									TextElement.Foreground="Black" 
									x:Name="PART_bChannel" 
									Width="80" 
									Grid.Column="1"
									>
                                </dxe:TextEdit>
                            </Grid>
                            <Grid DockPanel.Dock="Top" Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="A" Width="15" Margin="15,0,5,0" VerticalAlignment="Center" />
                                <dxe:TextEdit MaskType="RegEx" 
									Mask="([01]?\d\d?|2[0-4]\d|25[0-5])"
									TextElement.Foreground="Black" 
									x:Name="PART_aChannel" 
									Width="80" 
									Grid.Column="1"
									>
                                </dxe:TextEdit>
                            </Grid>
                            <Grid DockPanel.Dock="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Width="20" Margin="15,2,0,2" CornerRadius="2">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="ResultColor" Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </Border.Background>
                                </Border>
                                <dxe:TextEdit TextElement.Foreground="Black" 
									x:Name="PART_ResultColor" Width="80" 
									Grid.Column="1"
									EditValue="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}}" IsReadOnly="True" />
                            </Grid>
                        </DockPanel>
                    </Grid>
                </Border>
                <Border Height="20" Width="194" Margin="0,5,0,0" BorderThickness="1" BorderBrush="DarkGray" HorizontalAlignment="Left" Background="Transparent">
                    <Canvas x:Name="PART_aColorArea" Width="192" Height="20" ClipToBounds="True">
                        <Rectangle Width="192" Height="20" Fill="#FFD3D3D3">
                        </Rectangle>
                        <Rectangle Width="192" Height="20">
                            <Rectangle.Fill>
                                <DrawingBrush Viewport="0,0,0.07,0.5" TileMode="Tile">
                                    <DrawingBrush.Drawing>
                                        <DrawingGroup>
                                            <GeometryDrawing Brush="#FFFFFFFF">
                                                <GeometryDrawing.Geometry>
                                                    <RectangleGeometry Rect="0,0,10,10" />
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                            <GeometryDrawing Brush="#FFFFFFFF">
                                                <GeometryDrawing.Geometry>
                                                    <RectangleGeometry Rect="10,10,10,10" />
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                        </DrawingGroup>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="20" Height="192" Canvas.Top="20">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop x:Name="aColorStart" Color="#00FFFFFF" Offset="0" />
                                    <GradientStop x:Name="aColorEnd" Color="#FFFFFFFF" Offset="1" />
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                    <SkewTransform AngleX="0" AngleY="0" />
                                    <RotateTransform Angle="-90" />
                                    <TranslateTransform X="0" Y="0" />
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Path x:Name="PART_aThumbUp" Width="10" Height="5" Data="M0,0 L5,5 10,0 z" Fill="#FF000000" Canvas.Left="{Binding Path=ActualAThumbOffset, RelativeSource={RelativeSource TemplatedParent}}" IsHitTestVisible="False" />
                        <Path x:Name="PART_aThumbDown" Width="10" Height="5" Data="M 0,5 L5,0 10,5 z" Fill="#FF000000" Canvas.Top="15" Canvas.Left="{Binding Path=ActualAThumbOffset, RelativeSource={RelativeSource TemplatedParent}}" IsHitTestVisible="False" />
                    </Canvas>
                </Border>
            </StackPanel>
        </Border>
    </ControlTemplate>
</ResourceDictionary>