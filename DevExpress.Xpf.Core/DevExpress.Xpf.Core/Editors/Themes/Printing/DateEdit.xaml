<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors"
    xmlns:dxet="clr-namespace:DevExpress.Xpf.Editors.Themes"
    xmlns:dxepc="clr-namespace:DevExpress.Xpf.Editors.Popups.Calendar">
    
    <ResourceDictionary.MergedDictionaries>
        <dxtEx:ResourceDictionaryEx Source="{dx:EditorsResource Themes/Printing/Brushes.xaml}" />
        <dxtEx:ResourceDictionaryEx Source="{dx:EditorsResource Themes/TransferStyles.xaml}" />
        <dxtEx:ResourceDictionaryEx Source="{dx:EditorsResource Themes/Printing/PopupBaseEdit.xaml}" />
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=HeaderButtonTemplate}" TargetType="{x:Type Button}">
        <Grid Margin="1,1,1,1" Width="Auto" Height="Auto" SnapsToDevicePixels="True">
            <Border Margin="0,0,0,0" x:Name="back" Width="Auto" Height="Auto" Visibility="Hidden" Background="{x:Null}" CornerRadius="2,2,2,2" />
            <Border>
                <ContentPresenter x:Name="Content" TextElement.Foreground="#FF466ba4" TextElement.FontSize="13" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Width="Auto" Height="17" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,3" />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Control.Foreground" Value="#FF234884" TargetName="Content" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=ClearButtonTemplate}" TargetType="{x:Type Button}">
        <Grid Margin="1,1,1,1" Width="Auto" Height="Auto" SnapsToDevicePixels="True">
            <Border CornerRadius="3,3,3,3" Padding="1,1,1,1" Background="#FF5379AE">
                <Border x:Name="back" Width="Auto" Visibility="Visible" CornerRadius="2,2,2,2" Height="Auto">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFBBD1F2" Offset="0" />
                            <GradientStop Color="#FF9FBCE6" Offset="1" />
                            <GradientStop Color="#FFA4C0E8" Offset="0.5" />
                            <GradientStop Color="#FF9BB9E4" Offset="0.5" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border Margin="0,0,0,0">
                <ContentPresenter HorizontalAlignment="Center" Margin="16,5,16,5" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" VerticalAlignment="Center" Height="17" />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" TargetName="back">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFD4E2F9" Offset="0" />
                            <GradientStop Color="#FFB9D1F5" Offset="1" />
                            <GradientStop Color="#FFBBD3F5" Offset="0.5" />
                            <GradientStop Color="#FFABC5EC" Offset="0.561" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" TargetName="back">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF7998C6" Offset="0" />
                            <GradientStop Color="#FF7799CA" Offset="1" />
                            <GradientStop Color="#FF81A1CE" Offset="0.5" />
                            <GradientStop Color="#FF799AC8" Offset="0.53" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=HeaderButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=HeaderButtonTemplate}}" />
        <Setter Property="Background" Value="#00000000" />
        <Setter Property="Focusable" Value="False" />
    </Style>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=CurrentDateButtonTemplate}" TargetType="{x:Type Button}">
        <ContentPresenter SnapsToDevicePixels="True" HorizontalAlignment="Center" Content="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" />
        <!--<dx:TransferControl SnapsToDevicePixels="True" Style="{StaticResource TransferControlFadeStyle}" HorizontalContentAlignment="Center" Content="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}"/>-->
    </ControlTemplate>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=CurrentDateButtonStyle}" TargetType="{x:Type Button}" BasedOn="{StaticResource {dxet:DateEditThemeKey ResourceKey=HeaderButtonStyle}}">
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=CurrentDateButtonTemplate}}" />
    </Style>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=ClearButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=ClearButtonTemplate}}" />
        <Setter Property="Background" Value="#00000000" />
        <Setter Property="Margin" Value="0,10,0,10" />
        <Setter Property="Focusable" Value="false" />
    </Style>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=WeekdayNameStyle}" TargetType="{x:Type TextBlock}">
    </Style>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=WeekNumbersStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="0,2,10,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=LeftArrowTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Margin="0,0,0,0" Width="Auto" SnapsToDevicePixels="True">
            <Border HorizontalAlignment="Stretch" x:Name="back" Width="17" Height="17" Visibility="Hidden" Background="{x:Null}" CornerRadius="0,0,0,0">
                <Path Stretch="Fill" Fill="#FF44689F" Data="F1 M 1275.5,759C 1279.64,759 1283,762.358 1283,766.5C 1283,770.642 1279.64,774 1275.5,774C 1271.36,774 1268,770.642 1268,766.5C 1268,762.358 1271.36,759 1275.5,759 Z " Width="15" Height="15" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="path1" />
            </Border>
            <Border Margin="0,0,0,0" Width="17" Height="17">
                <Path Stretch="Fill" Fill="#FF34507A" Data="F1 M 1256,768L 1261,765L 1261,772L 1256,769L 1256,768 Z " HorizontalAlignment="Center" x:Name="path" VerticalAlignment="Center" Width="6" Height="7" Margin="0,0,1,0" />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Visibility" TargetName="back" Value="Visible" />
                <Setter Property="Fill" TargetName="path" Value="#FFFFFFFF" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Fill" TargetName="path1" Value="#FF23416E" />
                <Setter Property="Fill" TargetName="path" Value="#FFFFFFFF" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=RightArrowTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Margin="0,0,0,0" Width="Auto" SnapsToDevicePixels="True">
            <Border HorizontalAlignment="Stretch" x:Name="back" Width="17" Height="17" Visibility="Hidden" Background="{x:Null}" CornerRadius="0,0,0,0">
                <Path Stretch="Fill" Fill="#FF44689F" Data="F1 M 1275.5,759C 1279.64,759 1283,762.358 1283,766.5C 1283,770.642 1279.64,774 1275.5,774C 1271.36,774 1268,770.642 1268,766.5C 1268,762.358 1271.36,759 1275.5,759 Z " HorizontalAlignment="Center" x:Name="path1" VerticalAlignment="Center" Width="15" Height="15" />
            </Border>
            <Border Margin="0,0,0,0" Width="17" Height="17">
                <Path Stretch="Fill" Fill="#FF34507A" Data="F1 M 1256,768L 1261,765L 1261,772L 1256,769L 1256,768 Z " HorizontalAlignment="Center" x:Name="path" VerticalAlignment="Center" Width="6" Height="7" Margin="1,0,0,0" RenderTransformOrigin="0.5,0.5">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1" ScaleY="1" />
                            <SkewTransform AngleX="0" AngleY="0" />
                            <RotateTransform Angle="0" />
                            <TranslateTransform X="0" Y="0" />
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Visibility" TargetName="back" Value="Visible" />
                <Setter Property="Fill" TargetName="path" Value="#FFFFFFFF" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Fill" TargetName="path1" Value="#FF23416E" />
                <Setter Property="Fill" TargetName="path" Value="#FFFFFFFF" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=LeftArrowStyle}" TargetType="{x:Type RepeatButton}">
        <Setter Property="ClickMode" Value="Press" />
        <Setter Property="Delay" Value="400" />
        <Setter Property="Interval" Value="400" />
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=LeftArrowTemplate}}" />
        <Setter Property="Focusable" Value="False" />
    </Style>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=RightArrowStyle}" TargetType="{x:Type RepeatButton}">
        <Setter Property="ClickMode" Value="Press" />
        <Setter Property="Delay" Value="400" />
        <Setter Property="Interval" Value="400" />
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=RightArrowTemplate}}" />
        <Setter Property="Focusable" Value="False" />
    </Style>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=WeekdayAbbreviationStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=MonthInfoDelimeter}">
        <Border SnapsToDevicePixels="True" Margin="0,0,0,0" Height="1" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Background="#FF959595" />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=WeekNumberDelimeter}">
        <Border Width="1" BorderThickness="0" SnapsToDevicePixels="True" />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=CellButtonTemplate}" TargetType="{x:Type Button}">
        <Border SnapsToDevicePixels="True" x:Name="FocusBorder" Width="Auto" Height="Auto" BorderBrush="{x:Null}" CornerRadius="2,2,2,2" Padding="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ContentPresenter TextElement.Foreground="Black" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.FontSize="13" x:Name="ButtonContent" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="5,2,5,2" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="dxepc:DateEditCalendar.CellToday" Value="True">
                <Setter Property="Background" TargetName="FocusBorder" Value="#FF9FC8F2" />
            </Trigger>
            <Trigger Property="dxepc:DateEditCalendar.CellFocused" Value="True">
                <Setter Property="Background" TargetName="FocusBorder" Value="#FF3C619B" />
                <Setter Property="Control.Foreground" TargetName="ButtonContent" Value="#FFFFFFFF" />
            </Trigger>
            <Trigger Property="dxepc:DateEditCalendar.CellInactive" Value="True">
                <Setter Property="Control.Foreground" TargetName="ButtonContent" Value="#FFD3D3D3" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=CellButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=CellButtonTemplate}}" />
    </Style>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=YearInfoTemplate}">
        <Grid x:Name="PART_ContentGrid" SnapsToDevicePixels="True">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=MonthInfoTemplate}">
        <Grid x:Name="PART_ContentGrid" SnapsToDevicePixels="True">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Control Grid.Row="1" Grid.ColumnSpan="7" Grid.Column="2" Template="{DynamicResource {dxet:DateEditThemeKey ResourceKey=MonthInfoDelimeter}}" />
            <Control x:Name="WeekNumberDelimeter" Grid.Row="2" Grid.RowSpan="6" Grid.Column="1" Template="{DynamicResource {dxet:DateEditThemeKey ResourceKey=WeekNumberDelimeter}}" Visibility="Collapsed" />
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxe:BaseEdit.OwnerEdit).ShowWeekNumbers, RelativeSource={RelativeSource Self}}" Value="True">
                <Setter Property="Visibility" Value="Visible" TargetName="WeekNumberDelimeter" />
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=PopupContentTemplate}" TargetType="{x:Type ContentControl}">
        <dxepc:DateEditCalendar Focusable="False" SnapsToDevicePixels="True" />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=CalendarTemplate}" TargetType="{x:Type dxepc:DateEditCalendar}">
        <Border Width="Auto" Height="Auto" Background="{x:Null}" CornerRadius="2,2,2,2" SnapsToDevicePixels="True">
            <StackPanel Margin="0,0,0,0" Width="Auto" Height="Auto" Background="{x:Null}">
                <Border Width="Auto" Height="Auto" CornerRadius="2,2,0,0" Background="#FFC7DBF8" BorderThickness="0,0,0,1" BorderBrush="#FF86A9D9">
                    <Button x:Name="PART_Today" Style="{DynamicResource {dxet:DateEditThemeKey ResourceKey=HeaderButtonStyle}}" Height="Auto" Content="{Binding Path=DateTimeText, RelativeSource={RelativeSource TemplatedParent}}" Width="Auto" />
                </Border>
                <Border Width="Auto" Height="Auto" Background="#FFFFFFFF" Padding="0,5,0,5">
                    <Grid Width="Auto" Height="Auto" Background="{x:Null}" Margin="7,0,7,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <RepeatButton Margin="0,0,0,0" x:Name="PART_LeftArrow" Style="{DynamicResource {dxet:DateEditThemeKey ResourceKey=LeftArrowStyle}}" Grid.Column="0" />
                        <Button HorizontalAlignment="Stretch" x:Name="PART_CurrentDate" Style="{DynamicResource {dxet:DateEditThemeKey ResourceKey=CurrentDateButtonStyle}}" Content="{Binding Path=CurrentDateText, RelativeSource={RelativeSource TemplatedParent}}" Grid.Column="1" />
                        <RepeatButton x:Name="PART_RightArrow" Style="{DynamicResource {dxet:DateEditThemeKey ResourceKey=RightArrowStyle}}" Grid.Column="2" />
                    </Grid>
                </Border>
                <Border Width="300" Height="173" Background="#FFFFFFFF" Padding="32,0,32,0">
                    <dxepc:DateEditCalendarTransferControl x:Name="PART_CalendarTransferContent" Width="Auto" Height="Auto" Style="{TemplateBinding CalendarTransferStyle}" />
                </Border>
                <Border Width="Auto" Height="Auto" Background="#FFFFFFFF" Padding="0,8,0,12" CornerRadius="0,0,2,2">
                    <Button x:Name="PART_Clear" Style="{DynamicResource {dxet:DateEditThemeKey ResourceKey=ClearButtonStyle}}" Content="{dxe:EditorStringId Clear}" Height="Auto" HorizontalAlignment="Center" Margin="0,0,0,0" />
                </Border>
            </StackPanel>
        </Border>
    </ControlTemplate>
</ResourceDictionary>
