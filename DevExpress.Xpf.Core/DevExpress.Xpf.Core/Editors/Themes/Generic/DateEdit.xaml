<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors"
    xmlns:dxet="clr-namespace:DevExpress.Xpf.Editors.Themes"
    xmlns:dxepc="clr-namespace:DevExpress.Xpf.Editors.Popups.Calendar">

	<Style TargetType="{x:Type dxepc:CalendarCellButton}">
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
		<Setter Property="Background" Value="White" />
        <Setter Property="IsTabStop" Value="False"/>
		<Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=CellButtonTemplate}}" />
	</Style>
    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=CalendarPopupContentTemplate}" TargetType="{x:Type ContentControl}">
        <dxepc:DateEditCalendar dx:FocusHelper2.Focusable="False" SnapsToDevicePixels="True" />
    </ControlTemplate>
    <!--BEGIN WPF-->
    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=PickerPopupContentTemplate}" TargetType="{x:Type ContentControl}">
        <dxe:DateTimePicker SnapsToDevicePixels="True" />
    </ControlTemplate>
    <!--END WPF-->
</ResourceDictionary>