<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:utils="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors"
    xmlns:dxec="clr-namespace:DevExpress.Xpf.Editors.Controls"
    xmlns:dxepc="clr-namespace:DevExpress.Xpf.Editors.Popups.Calendar"
    xmlns:dxet="clr-namespace:DevExpress.Xpf.Editors.Themes"
    xmlns:dxep="clr-namespace:DevExpress.Xpf.Editors.Popups">

    <ResourceDictionary.MergedDictionaries>
        <dxtEx:ResourceDictionaryEx Source="{utils:UtilsResource Themes/TransferControl.xaml}" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=CalendarTranserStyle}" TargetType="{x:Type dxepc:DateEditCalendarTransferControl}" BasedOn="{StaticResource {x:Type utils:TransferControl}}">
        <Setter Property="PreviousControlTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type utils:TransferContentControl}">
                    <ContentPresenter SnapsToDevicePixels="True" Name="PART_ContentPresenter" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ControlTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type utils:TransferContentControl}">
                    <ContentPresenter SnapsToDevicePixels="True" Name="PART_ContentPresenter" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=TransferControlFadeStyle}" TargetType="{x:Type utils:TransferControl}" BasedOn="{StaticResource {x:Type utils:TransferControl}}">
        <Setter Property="PreviousControlTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <ContentPresenter SnapsToDevicePixels="True" Name="PART_PrevContentPresenter" HorizontalAlignment="Center">
                        <ContentPresenter.Triggers>
                            <EventTrigger RoutedEvent="utils:TransferControl.ContentChanged">
                                <BeginStoryboard>
                                    <Storyboard SpeedRatio="{Binding SpeedRatio, RelativeSource={RelativeSource TemplatedParent}}" FillBehavior="HoldEnd">
                                        <DoubleAnimation Storyboard.TargetName="PART_PrevContentPresenter" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.300" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ContentPresenter.Triggers>
                    </ContentPresenter>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ControlTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <ContentPresenter SnapsToDevicePixels="True" Name="PART_NextContentPresenter" HorizontalAlignment="Center">
                        <ContentPresenter.Triggers>
                            <EventTrigger RoutedEvent="utils:TransferControl.ContentChanged">
                                <BeginStoryboard>
                                    <Storyboard SpeedRatio="{Binding SpeedRatio, RelativeSource={RelativeSource TemplatedParent}}">
                                        <DoubleAnimation Storyboard.TargetName="PART_NextContentPresenter" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.300" FillBehavior="HoldEnd" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ContentPresenter.Triggers>
                    </ContentPresenter>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>