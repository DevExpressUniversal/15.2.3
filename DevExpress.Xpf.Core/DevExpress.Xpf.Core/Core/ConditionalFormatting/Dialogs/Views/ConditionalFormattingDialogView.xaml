<UserControl x:Class="DevExpress.Xpf.Core.ConditionalFormatting.ConditionalFormattingDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
             xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors"
             xmlns:dxc="clr-namespace:DevExpress.Xpf.Core.ConditionalFormatting"
             xmlns:dxmvvm="clr-namespace:DevExpress.Mvvm.UI.Interactivity"
             xmlns:dxmvvminternal="clr-namespace:DevExpress.Mvvm.UI.Interactivity.Internal"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" d:DataContext="{d:DesignData Source=./DesignData/ConditionalFormattingDialogViewDesignData.xaml}">
    <!--<dx:ThemeManager.ThemeName>DeepBlue</dx:ThemeManager.ThemeName>-->
    <UserControl.Resources>
        <Style x:Key="SingleValueEditorStyleBase" TargetType="dxe:TextEdit">
            <Setter Property="EditValue" Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="dxc:BaseEditFocusHelper.FocusOnLoad" Value="true"/>
        </Style>
        <Style x:Key="SingleValueEditorStyle" TargetType="dxe:TextEdit" BasedOn="{StaticResource SingleValueEditorStyleBase}">
            <Setter Property="Width" Value="215"/>
            <Setter Property="Margin" Value="5,0,4,0"/>
        </Style>
        <Style x:Key="RangeFromValueEditorStyle" TargetType="dxe:TextEdit" BasedOn="{StaticResource SingleValueEditorStyleBase}">
            <Setter Property="Width" Value="100"/>
        </Style>
        <Style x:Key="RangeToValueEditorStyle" TargetType="dxe:TextEdit" BasedOn="{StaticResource SingleValueEditorStyleBase}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="dxc:BaseEditFocusHelper.FocusOnLoad" Value="false"/>
            <Setter Property="EditValue" Value="{Binding Value2, UpdateSourceTrigger=PropertyChanged}"/>
        </Style>
        <Style x:Key="TopBottomValueEditorStyle" TargetType="dxe:TextEdit" BasedOn="{StaticResource SingleValueEditorStyleBase}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5,0,4,0"/>
        </Style>
        <Style x:Key="BetweenLabelStyle" TargetType="Label">
            <Setter Property="Content" Value="{dxc:DataControlStringId ConditionalFormatting_BetweenDialog_RangeValuesConnector}"/>
            <Setter Property="Margin" Value="8,0,8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <DataTemplate x:Key="SingleTextValueEditor">
            <dxe:TextEdit Style="{StaticResource SingleValueEditorStyle}"/>
        </DataTemplate>
        <DataTemplate x:Key="SingleNumericValueEditor">
            <dxe:TextEdit Style="{StaticResource SingleValueEditorStyle}" EditValueType="sys:Decimal"/>
        </DataTemplate>
        <DataTemplate x:Key="SingleDateTimeValueEditor">
            <dxe:DateEdit Style="{StaticResource SingleValueEditorStyle}"/>
        </DataTemplate>
        <DataTemplate x:Key="SingleWithElipsisButtonValueEditor">
            <dxe:ButtonEdit Style="{StaticResource SingleValueEditorStyle}" AllowDefaultButton="False" dxmvvminternal:InteractionHelper.BehaviorInDesignMode="AsWellAsNotInDesignMode">
                <dxmvvm:Interaction.Behaviors>
                    <dx:DialogService x:Name="customConditionService" DialogWindowStartupLocation="CenterOwner">
                        <dx:DialogService.ViewTemplate>
                            <DataTemplate>
                                <dxc:CustomConditionEditorView/>
                            </DataTemplate>
                        </dx:DialogService.ViewTemplate>
                        <dx:DialogService.DialogStyle>
                            <Style TargetType="Window">
                                <Setter Property="Width" Value="500"/>
                                <Setter Property="Height" Value="350"/>
                                <Setter Property="ShowInTaskbar" Value="False"/>
                                <Setter Property="WindowStyle" Value="ToolWindow"/>
                                <Setter Property="UseLayoutRounding" Value="True"/>
                            </Style>
                        </dx:DialogService.DialogStyle>
                    </dx:DialogService>
                </dxmvvm:Interaction.Behaviors>
                <dxe:ButtonEdit.Buttons>
                    <dxe:ButtonInfo GlyphKind="Regular" Command="{Binding ShowConditionEditorCommand}" IsDefaultButton="True"/>
                </dxe:ButtonEdit.Buttons>
            </dxe:ButtonEdit>
        </DataTemplate>
        <DataTemplate x:Key="SelectorValueEditor">
            <dxe:ComboBoxEdit ItemsSource="{Binding SelectorItems}" Style="{StaticResource SingleValueEditorStyle}" IsTextEditable="False" />
        </DataTemplate>
        <DataTemplate x:Key="RangeNumericValueEditor">
            <StackPanel Orientation="Horizontal" Margin="5,0,4,0">
                <dxe:TextEdit Style="{StaticResource RangeFromValueEditorStyle}" x:Name="leftBoundaryEdit" EditValueType="sys:Decimal"/>
                <Label Style="{StaticResource BetweenLabelStyle}"/>
                <dxe:TextEdit Style="{StaticResource RangeToValueEditorStyle}" x:Name="rightBoundaryEdit" EditValueType="sys:Decimal"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="RangeDateTimeValueEditor">
            <StackPanel Orientation="Horizontal" Margin="5,0,4,0">
                <dxe:DateEdit Style="{StaticResource RangeFromValueEditorStyle}" x:Name="leftBoundaryEdit"/>
                <Label Style="{StaticResource BetweenLabelStyle}"/>
                <dxe:DateEdit Style="{StaticResource RangeToValueEditorStyle}" x:Name="rightBoundaryEdit"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="RangeTextValueEditor">
            <StackPanel Orientation="Horizontal" Margin="5,0,4,0">
                <dxe:TextEdit Style="{StaticResource RangeFromValueEditorStyle}" x:Name="leftBoundaryEdit"/>
                <Label Style="{StaticResource BetweenLabelStyle}"/>
                <dxe:TextEdit Style="{StaticResource RangeToValueEditorStyle}" x:Name="rightBoundaryEdit"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="NoneValueEditor">
            <TextBlock Margin="0,0,0,0"/>
        </DataTemplate>
        <DataTemplate x:Key="ItemCountValueEditor">
            <dxe:SpinEdit Style="{StaticResource TopBottomValueEditorStyle}" MinValue="0" Mask="d"/>
        </DataTemplate>
        <DataTemplate x:Key="PercentValueEditor">
            <dxe:SpinEdit Style="{StaticResource TopBottomValueEditorStyle}" MinValue="0" MaxValue="100" Mask="d"/>
        </DataTemplate>
    </UserControl.Resources>
    <dxmvvm:Interaction.Behaviors>
        <dx:DXMessageBoxService/>
    </dxmvvm:Interaction.Behaviors>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label FontWeight="SemiBold" Margin="7,5,0,14" Grid.ColumnSpan="3" x:Name="descriptionLabel" Content="{Binding Description}"/>

            <ContentPresenter Margin="0,0,6,0" x:Name="editValuePresenter" Grid.Row="1" Content="{Binding}">
                <ContentPresenter.ContentTemplateSelector>
                    <dxc:FormatConditionValueEditorTemplateSelector/>
                </ContentPresenter.ContentTemplateSelector>
            </ContentPresenter>
            <Label Grid.Column="1" Grid.Row="1" x:Name="connectorLabel" Content="{Binding ConnectorText}" VerticalContentAlignment="Center"/>
            <dxe:ComboBoxEdit Grid.Column="2" Grid.Row="1" Width="200" x:Name="formatsComboBox" Margin="10,0,4,0" ItemsSource="{Binding Formats}" EditValue="{Binding Path=SelectedFormatInfo, UpdateSourceTrigger=PropertyChanged}" 
                              IsTextEditable="False" dxmvvminternal:InteractionHelper.BehaviorInDesignMode="AsWellAsNotInDesignMode">
                <dxmvvm:Interaction.Behaviors>
                    <dx:DialogService x:Name="customFormatService" DialogWindowStartupLocation="CenterOwner">
                        <dx:DialogService.ViewTemplate>
                            <DataTemplate>
                                <dxc:CustomFormatEditorView/>
                            </DataTemplate>
                        </dx:DialogService.ViewTemplate>
                        <dx:DialogService.DialogStyle>
                            <Style TargetType="{x:Type dx:DXWindow}">
                                <Setter Property="ShowInTaskbar" Value="False"/>
                                <Setter Property="WindowStyle" Value="ToolWindow"/>
                                <Setter Property="ShowIcon" Value="False"/>
                                <Setter Property="Width" Value="520"/>
                                <Setter Property="Height" Value="450"/>
                                <Setter Property="ResizeMode"  Value="NoResize"/>
                                <Setter Property="UseLayoutRounding" Value="True"/>
                            </Style>
                        </dx:DialogService.DialogStyle>
                    </dx:DialogService>
                </dxmvvm:Interaction.Behaviors>
            </dxe:ComboBoxEdit>
			<dxe:CheckEdit  Margin="4,12,0,0" x:Name="applyFormatToWholeRowCheckEdit" Grid.ColumnSpan="3" Grid.Row="2" EditValue="{Binding ApplyFormatToWholeRow}" IsEnabled="{Binding ApplyFormatToWholeRowEnabled}"  HorizontalAlignment="Left" Content="{Binding ApplyFormatToWholeRowText}"/>
        </Grid>
        <!--<Border Grid.ColumnSpan="3" Grid.RowSpan="3" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Image Stretch="None" Source="c:\X\Expr.png" Opacity=".7"/>
        </Border>-->
    </Grid>
</UserControl>
