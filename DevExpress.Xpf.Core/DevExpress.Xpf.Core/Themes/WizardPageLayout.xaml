<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:local="clr-namespace:DevExpress.Xpf.Core.WizardFramework">

    <Style TargetType="local:WizardPageLayout">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:WizardPageLayout">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Margin="24,12,24,16">
                            <TextBlock FontSize="23" Text="{TemplateBinding Title}" />
                            <TextBlock Text="{TemplateBinding Subtitle}" />
                        </StackPanel>
                        <Rectangle Fill="#20000000" Grid.Row="1" />
                        <Border Grid.Row="2" Background="White">
                            <ContentPresenter Content="{TemplateBinding Content}" Margin="24" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
