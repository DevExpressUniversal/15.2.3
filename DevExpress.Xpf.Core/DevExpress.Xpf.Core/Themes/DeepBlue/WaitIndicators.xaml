        <Setter Property="Content" Value="{x:Null}"/>
        <Setter Property="ContentTemplate" Value="{DynamicResource {dx:WaitIndicatorThemeKey ResourceKey=WaitIndicatorContentTemplate}}"/>
    </Style>

