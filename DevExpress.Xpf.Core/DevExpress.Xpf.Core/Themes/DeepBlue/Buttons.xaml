<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
                    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes"
                    xmlns:dxcn="clr-namespace:DevExpress.Xpf.Core.Native"
                    >

    <ResourceDictionary.MergedDictionaries>
        <dxt:ResourceDictionaryEx Source="{dx:UtilsResource Themes/DeepBlue/StandardControlStyles/Brushes.xaml}" />
    </ResourceDictionary.MergedDictionaries>

    <Visibility x:Key="Visible">Visible</Visibility>
    <Visibility x:Key="Collapsed">Collapsed</Visibility>

    <SolidColorBrush x:Key="{dxt:DropDownButtonThemeKey ResourceKey=Foreground}" Color="#FF000000"/>
    <SolidColorBrush x:Key="{dxt:DropDownButtonThemeKey ResourceKey=ArrowForeground}" Color="#FF000000"/>
    <SolidColorBrush x:Key="{dxt:DropDownButtonThemeKey ResourceKey=PressedForeground}" Color="#FFCEE3FD"/>    
    <SolidColorBrush x:Key="{dxt:DropDownButtonThemeKey ResourceKey=ArrowPressedForeground}" Color="#FFCEE3FD"/>
    <SolidColorBrush x:Key="{dxt:DropDownButtonThemeKey ResourceKey=MouseOverForeground}" Color="#FF000000"/>
    <SolidColorBrush x:Key="{dxt:DropDownButtonThemeKey ResourceKey=ArrowMouseOverForeground}" Color="#FF000000"/>

    <dxcn:RenderTemplate x:Key="{dxt:DropDownButtonThemeKey ResourceKey=BorderTemplate}">
        <dxcn:RenderPanel>
            <dxcn:RenderBorder Name="Focused" Margin="-2" Background="#594882d8" CornerRadius="5" Visibility="Collapsed"/>
            <dxcn:RenderBorder Name="Border"  Background="{StaticResource {dxt:BrushesThemeKey ResourceKey=EditorButtonBorderGradient}}" CornerRadius="4"/>
            <dxcn:RenderBorder Name="NormalGradient" Background="{StaticResource {dxt:BrushesThemeKey IsVisibleInBlend=True, ResourceKey=ButtonNormalGradient}}" CornerRadius="3" Margin="1"/>
            <dxcn:RenderBorder Name="NormalGlare" Background="{StaticResource {dxt:BrushesThemeKey IsVisibleInBlend=True, ResourceKey=ButtonNormalGlare}}" Margin="1,1,1,2" CornerRadius="3,3,5,5" Dock="Top"/>
            <dxcn:RenderBorder Name="MouseOver" CornerRadius="3" Visibility="Collapsed" Margin="1">
                <dxcn:RenderBorder.Background>
                    <RadialGradientBrush GradientOrigin="0.5,0.672">
                        <RadialGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="0.991" ScaleY="2.285" />
                                <SkewTransform AngleX="0" AngleY="0" CenterX="0.5" CenterY="0.5" />
                                <RotateTransform Angle="0" CenterX="0.5" CenterY="0.5" />
                                <TranslateTransform X="0.001" Y="0.439" />
                            </TransformGroup>
                        </RadialGradientBrush.RelativeTransform>
                        <GradientStop Color="#FFD0E5FF" Offset="0" />
                        <GradientStop Color="#00FFFFFF" Offset="1" />
                        <GradientStop Color="#DADCECFF" Offset="0.35" />
                    </RadialGradientBrush>
                </dxcn:RenderBorder.Background>
            </dxcn:RenderBorder>
        </dxcn:RenderPanel>
        <dxcn:RenderTemplate.Triggers>
            <dxcn:RenderStateGroup Name="VisualStates">
                <dxcn:RenderStateTrigger Name="Normal">
                    <dxcn:RenderSetter Property="Visibility" TargetName="MouseOver" Value="{StaticResource Collapsed}"/>
                </dxcn:RenderStateTrigger>

                <dxcn:RenderStateTrigger Name="MouseOver">
                    <dxcn:RenderSetter Property="Visibility" TargetName="MouseOver" Value="{StaticResource Visible}"/>
                </dxcn:RenderStateTrigger>

                <dxcn:RenderStateTrigger Name="Pressed">
                    <dxcn:RenderSetter Property="Background" TargetName="NormalGradient" Value="{StaticResource {dxt:BrushesThemeKey ResourceKey=EditorButtonPressedGradient}}"/>
                    <dxcn:RenderSetter Property="Background" TargetName="NormalGlare" Value="{StaticResource {dxt:BrushesThemeKey ResourceKey=EditorButtonPressedGlare}}"/>
                </dxcn:RenderStateTrigger>
            </dxcn:RenderStateGroup>
            <dxcn:RenderStateGroup Name="PlacementStates">
                <dxcn:RenderStateTrigger Name="Default"/>
                <dxcn:RenderStateTrigger Name="Left">
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="Focused" Value="5,0,0,5"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="Border" Value="4,0,0,4"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="NormalGradient" Value="3,0,0,3"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="NormalGlare" Value="3,0,0,5"/>                    
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="MouseOver" Value="3,0,0,3"/>
                    
                    <dxcn:RenderSetter Property="Margin" TargetName="NormalGradient" Value="1,1,0,1"/>
                    <dxcn:RenderSetter Property="Margin" TargetName="NormalGlare" Value="1,1,0,1"/>
                    <dxcn:RenderSetter Property="Margin" TargetName="MouseOver" Value="1,1,0,1"/>
                </dxcn:RenderStateTrigger>
                <dxcn:RenderStateTrigger Name="Right">
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="Focused" Value="0,5,5,0"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="Border" Value="0,4,4,0"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="NormalGradient" Value="0,3,3,0"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="NormalGlare" Value="0,3,5,0"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="MouseOver" Value="0,3,3,0"/>
                </dxcn:RenderStateTrigger>
                <dxcn:RenderStateTrigger Name="Top">
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="Focused" Value="5,5,0,0"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="Border" Value="4,4,0,0"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="NormalGradient" Value="3,3,0,0"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="NormalGlare" Value="3,3,0,0"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="MouseOver" Value="3,3,0,0"/>

                    <dxcn:RenderSetter Property="Margin" TargetName="NormalGradient" Value="1,1,1,0"/>
                    <dxcn:RenderSetter Property="Margin" TargetName="NormalGlare" Value="1,1,1,0"/>
                    <dxcn:RenderSetter Property="Margin" TargetName="MouseOver" Value="1,1,1,0"/>
                </dxcn:RenderStateTrigger>
                <dxcn:RenderStateTrigger Name="Bottom">
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="Focused" Value="0,0,5,5"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="Border" Value="0,0,4,4"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="NormalGradient" Value="0,0,3,3"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="NormalGlare" Value="0,0,5,5"/>
                    <dxcn:RenderSetter Property="CornerRadius" TargetName="MouseOver" Value="0,0,3,3"/>
                </dxcn:RenderStateTrigger>
            </dxcn:RenderStateGroup>
        </dxcn:RenderTemplate.Triggers>
    </dxcn:RenderTemplate>
</ResourceDictionary>