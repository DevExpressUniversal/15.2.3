<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
	xmlns:dx="clr-namespace:DevExpress.Xpf.Core">
    <Style TargetType="{x:Type dx:CornerBox}">
        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush>
                    <RadialGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="2.671" ScaleY="2.671" />
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5" />
                            <TranslateTransform X="-0.496" Y="-0.496" />
                        </TransformGroup>
                    </RadialGradientBrush.RelativeTransform>
                    
                    <GradientStop Color="#FFBAC6D5" Offset="0" />
                    <GradientStop Color="#FFD2E1ED" Offset="1" />
                    <GradientStop Color="#FFD3E2EE" Offset="0.538" />
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dx:CornerBox">
                    <Border Background="{TemplateBinding Background}" CornerRadius="0,0,2,0" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>