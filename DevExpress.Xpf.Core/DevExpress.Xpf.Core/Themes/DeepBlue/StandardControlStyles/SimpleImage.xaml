<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes">

    <ControlTemplate x:Key="demoSimplePanel" TargetType="{x:Type ContentControl}">
		<Grid HorizontalAlignment="Left" VerticalAlignment="Top" SnapsToDevicePixels="True">
			<!--<Border Margin="4,4,0,0" Background="#5A5873A1" CornerRadius="4,4,4,4" Opacity="1"/>-->
			<Border Width="Auto" Height="Auto" CornerRadius="3" Padding="1">
				<Border.Background>
					<LinearGradientBrush EndPoint="0.5,-0.003" StartPoint="0.5,1.003">
						<GradientStop Color="#FF688DC5" Offset="1" />
						<GradientStop Color="#FF7493CE" Offset="0" />
					</LinearGradientBrush>
				</Border.Background>
				<Border Width="Auto" Height="Auto" CornerRadius="2,2,2,2" Padding="4,4,4,4">
					<Border.Background>
						<LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
							<GradientStop Color="#FFE7F0FA" Offset="0" />
							<GradientStop Color="#FFFFFFFF" Offset="1" />
						</LinearGradientBrush>
					</Border.Background>
					<ContentPresenter />
				</Border>
			</Border>
		</Grid>
	</ControlTemplate>

</ResourceDictionary>