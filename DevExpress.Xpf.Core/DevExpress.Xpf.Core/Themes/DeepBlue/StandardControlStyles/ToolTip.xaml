<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
	xmlns:interop="clr-namespace:System.Windows.Interop;assembly=PresentationFramework"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes">

    <Style x:Key="DemoToolTipPanel" TargetType="{x:Type ContentControl}">
        <Setter Property="Padding" Value="10,6,10,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Grid VerticalAlignment="Center" x:Name="tooltips" HorizontalAlignment="Center">
                        <Border x:Name="border1" SnapsToDevicePixels="True" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Background="#FF000000" Margin="3,3,0,0" CornerRadius="3,3,3,3" Opacity="0.25" />
                        <Border x:Name="border2" SnapsToDevicePixels="True" Width="Auto" Background="#FF021743" Height="Auto" VerticalAlignment="Stretch" Padding="1,1,1,1" Margin="0,0,3,3" CornerRadius="3,3,3,3">
                            <Border x:Name="border3" SnapsToDevicePixels="True" CornerRadius="2,2,2,2" Background="#FFD2E6FF">
                                <ContentPresenter Margin="{TemplateBinding Padding}" />
                            </Border>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static interop:BrowserInteropHelper.IsBrowserHosted}}" Value="True">
                            <Setter TargetName="border1" Property="Visibility" Value="Hidden" />
                            <Setter TargetName="border2" Property="CornerRadius" Value="0" />
                            <Setter TargetName="border2" Property="Margin" Value="0" />
                            <Setter TargetName="border3" Property="CornerRadius" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="{dxt:ToolTipThemeKey ResourceKey=ControlTemplate}" TargetType="{x:Type ToolTip}">
        <ContentControl Content="{TemplateBinding Content}" 
            ContentStringFormat="{TemplateBinding ContentStringFormat}" 
            ContentTemplate="{TemplateBinding ContentTemplate}" 
            ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}" 
            Style="{DynamicResource DemoToolTipPanel}">
        </ContentControl>
    </ControlTemplate>

    <Style x:Key="{dxt:DefaultStyleThemeKey ThemeName=DeepBlue, Type=ToolTip, TypeInTargetAssembly=dx:ResourceFinder}" TargetType="ToolTip">
        <Setter Property="Padding" Value="10,6,10,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border x:Name="shadow" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Background="#FF000000" Margin="3,3,0,0" CornerRadius="3,3,3,3" Opacity="0.25" />
                        <Border x:Name="contentBorder" Width="Auto" Background="#FF021743" Height="Auto" VerticalAlignment="Stretch" Padding="1,1,1,1" Margin="0,0,3,3" CornerRadius="3,3,3,3">
                            <Border CornerRadius="2,2,2,2" Background="#FFD2E6FF">
                                <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasDropShadow" Value="False">
                            <Setter TargetName="shadow" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Source={x:Static interop:BrowserInteropHelper.IsBrowserHosted}}" Value="True">
                            <Setter TargetName="shadow" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="contentBorder" Property="CornerRadius" Value="0,0,0,0" />
                            <Setter TargetName="contentBorder" Property="Margin" Value="0,0,0,0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="Black"/>
    </Style>
</ResourceDictionary>
