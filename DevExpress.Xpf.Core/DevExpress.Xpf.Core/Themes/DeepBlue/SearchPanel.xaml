<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes" 
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxc="clr-namespace:DevExpress.Xpf.Core"
    xmlns:themes="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:dxci="clr-namespace:DevExpress.Xpf.Core.Native"
    xmlns:System_Windows_Controls_Primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d">
    <!--ButtonControlTemplate-->
    <ControlTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=ButtonControlTemplate}" TargetType="{x:Type Button}">
        <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="00:00:00.1" To="MouseOver" />
                        <VisualTransition GeneratedDuration="00:00:00.1" To="Pressed" />
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="gs1" Storyboard.TargetProperty="Color" To="#FFCECECE" />
                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="gs2" Storyboard.TargetProperty="Color" To="#FFB3B3B3" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="gs1" Storyboard.TargetProperty="Color" To="#FF939393" />
                            <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="gs2" Storyboard.TargetProperty="Color" To="#FF939393" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border CornerRadius="8,8,8,8" SnapsToDevicePixels="True" UseLayoutRounding="True">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEDEDED" x:Name="gs1" />
                        <GradientStop Color="#FFE1E1E1" x:Name="gs2" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <ContentPresenter x:Name="contentPresenter" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="True" UseLayoutRounding="True" />
            </Border>
        </Grid>
    </ControlTemplate>

    <!--ButtonBorderBrush-->
    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="{themes:SearchPanelThemeKey ResourceKey=ButtonBorderBrush}">
        <GradientStop Color="#FFA3AEB9" Offset="0" />
        <GradientStop Color="#FF8399A9" Offset="0.375" />
        <GradientStop Color="#FF718597" Offset="0.375" />
        <GradientStop Color="#FF617584" Offset="1" />
    </LinearGradientBrush>

    <!--OptionsButtonStyle-->
    <!--BEGIN WPF-->
    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=OptionsButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {themes:ButtonThemeKey ResourceKey=ButtonControlTemplate}}" />
        <!--END WPF-->
        <!--ONLY SL
        <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=OptionsButtonStyle}" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonThemeKey_ButtonControlStyle}">
        ONLY SL-->
        <Setter Property="Width" Value="21" />
        <Setter Property="Height" Value="21" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!--ReplaceButtonStyle-->
    <!--BEGIN WPF-->
    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=ReplaceButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {themes:ButtonThemeKey ResourceKey=ButtonControlTemplate}}" />
        <!--END WPF-->
        <!--ONLY SL
        <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=ReplaceButtonStyle}" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonThemeKey_ButtonControlStyle}">
        ONLY SL-->
        <Setter Property="Margin" Value="0,0,4,0" />
        <Setter Property="Height" Value="21" />
    </Style>

    <!--ReplaceAllButtonStyle-->
    <!--BEGIN WPF-->
    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=ReplaceAllButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {themes:ButtonThemeKey ResourceKey=ButtonControlTemplate}}" />
        <!--END WPF-->
        <!--ONLY SL
        <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=ReplaceAllButtonStyle}" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonThemeKey_ButtonControlStyle}">
        ONLY SL-->
        <Setter Property="Height" Value="21" />
        <!--Changed-->
        <Setter Property="Margin" Value="0,0,8,0" />
    </Style>

    <!--FindPrevButtonStyle-->
    <!--BEGIN WPF-->
    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=FindPrevButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {themes:ButtonThemeKey ResourceKey=ButtonControlTemplate}}" />
        <!--END WPF-->
        <!--ONLY SL
        <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=FindPrevButtonStyle}" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonThemeKey_ButtonControlStyle}">
        ONLY SL-->
        <Setter Property="Margin" Value="0,0,4,0" />
        <Setter Property="Height" Value="21" />
        <!--Changed-->
        <Setter Property="Width" Value="21" />
    </Style>

    <!--FindNextButtonStyle-->
    <!--BEGIN WPF-->
    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=FindNextButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {themes:ButtonThemeKey ResourceKey=ButtonControlTemplate}}" />
        <!--END WPF-->
        <!--ONLY SL
        <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=FindNextButtonStyle}" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonThemeKey_ButtonControlStyle}">
        ONLY SL-->
        <Setter Property="Height" Value="21" />
        <!--Changed-->
        <Setter Property="Margin" Value="0,0,8,0" />
        <Setter Property="Width" Value="21" />
    </Style>

    <!--CloseButtonStyle-->
    <!--BEGIN WPF-->
    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=CloseButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {themes:ButtonThemeKey ResourceKey=ButtonControlTemplate}}" />
        <!--END WPF-->
        <!--ONLY SL
        <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=CloseButtonStyle}" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonThemeKey_ButtonControlStyle}">
        ONLY SL-->
        <Setter Property="Height" Value="21" />
        <!--Changed-->
        <Setter Property="Width" Value="21" />
    </Style>

    <!--ButtonTextBlockStyle-->
    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=ButtonTextBlockStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Foreground" Value="#FF2E2E2E" />
        <Setter Property="Margin" Value="10,0,10,1" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--PanelTextBlockStyle-->
    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=PanelTextBlockStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Margin" Value="0,0,4,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <!--FindPrevButtonShape-->
    <DataTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=FindPrevButtonShape}">
        <Path Stretch="Fill" 
              Fill="#FF1C356A" 
              Data="F1 M 1340,804L 1344,808L 1340,812L 1340,804 Z" 
              Width="5" 
              Height="8" 
              Margin="0,0,2,0" 
              RenderTransformOrigin="0.5,0.5">
            <Path.RenderTransform>
                <ScaleTransform ScaleX="-1" />
            </Path.RenderTransform>
        </Path>
    </DataTemplate>

    <!--FindNextButtonShape-->
    <DataTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=FindNextButtonShape}">
        <Path Stretch="Fill" 
              Fill="#FF1C356A" 
              Data="F1 M 1340,804L 1344,808L 1340,812L 1340,804 Z" 
              Width="5" 
              Height="8" 
              Margin="2,0,0,0"/>
    </DataTemplate>

    <!--CloseButtonShape-->
    <DataTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=CloseButtonShape}">
        <Path Stretch="Fill" 
              Fill="#FF1C356A" 
              Data="F1 M 1162,945L 1157,950L 1162,955L 1158,955L 1155,952L 1152,955L 1148,955L 1153,950L 1148,945L 1152,945L 1155,948L 1158,945L 1162,945 Z" 
              Width="11" 
              Height="8"/>
    </DataTemplate>

    <!--OptionsButtonShape-->
    <DataTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=OptionsButtonShape}">
        <Path Stretch="Fill" 
              Fill="#FF1C356A" 
              Data="F1 M 1351,814L 1347,818L 1343,814L 1351,814 Z" 
              Width="7" 
              Height="5"/>
    </DataTemplate>

    <!--SeparatorControlTemplate-->
    <ControlTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=SeparatorControlTemplate}" TargetType="{x:Type ContentControl}">
        <Rectangle Opacity="0.5" Width="1" Height="21" Margin="0,0,8,0">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#3F1C356A" Offset="0"/>
                    <GradientStop Color="#3F1C356A" Offset="1"/>
                    <GradientStop Color="#FF1C356A" Offset="0.5"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </ControlTemplate>

    <!--BorderControlTemplate-->
    <ControlTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=BorderControlTemplate}" TargetType="{x:Type ContentControl}">
        <Grid Margin="1" SnapsToDevicePixels="True" UseLayoutRounding="True">
            <Border Background="White" CornerRadius="3" Margin="0,5,0,-1" Opacity="0.25" />
            <Border Background="#FF6082AE" CornerRadius="3">
                <Border Margin="1" CornerRadius="2" Padding="8,2,4,2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF83A7D3" Offset="0.1"/>
                            <GradientStop Color="#FF8BAFDB" Offset="1"/>
                            <GradientStop Color="#FF789BC8"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <ContentPresenter SnapsToDevicePixels="True" UseLayoutRounding="True" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
                </Border>
            </Border>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>