<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core">
    <ControlTemplate x:Key="{dxt:UserControlThemeKey ResourceKey=ControlTemplate}" TargetType="{x:Type dx:ThemedUserControl}">
        <Border x:Name="PART_Border" Background="Transparent">
            <ContentPresenter Content="{TemplateBinding ContentControl.Content}" ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}" />
        </Border>
    </ControlTemplate>
    
</ResourceDictionary>