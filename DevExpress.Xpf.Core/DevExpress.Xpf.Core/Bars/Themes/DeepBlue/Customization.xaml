<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core" 
    xmlns:dxc="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes" 
    xmlns:dxb="clr-namespace:DevExpress.Xpf.Bars" 
    xmlns:dxbt="clr-namespace:DevExpress.Xpf.Bars.Themes" 
    xmlns:dxbc="clr-namespace:DevExpress.Xpf.Bars.Customization"
    >
    <SolidColorBrush x:Key="BaseBrushWhite" Color="White" />
	<ControlTemplate x:Key="{dxbt:CustomizationThemeKey ResourceKey=DragElementTemplate}" TargetType="{x:Type dxbc:BarItemDragElementContent}">
		<Grid Background="#00FFFFFF">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid Background="#00FFFFFF">
				<Border x:Name="border1" Background="#FF5379AE" Padding="1,1,1,1">
					<Border x:Name="border2" Padding="1,1,1,1">
						<Border.Background>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#FFD0E3FB" Offset="0" />
								<GradientStop Color="#FFADD0F6" Offset="1" />
								<GradientStop Color="#FFD5E6FA" Offset="0.5" />
							</LinearGradientBrush>
						</Border.Background>
						<Border x:Name="border3">
							<Border.Background>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop Color="#FFD1E4FC" Offset="0" />
									<GradientStop Color="#FFAED1F6" Offset="1" />
									<GradientStop Color="#FFB5D0F1" Offset="0.5" />
									<GradientStop Color="#FFA4C5ED" Offset="0.5" />
								</LinearGradientBrush>
							</Border.Background>
						</Border>
					</Border>
				</Border>
				<StackPanel Orientation="Horizontal">
                    <dx:ImagePixelSnapper>
                        <Image Margin="4,4,0,4" VerticalAlignment="Center" Source="{Binding Path=Glyph}"/>
                    </dx:ImagePixelSnapper>
                    <TextBlock Margin="4,4,10,4" Text="{Binding Path=Content}" Visibility="Visible"/>
				</StackPanel>
			</Grid>
			<dx:DragIconControl x:Name="PART_DragIcon"
				Margin="-12,-12,0,0"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Right"
				Grid.Column="1"
				Grid.Row="1" />
			<VisualStateManager.VisualStateGroups>
				<VisualStateGroup x:Name="AppType">
					<VisualState x:Name="Standalone" />
					<VisualState x:Name="BrowserHosted">
						<Storyboard>
							<ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_DragIcon" Storyboard.TargetProperty="(Grid.Row)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <sys:Int32>0</sys:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
							<ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_DragIcon" Storyboard.TargetProperty="(Grid.Column)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <sys:Int32>0</sys:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
						</Storyboard>
					</VisualState>
				</VisualStateGroup>
			</VisualStateManager.VisualStateGroups>
		</Grid>
	</ControlTemplate>
<dxb:SizeEx x:Key="{dxbt:CustomizationThemeKey ResourceKey=CaptionEditorFloatSize}" Width="400" Height="140"/>
    <dxb:SizeEx x:Key="{dxbt:CustomizationThemeKey ResourceKey=CustomizationFormFloatSize}" Width="450" Height="400"/>
    <sys:Double x:Key="{dxbt:CustomizationThemeKey ResourceKey=CustomizationFormMinWidth}">300</sys:Double>
    <sys:Double x:Key="{dxbt:CustomizationThemeKey ResourceKey=CustomizationFormMinHeight}">300</sys:Double>
    <sys:Boolean x:Key="{dxbt:CustomizationThemeKey ResourceKey=ColorizeGlyph}">False</sys:Boolean>
    
	<ControlTemplate x:Key="{dxbt:CustomizationThemeKey ResourceKey=BarListItemTemplate}" TargetType="{x:Type ListBoxItem}">
		<ContentControl SnapsToDevicePixels="True" Background="Transparent" FontSize="13" FontFamily="Tahoma" Padding="3,0,3,0" x:Name="item">
			<Grid Margin="0,0,0,1" Cursor="Hand" Background="Transparent">
				<Border CornerRadius="2,2,2,2" Margin="0,0,0,0" Background="{x:Null}" Padding="5,3,5,3" x:Name="border">
					<ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" Margin="0,0,0,1" x:Name="contentPresenter" />
				</Border>
			</Grid>
			<VisualStateManager.VisualStateGroups>
				<VisualStateGroup x:Name="SelectionStates">
					<VisualState x:Name="Unselected" />
					<VisualState x:Name="Selected">
						<Storyboard>
							<ObjectAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="Background">
								<DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selected-item}" />
							</ObjectAnimationUsingKeyFrames>
							<ObjectAnimationUsingKeyFrames Storyboard.TargetName="item" Storyboard.TargetProperty="Foreground">
								<DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource BaseBrushWhite}" />
							</ObjectAnimationUsingKeyFrames>
						</Storyboard>
					</VisualState>
				</VisualStateGroup>
			</VisualStateManager.VisualStateGroups>
		</ContentControl>
	</ControlTemplate>
</ResourceDictionary>
