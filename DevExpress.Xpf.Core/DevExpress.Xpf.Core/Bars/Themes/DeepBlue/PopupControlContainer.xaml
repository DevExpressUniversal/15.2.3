<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core" 
    xmlns:dxc="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes" 
    xmlns:dxb="clr-namespace:DevExpress.Xpf.Bars" 
    xmlns:dxbt="clr-namespace:DevExpress.Xpf.Bars.Themes" 
    xmlns:dxbc="clr-namespace:DevExpress.Xpf.Bars.Customization"
    >
    <ControlTemplate x:Key="{dxbt:PopupControlContainerThemeKey ResourceKey=ControlTemplate}" TargetType="{x:Type dxb:PopupContainer}">
        <dx:DXContentPresenter Content="{TemplateBinding Content}" />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:PopupControlContainerThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type dxb:BarPopupBorderControl}">
        <Border>
        <Grid Margin="1,0,0,0">            
            <!--ONLY SL<Border x:Name="PART_Shadow" Margin="2,2,-2,-2" CornerRadius="3" Opacity="0.25" Background="#FF000000"/>ONLY SL-->

            <Border x:Name="PART_Border1" Background="#FF5981be" CornerRadius="3,3,3,3"/>
            <Border x:Name="PART_Border2" Background="#FFA3C3EC" CornerRadius="2,2,2,2" Margin="1,1,1,1">
                <dx:DXContentPresenter Width="Auto" Height="Auto" Content="{TemplateBinding Content}" />
            </Border>            
        </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <DataTrigger xmlns:interop="clr-namespace:System.Windows.Interop;assembly=PresentationFramework" Binding="{Binding Source={x:Static interop:BrowserInteropHelper.IsBrowserHosted}}" Value="True">
                <Setter TargetName="PART_Border1" Property="CornerRadius" Value="0,0,0,0" />
                <Setter TargetName="PART_Border2" Property="CornerRadius" Value="0,0,0,0" />
            </DataTrigger>
          </ControlTemplate.Triggers>
    </ControlTemplate>
    <!--BEGIN WPF-->
    <Style x:Key="{dxbt:OfficeTabletItemsControlThemeKey ResourceKey=BackButtonStyle}" TargetType="{x:Type ButtonBase}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="MinHeight" Value="25"/>
        <Setter Property="MaxWidth" Value="96"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Path x:Name="path" Stretch="Fill" Fill="#FF15428B" Data="F1 M 6,2L 7.46699,3.47572L 2.88984,8.05286L 7.41782,12.5808L 6,14L -1.32341e-007,8L 6,2 Z " Width="8" Height="12" Margin="8,3,8,3" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" />
                        <TextBlock x:Name="backText" Text="{TemplateBinding Content}" TextTrimming="CharacterEllipsis" Foreground="#FF15428B" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="backText" Property="Foreground" Value="#FF00156E" />
                            <Setter TargetName="path" Property="Fill" Value="#FF00156E" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="{dxbt:OfficeTabletItemsControlThemeKey ResourceKey=CaptionStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="8,-1,8,0"/>        
        <Setter Property="Foreground" Value="#FF15428B"/>
    </Style>
    <Style x:Key="{dxbt:OfficeTabletItemsControlThemeKey ResourceKey=BackgroundStyle}" TargetType="{x:Type Border}">
        <Setter Property="MinHeight" Value="25"/>
        <Setter Property="Background" Value="#FFDDE7EE"/>
        <Setter Property="BorderBrush" Value="#FFDDE7EE"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="CornerRadius" Value="2,2,0,0"/>
    </Style>    
    <!--END WPF-->
</ResourceDictionary>