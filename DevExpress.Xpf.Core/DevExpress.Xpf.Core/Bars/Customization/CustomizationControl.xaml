<UserControl x:Class="DevExpress.Xpf.Bars.Customization.CustomizationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxb="clr-namespace:DevExpress.Xpf.Bars"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:local="clr-namespace:DevExpress.Xpf.Bars.Customization"
    x:Name="customizationControl" Loaded="OnLoaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <dx:BarsStringIdConverter x:Key="BarsStringIdConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid SnapsToDevicePixels="True">
        <!--ONLY SL<dx:StyleManager.ApplyApplicationTheme>True</dx:StyleManager.ApplyApplicationTheme>ONLY SL-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <dx:DXTabControl x:Name="tabControl" Margin="12,12,12,0" dxb:BarNameScope.IsScopeOwner="false">
            <dx:DXTabItem x:Name="tabItemToolbars" Content="{Binding ToolbarsCustomizationControl}" dxb:BarNameScope.IsScopeOwner="false"
                          Header="{Binding ConverterParameter=CustomizationControl_ToolbarsTabCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}"/>
            <dx:DXTabItem x:Name="tabItemCommands" Content="{Binding CommandsCustomizationControl}" dxb:BarNameScope.IsScopeOwner="false"
                          Header="{Binding ConverterParameter=CustomizationControl_CommandsTabCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}"/>
            <dx:DXTabItem x:Name="tabItemOptions" Content="{Binding OptionsControl}" dxb:BarNameScope.IsScopeOwner="false"
                          Header="{Binding ConverterParameter=CustomizationControl_OptionsTabCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}"/>
        </dx:DXTabControl>
        <Button x:Name="closeButton" Margin="12" Padding="24,2,24,2" 
                Content="{Binding Path=Margin, ConverterParameter=Close, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}" 
                Grid.Row="1" HorizontalAlignment="Right" Click="OnCloseButtonClick" />
    </Grid>
</UserControl>
