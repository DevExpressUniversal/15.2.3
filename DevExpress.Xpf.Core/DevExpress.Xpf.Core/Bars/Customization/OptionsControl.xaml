<UserControl x:Class="DevExpress.Xpf.Bars.Customization.OptionsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxtEx="clr-namespace:DevExpress.Xpf.Utils.Themes"
    xmlns:local="clr-namespace:DevExpress.Xpf.Bars.Customization"
    xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors"
    xmlns:dxc="clr-namespace:DevExpress.Xpf.Core"
    xmlns:dxb="clr-namespace:DevExpress.Xpf.Bars"
    xmlns:dx="clr-namespace:DevExpress.Xpf.Core"
    x:Name="optionsControl">
    <UserControl.Resources>
        <ResourceDictionary>
            <dx:BarsStringIdConverter x:Key="BarsStringIdConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
            <StackPanel DataContext="{Binding Path=(dxb:BarManager.BarManager)}">
                <dx:GroupFrame x:Name="frame1" Header="{Binding ConverterParameter=OptionsControl_IconsGroupCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}" Margin="0,0,0,12">
                    <StackPanel>
                        <dxe:CheckEdit x:Name="ceLargeIconsInToolbars" Content="{Binding ConverterParameter=OptionsControl_LargeIconsInToolbarsCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}" ClickMode="Press" Margin="0,0,0,4" IsThreeState="True"/>
                        <dxe:CheckEdit x:Name="ceLargeIconsInMenu" Content="{Binding ConverterParameter=OptionsControl_LargeIconsInMenuCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}" IsThreeState="True" ClickMode="Press"/>
                    </StackPanel>
                </dx:GroupFrame>
                <dx:GroupFrame x:Name="frame2" Header="{Binding ConverterParameter=OptionsControl_ScreenTipsGroupCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}">
                    <StackPanel>
                        <dxe:CheckEdit x:Name="ceShowScreenTipsOnToolbars" Content="{Binding ConverterParameter=OptionsControl_ShowScreenTipsOnToolbarsCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}" Margin="0,0,0,4" ClickMode="Press"/>
                        <dxe:CheckEdit x:Name="ceShowShortcutKeysOnScreenTips" Content="{Binding ConverterParameter=OptionsControl_ShowShortcutKeysOnScreenTipsCaption, Converter={StaticResource BarsStringIdConverter}, RelativeSource={RelativeSource Self}}" Margin="20,0,0,0" ClickMode="Press"/>
                    </StackPanel>
                </dx:GroupFrame>
            </StackPanel>
    </Grid>
</UserControl>
