<UserControl 
    x:Class="DevExpress.Design.Mvvm.Wizards.UI.ViewModelEntityDefinitionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:DevExpress.Design.UI;assembly=DevExpress.Design.v15.2"    
    xmlns:mvvm="clr-namespace:DevExpress.Design.Mvvm"
    xmlns:mvvmWizardsUI="clr-namespace:DevExpress.Design.Mvvm.Wizards.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:data="clr-namespace:DevExpress.Mvvm.UI.Native.ViewGenerator;assembly=DevExpress.Xpf.Core.v15.2"
    mc:Ignorable="d" 
    d:DesignHeight="500" d:DesignWidth="800"
    >
    <UserControl.Resources>        
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource ResourceKey={ui:ThemeColorsKey Key=ColorOrange}}"/>
        </Style>
        <ui:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>        
        <ui:BooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" Inverted ="True"/>        
    </UserControl.Resources>
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" 
                  Text="{x:Static mvvmWizardsUI:SR_Mvvm.ViewModelWizard_SelectEntityType}"
                  Style="{DynamicResource ResourceKey={ui:ControlsThemeKey Key=ListCaption}}"
                  />
        <ListBox Grid.Row="2" BorderThickness="0" ItemsSource="{Binding Items}" 
                 SelectedItem="{Binding SelectedEntity, Mode=TwoWay}"
                 DisplayMemberPath="Name"
                 FontSize="14"
                 Style="{DynamicResource ResourceKey={ui:StandardControlsThemeKey Key=ListBox}}" Margin="0,2,0,-2"
                 />
        
        <DockPanel Grid.Row="2" Grid.Column="2" LastChildFill="False">
            <TextBlock DockPanel.Dock="Top"
                       ui:HyperlinkInlineExpression.InlineExpression="{Binding DescriptionText}"
                       Style="{DynamicResource {ui:ControlsThemeKey Key=InfoText}}"
                       />
            <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
                <TextBlock Text="{x:Static mvvmWizardsUI:SR_Mvvm.ViewModelWizard_ViewModelName}"
                           Style="{DynamicResource ResourceKey={ui:ControlsThemeKey Key=OptionName}}"
                           />
                <TextBox Text="{Binding ViewModelName, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEntitySelected}"
                         Style="{DynamicResource ResourceKey={ui:StandardControlsThemeKey Key=TextBox}}"
                         />                
            </DockPanel>
            <DockPanel DockPanel.Dock="Top"  Margin="0,10,0,0" Visibility="Collapsed">
                <TextBlock DockPanel.Dock="Top"
                    ui:HyperlinkInlineExpression.InlineExpression="{x:Static mvvmWizardsUI:SR_Mvvm.ViewModelWizard_DisclaimerText}"
                    Style="{DynamicResource {ui:ControlsThemeKey Key=InfoText}}"
                />
                <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
                    <TextBlock 
                        Text="{x:Static mvvmWizardsUI:SR_Mvvm.DataAccessLayerWizard_PrimaryKey}" 
                        Style="{DynamicResource ResourceKey={ui:ControlsThemeKey Key=OptionName}}"
                    />
                    <ComboBox ItemsSource="{Binding TableKeys}" 
                              DisplayMemberPath="(data:IEdmPropertyInfo.Name)" 
                              SelectedItem="{Binding PrimaryKey}"
                        Style="{DynamicResource ResourceKey={ui:StandardControlsThemeKey Key=ComboBox}}"
                    />
                </DockPanel>
            </DockPanel>
            <TextBlock DockPanel.Dock="Bottom" Margin="0,5,0,0" HorizontalAlignment="Right">
                <Hyperlink Foreground="{DynamicResource ResourceKey={ui:ThemeColorsKey Key=ColorOrange}}" 
                    Command="{Binding NavigateToLearnMore}">
                    <Run Text="{x:Static mvvmWizardsUI:SR_Mvvm.Wizard_LearnMore}"/>
                </Hyperlink>
            </TextBlock>
        </DockPanel>
    </Grid>
</UserControl>