<Window x:Class="DevExpress.Xpf.Core.Design.Wizards.ItemsSourceWizard.Templates.MessageWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:DevExpress.Xpf.Core.Design.Wizards"
             mc:Ignorable="d" ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" 
             WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" Width="400" Height="140">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DevExpress.Xpf.Core.v15.2.Design.Wizards;component/ItemsSourceWizard/Templates/ItemsSourceWizardResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Border BorderBrush="#26000000" BorderThickness="1" Background="White" Grid.RowSpan="3">
            <Border.Effect>
                <DropShadowEffect BlurRadius="32" Direction="-90" Opacity="0.35" ShadowDepth="8" />
            </Border.Effect>
        </Border>
        <TextBlock x:Name="tbMessageText" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,60" Width="300" TextAlignment="Justify" TextWrapping="Wrap" />
        <Button x:Name="btnOk" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Content="{l:ItemsSourceWizardStringId StringId=OK}" Click="OnOkButtonClick"
                Style="{DynamicResource ButtonStyle}" Width="70" Height="30" SnapsToDevicePixels="True" FontSize="16" />
    </Grid>
</Window>
