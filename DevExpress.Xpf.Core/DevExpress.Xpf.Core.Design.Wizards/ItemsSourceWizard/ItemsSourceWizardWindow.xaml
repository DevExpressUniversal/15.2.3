<Window x:Class="DevExpress.Xpf.Core.Design.Wizards.ItemsSourceWizard.ItemsSourceWizardWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevExpress.Xpf.Core.Design.Wizards.ItemsSourceWizard"
             xmlns:l="clr-namespace:DevExpress.Xpf.Core.Design.Wizards"
             xmlns:lt="clr-namespace:DevExpress.Xpf.Core.Design.Wizards.ItemsSourceWizard.Templates"
             mc:Ignorable="d" Height="550" Width="840" ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" 
             WindowStyle="None" AllowsTransparency="True" Background="{x:Null}"  MouseLeftButtonDown="Window_MouseLeftButtonDown" Icon="Images/DX.ico" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Templates/ItemsSourceWizardResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <lt:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Border BorderBrush="#26000000" BorderThickness="1" Background="White" Grid.RowSpan="3">
            <Border.Effect>
                <DropShadowEffect BlurRadius="32" Direction="-90" Opacity="0.35" ShadowDepth="8"/>
            </Border.Effect>
        </Border>
        <Grid Margin="20,5,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Margin="0,10,0,15" HorizontalAlignment="Left" Text="{l:ItemsSourceWizardStringId StringId=WizardTitle}"
                       FontFamily="Segoe UI Light" FontSize="24" Foreground="{StaticResource ColorSilver}" />
            <local:ItemsSourceWizard Grid.Row="1" DataContext="{Binding}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Margin="20,0,0,0">
                    <Image Source="Images\logo.png" Stretch="None" HorizontalAlignment="Left"/>
                    <TextBlock HorizontalAlignment="Left" Foreground="{StaticResource ColorSilver}" Margin="0,5,0,0">
                        <Run Text="{l:ItemsSourceWizardStringId StringId=SupportTextPart1}"/>
                        <LineBreak/>
                        <Run Text="{l:ItemsSourceWizardStringId StringId=SupportTextPart2}"/>
                        <Hyperlink Foreground="{StaticResource ColorOrange}" Command="{Binding MailToSupportCmd}">
                            <Run Text="{l:ItemsSourceWizardStringId StringId=SupportLink}"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
                <Button Content="{l:ItemsSourceWizardStringId StringId=Back}" Grid.Column="1" Style="{DynamicResource ButtonStyle}" Width="120" Height="45" 
                        HorizontalAlignment="Right" SnapsToDevicePixels="True" FontSize="21" Margin="0,15,10,0" 
                        Command="{Binding PreviousStepCmd}" Visibility="{Binding IsPrevStepEnabled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                <Button Content="{Binding NextStepButtonName}" Grid.Column="2" Style="{DynamicResource ButtonStyle}" Width="120" Height="45" 
                        HorizontalAlignment="Right" SnapsToDevicePixels="True" FontSize="21" Margin="0,15,0,0" 
                        Command="{Binding NextStepCmd}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        IsEnabled="{Binding IsNextStepEnabled, Mode=OneWay}"/>
            </Grid>
        </Grid>
        <Button Command="{Binding CloseCmd}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4" Style="{DynamicResource SilverCloseButtonStyle}"/>

    </Grid>
</Window>
