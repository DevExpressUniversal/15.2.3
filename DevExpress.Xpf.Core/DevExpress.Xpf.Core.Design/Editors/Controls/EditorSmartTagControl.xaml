<UserControl x:Class="DevExpress.Xpf.Core.Design.EditorSmartTagContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <LinearGradientBrush x:Key="ButtonNormalBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#F3F3F3" Offset="0" />
            <GradientStop Color="#EBEBEB" Offset="0.5" />
            <GradientStop Color="#DDDDDD" Offset="0.5" />
            <GradientStop Color="#CDCDCD" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="ButtonNormalBorder" Color="#FF707070" />
        <SolidColorBrush x:Key="DefaultForeColor" Color="Black" />
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Background" Value="{StaticResource ButtonNormalBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonNormalBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{StaticResource DefaultForeColor}" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="hormal" CornerRadius="2" Padding="1" Background="#FF9DA6B4">
                                <Border CornerRadius="1" Padding="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFF8F9FC" Offset="0" />
                                            <GradientStop Color="#FFE6EBF3" Offset="1" />
                                            <GradientStop Color="#FFEAEFF6" Offset="0.5" />
                                            <GradientStop Color="#FFE1E7F0" Offset="0.5" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="1">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFF2F5F9" Offset="0" />
                                                <GradientStop Color="#FFD8E0ED" Offset="1" />
                                                <GradientStop Color="#FFDFE6F1" Offset="0.5" />
                                                <GradientStop Color="#FFD1DAE8" Offset="0.5" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Border>
                            <Border x:Name="hover" CornerRadius="2" Padding="1" Background="#FFE5C365" Visibility="Hidden">
                                <Border CornerRadius="1" Padding="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFCFAF2" Offset="0" />
                                            <GradientStop Color="#FFFDEA99" Offset="1" />
                                            <GradientStop Color="#FFF8F0CD" Offset="0.5" />
                                            <GradientStop Color="#FFFDEA99" Offset="0.5" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="1">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFF9F7E6" Offset="0" />
                                                <GradientStop Color="#FFFCDE63" Offset="1" />
                                                <GradientStop Color="#FFF4E8B2" Offset="0.5" />
                                                <GradientStop Color="#FFFCDE63" Offset="0.5" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Border>
                            <Border x:Name="pressed" CornerRadius="2" Padding="1" Background="#FFD6A551" Visibility="Hidden">
                                <Border CornerRadius="1" Padding="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFDAC891" Offset="0" />
                                            <GradientStop Color="#FFF5E296" Offset="1" />
                                            <GradientStop Color="#FFF8F0CD" Offset="0.5" />
                                            <GradientStop Color="#FFFDEA99" Offset="0.5" />
                                            <GradientStop Color="#FFF4E9BA" Offset="0.071" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="1">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFEEDF9B" Offset="0" />
                                                <GradientStop Color="#FFF0D35E" Offset="1" />
                                                <GradientStop Color="#FFEEDF9B" Offset="0.5" />
                                                <GradientStop Color="#FFF0D35E" Offset="0.5" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Border>
                            <Grid x:Name="glyph" Margin="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="10" Height="10">
                                <TextBlock Text="..." Margin="1,-6,0,-6"/>
                            </Grid>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Visibility" TargetName="hover" Value="Visible" />
                                <Setter Property="Visibility" TargetName="hormal" Value="Hidden" />
                                <Setter Property="Visibility" TargetName="pressed" Value="Hidden" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Visibility" TargetName="pressed" Value="Visible" />
                                <Setter Property="Visibility" TargetName="hormal" Value="Hidden" />
                                <Setter Property="Visibility" TargetName="hover" Value="Hidden" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding Command}" CommandParameter="{Binding AdornedItem}" Content="..." Style="{StaticResource ButtonStyle}"/>
    </StackPanel>
    
</UserControl>
