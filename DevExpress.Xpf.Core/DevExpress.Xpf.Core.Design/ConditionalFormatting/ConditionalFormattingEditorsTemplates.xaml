<ResourceDictionary x:Class="DevExpress.Xpf.Core.Design.ConditionalFormatting.ConditionalFormattingEditorsTemplates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxcfd="clr-namespace:DevExpress.Xpf.Core.Design.ConditionalFormatting"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <DataTemplate x:Key="FormatIconEditorTemplate">
        <dxcfd:FormatIconComboBoxDesigTimeDecorator>
            <ComboBox IsEditable="True" Text="{Binding StringValue, UpdateSourceTrigger=LostFocus}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" Stretch="None" HorizontalAlignment="Center" Margin="1"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </dxcfd:FormatIconComboBoxDesigTimeDecorator>
    </DataTemplate>
</ResourceDictionary>
