<UserControl x:Class="DevExpress.Xpf.Core.Design.Services.AdornerServicesPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:SmartTags="clr-namespace:DevExpress.Design.SmartTags"
             xmlns:coreDesign="clr-namespace:DevExpress.Xpf.Core.Design"
             xmlns:local="clr-namespace:DevExpress.Xpf.Core.Design.Services"
             xmlns:coreSmartTags="clr-namespace:DevExpress.Xpf.Core.Design.SmartTags"
             mc:Ignorable="d" 
             HorizontalContentAlignment="Stretch"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <coreDesign:PropertyLineDataTemplates/>
                <coreSmartTags:DesignTimeListBoxResources/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>
            <local:ToolTipBehaviorByTypeConverter x:Key="toolTipConverter"/>
            <local:IconConverter x:Key="iconConverter"/>
            <SolidColorBrush Color="LightGray" x:Key="backgroundBrush"/>
            <SolidColorBrush Color="Black" x:Key="borderBrush"/>
            <Thickness x:Key="borderThickness">1</Thickness>
            <CornerRadius x:Key="cornerRadius">4,4,0,0</CornerRadius>
            <DataTemplate x:Key="addBehaviorTemplate">
                <TextBlock x:Name="addServiceTextBlock" VerticalAlignment="Center" ContextMenuService.Placement="Bottom">
                <Hyperlink Command="{Binding Command}" CommandParameter="{Binding ElementName=menu1}"
                           Style="{StaticResource hyperlinkBaseStyle}">
                    <TextBlock Text="{Binding Text}" Visibility="{Binding IsContextMenuNotEmpty, Converter={StaticResource boolToVisibilityConverter}}"/>
                </Hyperlink>
                <TextBlock.ContextMenu>
                    <ContextMenu x:Name="menu1" ItemsSource="{Binding Items}"
                                 Placement="Bottom" PlacementTarget="{x:Reference addServiceTextBlock}">
                        <ContextMenu.ItemContainerStyle>
                            <Style TargetType="{x:Type MenuItem}">
                                <Setter Property="Header" Value="{Binding TypeInfo.Name}"/>
                                <Setter Property="Command" Value="{Binding DataContext.AddBehavior, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                <Setter Property="CommandParameter" Value="{Binding}"/>
                                <Setter Property="ToolTip" Value="{Binding ToolTip}"/>
                                <Setter Property="Icon" Value="{Binding Icon}"/>
                            </Style>
                        </ContextMenu.ItemContainerStyle>
                    </ContextMenu>
                </TextBlock.ContextMenu>
            </TextBlock>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="11,0,0,8">
            <ContentControl Content="{Binding BehaviorsActionInfo}" ContentTemplate="{StaticResource addBehaviorTemplate}" 
                        Margin="0,0,18,0"/>
            <ContentControl Content="{Binding ServicesActionInfo}" ContentTemplate="{StaticResource addBehaviorTemplate}" />
        </StackPanel>

        <StackPanel>
            <coreSmartTags:DesignTimeListBox x:Name="services" ItemsSource="{Binding ExistingBehaviors}" 
                 SelectedItem="{Binding SelectedBehavior, Mode=TwoWay}"
                 BorderBrush="{x:Null}" BorderThickness="0"  MaxHeight="150" Margin="-12,0,-5,0" Padding="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 VerticalAlignment="Top">
                <coreSmartTags:DesignTimeListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid DataContext="{TemplateBinding DataContext}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentControl Content="{Binding Value.ItemType.Name, Converter={StaticResource iconConverter}}" 
                                            HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Value.ItemType.Name}" Grid.Column="1" Margin="4,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                            <TextBlock x:Name="remove" Foreground="White" Background="Transparent" Grid.Column="2" VerticalAlignment="Center" Margin="4,0,10,0">
                                <Hyperlink CommandParameter="{Binding}" Foreground="White"
                                           Command="{Binding DataContext.DeleteBehavior, RelativeSource={RelativeSource AncestorType=ListBox}}">
                                    <TextBlock Text="Remove" Foreground="White"/>
                                </Hyperlink>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </coreSmartTags:DesignTimeListBox.ItemTemplate>
                <coreSmartTags:DesignTimeListBox.ItemContainerStyle>
                    <Style TargetType="coreSmartTags:DesignTimeListBoxItem" BasedOn="{StaticResource DesignTimeListBoxItemStyle}">
                        <Setter Property="ToolTip" Value="{Binding Value.ItemType, Converter={StaticResource toolTipConverter}}"/>
                    </Style>
                </coreSmartTags:DesignTimeListBox.ItemContainerStyle>
                <coreSmartTags:DesignTimeListBox.Style>
                    <Style BasedOn="{StaticResource DesignTimeListBoxStyle}" TargetType="coreSmartTags:DesignTimeListBox">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=ItemsSource.Count, RelativeSource={RelativeSource Self}}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </coreSmartTags:DesignTimeListBox.Style>
            </coreSmartTags:DesignTimeListBox>

            <Grid Grid.IsSharedSizeScope="True">
                <GroupBox Style="{StaticResource groupBoxStyle}" Header="Properties"
                  Visibility="{Binding Path=IsPropertiesVisible, Converter={StaticResource boolToVisibilityConverter}}">
                    <SmartTags:FrameworkElementSmartTagPropertiesView DataContext="{Binding PropertiesViewModel}"/>
                </GroupBox>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
