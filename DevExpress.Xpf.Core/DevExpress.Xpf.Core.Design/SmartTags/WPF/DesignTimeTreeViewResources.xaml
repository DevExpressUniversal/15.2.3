<ResourceDictionary x:Class="DevExpress.Xpf.Core.Design.SmartTags.DesignTimeTreeViewResources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        xmlns:dxmvvminternal="http://schemas.devexpress.com/winfx/2008/xaml/mvvm/internal"
        xmlns:design="clr-namespace:DevExpress.Xpf.Core.Design"
        xmlns:local="clr-namespace:DevExpress.Xpf.Core.Design.SmartTags"
        xmlns:SmartTags="clr-namespace:DevExpress.Design.SmartTags">
    <Style x:Key="ExpandCollapseToggleStyle" TargetType="{x:Type ToggleButton}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Width" Value="18" />
        <Setter Property="Height" Value="18" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid Background="#00000000" SnapsToDevicePixels="True">
                        <Path x:Name="GlyphCollapsed" Stretch="Fill" Fill="#FFB9B9B9" Data="F1 M 232.5,17.0001C 228.91,17.0001 226,19.9102 226,23.5C 226,27.0898 228.91,30 232.5,30C 236.09,30 239,27.0898 239,23.5C 239,19.9102 236.09,17.0001 232.5,17.0001 Z M 232.5,18.0004C 235.538,18.0004 238,20.4628 238,23.5004C 238,26.538 235.538,29.0004 232.5,29.0004C 229.463,29.0004 227,26.538 227,23.5004C 227,20.4628 229.463,18.0004 232.5,18.0004 Z M 236,24.0001L 236,24.0001L 236,23.0004L 236,23L 233,20L 231,20L 234,23L 229,23.0004L 229,24.0001L 234,24L 231,26.9999L 233,26.9999L 236,24.0001 Z " Width="13" Height="13" />
                        <Path x:Name="GlyphExpanded" Stretch="Fill" Fill="#FFB9B9B9" Data="F1 M 372.5,127C 376.09,127 379,129.91 379,133.5C 379,137.09 376.09,140 372.5,140C 368.91,140 366,137.09 366,133.5C 366,129.91 368.91,127 372.5,127 Z M 372.5,128C 369.462,128 367,130.463 367,133.5C 367,136.538 369.462,139 372.5,139C 375.537,139 378,136.538 378,133.5C 378,130.463 375.537,128 372.5,128 Z M 370,136L 370,135L 373,135L 370,132L 370,131L 371,131L 374,134L 374,131L 375,131L 375,135L 375,136L 375,136L 374,136L 370,136 Z " Width="13" Height="13" Opacity="0" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Fill" TargetName="GlyphExpanded" Value="#FF373A3D" />
                            <Setter Property="Fill" TargetName="GlyphCollapsed" Value="#FF373A3D" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Fill" TargetName="GlyphExpanded" Value="#FF373A3D" />
                            <Setter Property="Fill" TargetName="GlyphCollapsed" Value="#FF373A3D" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Opacity" TargetName="GlyphExpanded" Value="1" />
                            <Setter Property="Opacity" TargetName="GlyphCollapsed" Value="0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DesignTimeTreeViewItemStyle" TargetType="local:DesignTimeTreeViewItem">
        <Setter Property="Background" Value="#00000000" />
        <Setter Property="Foreground" Value="#FF000000" />
        <Setter Property="Padding" Value="3,1,3,2" />
        <Setter Property="ExpanderMinWidth" Value="19"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DesignTimeTreeViewItem">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border MinWidth="{TemplateBinding ExpanderMinWidth}">
                            <ToggleButton x:Name="Expander" Style="{StaticResource ExpandCollapseToggleStyle}" 
                                      IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press" />
                        </Border>
                        <Grid Grid.Column="1">
                            <Border x:Name="Hover" Background="#FFB9B9B9" Opacity="0" />
                            <Border x:Name="Selection" Background="#FF4F97D1" Opacity="0" />
                        </Grid>
                        <Border x:Name="PART_Header" Background="{TemplateBinding Background}" Grid.Column="1" SnapsToDevicePixels="true">
                            <ContentPresenter ContentSource="Header" Margin="{TemplateBinding Padding}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ItemsPresenter x:Name="ItemsHost" Margin="0,1,0,0" Grid.Row="1" Grid.Column="1" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="HasItems" Value="False">
                            <Setter TargetName="Expander" Property="Visibility" Value="Hidden" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" SourceName="PART_Header" Value="True">
                            <Setter Property="Foreground" Value="#FFFFFFFF" />
                            <Setter TargetName="Hover" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="#FFFFFFFF" />
                            <Setter TargetName="Selection" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Header" Property="Opacity" Value="0.35" />
                            <Setter TargetName="ItemsHost" Property="Opacity" Value="0.35" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:DesignTimeTreeViewItem" BasedOn="{StaticResource DesignTimeTreeViewItemStyle}"/>
    <Style x:Key="DesignTimeTreeViewStyle" TargetType="local:DesignTimeTreeView" BasedOn="{StaticResource {x:Type TreeView}}">
        <Setter Property="ItemContainerStyle" Value="{StaticResource DesignTimeTreeViewItemStyle}"/>
    </Style>
    <Style TargetType="local:DesignTimeTreeView" BasedOn="{StaticResource DesignTimeTreeViewStyle}"/>
</ResourceDictionary>
