<?xml version="1.0" encoding="utf-8"?>
<TileItemTemplate xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Name>TileWideImageAndText01</Name>
  <ItemSize>Wide</ItemSize>
  <TextElements>
    <TileItemElementText>
      <TextLocation>
        <X>3</X>
        <Y>75</Y>
      </TextLocation>
      <TextAlignment>Manual</TextAlignment>
      <Font>
        <Value>Segoe UI, 9pt</Value>
      </Font>
      <MaxWidth>-1</MaxWidth>
      <Wrap>Wrap</Wrap>
      <TrimmingStyle>Default</TrimmingStyle>
      <DefaultText>The quick brown fox jumps over the lazy dog.</DefaultText>
    </TileItemElementText>
  </TextElements>
  <ImageElements>
    <TileItemElementImage>
      <Name>248x80</Name>
      <ImageLocation>
        <X>-12</X>
        <Y>-8</Y>
      </ImageLocation>
      <ImageSize>
        <Width>248</Width>
        <Height>80</Height>
      </ImageSize>
    </TileItemElementImage>
  </ImageElements>
</TileItemTemplate>