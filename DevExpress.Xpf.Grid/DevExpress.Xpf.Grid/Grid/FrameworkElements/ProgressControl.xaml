<UserControl x:Class="DevExpress.Xpf.Grid.ProgressControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxg="clr-namespace:DevExpress.Xpf.Grid">
    <Grid Margin="0,12,0,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <dxe:ProgressBarEdit Grid.Column="0" Margin="12,0,0,0">
            <dxe:ProgressBarEdit.StyleSettings>
                <dxe:ProgressBarMarqueeStyleSettings />
            </dxe:ProgressBarEdit.StyleSettings>
        </dxe:ProgressBarEdit>
        <Button Grid.Column="1" Name="btnCancel" Margin="6,0,12,0" MinWidth="62" Click="btnCancel_Click" />
    </Grid>
</UserControl>
