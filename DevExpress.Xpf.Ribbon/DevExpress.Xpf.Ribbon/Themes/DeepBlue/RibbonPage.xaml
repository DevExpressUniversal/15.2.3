<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxrt="clr-namespace:DevExpress.Xpf.Ribbon.Themes"
    xmlns:dxr="clr-namespace:DevExpress.Xpf.Ribbon"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Ribbon.v15.2;component/Themes/Generic/RibbonPage.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <dx:ColorOverlayConverter x:Key="colorOverlayConverter" />
    <sys:Double x:Key="{dxrt:RibbonPageThemeKey ResourceKey=HeaderTextIndent}">10.0</sys:Double>
    <Thickness x:Key="{dxrt:RibbonPageThemeKey ResourceKey=SelectedPagePopupBorderMargin}">0,20,0,20</Thickness>
    <Style x:Key="{dxrt:RibbonPageThemeKey ResourceKey=SelectedPageContainerStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="0,0,0,0" />
    </Style>
    <Style x:Key="{dxrt:RibbonPageThemeKey ResourceKey=CaptionContentContainerStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="5,3,5,3" />
    </Style>
    <Style x:Key="{dxrt:RibbonPageThemeKey ResourceKey=HighlightedCaptionContentContainerStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="5,3,2,3" />
    </Style>
    <Thickness x:Key="{dxrt:RibbonPageThemeKey ResourceKey=CaptionControlMargin}">0,2,0,0</Thickness>
    <sys:Double x:Key="{dxrt:RibbonPageThemeKey ResourceKey=MinHeight}">23.0</sys:Double>
    <sys:Double x:Key="{dxrt:RibbonPageThemeKey ResourceKey=AeroMinHeight}">23.0</sys:Double>
    <!-- DeepBlue: Ribbon Header Template and Triggers -->
    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=CaptionBackgroundTemplate}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Grid Margin="0,0,0,-1"
            SnapsToDevicePixels="True">
            <Grid x:Name="PART_NormalChecked" Opacity="0">
                <Border Background="#FF617CA7"
                    CornerRadius="2,2,0,0">
                    <Border Background="#FFD4E2F6"
                        CornerRadius="1,1,0,0"
                        Margin="1,1,1,0"
                        >
                        <Border Margin="1,1,1,-1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFB5CDEF" Offset="0" />
                                    <GradientStop Color="#FF9FBCE6" Offset="1" />
                                    <GradientStop Color="#FFA6C1E9" Offset="0.5" />
                                    <GradientStop Color="#FF9CBAE4" Offset="0.5" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PART_HoverUnchecked" Opacity="0">
                <Border Margin="0,0,0,1"
                    Background="#FF7FA0CF"
                    CornerRadius="2,2,0,0">
                    <Border Margin="1,1,1,0"
                        CornerRadius="1,1,0,0"
                        >
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF6487BA" Offset="0" />
                                <GradientStop Color="#FF8BA7D0" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PART_HoverChecked" Opacity="0">
                <Border CornerRadius="2,2,0,0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF5275AB" Offset="0" />
                            <GradientStop Color="#FF5779AD" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Background="#FFD7E4F7"
                        CornerRadius="1,1,0,0"
                        Margin="1,1,1,0"
                        >
                        <Border Margin="1,1,1,-1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFDBE8FC" Offset="0" />
                                    <GradientStop Color="#FF9CBAE4" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <ContentPresenter/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStateGroup">
                    <VisualState x:Name="NormalUnchecked" />
                    <VisualState x:Name="NormalChecked">
                        <Storyboard>
                            <DoubleAnimation To="1" 
                                Duration="0" 
                                Storyboard.TargetName="PART_NormalChecked" 
                                Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HoverUnchecked">
                        <Storyboard>
                            <DoubleAnimation To="1" 
                                Duration="0" 
                                Storyboard.TargetName="PART_HoverUnchecked" 
                                Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HoverChecked">
                        <Storyboard>
                            <DoubleAnimation To="1" 
                                Duration="0" 
                                Storyboard.TargetName="PART_HoverChecked" 
                                Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="PressedChecked">
                        <Storyboard>
                            <DoubleAnimation To="1" 
                                Duration="0" 
                                Storyboard.TargetName="PART_NormalChecked" 
                                Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Focused">
                        <Storyboard>
                            <DoubleAnimation To="1" 
                                Duration="0" 
                                Storyboard.TargetName="PART_HoverChecked" 
                                Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>
    <!-- DeepBlue: Ribbon Page Button Serparator Template -->
    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=SeparatorTemplate}">
        <Grid Margin="1,0,0,0" SnapsToDevicePixels="True" Width="2">
            <Rectangle HorizontalAlignment="Left" Stretch="Fill" Width="1">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#005A7DAD" Offset="0" />
                        <GradientStop Color="#005A7DAD" Offset="1" />
                        <GradientStop Color="#FF5A7DAD" Offset="0.5" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Right" Stretch="Fill" Width="1">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#00FFFFFF" Offset="0" />
                        <GradientStop Color="#00FFFFFF" Offset="1" />
                        <GradientStop Color="#59FFFFFF" Offset="0.5" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </ControlTemplate>
    <!-- DeepBlue: Left and Right Repeat Buttons -->
    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=RightRepeatButtonTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Width="12" Margin="0,0,0,1">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="PART_Default">
                <Border SnapsToDevicePixels="True"
                    Background="#FF6784B1" BorderThickness="0">
                    <Border SnapsToDevicePixels="True" BorderThickness="0" Margin="1" Background="#FFBED2F2">
                        <Border SnapsToDevicePixels="True" BorderThickness="0" Margin="1,1,0,0">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#FF819BBF" Offset="1" />
                                    <GradientStop Color="#FF98B6E1" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="PART_Hover" Opacity="0">
                <Border SnapsToDevicePixels="True"
                    Background="#FF5379AE" BorderThickness="0">
                    <Border SnapsToDevicePixels="True" BorderThickness="0" Background="#FFD3E5FA" Margin="1">
                        <Border SnapsToDevicePixels="True" BorderThickness="0" Margin="1,1,0,0">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#FFA4C5ED" Offset="1" />
                                    <GradientStop Color="#FFCFE3FB" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="PART_Pressed" Opacity="0">
                <Border SnapsToDevicePixels="True"
                    Background="#FF5379AE" BorderThickness="0">
                    <Border SnapsToDevicePixels="True" BorderThickness="0" Background="#FF8FADD7" Margin="1">
                        <Border SnapsToDevicePixels="True" BorderThickness="0" Margin="1,1,0,0">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#FF7C9DCC" Offset="1" />
                                    <GradientStop Color="#FF7B9CCB" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Path SnapsToDevicePixels="True"
                Stretch="Fill"
                Fill="#FF3d5093"
                Data="F1 M 206,7.00006L 206,15.0001L 210,11.0001L 206,7.00006 Z "
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0"
                Width="4"
                Height="8" />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsFocused" Value="True" />
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" TargetName="PART_Hover" Value="1" />
                <Setter Property="Opacity" TargetName="PART_Default" Value="0" />
                <Setter Property="Opacity" TargetName="PART_Pressed" Value="0" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity" TargetName="PART_Default" Value="0" />
                <Setter Property="Opacity" TargetName="PART_Hover" Value="0" />
                <Setter Property="Opacity" TargetName="PART_Pressed" Value="1" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False" />
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=LeftRepeatButtonTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Width="12" Margin="0,0,0,1">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="PART_Default">
                <Border SnapsToDevicePixels="True"
