<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxr="clr-namespace:DevExpress.Xpf.Ribbon"
    xmlns:dxrt="clr-namespace:DevExpress.Xpf.Ribbon.Themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Ribbon.v15.2;component/Themes/Generic/BackstageSeparatorItem.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="{dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Border Background="#FF7799C6"
            BorderBrush="#FFB6D0F0"
            BorderThickness="0,0,0,1"
            Height="2" />
    </ControlTemplate>

    <Style x:Key="{dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderStyle}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Setter Property="Margin" Value="0,1,0,1" />
        <Setter Property="Template" Value="{DynamicResource {dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderTemplate}}" />
    </Style>
    
</ResourceDictionary>