<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxr="clr-namespace:DevExpress.Xpf.Ribbon"
                    xmlns:dxrt="clr-namespace:DevExpress.Xpf.Ribbon.Themes">
    <ControlTemplate x:Key="{dxrt:RibbonHeaderThemeKey ResourceKey=ControlTemplate}">
        <Grid>
            <dxr:RibbonPageCategoryHeaderControl x:Name="PART_OriginPageCategoryHeaderControl" Width="0" Opacity="0" IsHitTestVisible="False" />
            <ItemsPresenter x:Name="PART_ItemsPresenter"/>
        </Grid>
    </ControlTemplate>
    <ItemsPanelTemplate x:Key="{dxrt:RibbonHeaderThemeKey ResourceKey=ItemsPanelTemplate}">
        <dxr:RibbonHeaderItemsPanel HorizontalAlignment="Stretch" />
    </ItemsPanelTemplate>
</ResourceDictionary>