<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoBase.Helpers"
                    xmlns:themes="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <Style TargetType="{x:Type helpers:FilterLineControl}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type helpers:FilterLineControl}">
                    <StackPanel Width="250" Orientation="Horizontal" Focusable="False">
                        <StackPanel.Resources>
                            <ResourceDictionary>
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=DeepBlue}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=LightGray}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2007Blue}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2007Black}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2007Silver}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Seven}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=VS2010}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=DXStyle}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2010Black}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2010Blue}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2010Silver}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=MetropolisDark}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=TouchlineDark}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2013}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=HybridApp}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=MetropolisLight}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2013LightGray}" Color="#A3A3A3" />
                                <SolidColorBrush x:Key="{themes:TextEditThemeKey ResourceKey=NullTextForeground, ThemeName=Office2013DarkGray}" Color="#A3A3A3" />
                            </ResourceDictionary>
                        </StackPanel.Resources>
                        <Image Stretch="None" Source="/DevExpress.Xpf.DemoBase.v15.2;component/Images/ModulesScreenFilter.png" Margin="0,0,10,0" Focusable="False"/>
                        <dxe:TextEdit x:Name="filterEdit"
                          EditValue="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource TemplatedParent}}"
                          NullText="Find Demos by Keyword (Ctrl+F)"
                          ShowBorder="False"
                          SelectAllOnGotFocus="True"
                          ShowError="False"
                          Foreground="#26A4DD"
                          NullValue=""
                          Width="180"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>