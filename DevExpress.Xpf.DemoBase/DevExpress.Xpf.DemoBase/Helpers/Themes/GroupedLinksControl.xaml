<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoBase">
    <Style TargetType="{x:Type local:GroupedLinksControl}">
        <Style.Resources>
            <TextDecorationCollection x:Key="LinkDecorations">
                <TextDecoration PenThicknessUnit="Pixel" PenOffsetUnit="Pixel">
                    <TextDecoration.Pen>
                        <Pen Thickness="1" DashCap="Flat">
                            <Pen.Brush>
                                <SolidColorBrush Color="#26A4DD"/>
                            </Pen.Brush>
                            <Pen.DashStyle>
                                <DashStyle Dashes="2,2"/>
                            </Pen.DashStyle>
                        </Pen>
                    </TextDecoration.Pen>
                </TextDecoration>
            </TextDecorationCollection>
            <Style x:Key="HoveredTextBlockStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="TextDecorations" Value="{StaticResource LinkDecorations}"/>
                <Setter Property="Foreground" Value="#26A4DD"/>
            </Style>
        </Style.Resources>
        <Setter Property="ItemForeground" Value="#3C3C3C"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="GroupHeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}"
                               Foreground="#26A4DD"
                               FontSize="14"
                               FontFamily="Segoe UI Bold"
                               Margin="-1,0,0,4"
                               Cursor="Hand">
                    </TextBlock>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="StatusHeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               Foreground="#A1A1A1"
                               FontSize="11"
                               FontFamily="Segoe UI Bold"
                               Margin="0,11,0,4"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ShowAllTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="Show All Demos" Style="{StaticResource HoveredTextBlockStyle}" Cursor="Hand" Margin="0,10"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:GroupedLinksControl}">
                    <Grid DataContext="{x:Null}">
                        <dx:DXBorder x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter Content="{TemplateBinding Panel}" HorizontalAlignment="Left"/>
                        </dx:DXBorder>
                        <Grid x:Name="flyout" Margin="12,5,0,10" Opacity="0" Visibility="Collapsed" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.Effect>
                                <DropShadowEffect Direction="-90"
                                                  ShadowDepth="1"
                                                  Opacity="0.15"
                                                  BlurRadius="4" />
                            </Grid.Effect>
                            <dx:DXBorder Width="271" Grid.Column="1" BorderBrush="#CACACA" BorderThickness="1" Background="White">
                                <StackPanel Margin="18,11,10,6">
                                    <TextBlock Text="{Binding Title}" FontSize="17" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,6"/>
                                </StackPanel>
                            </dx:DXBorder>
                            <Grid Grid.Column="0"
                                  VerticalAlignment="Center"
                                  Margin="0,0,-1,0"
                                  Visibility="{TemplateBinding LeftFlyoutIndicatorVisibility}">
                                <Path Data="F1 M 1,0 l -7,7.5 l 7,7.5 Z"
                                      Fill="White" />
                                <Path Data="F1 M 0,0 l -7,7.5 l 7,7.5"
                                      Stroke="#CACACA" />
                            </Grid>
                            <Grid Grid.Column="2"
                                  VerticalAlignment="Center"
                                  Margin="0,-1,3,0"
                                  Visibility="{TemplateBinding RightFlyoutIndicatorVisibility}">
                                <Path Data="F1 M -1,0 l 7,7.5 l -7,7.5 Z"
                                      Fill="White" />
                                <Path Data="F1 M 0,0 l 7,7.5 l -7,7.5"
                                      Stroke="#CACACA" />
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>