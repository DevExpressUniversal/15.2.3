<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoBase.Helpers">

    <Style TargetType="helpers:SplashScreenControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="helpers:SplashScreenControl">
                    <helpers:PopupControl x:Name="PopupControl" IsOpen="{Binding IsOpened, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid x:Name="Message" Width="300" Height="150">
                            <Grid Margin="6,4,6,5">
                                <dx:DXBorder Background="Black" CornerRadius="3" Opacity="0.15"/>
                                <dx:DXBorder CornerRadius="2" Margin="1" Background="White"/>
                            </Grid>
                            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Please wait while the theme is being applied" VerticalAlignment="Center" FontSize="14" Foreground="DarkGray"/>
                        </Grid>
                    </helpers:PopupControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
