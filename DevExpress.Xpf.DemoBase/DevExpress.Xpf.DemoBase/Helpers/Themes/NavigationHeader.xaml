<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoBase.Helpers">
    <Style TargetType="{x:Type local:NavigationHeader}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NavigationHeader}">
                    <DockPanel>
                        <Button Command="{TemplateBinding BackCommand}"
                                Margin="0,0,7,0"
                                DockPanel.Dock="Left"
                                Cursor="Hand"
                                Width="36"
                                Visibility="{TemplateBinding BackButtonVisibility}">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Button.Template>
                            <Image Source="pack://application:,,,/DevExpress.Xpf.DemoBase.v15.2;component/Images/BackButton.png"/>
                        </Button>
                        <TextBlock IsHitTestVisible="False" Text="{TemplateBinding Category}" TextTrimming="WordEllipsis" Margin="0,2,4,0"  Foreground="#26A4DD" FontSize="22" DockPanel.Dock="Left"/>
                        <TextBlock IsHitTestVisible="False" Text="{TemplateBinding Subcategory}" TextTrimming="WordEllipsis" Margin="0,2,0,0" Foreground="#595959" FontSize="22" HorizontalAlignment="Left"/>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>