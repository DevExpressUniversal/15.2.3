<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoBase.Helpers">
    <Style TargetType="{x:Type local:ImageButton}">
        <Style.Resources>
            <local:ImageButtonTextVisibilityConverter x:Key="ImageButtonTextVisibilityConverter"/>
        </Style.Resources>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ImageButton}">
                    <StackPanel x:Name="stackPanel" Background="Transparent">
                        <Grid Width="{TemplateBinding ImageWidth}">
                            <Image x:Name="image"
                                   Source="{TemplateBinding Image}"
                                   Stretch="None"
                                   HorizontalAlignment="Center"/>
                            <Image x:Name="imageHover"
                                   Opacity="0"
                                   Source="{TemplateBinding ImageHover}"
                                   Stretch="None"
                                   HorizontalAlignment="Center"/>
                        </Grid>
                        <Grid Visibility="{TemplateBinding Text, Converter={StaticResource ImageButtonTextVisibilityConverter}}">
                            <TextBlock x:Name="text"
                                       Text="{TemplateBinding Text}"
                                       Foreground="{TemplateBinding TextForeground}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="textHover"
                                       Opacity="0"
                                       Text="{TemplateBinding Text}"
                                       Foreground="{TemplateBinding TextForegroundHover}"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="image" Property="Opacity" Value="0"/>
                            <Setter TargetName="imageHover" Property="Opacity" Value="1"/>
                            <Setter TargetName="text" Property="Opacity" Value="0"/>
                            <Setter TargetName="textHover" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>