<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoBase.Helpers">
    <Style TargetType="{x:Type local:DemoCarouselControl}">
        <Style.Resources>
            <Style x:Key="EmptyButton" TargetType="Button">
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="IsTabStop" Value="False" />
                <Setter Property="Focusable" Value="False" />
            </Style>
            <dxmvvm:ObjectToObjectConverter x:Key="ShadowOpacityConverter">
                <dxmvvm:MapItem Source="False" Target="0" />
                <dxmvvm:MapItem Source="True" Target="0.15" />
            </dxmvvm:ObjectToObjectConverter>
            <dxmvvm:ObjectToObjectConverter x:Key="OpacityConverter">
                <dxmvvm:MapItem Source="False" Target="0.35" />
                <dxmvvm:MapItem Source="True" Target="1" />
            </dxmvvm:ObjectToObjectConverter>
            <dxmvvm:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <local:StringFormatToUriConverter x:Key="StringFormatToUriConverter"/>
        </Style.Resources>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                     <ItemsPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid Margin="1" x:Name="grid" Height="170">
                        <dx:DXBorder x:Name="outerBorder"
                                Background="#99808080"
                                BorderThickness="1"
                                CornerRadius="3"
                                BorderBrush="#FF808080"
                                Visibility="{Binding IsAvailable, Converter={StaticResource BoolToVisibilityConverter}}"
                                Opacity="0"/>
                        <Grid Opacity="{Binding IsAvailable, Converter={StaticResource OpacityConverter}}" IsEnabled="{Binding IsAvailable}">
                            <Grid.Effect>
                                <DropShadowEffect Direction="-90"
                                                  ShadowDepth="1"
                                                  Opacity="{Binding IsAvailable, Converter={StaticResource ShadowOpacityConverter}}"
                                                  BlurRadius="4" />
                            </Grid.Effect>
                            <dx:DXBorder BorderThickness="1" BorderBrush="#FFCACACA" Background="White" Margin="9" Height="150">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Margin="9,9,9,0" Width="250" Height="100">
                                        <Image Source="{Binding Preview}" Stretch="None" />
                                        <dx:DXBorder BorderThickness="1" BorderBrush="Black" Opacity="0.15"/>
                                    </Grid>
                                    <Image x:Name="image"
                                           Stretch="None"
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Right"
                                           Margin="0,6,-7,0"/>
                                    <Grid Height="39" Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="1" Text="{Binding Title}" TextAlignment="Center" Foreground="#FF3C3C3C" FontSize="16" Margin="0,0,0,2"/>
                                    </Grid>
                                </Grid>
                            </dx:DXBorder>
                            <Button Style="{StaticResource EmptyButton}" Focusable="False" Command="{Binding OnRunCommand}">
                                <Button.Resources>
                                    <dxmvvm:ObjectToObjectConverter x:Key="CountToVisibilityConverter" DefaultTarget="Visible">
                                        <dxmvvm:MapItem Source="0" Target="Collapsed"/>
                                    </dxmvvm:ObjectToObjectConverter>
                                </Button.Resources>
                                <Button.ContextMenu>
                                    <ContextMenu ItemsSource="{Binding Links}" Visibility="{Binding Links.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                        <ContextMenu.Resources>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Command" Value="{Binding SelectedCommand}"/>
                                                <Setter Property="Header" Value="{Binding Title}"/>
                                            </Style>
                                        </ContextMenu.Resources>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </Grid>
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding ShowPlatformLabels, RelativeSource={RelativeSource AncestorType={x:Type local:DemoCarouselControl}}}" Value="True">
                            <Setter TargetName="image" Property="Source">
                                <Setter.Value>
                                    <Binding Path="PlatformLabel"
                                             Converter="{StaticResource StringFormatToUriConverter}"
                                             ConverterParameter="pack://application:,,,/DevExpress.Xpf.DemoBase.v15.2;component/Images/PlatformIcons/Label-{0}.png"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="image" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="outerBorder" Property="Opacity" Value="0.25"/>
                        </Trigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>