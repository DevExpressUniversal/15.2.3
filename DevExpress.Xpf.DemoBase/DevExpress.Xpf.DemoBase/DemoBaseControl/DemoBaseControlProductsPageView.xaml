<internal:DemoBaseControlPartView x:Class="DevExpress.Xpf.DemoBase.Internal.DemoBaseControlProductsPageView"
                                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                  xmlns:internal="clr-namespace:DevExpress.Xpf.DemoBase.Internal"
                                  xmlns:demobase="clr-namespace:DevExpress.Xpf.DemoBase"
                                  xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoBase.Helpers"
                                  xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                                  mc:Ignorable="d"
                                  d:DesignHeight="300" d:DesignWidth="300"
                                  x:Name="root">
    <internal:DemoBaseControlPartView.Resources>
        <dxmvvm:ObjectToObjectConverter x:Key="VisibleGroupsCountToVisibilityConverter" DefaultTarget="Collapsed">
            <dxmvvm:MapItem Source="0" Target="Visible"/>
        </dxmvvm:ObjectToObjectConverter>
        <dxmvvm:ObjectToObjectConverter x:Key="BooleanToOpacityConverter" DefaultTarget="0">
            <dxmvvm:MapItem Source="True" Target="1"/>
        </dxmvvm:ObjectToObjectConverter>
        <dxmvvm:ObjectToObjectConverter x:Key="ObjectToVisibilityConverter" DefaultTarget="Visible">
            <dxmvvm:MapItem Source="{x:Null}" Target="Collapsed"/>
        </dxmvvm:ObjectToObjectConverter>
        <dxmvvm:ObjectToObjectConverter x:Key="InverseObjectToVisibilityConverter" DefaultTarget="Collapsed">
            <dxmvvm:MapItem Source="{x:Null}" Target="Visible"/>
        </dxmvvm:ObjectToObjectConverter>
    </internal:DemoBaseControlPartView.Resources>
    <DockPanel demobase:DataContextTypeAssert.ExpectedType="{x:Type demobase:IProductsPageViewModel}" ClipToBounds="False" Background="Transparent" MouseUp="OnClearFilterFocus" Margin="0,12,0,0">
        <DockPanel.Resources>
            <TextDecorationCollection x:Key="LinkDecorations">
                <TextDecoration PenThicknessUnit="Pixel" PenOffsetUnit="Pixel">
                    <TextDecoration.Pen>
                        <Pen Thickness="1" DashCap="Flat">
                            <Pen.Brush>
                                <SolidColorBrush Color="#26A4DD"/>
                            </Pen.Brush>
                            <Pen.DashStyle>
                                <DashStyle Dashes="2,2"/>
                            </Pen.DashStyle>
                        </Pen>
                    </TextDecoration.Pen>
                </TextDecoration>
            </TextDecorationCollection>
        </DockPanel.Resources>
        <helpers:DemoScreenFooterControl Visibility="{Binding ShowFooter, ElementName=root, Converter={dxmvvm:BooleanToVisibilityConverter}}" DockPanel.Dock="Bottom" PlatformName="{Binding PlatformName}"/>
        <Grid Height="70" DockPanel.Dock="Top" Margin="0,0,0,13">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Left" Margin="51,18,0,0" Orientation="Horizontal">
                <Image Visibility="{Binding CustomDemoTitleTemplate, ElementName=root, Converter={StaticResource InverseObjectToVisibilityConverter}}"
                       Source="{Binding PlatformIcon}"
                       Margin="0,0,8,0"
                       Stretch="None" />
                <Image Visibility="{Binding CustomDemoTitleTemplate, ElementName=root, Converter={StaticResource InverseObjectToVisibilityConverter}}" Source="pack://application:,,,/DevExpress.Xpf.DemoBase.v15.2;component/Images/DemosTitle.png" Stretch="None" />
                <ContentPresenter ContentTemplate="{Binding CustomDemoTitleTemplate, ElementName=root}" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,19,0,0" Visibility="{Binding Groups, Converter={StaticResource ObjectToVisibilityConverter}}">
                <RadioButton IsEnabled="{Binding Groups, Converter={dxmvvm:ObjectToBooleanConverter}}"
                             x:Name="isFullListLayout" Width="36" Height="36" GroupName="LayoutRadioButtonGroup" VerticalAlignment="Top" Margin="0,3,0,0">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <helpers:HoverAdorner PreviewMouseUp="HoverAdorner_FullListLayout_MouseUp" BorderOpacity="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton}, Converter={StaticResource BooleanToOpacityConverter}}">
                                <Image Margin="6,5" Source="pack://application:,,,/DevExpress.Xpf.DemoBase.v15.2;component/Images/FullListLayout.png" Stretch="None"/>
                            </helpers:HoverAdorner>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
                <RadioButton x:Name="isProductsLayout" Width="36" Height="36" IsChecked="True" GroupName="LayoutRadioButtonGroup" VerticalAlignment="Top" Margin="4,3,23,0">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <helpers:HoverAdorner PreviewMouseUp="HoverAdorner_ProductLayout_MouseUp" BorderOpacity="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton}, Converter={StaticResource BooleanToOpacityConverter}}">
                                <Image Margin="6,5" Source="pack://application:,,,/DevExpress.Xpf.DemoBase.v15.2;component/Images/ProductsLayout.png" Stretch="None"/>
                            </helpers:HoverAdorner>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
                <Border Height="43" Width="1" Background="#D9D9D9" VerticalAlignment="Top"/>
            </StackPanel>
            <helpers:FilterLineControl Visibility="{Binding Groups, Converter={StaticResource ObjectToVisibilityConverter}}"
                                       x:Name="filter" Grid.Column="2" FilterText="{Binding FilterString, ElementName=demoLinks, Mode=TwoWay}" ClearFocus="OnClearFilterFocus" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30,30,0,15"/>
        </Grid>
        <dx:DXBorder DockPanel.Dock="Top" BorderThickness="0,1" BorderBrush="#D9D9D9" Background="#F2F2F2" Height="210" Padding="15,17,15,9" Margin="1,0,1,0">
            <helpers:ColumnScrollControl Focusable="False">
                <dxmvvm:Interaction.Behaviors>
                    <helpers:ColumnScrollControlService x:Name="FeaturedDemos"/>
                </dxmvvm:Interaction.Behaviors>
                <helpers:DemoCarouselControl Focusable="False" ItemsSource="{Binding FeaturedDemos}" ShowPlatformLabels="false" FlyoutVisibility="Visible"/>
            </helpers:ColumnScrollControl>
        </dx:DXBorder>
        <Grid>
            <Grid Opacity="{Binding IsChecked, ElementName=isFullListLayout, Converter={StaticResource BooleanToOpacityConverter}}"
                  IsHitTestVisible="{Binding IsChecked, ElementName=isFullListLayout}">
                <TextBlock Visibility="{Binding VisibleGroupsCount, ElementName=demoLinks, Converter={StaticResource VisibleGroupsCountToVisibilityConverter}}"
                           Foreground="#A3A3A3"
                           FontSize="32"
                           FontFamily="Segoe UI Light"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,66">
                    Unable to locate a demo matching your keyword.<LineBreak/>
                    Please enter a different keyword and try again.
                </TextBlock>
                <helpers:ColumnScrollControl x:Name="scrollControl" Margin="15,0,15,10" Focusable="False">
                    <dxmvvm:Interaction.Behaviors>
                        <helpers:ColumnScrollControlService x:Name="ProductDemos"/>
                    </dxmvvm:Interaction.Behaviors>
                    <demobase:GroupedLinksControl x:Name="demoLinks" FilterStringChanged="demoLinks_FilterStringChanged" Focusable="False" Margin="10,0,15,5" Padding="0,23,0,0" SearchId="ProductsPage" ItemsSource="{Binding Groups}" LinkSelectedCommand="{Binding LinkSelectedCommand}">
                        <dxmvvm:Interaction.Behaviors>
                            <internal:GroupedLinksControlService/>
                        </dxmvvm:Interaction.Behaviors>
                        <demobase:GroupedLinksControl.LinkTemplate>
                            <DataTemplate>
                                <dx:DXBorder Background="Transparent">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock x:Name="tb" Text="{Binding Title}"/>
                                    </StackPanel>
                                </dx:DXBorder>
                                <DataTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="tb" Property="TextDecorations" Value="{StaticResource LinkDecorations}"/>
                                        <Setter TargetName="tb" Property="Foreground" Value="#26A4DD"/>
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </demobase:GroupedLinksControl.LinkTemplate>
                    </demobase:GroupedLinksControl>
                </helpers:ColumnScrollControl>
            </Grid>
            <ScrollViewer dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                          Focusable="False"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          IsHitTestVisible="{Binding IsChecked, ElementName=isProductsLayout}"
                          Opacity="{Binding IsChecked, ElementName=isProductsLayout, Converter={StaticResource BooleanToOpacityConverter}}">
                <demobase:GroupedLinksControl HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              MaxGroupsPerColumn="{Binding ProductsViewMaxGroupsPerColumn}"
                                              HColumnSpacing="70"
                                              Padding="20"
                                              LayoutType="Wrapped"
                                              ItemsSource="{Binding EmptyGroups}">
                    <demobase:GroupedLinksControl.GroupHeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Header}"
                                       Foreground="#26A4DD"
                                       FontSize="14"
                                       Margin="0,-3"
                                       FontFamily="Segoe UI Bold"
                                       Cursor="Hand">
                            </TextBlock>
                        </DataTemplate>
                    </demobase:GroupedLinksControl.GroupHeaderTemplate>
                    <demobase:GroupedLinksControl.LinkTemplate>
                        <DataTemplate/>
                    </demobase:GroupedLinksControl.LinkTemplate>
                </demobase:GroupedLinksControl>
            </ScrollViewer>
            <ContentPresenter ContentTemplate="{Binding CustomViewTemplate, ElementName=root}"/>
        </Grid>
    </DockPanel>
</internal:DemoBaseControlPartView>
