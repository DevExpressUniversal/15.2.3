<internal:DemoBaseControlPartView x:Class="DevExpress.Xpf.DemoBase.Internal.DemoBaseControlMainPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoBase.Helpers"
    xmlns:dxdb="clr-namespace:DevExpress.Xpf.DemoBase"
    xmlns:ddhelpers="clr-namespace:DevExpress.DemoData.Helpers"
    xmlns:internal="clr-namespace:DevExpress.Xpf.DemoBase.Internal"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300">

    <internal:DemoBaseControlPartView.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <dx:DXBorder BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                <ContentPresenter ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </dx:DXBorder>
        </ControlTemplate>
    </internal:DemoBaseControlPartView.Template>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <helpers:Toolbar Grid.Row="0" Grid.Column="1" Margin="0,28,21,10" DockPanel.Dock="Top"
                         SizeChanged="ToolbarSizeChanged"
                         Layout="{Binding DemoFlowDirection, Mode=TwoWay}"
                         AllowRtl="{Binding AllowRtl}"
                         NextCommand="{Binding NextDemoCommand}"
                         PreviousCommand="{Binding PreviousDemoCommand}"
                         IsNavigationEnabled="{Binding IsModuleNavigationEnabled}"
                         OpenCSSolutionCommand="{Binding OpenCSSolutionCommand}"
                         OpenVBSolutionCommand="{Binding OpenVBSolutionCommand}"
                         View="{Binding ModuleWrapper.DemoModuleView, Mode=TwoWay}"
                         SidebarView="{Binding ModuleWrapper.OptionsView, Mode=TwoWay}"
                         HasOptions="{Binding ModuleWrapper.HasOptions}"
                         ThemesMode="{Binding ModuleWrapper.ThemesMode}"
                         CustomSidebarButtonIcon="{Binding ModuleWrapper.SidebarIcon}"
                         CustomSidebarButtonHoveredIcon="{Binding ModuleWrapper.SidebarIconSelected}"
                         CustomSidebarButtonLabel="{Binding ModuleWrapper.SidebarTag}"
                         IsCustomSidebarButtonVisible="{Binding ModuleWrapper.IsSidebarVisible}"
                         IsCustomSidebarEnabled="{Binding ModuleWrapper.IsSidebarButtonEnabled}"
                         
                         CustomSidebar2ButtonIcon="{Binding ModuleWrapper.Sidebar2Icon}"
                         CustomSidebar2ButtonHoveredIcon="{Binding ModuleWrapper.Sidebar2IconSelected}"
                         CustomSidebar2ButtonLabel="{Binding ModuleWrapper.Sidebar2Tag}"
                         IsCustomSidebar2ButtonVisible="{Binding ModuleWrapper.IsSidebar2Visible}"
                         IsCustomSidebar2Enabled="{Binding ModuleWrapper.IsSidebar2ButtonEnabled}"
                         
                         IsLayoutGroupVisible="{Binding ModuleWrapper.IsLayoutGroupVisible}"
                         IsSolutionGroupVisible="{Binding IsSolutionGroupVisible}"/>
        <ddhelpers:ViewPresenter Grid.Row="1" Grid.ColumnSpan="2" Content="{Binding ModuleWrapper.View}" Margin="31,0,21,18"/>
        <helpers:DemoScreenFooterControl Grid.Row="2" Grid.ColumnSpan="2" IsCompactMode="true" PlatformName="Wpf"/>
    </Grid>
</internal:DemoBaseControlPartView>