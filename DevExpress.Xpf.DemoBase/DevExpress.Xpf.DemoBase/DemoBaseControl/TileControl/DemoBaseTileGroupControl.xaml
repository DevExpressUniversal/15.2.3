<ItemsControl x:Class="DevExpress.Xpf.DemoBase.DemoBaseTileGroupControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DevExpress.Xpf.DemoBase"
    x:Name="root"
    mc:Ignorable="d"              
    d:DesignHeight="300" d:DesignWidth="400" >
    <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <local:DemoBaseTileGroupControlPanel IsSimple="{Binding Path=IsSimpleTilesLayout, ElementName=root}"/>
        </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>
</ItemsControl>
