<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Controls"
                    xmlns:internal="clr-namespace:DevExpress.Xpf.Controls.Internal"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="local:BarCodeControl">
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BarCodeControl">
                    <Grid Name="Part_RootGrid" Background="{Binding Background, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                        <internal:BarCodePainter Name="Part_BarCodePainter"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="internal:BarCodePainter">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="internal:BarCodePainter">
                    <Grid>
                        <Grid Name="Part_Grid"/>
                        <Canvas Name="Part_Canvas"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>