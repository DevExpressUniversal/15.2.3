<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
    xmlns:dxwui="clr-namespace:DevExpress.Xpf.WindowsUI"
    xmlns:dxwuit="clr-namespace:DevExpress.Xpf.WindowsUI.ThemeKeys"
    xmlns:dxwuii="clr-namespace:DevExpress.Xpf.WindowsUI.Internal"
    xmlns:dxwuin="clr-namespace:DevExpress.Xpf.WindowsUI.Navigation">

    <ControlTemplate x:Key="{dxwuit:WindowsUIElementsThemeKey ResourceKey=PageAdornerControlTemplate}" TargetType="dxwui:PageAdornerControl">
        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Margin="{TemplateBinding Padding}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Margin="40,30,40,20" >
                    <dxwuii:NavigationHeaderControl VerticalAlignment="Center" x:Name="PART_NavigationHeader" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}" ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                            BackCommand="{TemplateBinding BackCommand}" BackCommandParameter="{TemplateBinding BackCommandParameter}" ShowBackButton="{TemplateBinding ShowBackButton}"/>
                </Grid>
                <ContentPresenter Grid.Row="1"/>
            </Grid>
        </Border>
    </ControlTemplate>
    <Style TargetType="{x:Type dxwui:PageAdornerControl}">
        <Setter Property="Template" Value="{DynamicResource {dxwuit:WindowsUIElementsThemeKey ResourceKey=PageAdornerControlTemplate}}"/>
    </Style>
</ResourceDictionary>