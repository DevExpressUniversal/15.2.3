<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
    xmlns:dxwuit="clr-namespace:DevExpress.Xpf.WindowsUI.ThemeKeys"
    xmlns:dxwui="clr-namespace:DevExpress.Xpf.WindowsUI"
    xmlns:dxwuii="clr-namespace:DevExpress.Xpf.WindowsUI.Internal">
    
    <Style TargetType="{x:Type dxwui:FlipView}">
        <Setter Property="Template" Value="{DynamicResource {dxwuit:WindowsUIElementsThemeKey ResourceKey=FlipViewTemplate}}"/>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <dxwuii:FlipPanel ItemCacheMode="{Binding RelativeSource={RelativeSource AncestorType=dxwui:FlipView}, Path=ItemCacheMode}" Orientation="{Binding Orientation, RelativeSource={RelativeSource AncestorType=dxwui:FlipView}}"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type dxwui:FlipViewItem}">
        <Setter Property="Template" Value="{DynamicResource {dxwuit:WindowsUIElementsThemeKey ResourceKey=FlipViewItemTemplate}}"/>
    </Style>

</ResourceDictionary>