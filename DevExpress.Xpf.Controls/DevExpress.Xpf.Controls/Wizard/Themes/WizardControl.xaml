<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:dxco="clr-namespace:DevExpress.Xpf.Controls"
            xmlns:dxcot="clr-namespace:DevExpress.Xpf.Controls.ThemeKeys"
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxwui="clr-namespace:DevExpress.Xpf.WindowsUI"
            xmlns:dxwuin="clr-namespace:DevExpress.Xpf.WindowsUI.Navigation"
            xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
            xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal">

    <DataTemplate x:Key="{dxcot:WizardThemeKey ResourceKey=FooterTemplate}">
        <dx:DialogFooter>
            <Grid>
                <dxco:WizardButton Content="Cancel" HorizontalAlignment="Left" dxco:Wizard.IsButtonCancel="True" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <dxco:WizardButton Content="Back" dxco:Wizard.IsButtonBack="True" />
                    <dxco:WizardButton Content="Next" dxco:Wizard.IsButtonNext="True" />
                    <dxco:WizardButton Content="Finish" dxco:Wizard.IsButtonFinish="True" />
                </StackPanel>
            </Grid>
        </dx:DialogFooter>
    </DataTemplate>

    <Style TargetType="{x:Type dxco:Wizard}">
        <Setter Property="FooterTemplate" Value="{DynamicResource {dxcot:WizardThemeKey ResourceKey=FooterTemplate}}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxco:Wizard">
                    <Grid>
                        <dxwui:NavigationFrame x:Name="Root">
                            <dxwui:NavigationFrame.Resources>
                                <dxwuin:FrameNavigationService
                                    x:Key="{x:Static dxco:Wizard.NavigationServiceKey}"
                                    Frame="{x:Reference Root}"
                                    ViewLocator="{Binding ViewLocator, RelativeSource={RelativeSource TemplatedParent}}"
                                    ViewTemplate="{Binding ViewTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                                    ViewTemplateSelector="{Binding ViewTemplateSelector, RelativeSource={RelativeSource TemplatedParent}}"
                                />
                                <dx:CurrentDialogService x:Key="{x:Static dxco:Wizard.CurrentDialogServiceKey}" WindowSource="{x:Reference Root}" />
                            </dxwui:NavigationFrame.Resources>
                        </dxwui:NavigationFrame>
                        <ContentControl ContentTemplate="{TemplateBinding FooterTemplate}" Content="{Binding}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>