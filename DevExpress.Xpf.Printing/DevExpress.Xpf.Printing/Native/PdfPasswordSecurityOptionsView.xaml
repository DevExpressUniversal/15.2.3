    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxp="clr-namespace:DevExpress.Xpf.Printing"
    xmlns:native="clr-namespace:DevExpress.Xpf.Printing.Native"
    xmlns:dxpt="clr-namespace:DevExpress.Xpf.Printing.Themes">

    <dx:DXWindow.WindowStyle>
        ToolWindow
    </dx:DXWindow.WindowStyle>
    <dx:DXDialog.ResizeMode>
        NoResize
    </dx:DXDialog.ResizeMode>
    <dx:DXDialog.SizeToContent>
        WidthAndHeight
    </dx:DXDialog.SizeToContent>
    <dx:DXDialog.ShowInTaskbar>
        False
    </dx:DXDialog.ShowInTaskbar>
    <dx:DXDialog.WindowStartupLocation>
        CenterOwner
    </dx:DXDialog.WindowStartupLocation>
    <native:PdfSecurityOptionsControl x:Name="SecurityOptionsControl"  />
</dx:DXDialog>