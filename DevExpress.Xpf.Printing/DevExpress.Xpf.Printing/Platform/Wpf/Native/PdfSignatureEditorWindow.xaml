<dxc:DXDialog x:Class="DevExpress.Xpf.Printing.Native.PdfSignatureEditorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxp="clr-namespace:DevExpress.Xpf.Printing"
             Width="auto" MinWidth="250" MaxWidth="450"
             Height="auto" MinHeight="300"
             ShowInTaskbar="False"
             WindowStyle="ToolWindow"
             WindowStartupLocation="CenterOwner"
             Title="{dxp:PrintingStringId StringId=PdfSignatureEditorWindow_Title}">
    <dxc:DXDialog.ResizeMode>
        NoResize
    </dxc:DXDialog.ResizeMode>
    <dxc:DXDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DevExpress.Xpf.Printing.v15.2;component/Themes/Generic/Constants.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </dxc:DXDialog.Resources>

    <Grid Margin="{StaticResource clientAreaMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="{dxp:PrintingStringId StringId=PdfSignatureEditorWindow_Certificate}" Grid.Row="0" />
        <dxe:ListBoxEdit x:Name="listBoxEdit" Grid.Row="1" Margin="{StaticResource groupVerticalSpacing}">
            <dxe:ListBoxEdit.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Subject}" FontWeight="Bold" />
                        <TextBlock Text="{Binding Description}" />
                    </StackPanel>
                </DataTemplate>
            </dxe:ListBoxEdit.ItemTemplate>
        </dxe:ListBoxEdit>

        <TextBlock Text="{dxp:PrintingStringId StringId=PdfSignatureEditorWindow_Reason}" Grid.Row="2" />
        <dxe:TextEdit x:Name="teReason" Grid.Row="3" Margin="{StaticResource groupVerticalSpacing}" />

        <TextBlock Text="{dxp:PrintingStringId StringId=PdfSignatureEditorWindow_Location}" Grid.Row="4" />
        <dxe:TextEdit x:Name="teLocation" Grid.Row="5" Margin="{StaticResource groupVerticalSpacing}" />

        <TextBlock Text="{dxp:PrintingStringId StringId=PdfSignatureEditorWindow_ContactInformation}" Grid.Row="6" />
        <dxe:TextEdit x:Name="teContactInformation" Grid.Row="7" AcceptsReturn="True" Height="70" VerticalContentAlignment="Top" />
    </Grid>
</dxc:DXDialog>
