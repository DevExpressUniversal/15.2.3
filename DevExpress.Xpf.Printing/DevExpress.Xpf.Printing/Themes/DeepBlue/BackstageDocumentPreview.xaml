<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DevExpress.Xpf.Printing"
        xmlns:native="clr-namespace:DevExpress.Xpf.Printing.Native"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <dxmvvm:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"/>
    <dxmvvm:BooleanToVisibilityConverter x:Key="inverseBooleanToVisibilityConverter" Inverse="True"/>
    <dxmvvm:ObjectToObjectConverter x:Key="objectToVisibilityConverter" DefaultTarget="Visible">
        <dxmvvm:MapItem Source="{x:Null}" Target="Collapsed"/>
    </dxmvvm:ObjectToObjectConverter>
    <Style TargetType="{x:Type local:BackstageDocumentPreview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BackstageDocumentPreview}">
                    <Grid Margin="5" Name="printGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical" Grid.Column="1">
                            <Grid>
                                <StackPanel Visibility="{TemplateBinding IsPrintOptionsVisible, Converter={StaticResource booleanToVisibilityConverter}}" Orientation="Vertical">
                                    <TextBlock Text="Print" FontSize="40" Margin="0,30,0,20"/>
                                    <StackPanel Orientation="Horizontal" IsEnabled="{TemplateBinding IsPrintersAvailable}">
                                        <Button Height="90" Width="90" Margin="0,0,5,0"
                                        Command="{Binding Model.PrintDirectCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                        CommandParameter="{Binding SelectedPrinter.Name, RelativeSource={RelativeSource TemplatedParent}}">
                                            <StackPanel>
                                                <Image Source="{local:PrintingResourceImage ResourceName=Images/BackstageDocumentPreview/icon-print-42x40.png}" HorizontalAlignment="Center" Stretch="None"/>
                                                <TextBlock Text="Print" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                        <TextBlock Text="Specify how you want the report to be printed" TextWrapping="WrapWithOverflow" Width="142" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="Printer" FontSize="22" Margin="0,17,0,5" />
                                    <dxe:ComboBoxEdit ItemsSource="{TemplateBinding Printers}" EditValue="{Binding SelectedPrinter, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                        IsTextEditable="False" ApplyItemTemplateToSelectedItem="True" IsEnabled="{TemplateBinding IsPrintersAvailable}">
                                        <dxe:ComboBoxEdit.ItemTemplate>
                                            <DataTemplate>
                                                <DockPanel>
                                                    <Image Source="{Binding ImageUri}" DockPanel.Dock="Left" Margin="3"/>
                                                    <TextBlock Text="{Binding DisplayName}" DockPanel.Dock="Top" Margin="3"/>
                                                    <TextBlock Text="{Binding Status}" DockPanel.Dock="Bottom" FontWeight="Light" Margin="3"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </dxe:ComboBoxEdit.ItemTemplate>
                                    </dxe:ComboBoxEdit>
                                    <TextBlock Text="{TemplateBinding PrintersErrorMessage}" TextWrapping="Wrap" HorizontalAlignment="Left" MaxWidth="220"
                                               Visibility="{TemplateBinding IsPrintersAvailable, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"/>
                                    <Button Content="Print Options" HorizontalAlignment="Left" Margin="0,7" 
                                    Command="{Binding Model.PageSetupCommand, RelativeSource={RelativeSource TemplatedParent}}"/>
                                </StackPanel>
                                <StackPanel Visibility="{TemplateBinding IsPrintOptionsVisible, Converter={StaticResource inverseBooleanToVisibilityConverter}}" Orientation="Vertical">
                                    <TextBlock Text="Export" FontSize="40" Margin="0,30,0,20"/>
                                    <StackPanel Orientation="Horizontal">
                                        <dxe:ComboBoxEdit ShowBorder="False" ShowText="False" Height="90" Width="90" Margin="0,0,5,0" 
                                                ItemsSource="{TemplateBinding ExportFormats}" EditValue="{Binding SelectedFormat, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" 
                                                PopupFooterButtons="OkCancel" ShowSizeGrip="False" >
                                            <dxe:ComboBoxEdit.StyleSettings>
                                                <dxe:RadioComboBoxStyleSettings />
                                            </dxe:ComboBoxEdit.StyleSettings>
                                            <dxe:ComboBoxEdit.Buttons>
                                                <dxe:ButtonInfo IsLeft="True" ButtonKind="Simple" 
                                            Command="{Binding Path=Model.ExportCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                            CommandParameter="{TemplateBinding SelectedFormat}">
                                                    <StackPanel>
                                                        <Image Source="{local:PrintingResourceImage ResourceName=Images/BackstageDocumentPreview/icon-export-40.png}" 
                                        HorizontalAlignment="Center" Stretch="None"/>
                                                        <TextBlock Text="Export" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </dxe:ButtonInfo>
                                            </dxe:ComboBoxEdit.Buttons>
                                        </dxe:ComboBoxEdit>
                                        <TextBlock Text="The DevExpress Reporting platform allows you to export any report to PDF, XLS, RTF and countless image file formats." 
                            TextWrapping="WrapWithOverflow" Width="142" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <local:CustomSettingsHeaderedContentControl Header="{TemplateBinding CustomSettingsHeader}" Content="{TemplateBinding CustomSettings}"/>
                        </StackPanel>
                        <local:DocumentViewer Grid.Column="3" x:Name="documentViewer" Model="{TemplateBinding Model}"/>
                        <Grid Grid.Row="1" Grid.Column="3" Margin="0,2,0,0">
                            <Grid.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </Grid.Resources>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,0">
                                <Button HorizontalAlignment="Center" Command="{Binding ElementName=documentViewer, Path=Model.PreviousPageCommand}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Image Source="{local:PrintingResourceImage ResourceName=Images/BackstageDocumentPreview/icon-page-prev-16.png}"/>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBox IsReadOnly="True" HorizontalAlignment="Center" Text="{Binding ElementName=documentViewer, Path=Model.CurrentPageNumber}"/>
                                <TextBlock Text="of" HorizontalAlignment="Center" Margin="3"/>
                                <TextBlock HorizontalAlignment="Center" Margin="3" Text="{Binding ElementName=documentViewer, Path=Model.PageCount}"/>
                                <Button HorizontalAlignment="Center" Command="{Binding ElementName=documentViewer, Path=Model.NextPageCommand}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Image Source="{local:PrintingResourceImage ResourceName=Images/BackstageDocumentPreview/icon-page-next-16.png}"/>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <dxe:ProgressBarEdit VerticalAlignment="Center" Width="250" HorizontalAlignment="Left"
                                    EditValue="{Binding ElementName=documentViewer, Path=Model.ProgressValue, Mode=OneWay}" 
                                    Visibility="{Binding ElementName=documentViewer, Path=Model.IsCreating, Mode=OneWay, Converter={StaticResource booleanToVisibilityConverter}}" 
                                    Maximum="{Binding ElementName=documentViewer, Path=Model.ProgressMaximum, Mode=OneWay}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <dxe:TrackBarEdit Minimum="10" Maximum="250" EditValue="{Binding ElementName=documentViewer, Path=Model.Zoom}" Width="150"
                                  Margin="0,4,2,0" Foreground="Transparent">
                                    <dxe:TrackBarEdit.StyleSettings>
                                        <dxe:TrackBarZoomStyleSettings />
                                    </dxe:TrackBarEdit.StyleSettings>
                                </dxe:TrackBarEdit>
                                <Button HorizontalAlignment="Center" Margin="2" Command="{Binding ElementName=documentViewer, Path=Model.PageSetupCommand}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Image Source="{local:PrintingResourceImage ResourceName=Images/BackstageDocumentPreview/icon-pages-16.png}"/>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button HorizontalAlignment="Center" Margin="2" Command="{Binding ElementName=documentViewer, Path=Model.ScaleCommand}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Image Source="{local:PrintingResourceImage ResourceName=Images/BackstageDocumentPreview/icon-scale-16.png}"/>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type local:CustomSettingsHeaderedContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomSettingsHeaderedContentControl}">
                    <DockPanel>
                        <Label Content="{TemplateBinding Header}" FontSize="22" Margin="0,25,0,0" DockPanel.Dock="Top" Visibility="{TemplateBinding Header, Converter={StaticResource objectToVisibilityConverter}}"/>
                        <ContentPresenter Content="{TemplateBinding Content}" Margin="0,5,0,0"/>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
