<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:native="clr-namespace:DevExpress.Xpf.Printing.Native"
    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core">

    <Style TargetType="{x:Type native:PageBorderControl}">
        <Style.Setters>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type native:PageBorderControl}">
                        <Grid>
                            <Grid.Resources>
                                <core:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>
                            </Grid.Resources>

                            <Grid x:Name="pageShadow" 
                                  Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsPageShadowVisible, Converter={StaticResource boolToVisibilityConverter}}">
                                <Border Background="#59101421" CornerRadius="4" Opacity="0.5" Margin="3,3,-4,-4"/>
                                <Border Background="#FF383F5E" CornerRadius="3" Opacity="0.5"/>
                            </Grid>

                            <Border Background="White" CornerRadius="2" Margin="1">
                                <ContentPresenter Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Content}" core:FrameworkElementHelper.ClipCornerRadius="3"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>