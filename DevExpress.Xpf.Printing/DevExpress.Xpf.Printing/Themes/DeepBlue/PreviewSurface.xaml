<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:native="clr-namespace:DevExpress.Xpf.Printing.Native">
    <Style TargetType="{x:Type native:PreviewSurface}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border x:Name="background" Padding="0,1,0,0" BorderThickness="0,1,0,0" BorderBrush="#FFAECDF5" Background="#FF6B8DBB">
                            <Border Width="Auto" Height="Auto">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF7496C3" Offset="0" />
                                        <GradientStop Color="#FF6E91BE" Offset="1" />
                                        <GradientStop Color="#FF86A7D2" Offset="0.3" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>