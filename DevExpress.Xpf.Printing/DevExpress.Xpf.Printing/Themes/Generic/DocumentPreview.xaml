<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:bars="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Printing"
                    xmlns:native="clr-namespace:DevExpress.Xpf.Printing.Native"
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:docking="http://schemas.devexpress.com/winfx/2008/xaml/docking">

    <ControlTemplate x:Key="documentViewerTemplate">
        <bars:BarManager x:Name="barManager" CreateStandardLayout="True" AllowCustomization="False" MDIMergeStyle="Never">
            <bars:BarManager.Controllers>
                <local:DocumentPreviewBarManagerController />
            </bars:BarManager.Controllers>
            <Grid>
                <local:DocumentViewer Name="DocumentViewer" Model="{Binding Model, RelativeSource={RelativeSource TemplatedParent} }" >
                </local:DocumentViewer>
            </Grid>
        </bars:BarManager>
    </ControlTemplate>
    <Style TargetType="{x:Type local:DocumentPreview}">
        <Setter Property="Template" Value="{StaticResource documentViewerTemplate}">
        </Setter>
    </Style>
</ResourceDictionary>

<!--Model="{Binding Model, RelativeSource={RelativeSource TemplatedParent}}"-->