<ResourceDictionary x:Class="DevExpress.Xpf.Printing.DialogsTemplates"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                    xmlns:themes="clr-namespace:DevExpress.Xpf.Printing.Themes"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Printing"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:lines="clr-namespace:DevExpress.Xpf.Printing.Native.Lines"
                    xmlns:dxpn="clr-namespace:DevExpress.Xpf.Printing.Native"
                    xmlns:native="clr-namespace:DevExpress.Xpf.Printing.PreviewControl.Native"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:dp="clr-namespace:DevExpress.Xpf.Editors.DataPager;assembly=DevExpress.Xpf.Core.v15.2"
                    xmlns:mvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:sysPrinting="clr-namespace:System.Drawing.Printing;assembly=System.Drawing">
    <ControlTemplate TargetType="ToggleButton" x:Key="toogleButtonTemplate">
        <Grid Background="Transparent" >
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver" />
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0" To="0.5" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="IsUnchecked" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed" />
                </VisualStateGroup>
                <VisualStateGroup x:Name="CheckStates">
                    <VisualState x:Name="Unchecked" />
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="IsUnchecked">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>
                                            Collapsed
                                        </Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="IsChecked">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>
                                            Visible
                                        </Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Indeterminate" />
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid Width="16" Height="16" x:Name="Root" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border x:Name="IsUnchecked" CornerRadius="2" Width="Auto" Height="Auto">
                    <Path Stretch="Fill" Fill="#FF062B63" Data="F1 M 26,22.0001L 26,14.0001L 30,18.0001L 26,22.0001 Z " HorizontalAlignment="Stretch" Margin="2,0,1,0" VerticalAlignment="Stretch" Width="6" Height="7" />
                </Border>
                <Border x:Name="IsChecked" CornerRadius="2" Visibility="Collapsed" Width="9" Height="9">
                    <Path Stretch="Fill" Fill="#FF062B63" Data="F1 M 32.9999,14.0001L 40.9999,14.0001L 37,18.0001L 32.9999,14.0001 Z " HorizontalAlignment="Center" Margin="0,1,0,0" VerticalAlignment="Center" Width="7" Height="6" />
                </Border>
            </Grid>
            <TextBlock Grid.Column="1" Text="{local:PrintingStringId StringId=MoreOptions}" TextAlignment="Left" />
        </Grid>
    </ControlTemplate>

    <DataTemplate x:Key="{themes:NewDocumentViewerThemeKey ResourceKey=ExportOptionsDialogTemplate}">
        <Grid Width="450" >
            <dxlc:DockLayoutControl Margin="12,12,12,0">
                <dxlc:LayoutGroup Name="mainGroup" Orientation="Vertical" ItemLabelsAlignment="Local" dxlc:DockLayoutControl.Dock="Client" >
                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=ExportFormat}" AddColonToLabel="True">
                        <dxe:ComboBoxEdit EditValue="{Binding ExportFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding AvailableExportFormats}" IsTextEditable="False"  />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=FilePath}" AddColonToLabel="True">
                        <dxe:ButtonEdit AllowDefaultButton="False" EditValue="{Binding FileName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <dxe:ButtonEdit.Buttons>
                                <dxe:ButtonInfo GlyphKind="Regular" Command="{Binding SelectFileCommand}" />
                            </dxe:ButtonEdit.Buttons>
                        </dxe:ButtonEdit>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="{local:PrintingStringId StringId=OpenFileAfterExport}" EditValue="{Binding OpenFileAfterExport}" IsEnabled="{Binding CanUseActionAfterExport}" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Margin="0,6,0,0"  Width="{Binding ActualWidth, Mode=OneWay, ElementName=mainGroup}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <ToggleButton Margin="-3,0,0,0" Name="expanderButton" HorizontalContentAlignment="Left" IsChecked="False" Template="{StaticResource toogleButtonTemplate}" />
                            </StackPanel>

                            <dxc:DXExpander Margin="0,6,0,0" Grid.Row="1" IsExpanded="{Binding ElementName=expanderButton, Path=IsChecked}" HorizontalExpand="None" VerticalExpand="FromTopToBottom">
                                <lines:LinesContainer Lines="{Binding ExportOptionLines}" />
                            </dxc:DXExpander>
                        </Grid>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:DockLayoutControl>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{themes:NewDocumentViewerThemeKey ResourceKey=SendOptionsDialogTemplate}">
        <Grid Width="420" >
            <dxlc:DockLayoutControl AllowItemSizing="True" Margin="12,12,12,0">
                <dxlc:LayoutGroup Orientation="Vertical" ItemLabelsAlignment="Local" dxlc:DockLayoutControl.Dock="Client" dxlc:DockLayoutControl.AllowHorizontalSizing="True">
                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=ExportFormat}" AddColonToLabel="True">
                        <dxe:ComboBoxEdit EditValue="{Binding ExportFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding AvailableExportFormats}" IsTextEditable="False"  />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=FilePath}" AddColonToLabel="True">
                        <dxe:ButtonEdit AllowDefaultButton="False" EditValue="{Binding FileName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <dxe:ButtonEdit.Buttons>
                                <dxe:ButtonInfo GlyphKind="Regular" Command="{Binding SelectFileCommand}" />
                            </dxe:ButtonEdit.Buttons>
                        </dxe:ButtonEdit>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Margin="0,6,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <ToggleButton Margin="-3,0,0,0" Name="expanderButton" HorizontalContentAlignment="Left" IsChecked="False" Template="{StaticResource toogleButtonTemplate}" />
                            </StackPanel>
                            <dxc:DXExpander Margin="0,6,0,0" Grid.Row="1" IsExpanded="{Binding ElementName=expanderButton, Path=IsChecked}" HorizontalExpand="None" VerticalExpand="FromTopToBottom">
                                <lines:LinesContainer Lines="{Binding ExportOptionLines}" />
                            </dxc:DXExpander>
                        </Grid>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:DockLayoutControl>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{themes:NewDocumentViewerThemeKey ResourceKey=ScaleDialogTemplate}">
        <DataTemplate.Resources>
            <dxpn:ScaleModeToBooleanConverter x:Key="scaleModeToBooleanConverter"/>
            <dxpn:ScaleModeToVisibilityConverter x:Key="scaleModeToVisibilityConverter"/>
            <native:ScaleFactorToPercentsConverter x:Key="scaleToPercentsConverter"/>
        </DataTemplate.Resources>
        <Grid x:Name="LayoutRoot" Margin="12,12,12,0" Width="250">
            <Grid Grid.IsSharedSizeScope="True">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <RadioButton Name="scaleButton" HorizontalContentAlignment="Stretch"
                     Grid.Row="0" 
                     IsChecked="True"
                     VerticalAlignment="Center" VerticalContentAlignment="Center">
                    <TextBlock Text="{local:PrintingStringId StringId=Scaling_Adjust_Start_Label}" VerticalAlignment="Center"/>                    
                </RadioButton>

                <dxe:ComboBoxEdit Margin="9,0,0,0" Grid.Column="1" IsEnabled="{Binding IsChecked, ElementName=scaleButton}"
                              AllowNullInput="False" DisplayFormatString="# '%'"
                              ItemsSource="{Binding ScaleFactorValues}" EditValue="{Binding Path=ScaleFactor, Converter={StaticResource scaleToPercentsConverter}, ValidatesOnDataErrors=True, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <dxe:ComboBoxEdit.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding StringFormat="# '%'"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </dxe:ComboBoxEdit.ItemTemplate>
                </dxe:ComboBoxEdit>

                <TextBlock Grid.Column="2" Margin="9,0,0,0" IsEnabled="{Binding IsChecked, ElementName=scaleButton}"
                       Text="{local:PrintingStringId StringId=Scaling_Adjust_End_Label}"
                       VerticalAlignment="Center" HorizontalAlignment="Stretch" />

                <RadioButton Name="fitButton" Margin="0,9,0,0" Grid.Row="1" HorizontalContentAlignment="Stretch"
                     IsChecked="{Binding ScaleMode, Mode=TwoWay, Converter={StaticResource scaleModeToBooleanConverter},ConverterParameter=FitToPageWidth}" VerticalContentAlignment="Center">
                    <TextBlock Text="{local:PrintingStringId StringId=Scaling_Fit_Start_Label}" VerticalAlignment="Center"/>                    
                </RadioButton>

                <dxe:ComboBoxEdit Grid.Row="1" Grid.Column="1" x:Name="cmbBxPagesToFit"  Margin="9,9,0,0" IsEnabled="{Binding IsChecked, ElementName=fitButton}"
                              AllowNullInput="False" ItemsSource="{Binding PagesToFitValues}"
                              EditValue="{Binding Path=PagesToFit, ValidatesOnDataErrors=True, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Margin="9,9,0,0" IsEnabled="{Binding IsChecked, ElementName=fitButton}" Text="{local:PrintingStringId StringId=Scaling_Fit_End_Label}" />
            </Grid>
        </Grid>
    </DataTemplate>

    <ControlTemplate x:Key="{themes:NewDocumentViewerThemeKey ResourceKey=DataPagerTemplate}">
        <ControlTemplate.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <dp:DataPagerPageExtract x:Key="DataPagerPageExtract"/>
            <dp:DataPagerCurrentPageEditMaxValueConverter x:Key="DataPagerCurrentPageEditMaxValueConverter"/>
            <dp:DataPagerCurrentPageEditMinValueConverter x:Key="DataPagerCurrentPageEditMinValueConverter"/>
            <dp:DataPagerPageCountToTitleConverter x:Key="DataPagerPageCountToTitleConverter"/>
            <dp:DataPagerPageIndexToPageNumberConverter x:Key="DataPagerPageIndexToPageNumberConverter"/>
            <dxc:BoolToObjectConverter x:Key="IsAutoNumericButtonCountToButtonContainerTemplateConverter" TrueValue="{DynamicResource {dxet:DataPagerThemeKey ResourceKey=AutoNumericButtonCountButtonContainerTemplate}}" FalseValue="{DynamicResource {dxet:DataPagerThemeKey ResourceKey=FixedNumericButtonCountButtonContainerTemplate}}" />
            <dxe:EditorLocalizer x:Key="localizer"/>
        </ControlTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Tag="1" Grid.Column="0" Margin="0,0,16,0" Orientation="Horizontal" Visibility="{Binding ShowTotalPageCount, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="{Binding Source={StaticResource localizer}, Converter={StaticResource DataPagerPageExtract}}" VerticalAlignment="Center" />
                <dxe:SpinEdit AllowRoundOutOfRangeValue="True" EditValue="{Binding CurrentPageParams, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DataPagerPageIndexToPageNumberConverter}, Mode=TwoWay}" IsFloatValue="False" Margin="4,0,4,0" MaxValue="{Binding Path=PageCount, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DataPagerCurrentPageEditMaxValueConverter}}" MinValue="{Binding Path=PageCount, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DataPagerCurrentPageEditMinValueConverter}}" ShowEditorButtons="False" ValidateOnTextInput="False"/>
                <TextBlock Text="{Binding PageCount, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DataPagerPageCountToTitleConverter}}" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Path=PdfViewModel.CurrentPreviewPageNumber}" VerticalAlignment="Center"/>
            </StackPanel>
            <ContentControl HorizontalAlignment="Right" VerticalAlignment="Center" Template="{DynamicResource {dxet:DataPagerThemeKey ResourceKey=ButtonAreaBorderTemplate}}" Grid.Column="1">
                <dp:DataPagerButtonContainer x:Name="PART_ButtonContainer" Template="{Binding Path=IsAutoNumericButtonCount, Converter={StaticResource IsAutoNumericButtonCountToButtonContainerTemplateConverter}, RelativeSource={RelativeSource TemplatedParent}}" dp:DataPager.DataPager="{Binding Path=(dp:DataPager.DataPager), RelativeSource={RelativeSource TemplatedParent}}"/>
            </ContentControl>
        </Grid>
    </ControlTemplate>
    
    <DataTemplate x:Key="{themes:NewDocumentViewerThemeKey ResourceKey=PrintDialogTemplate}">
        <DataTemplate.Resources>
            <native:PrinterTypeToImageConverter x:Key="printerTypeToImageConverter"/>
        </DataTemplate.Resources>
        <Grid>
            <!--<mvvm:Interaction.Behaviors>
                <internal:PdfPrintEditorAttachedBehavior HasValidationError="{Binding Path=(dxe:ValidationService.HasValidationError), RelativeSource={RelativeSource TemplatedParent}}" />
            </mvvm:Interaction.Behaviors>-->
            <dxlc:DockLayoutControl x:Name="PART_DockLayoutControl" Margin="12,12,12,0">
                <dxlc:LayoutGroup x:Name="PART_DockPreviewPart" Orientation="Vertical" dxlc:DockLayoutControl.Dock="Left" Width="210" Height="{Binding ActualHeight, ElementName=PART_DockClientPart, Mode=OneWay}" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <dxc:BackgroundPanel Name="PART_PreviewImage" Margin="0,0,0,10" >
                            <Grid UseLayoutRounding="True" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                <Image Source="{Binding PreviewImage}" IsHitTestVisible="False" >
                                    <mvvm:Interaction.Behaviors>
                                        <native:PreviewAreaProvider />
                                        <mvvm:EventToCommand Event="Loaded" Command="{Binding UpdatePreviewCommand}" />
                                    </mvvm:Interaction.Behaviors>
                                </Image>
                                <Border BorderThickness="1" BorderBrush="#FFC3C3C3" Background="Transparent" />
                            </Grid>
                        </dxc:BackgroundPanel>
                        <dp:DataPager Grid.Row="1"
                                      HorizontalAlignment="Center" IsTotalItemCountFixed="True"
                                      Source="{Binding DataPagerSource}" PageSize="1" DisplayMode="FirstLastPreviousNext" ShowTotalPageCount="True"
                                      PageIndex="{Binding PagePreviewIndex, Mode=TwoWay}" />
                    </Grid>
                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup x:Name="PART_DockClientPart" Margin="6,0,0,0" ItemLabelsAlignment="Local" Orientation="Vertical" dxlc:DockLayoutControl.Dock="Client" Width="470"  >
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem VerticalAlignment="Center" VerticalContentAlignment="Center" Label="{local:PrintingStringId StringId=Printer}" AddColonToLabel="True" >
                            <dxe:ComboBoxEdit Margin="5,0,0,0" ItemsSource="{Binding Path=PrinterItems}" ApplyItemTemplateToSelectedItem="True" IsTextEditable="False" EditValue="{Binding SelectedPrinter, UpdateSourceTrigger=PropertyChanged}">
                                <dxe:ComboBoxEdit.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="2, 0">
                                            <Image Source="{Binding Path=PrinterType, Converter={StaticResource printerTypeToImageConverter}}"/>
                                            <TextBlock VerticalAlignment="Center" Margin="2,0,2,0" Text="{Binding Path=DisplayName}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </dxe:ComboBoxEdit.ItemTemplate>
                            </dxe:ComboBoxEdit>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem VerticalContentAlignment="Center" Width="120" VerticalAlignment="Center">
                            <Button Command="{Binding Path=PreferencesCommand}" Content="{local:PrintingStringId StringId=Preferences}" />
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=PrinterStatus}" AddColonToLabel="True">
                        <TextBlock Margin="5,0,0,0" Text="{Binding Path=SelectedPrinter.Status}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=PrinterLocation}" AddColonToLabel="True">
                        <TextBlock Margin="5,0,0,0" Text="{Binding Path=SelectedPrinter.Location}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=PrinterComment}" AddColonToLabel="True">
                        <TextBlock Margin="5,0,0,0" Text="{Binding Path=SelectedPrinter.Comment}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=PrinterQueue}" AddColonToLabel="True">
                        <TextBlock Margin="5,0,0,0" Text="{Binding Path=SelectedPrinter.PrinterDocumentsInQueue}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Margin="0,6,0,0" Label="{local:PrintingStringId StringId=Copies}" AddColonToLabel="True" IsEnabled="{Binding AllowCopies}">
                        <dxlc:LayoutGroup Margin="5,0,0,0" Orientation="Horizontal" View="Group">
                            <dxlc:LayoutItem>
                                <dxe:SpinEdit EditValueType="{x:Type sys:Int16}" EditValue="{Binding Path=Copies, UpdateSourceTrigger=PropertyChanged}" MinValue="1" MaxValue="{Binding MaxCopies}"  IsFloatValue="False" AllowRoundOutOfRangeValue="False" ValidateOnTextInput="True"/>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem VerticalAlignment="Center" Width="120">
                                <dxe:CheckEdit EditValue="{Binding Collate, Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="{Binding Path=AllowCollate}"
                                           Content="{local:PrintingStringId StringId=Collate}"/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Margin="0,10,0,0" Label="{local:PrintingStringId StringId=PageRange}" AddColonToLabel="True">
                        <dxe:ListBoxEdit Margin="5,0,0,0" Background="{x:Null}" HorizontalContentAlignment="Stretch" ShowBorder="False" EditValue="{Binding Path=PrintRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <dxe:ListBoxEdit.StyleSettings>
                                <dxe:RadioListBoxEditStyleSettings/>
                            </dxe:ListBoxEdit.StyleSettings>
                            <dxe:ListBoxEditItem Content="{x:Static sysPrinting:PrintRange.AllPages}">
                                <dxe:ListBoxEditItem.ContentTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{local:PrintingStringId StringId=AllPages}" />
                                    </DataTemplate>
                                </dxe:ListBoxEditItem.ContentTemplate>
                            </dxe:ListBoxEditItem>
                            <dxe:ListBoxEditItem Content="{x:Static sysPrinting:PrintRange.CurrentPage}">
                                <dxe:ListBoxEditItem.ContentTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{local:PrintingStringId StringId=CurrentPage}" />
                                    </DataTemplate>
                                </dxe:ListBoxEditItem.ContentTemplate>
                            </dxe:ListBoxEditItem>
                            <dxe:ListBoxEditItem Content="{x:Static sysPrinting:PrintRange.SomePages}">
                                <dxe:ListBoxEditItem.ContentTemplate>
                                    <DataTemplate>
                                        <dxlc:LayoutGroup Orientation="Horizontal" View="Group">
                                            <dxlc:LayoutItem  Label="{local:PrintingStringId StringId=SomePages}">
                                                <dxe:TextEdit 
                                                Grid.Column="1" Margin="5,0,0,0" VerticalAlignment="Center" 
                                                Mask="(\d+(-\d+)?)(,(\d+(-\d+)?))*" 
                                                MaskType="RegEx" MaskShowPlaceHolders="False"
                                                IsEnabled="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=dxe:ListBoxEditItem}}"
                                                EditValue="{Binding Path=(DataContext).CustomPageRange, RelativeSource={RelativeSource AncestorType=dxe:ListBoxEdit}, ValidatesOnDataErrors=True, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem VerticalAlignment="Center" Width="120" >
                                                <TextBlock Text="{local:PrintingStringId StringId=PageRangeHint}" IsEnabled="False" VerticalAlignment="Center" />
                                            </dxlc:LayoutItem>
                                        </dxlc:LayoutGroup>
                                    </DataTemplate>
                                </dxe:ListBoxEditItem.ContentTemplate>
                            </dxe:ListBoxEditItem>
                        </dxe:ListBoxEdit>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Margin="0,10,0,0" Label="{local:PrintingStringId StringId=PaperSource}" AddColonToLabel="True">
                        <Grid Margin="5,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="124"/>
                            </Grid.ColumnDefinitions>
                            <dxe:ComboBoxEdit Grid.Column="0" ItemsSource="{Binding Path=PaperSources}" IsTextEditable="False" EditValue="{Binding PaperSource}" />
                        </Grid>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem Label="{local:PrintingStringId StringId=FilePath}" Margin="0,6,0,0" AddColonToLabel="True">
                        <dxlc:LayoutGroup Margin="5,0,0,0">
                            <dxlc:LayoutItem>
                                <dxe:ButtonEdit x:Name="PART_PrintFileSelectButton" AllowDefaultButton="False" EditValue="{Binding Path=PrintFileName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IsEnabled="{Binding Path=PrintToFile}">
                                    <dxe:ButtonEdit.Buttons>
                                        <dxe:ButtonInfo GlyphKind="Regular" Command="{Binding Path=FileSelectCommand}"/>
                                    </dxe:ButtonEdit.Buttons>
                                </dxe:ButtonEdit>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Width="120" VerticalAlignment="Center">
                                <dxe:CheckEdit EditValue="{Binding Path=PrintToFile, Mode=TwoWay}" VerticalAlignment="Center" Content="{local:PrintingStringId StringId=PrintToFile}"/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:DockLayoutControl>
        </Grid>
    </DataTemplate>
</ResourceDictionary>