<UserControl x:Class="DevExpress.Xpf.PdfViewer.UI.PasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:pdfViewer="clr-namespace:DevExpress.Xpf.PdfViewer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <pdfViewer:PdfViewerStringIdConverter x:Key="PdfViewerStringIdConverter" />
            <pdfViewer:SecureStringToStringConverter x:Key="SecureStringToStringConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Margin="10">
        <TextBlock Text="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=MessageEnterPasswordLabel}" Margin="0,0,0,5"/>
        <dxe:PasswordBoxEdit EditValue="{Binding Path=Password, Mode=TwoWay, Converter={StaticResource SecureStringToStringConverter}}"/>
    </StackPanel>
</UserControl>
