<UserControl x:Class="DevExpress.Xpf.PdfViewer.UI.PropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxpdf="clr-namespace:DevExpress.Xpf.PdfViewer"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <dxpdf:FileSizeConverter x:Key="FileSizeConverter" />
            <dxpdf:PdfViewerStringIdConverter x:Key="PdfViewerStringIdConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <dxlc:LayoutControl Orientation="Vertical">
        <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" Header="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesDescriptionCaption}">
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesFile}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=FileName}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesTitle}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Title}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesAuthor}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Author}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesSubject}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Subject}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesKeywords}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Keywords}"/>
            </dxlc:LayoutItem>
        </dxlc:LayoutGroup>

        <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" Header="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesRevisionCaption}">
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesCreated}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Created}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesModified}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Modified}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesApplication}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Application}"/>
            </dxlc:LayoutItem>
        </dxlc:LayoutGroup>

        <dxlc:LayoutGroup Orientation="Vertical" View="GroupBox" Header="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesAdvancedCaption}">
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesProducer}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Producer}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesVersion}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Version}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesLocation}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=Location}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesFileSize}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=FileSize}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesNumberOfPages}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=NumberOfPages}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="{Binding Source={x:Null}, Converter={StaticResource PdfViewerStringIdConverter}, ConverterParameter=PropertiesPageSize}" AddColonToLabel="True">
                <TextBlock Text="{Binding Path=PageSize}"/>
            </dxlc:LayoutItem>
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</UserControl>
