<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxreui="clr-namespace:DevExpress.Xpf.RichEdit.UI"
    xmlns:dxret="clr-namespace:DevExpress.Xpf.RichEdit.Themes"
    >

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=PageNumberWindowControlTemplate}" TargetType="dxreui:PageNumberWindow">
        <Border Background="#CF505050" Padding="12,5,12,5" CornerRadius="6" SnapsToDevicePixels="True" UseLayoutRounding="True">
            <TextBlock Text="{TemplateBinding Text}" Foreground="White" FontSize="13" SnapsToDevicePixels="True" UseLayoutRounding="True" />
        </Border>
    </ControlTemplate>

</ResourceDictionary>
