<UserControl x:Class="DevExpress.XtraRichEdit.Forms.ColumnsSetupFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxre="clr-namespace:DevExpress.Xpf.RichEdit"
    xmlns:dxreui="clr-namespace:DevExpress.Xpf.RichEdit.UI"
    xmlns:design="clr-namespace:DevExpress.XtraRichEdit"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="500" MinWidth="300" dx:StyleManager.ApplyApplicationTheme="True">

    <UserControl.Resources>
        <dxre:RichEditStringIdConverter x:Key="RichEditStringIdConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <dx:GroupFrame Grid.Row="0" Header="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormPresetsGroup, Converter={StaticResource RichEditStringIdConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <dxreui:ColumnsPresetControl x:Name="columnsPresetControlOne" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormOneColumnPreset, Converter={StaticResource RichEditStringIdConverter}}" />
                <dxreui:ColumnsPresetControl x:Name="columnsPresetControlTwo" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormTwoColumnsPreset, Converter={StaticResource RichEditStringIdConverter}}" />
                <dxreui:ColumnsPresetControl x:Name="columnsPresetControlThree" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormThreeColumnsPreset, Converter={StaticResource RichEditStringIdConverter}}" />
                <dxreui:ColumnsPresetControl x:Name="columnsPresetControlLeft" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormLeftNarrowColumnPreset, Converter={StaticResource RichEditStringIdConverter}}" />
                <dxreui:ColumnsPresetControl x:Name="columnsPresetControlRight" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormRightNarrowColumnPreset, Converter={StaticResource RichEditStringIdConverter}}" />
            </Grid>
        </dx:GroupFrame>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,3,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormNumberOfColumnsLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <dxe:SpinEdit x:Name="edtColumnCount" Margin="3" MinValue="0" VerticalAlignment="Center" MinWidth="60" Grid.Column="1" />
        </Grid>
        <dx:GroupFrame Margin="0,3,0,3" MinHeight="200" Grid.Row="2" Header="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormWidthAndSpacingGroup, Converter={StaticResource RichEditStringIdConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <dxreui:ColumnsEditControl x:Name="columnsEdit" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <dxe:CheckEdit x:Name="chkEqualColumnWidth" Margin="0,3,0,3" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormEqualColumnWidthCheckEdit, Converter={StaticResource RichEditStringIdConverter}}" />
                </Grid>
            </Grid>
        </dx:GroupFrame>
        <Grid Margin="0,3,0,3" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="160" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,3,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ColumnsSetupFormApplyToLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <dxe:ComboBoxEdit Grid.Column="1" x:Name="cbApplyTo" IsTextEditable="False" Margin="3,3,3,3" MinWidth="150" dx:StyleManager.ApplyApplicationTheme="True" />
        </Grid>
    </Grid>
</UserControl>
