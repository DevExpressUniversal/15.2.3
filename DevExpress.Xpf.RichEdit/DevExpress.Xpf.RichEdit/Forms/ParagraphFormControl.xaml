<UserControl x:Class="DevExpress.XtraRichEdit.Forms.ParagraphFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxec="clr-namespace:DevExpress.Xpf.Editors.Controls;assembly=DevExpress.Xpf.Core.v15.2"
             xmlns:dxre="clr-namespace:DevExpress.Xpf.RichEdit"
             xmlns:dxreui="clr-namespace:DevExpress.Xpf.RichEdit.UI"
             dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="ParagraphFormContent" AutomationProperties.Name="ParagraphFormContent">

    <UserControl.Resources>
        <dxre:RichEditStringIdConverter x:Key="RichEditStringIdConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" MinWidth="556" MinHeight="300">
        <dx:DXTabControl Name="tabControl">
            <dx:DXTabControl.View>
                <dx:TabControlScrollView />
            </dx:DXTabControl.View>
            <dx:DXTabItem Header="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormIndentsAndSpacing, Converter={StaticResource RichEditStringIdConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Margin="0,0,0,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormGeneralLabel, Converter={StaticResource RichEditStringIdConverter}}" />
                        <dxec:DXSeparator Grid.Column="1" Margin="3,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
                    </Grid>
                    <Grid Grid.Row="1" Margin="12,0,0,3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="100" />
                            <ColumnDefinition MinWidth="130" />
                            <ColumnDefinition Width="2.2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="0,4,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormAlignmentLabel, Converter={StaticResource RichEditStringIdConverter}}" />
                        <TextBlock Grid.Row="1" Margin="0,2,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormOutlineLevelLabel, Converter={StaticResource RichEditStringIdConverter}}" />
                        <dxreui:AlignmentEdit Grid.Column="1" Margin="0,3,3,3" VerticalAlignment="Center" x:Name="edtAlignment" AutomationProperties.AutomationId="ParagraphAlignment" AutomationProperties.Name="ParagraphAlignment" />
                        <dxe:ComboBoxEdit Grid.Column="1" Grid.Row="1" Margin="0,3,3,3" VerticalAlignment="Center" x:Name="edtOutlineLevel" AutomationProperties.AutomationId="OutlineLevel" AutomationProperties.Name="OutlineLevel"/>
                    </Grid>
                    <Grid Grid.Row="2" Margin="0,6,0,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormIndentationLabel, Converter={StaticResource RichEditStringIdConverter}}" />
                        <dxec:DXSeparator Grid.Column="1" Margin="3,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
                    </Grid>
                    <dxreui:ParagraphIndentationControl Grid.Row="3" Margin="12,3,0,3" x:Name="paragraphIndentationControl" />
                    <Grid Grid.Row="4" Margin="0,6,0,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormSpacingLabel, Converter={StaticResource RichEditStringIdConverter}}" />
                        <dxec:DXSeparator Grid.Column="1" Margin="3,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
                    </Grid>
                    <dxreui:ParagraphSpacingControl x:Name="paragraphSpacingControl" Grid.Row="5" Margin="12,3,0,3" />
                    <dxe:CheckEdit Margin="12,3,0,3" Grid.Row="6" x:Name="chkContextualSpacing" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormContextualSpacingCheckEdit, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="ParagraphContextualSpacing" AutomationProperties.Name="ParagraphContextualSpacing"  />
                </Grid>
            </dx:DXTabItem>
            <dx:DXTabItem Header="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormLineAndPageBreaks, Converter={StaticResource RichEditStringIdConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Margin="0,0,0,3" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormPaginationLabel, Converter={StaticResource RichEditStringIdConverter}}" />
                        <dxec:DXSeparator Grid.Column="1" Margin="3,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                    </Grid>
                    <StackPanel Orientation="Vertical" Margin="20,3,0,0" Grid.Row="1" Grid.ColumnSpan="2">
                        <dxe:CheckEdit x:Name="chkKeepLinesTogether" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormKeepLinesTogetherLabel, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="KeepLinesTogether" AutomationProperties.Name="KeepLinesTogether"  />
                        <dxe:CheckEdit x:Name="chkPageBreakBefore" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_ParagraphFormPageBreakBeforeLabel, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="PageBreakBefore" AutomationProperties.Name="PageBreakBefore"  />
                    </StackPanel>
                </Grid>
            </dx:DXTabItem>
        </dx:DXTabControl>
    </Grid>
</UserControl>