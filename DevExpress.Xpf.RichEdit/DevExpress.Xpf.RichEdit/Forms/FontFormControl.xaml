<UserControl x:Class="DevExpress.XtraRichEdit.Forms.RichEditFontControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxec="clr-namespace:DevExpress.Xpf.Editors.Controls;assembly=DevExpress.Xpf.Core.v15.2"
             xmlns:dxre="clr-namespace:DevExpress.Xpf.RichEdit"
             xmlns:dxreui="clr-namespace:DevExpress.Xpf.RichEdit.UI"
             Loaded="OnLoaded" dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="FontFormContent" AutomationProperties.Name="FontFormContent">

    <UserControl.Resources>
        <dxre:RichEditStringIdConverter x:Key="RichEditStringIdConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Margin="3,3,3,3" MinWidth="300" MinHeight="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid Margin="0,0,0,3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="108" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="200" />
                <ColumnDefinition Width="0.1*" MinWidth="10" />
                <ColumnDefinition MinWidth="100" />
                <ColumnDefinition Width="0.1*" MinWidth="10" />
                <ColumnDefinition MinWidth="50" />
            </Grid.ColumnDefinitions>

            <TextBlock Margin="0,0,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormNameLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <TextBlock Grid.Column="2" Margin="0,0,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormStyleLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <TextBlock Grid.Column="4" Margin="0,0,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormSizeLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <dxreui:AgFontListBox Grid.Row="1" x:Name="lbFontName" AutomationProperties.AutomationId="FontName" AutomationProperties.Name="FontName" />
            <ListBox Grid.Column="2" Grid.Row="1" x:Name="lbFontStyle" AutomationProperties.AutomationId="FontStyle" AutomationProperties.Name="FontStyle">
                <TextBlock Margin="1" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormNormalListBox, Converter={StaticResource RichEditStringIdConverter}}" />
                <TextBlock Margin="1" FontWeight="Bold" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormBoldListBox, Converter={StaticResource RichEditStringIdConverter}}" />
                <TextBlock Margin="1" FontStyle="Italic" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormItalicListBox, Converter={StaticResource RichEditStringIdConverter}}" />
                <TextBlock Margin="1" FontWeight="Bold" FontStyle="Italic" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormBoldItalicListBox, Converter={StaticResource RichEditStringIdConverter}}" />
            </ListBox>
            <dxreui:AgFontSizeListBox Grid.Column="4" Grid.Row="1" x:Name="lbFontSize" />
        </Grid>
        <Grid Grid.Row="1" Margin="0,6,0,3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100" />
                <ColumnDefinition Width="0.1*" MinWidth="10" />
                <ColumnDefinition MinWidth="100" />
                <ColumnDefinition Width="0.1*" MinWidth="10" />
                <ColumnDefinition MinWidth="100" />
            </Grid.ColumnDefinitions>

            <TextBlock Margin="0,0,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormForeColorLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <TextBlock Grid.Column="2" Margin="0,0,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormUnderlineLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <TextBlock Grid.Column="4" Margin="0,0,3,3" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormUnderlineColorLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <dxe:PopupColorEdit Grid.Row="1" VerticalAlignment="Center" x:Name="cbForeColor" AutomationProperties.AutomationId="FontColor" AutomationProperties.Name="FontColor" />
            <dxreui:RichEditUnderlineComboBoxEdit Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" x:Name="cbUnderline" AutomationProperties.AutomationId="UnderlineStyle" AutomationProperties.Name="UnderlineStyle" />
            <dxe:PopupColorEdit Grid.Column="4" Grid.Row="1" VerticalAlignment="Center" x:Name="cbUnderlineColor" AutomationProperties.AutomationId="UnderlineColor" AutomationProperties.Name="UnderlineColor" />
        </Grid>
        <Grid Grid.Row="2" Margin="0,6,0,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormEffectsLabel, Converter={StaticResource RichEditStringIdConverter}}" />
            <dxec:DXSeparator Grid.Column="1" Margin="3,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        </Grid>
        <Grid Grid.Row="3" Margin="0,0,0,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Margin="6,0,0,0" Orientation="Vertical">
                <RadioButton x:Name="cbStrikeNormal" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormStrikeNormalRadioButton, Converter={StaticResource RichEditStringIdConverter}}" GroupName="Strike" IsThreeState="True" AutomationProperties.AutomationId="StrikeNormal" AutomationProperties.Name="StrikeNormal" />
                <RadioButton x:Name="cbStrikeout" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormStrikeoutRadioButton, Converter={StaticResource RichEditStringIdConverter}}" GroupName="Strike" IsThreeState="True" AutomationProperties.AutomationId="Strikeout" AutomationProperties.Name="Strikeout" />
                <RadioButton x:Name="cbDoubleStrikeout" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormDoubleStrikeoutRadionButton, Converter={StaticResource RichEditStringIdConverter}}" GroupName="Strike" IsThreeState="True" AutomationProperties.AutomationId="DoubleStrikeout" AutomationProperties.Name="DoubleStrikeout" />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="3,0,0,0" Orientation="Vertical" HorizontalAlignment="Center">
                <dxe:CheckEdit x:Name="cbSuperscript" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormSuperscriptRadioButton, Converter={StaticResource RichEditStringIdConverter}}" AutomationProperties.AutomationId="Superscript" AutomationProperties.Name="Superscript" />
                <dxe:CheckEdit x:Name="cbSubscript" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormSubscriptRadioButton, Converter={StaticResource RichEditStringIdConverter}}" AutomationProperties.AutomationId="Subscript" AutomationProperties.Name="Subscript" />
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="3,0,0,0">
                <dxe:CheckEdit x:Name="cbAllCaps" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormAllCapsCheckEdit, Converter={StaticResource RichEditStringIdConverter}}" AutomationProperties.AutomationId="AllCaps" AutomationProperties.Name="AllCaps" />
                <dxe:CheckEdit x:Name="cbHidden" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormHiddenCheckEdit, Converter={StaticResource RichEditStringIdConverter}}" AutomationProperties.AutomationId="Hidden" AutomationProperties.Name="Hidden" />
                <dxe:CheckEdit x:Name="cbUnderlineWordsOnly" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FontFormUnderlineWordsOnlyCheckEdit, Converter={StaticResource RichEditStringIdConverter}}" AutomationProperties.AutomationId="UnderlineWordsOnly" AutomationProperties.Name="UnderlineWordsOnly" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
