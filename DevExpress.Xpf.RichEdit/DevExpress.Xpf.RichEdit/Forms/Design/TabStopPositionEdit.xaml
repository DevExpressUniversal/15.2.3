<UserControl x:Class="DevExpress.Xpf.RichEdit.UI.TabStopPositionEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxreui="clr-namespace:DevExpress.Xpf.RichEdit.UI" dx:StyleManager.ApplyApplicationTheme="True">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <dxe:TextEdit x:Name="edtCurrentPosition" />
        <ListBox x:Name="lbPositions" Grid.Row="1" Margin="10,0,0,0" />
    </Grid>
</UserControl>
