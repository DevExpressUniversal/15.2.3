<UserControl x:Class="DevExpress.XtraRichEdit.Forms.InsertTableFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxre="clr-namespace:DevExpress.Xpf.RichEdit"
    xmlns:design="clr-namespace:DevExpress.XtraRichEdit"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="InsertTableFormContent" AutomationProperties.Name="InsertTableFormContent">

    <UserControl.Resources>
        <dxre:RichEditStringIdConverter x:Key="RichEditStringIdConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--<TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_InsertTableFormTableSizeLabel, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,0,0,3" Grid.Row="0" Grid.Column="0"/>-->
        <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_InsertTableFormNumberOfColumnsLabel, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,3,3,3" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
        <dxe:SpinEdit Grid.Row="1" Grid.Column="1" Margin="3,3,0,3" x:Name="spnColumns" MinValue="1" VerticalAlignment="Center" IsFloatValue="False" EditValue="1" AutomationProperties.AutomationId="Columns" AutomationProperties.Name="Columns" />
        <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_InsertTableFormNumberOfRowsLabel, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,3,3,0" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
        <dxe:SpinEdit Grid.Row="2" Grid.Column="1" Margin="3,3,0,0" x:Name="spnRows" MinValue="1" VerticalAlignment="Center" IsFloatValue="False" EditValue="1" AutomationProperties.AutomationId="Rows" AutomationProperties.Name="Rows" />        
    </Grid>
</UserControl>
