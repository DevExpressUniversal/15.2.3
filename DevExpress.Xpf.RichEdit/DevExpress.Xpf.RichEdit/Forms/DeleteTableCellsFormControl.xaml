<UserControl x:Class="DevExpress.XtraRichEdit.Forms.DeleteTableCellsFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxre="clr-namespace:DevExpress.Xpf.RichEdit"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" dx:StyleManager.ApplyApplicationTheme="True">
    
    <UserControl.Resources>
        <dxre:RichEditStringIdConverter x:Key="RichEditStringIdConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <RadioButton x:Name="rbShiftLeft" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_DeleteTableCellsFormShiftCellsLeftRadioButton, Converter={StaticResource RichEditStringIdConverter}}" Grid.Row="0" dx:StyleManager.ApplyApplicationTheme="True" />
        <RadioButton x:Name="rbShiftUp" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_DeleteTableCellsFormShiftCellsUpRadioButton, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,2,0,0" Grid.Row="1" dx:StyleManager.ApplyApplicationTheme="True" />
        <RadioButton x:Name="rbDeleteRow" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_DeleteTableCellsFormDeleteEntireRowRadioButton, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,2,0,0" Grid.Row="2" dx:StyleManager.ApplyApplicationTheme="True" />
        <RadioButton x:Name="rbDeleteColumn" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_DeleteTableCellsFormDeleteEntireColumnRadioButton, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,2,0,0" Grid.Row="3" dx:StyleManager.ApplyApplicationTheme="True" />
    </Grid>
</UserControl>
