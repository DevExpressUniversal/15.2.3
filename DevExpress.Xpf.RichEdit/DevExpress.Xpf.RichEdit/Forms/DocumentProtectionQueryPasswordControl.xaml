<UserControl x:Class="DevExpress.XtraRichEdit.Forms.DocumentProtectionQueryPasswordControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxre="clr-namespace:DevExpress.Xpf.RichEdit"
    xmlns:design="clr-namespace:DevExpress.XtraRichEdit"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" dx:StyleManager.ApplyApplicationTheme="True">

    <UserControl.Resources>
        <dxre:RichEditStringIdConverter x:Key="RichEditStringIdConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_DocumentProtectionQueryPasswordFormPasswordLabel, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,0,30,0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" />
        <dxe:PasswordBoxEdit Grid.Row="1" Grid.Column="1" x:Name="edtPassword" VerticalAlignment="Center" MinWidth="150" Text="" />
    </Grid>
</UserControl>
