<UserControl x:Class="DevExpress.XtraRichEdit.Forms.TableOptionsFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxec="clr-namespace:DevExpress.Xpf.Editors.Controls;assembly=DevExpress.Xpf.Core.v15.2"
    xmlns:dxre="clr-namespace:DevExpress.Xpf.RichEdit"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxreui="clr-namespace:DevExpress.Xpf.RichEdit.UI"
    mc:Ignorable="d" AutomationProperties.AutomationId="TableOptionsFormContent" AutomationProperties.Name="TableOptionsFormContent">

    <UserControl.Resources>
        <dxre:RichEditStringIdConverter x:Key="RichEditStringIdConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="lblDefaultCellMargins" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormDefaultCellMarginsLabel, Converter={StaticResource RichEditStringIdConverter}}" VerticalAlignment="Center" dx:StyleManager.ApplyApplicationTheme="True" />
            <dxec:DXSeparator HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Margin="3,0,0,0" />
        </Grid>

        <Grid Grid.Row="1" Margin="20,3,0,3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition MinWidth="100" />
                <ColumnDefinition Width="0.2*" MinWidth="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition MinWidth="100" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="lblTop" Margin="0,0,3,0" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormTopLabel, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" />
            <dxreui:RichTextIndentEdit x:Name="spnTopMargin" Grid.Column="1" Margin="3" AutomationProperties.AutomationId="TopMargin" AutomationProperties.Name="TopMargin"/>
            <TextBlock x:Name="lblLeft" Grid.Column="3" Margin="0,0,3,0" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormLeftLabel, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" />
            <dxreui:RichTextIndentEdit x:Name="spnLeftMargin" Grid.Column="4" Margin="3" AutomationProperties.AutomationId="LeftMargin" AutomationProperties.Name="LeftMargin"/>

            <TextBlock x:Name="lblBottom" Grid.Row="1" Margin="0,0,3,0" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormBottomLabel, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" />
            <dxreui:RichTextIndentEdit x:Name="spnBottomMargin" Grid.Row="1" Grid.Column="1" Margin="3" AutomationProperties.AutomationId="BottomMargin" AutomationProperties.Name="BottomMargin"/>
            <TextBlock x:Name="lblRight" Grid.Row="1" Grid.Column="3" Margin="0,0,3,0" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormRightLabel, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" />
            <dxreui:RichTextIndentEdit x:Name="spnRightMargin" Grid.Row="1" Grid.Column="4" Margin="3" AutomationProperties.AutomationId="RightMargin" AutomationProperties.Name="RightMargin"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,3,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="lblDefaultCellSpacing" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormDefaultCellSpacingLabel, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" />
            <dxec:DXSeparator HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Margin="3,0,0,0" />
        </Grid>

        <Grid Grid.Row="3" Margin="20,3,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition MinWidth="100" />
            </Grid.ColumnDefinitions>
            <dxe:CheckEdit x:Name="cbAllowCellSpacing" Margin="0,0,3,0" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormAllowSpacingBetweenCellsCheckEdit, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="AllowCellSpacing" AutomationProperties.Name="AllowCellSpacing"/>
            <dxreui:RichTextIndentEdit x:Name="spnSpacingBetweenCells" Grid.Column="1" Margin="3" AutomationProperties.AutomationId="SpacingBetweenCells" AutomationProperties.Name="SpacingBetweenCells" />
        </Grid>

        <Grid Grid.Row="4" Margin="0,3,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="lblOptions" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormOptionsLabel, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" />
            <dxec:DXSeparator HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Margin="3,0,0,0" />
        </Grid>

        <dxe:CheckEdit x:Name="chkResizeToFitContent" Grid.Row="5" Margin="20,3,0,3" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_TableOptionsFormAutomaticallyResizeCheckEdit, Converter={StaticResource RichEditStringIdConverter}}" dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="ResizeToFitContent" AutomationProperties.Name="ResizeToFitContent"/>
    </Grid>
</UserControl>
