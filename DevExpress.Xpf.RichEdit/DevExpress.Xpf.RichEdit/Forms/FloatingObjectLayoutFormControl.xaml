                            <RadioButton x:Name="chkRight" GroupName="rbWrapText" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FloatingObjectLayoutFormRightOnlyRadioButton, Converter={StaticResource RichEditStringIdConverter}}" Margin="3,3,5,3" dx:StyleManager.ApplyApplicationTheme="True" />
                            <RadioButton x:Name="chkLargest" GroupName="rbWrapText" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FloatingObjectLayoutFormLargestOnlyRadioButton, Converter={StaticResource RichEditStringIdConverter}}" Margin="3,3,0,3" dx:StyleManager.ApplyApplicationTheme="True" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="4" Margin="0,0,0,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FloatingObjectLayoutFormDistanceFromTextLabel, Converter={StaticResource RichEditStringIdConverter}}" />
                        <dxec:DXSeparator Grid.Column="1" Margin="3,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
                    </Grid>
                    <Grid Grid.Row="5" Margin="12,0,0,3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" MinWidth="100" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" MinWidth="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="lblTop" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FloatingObjectLayoutFormTopLabel, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,0,3,0" dx:StyleManager.ApplyApplicationTheme="True" />
