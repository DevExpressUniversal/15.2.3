                        </StackPanel>
                        <Grid Grid.Column="1" Margin="12,0,0,3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dxe:ComboBoxEdit Grid.Row="0" x:Name="cbVerticalAlignment" DisplayMember="DisplayText" VerticalAlignment="Center" Margin="3,3,0,3" dx:StyleManager.ApplyApplicationTheme="True" />
                            <dxreui:RichTextIndentEdit Grid.Row="1" Grid.Column="1" x:Name="edtVerticalAbsolutePosition" Margin="3" MinValue="0" VerticalAlignment="Center" MinWidth="60" />
                        </Grid>
                        <Grid Grid.Column="2" Margin="12,0,0,3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="lblVerticalPositionType" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FloatingObjectLayoutFormVerticalPositionTypeLabel, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,0,3,0" dx:StyleManager.ApplyApplicationTheme="True" />
                            <TextBlock Grid.Row="1" x:Name="lblVerticalAbsolutePosition" VerticalAlignment="Center" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_FloatingObjectLayoutFormVerticalAbsolutePositionLabel, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,0,3,0" dx:StyleManager.ApplyApplicationTheme="True" />
                        </Grid>
                        <Grid Grid.Column="3" Margin="12,0,0,3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dxe:ComboBoxEdit Grid.Row="0" x:Name="cbVerticalPositionType" DisplayMember="DisplayText" VerticalAlignment="Center" Margin="3,3,0,3" dx:StyleManager.ApplyApplicationTheme="True" />
