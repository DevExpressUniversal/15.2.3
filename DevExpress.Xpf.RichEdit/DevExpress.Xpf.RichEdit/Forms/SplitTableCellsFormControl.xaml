<UserControl x:Class="DevExpress.XtraRichEdit.Forms.SplitTableCellsFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxre="clr-namespace:DevExpress.Xpf.RichEdit"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" dx:StyleManager.ApplyApplicationTheme="True">

    <UserControl.Resources>
        <dxre:RichEditStringIdConverter x:Key="RichEditStringIdConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="lblNumberOfColumns" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_SplitTableCellsFormNumberOfColumnsLable, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,0,3,0" VerticalAlignment="Center" dx:StyleManager.ApplyApplicationTheme="True" />
        <dxe:SpinEdit x:Name="spnNumberOfColumns" CausesValidation="False" Grid.Column="1" Margin="3,0,0,3" MinValue="1" EditValue="1" IsFloatValue="False" dx:StyleManager.ApplyApplicationTheme="True" />
        <TextBlock x:Name="lblNumberOfRows" Text="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_SplitTableCellsFormNumberOfRowsLable, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,3,3,3" VerticalAlignment="Center" Grid.Row="1" dx:StyleManager.ApplyApplicationTheme="True" />
        <dxe:SpinEdit x:Name="spnNumberOfRows" Grid.Row="1" CausesValidation="False" Grid.Column="1" Margin="3,3,0,3" MinValue="1" EditValue="1" IsFloatValue="False" dx:StyleManager.ApplyApplicationTheme="True" />
        <dxe:CheckEdit x:Name="chkMergeBeforeSplit" Content="{Binding Source={StaticResource RichEditStringIdConverter}, ConverterParameter=Caption_SplitTableCellsFormMergeCellsBeforeSplitCheckEdit, Converter={StaticResource RichEditStringIdConverter}}" Margin="0,3,0,0" Grid.Row="2" Grid.ColumnSpan="2" dx:StyleManager.ApplyApplicationTheme="True" />
    </Grid>
</UserControl>
