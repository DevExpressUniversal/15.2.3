<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DevExpress.Xpf.Map"
    xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map">
    <Style TargetType="local:VectorLayerBase" x:Key="VectorLayerBaseStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:VectorLayerBase">
                    <Canvas x:Name="PART_RootVisual" UseLayoutRounding="False">
                        <local:VectorLayerItemsControl x:Name="PART_Elements">
                            <local:VectorLayerItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <local:VectorLayerPanel/>
                                </ItemsPanelTemplate>
                            </local:VectorLayerItemsControl.ItemsPanel>
                        </local:VectorLayerItemsControl>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTipContentTemplate">
            <Setter.Value>
                <DataTemplate x:Name="toolTipContentTemplate">
                    <TextBlock TextWrapping="Wrap" Text="{Binding ToolTipText}" Margin="20,15,20,18" FontSize="21" Foreground="White"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:VectorLayer" BasedOn="{StaticResource VectorLayerBaseStyle}">
        <Setter Property="ShapeFill">
            <Setter.Value>
                <SolidColorBrush Color="#FFF9F3E1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="ShapeStroke">
            <Setter.Value>
                <SolidColorBrush Color="#FF898989"/>
            </Setter.Value>
        </Setter>
        <!--
        <Setter Property="HighlightShapeFill">
            <Setter.Value>
                <SolidColorBrush Color="Orange"/>
            </Setter.Value>
        </Setter>  -->
        <Setter Property="HighlightShapeStroke">
            <Setter.Value>
                <SolidColorBrush Color="#FF1B293E" />
            </Setter.Value>
        </Setter>
        <Setter Property="HighlightShapeStrokeStyle">
            <Setter.Value>
                <local:StrokeStyle Thickness = "1.0" />
            </Setter.Value>
        </Setter>
        <!--<Setter Property="SelectedShapeFill">
            <Setter.Value>
                <SolidColorBrush Color="#FFF9F3E1"/>
            </Setter.Value>
        </Setter>-->
        <Setter Property="SelectedShapeStroke">
            <Setter.Value>
                <SolidColorBrush Color="#FF1B293E" />
            </Setter.Value>
        </Setter>
        <Setter Property="SelectedShapeStrokeStyle">
            <Setter.Value>
                <local:StrokeStyle Thickness = "2.0" /> 
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:InformationLayer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:InformationLayer">
                    <Grid>
                    <Canvas x:Name="PART_RootVisual" UseLayoutRounding="False">
                            <local:VectorLayerItemsControl x:Name="PART_Elements">
                                <local:VectorLayerItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <local:VectorLayerPanel/>
                                    </ItemsPanelTemplate>
                                </local:VectorLayerItemsControl.ItemsPanel>
                            </local:VectorLayerItemsControl>
                        </Canvas>
                        <local:MapSearchPanel x:Name="PART_SearchPanel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
