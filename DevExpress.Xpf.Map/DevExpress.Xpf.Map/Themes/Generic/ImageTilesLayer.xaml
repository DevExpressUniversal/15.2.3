<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DevExpress.Xpf.Map">
    <Style TargetType="local:ImageTilesLayer">
        <Setter Property="Template">
            <Setter.Value>
                    <ControlTemplate TargetType="local:ImageTilesLayer">
                    <Grid x:Name="PART_RootVisual">
                        <local:MultiScaleImage x:Name="PART_MapImage"
                                           UseSprings="False" 
                                           Source="{Binding Path=DataProvider.TileSource,RelativeSource={RelativeSource TemplatedParent}}"
                                           CacheOptions="{Binding Path=Map.ActualCacheOptions, RelativeSource={RelativeSource TemplatedParent}}"
                                           MapKind="{Binding Path=DataProvider.Kind, RelativeSource={RelativeSource TemplatedParent}}"/>
                        <Grid x:Name="PART_ErrorPanel" Visibility="Collapsed" Margin="2,2,0,0" MinHeight="29" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                            <Border Opacity="0.75" CornerRadius="5" />
                            <TextBlock TextWrapping="Wrap" Text="{Binding}" Margin="32" TextAlignment="Center"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value> 
        </Setter>
    </Style>
</ResourceDictionary>
