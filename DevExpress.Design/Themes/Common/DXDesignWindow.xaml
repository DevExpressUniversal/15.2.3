<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:DevExpress.Design.UI"
    >

    <ControlTemplate x:Key="DXDesignWindowCloseButtonTemplate" TargetType="{x:Type Button}">
        <Grid x:Name="grid" Background="Transparent">
            <Border x:Name="HoverState" Opacity="0" CornerRadius="1" 
                                  Background="{DynamicResource ResourceKey={ui:ThemeColorsKey Key=ColorOrange}}"/>
            <Path x:Name="path" Stretch="Fill" Fill="{DynamicResource ResourceKey={ui:ThemeColorsKey Key=ColorSilver}}" Opacity="0.5" 
                                  Data="F1 M 595,372L 597,372L 600,375L 603,372L 605,372L 601,376L 605,380L 603,380L 600,377L 597,380L 595,380L 599,376L 595,372 Z " 
                              HorizontalAlignment="Center" Height="8" Margin="5,6" VerticalAlignment="Center" Width="10"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" TargetName="HoverState" Value="1"/>
                <Setter Property="Fill" TargetName="path" Value="White"/>
                <Setter Property="Opacity" TargetName="path" Value="1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity" TargetName="path" Value="0.35"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" TargetName="path" Value="0.25"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="DXDesignWindowCloseButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{StaticResource  ResourceKey=DXDesignWindowCloseButtonTemplate}"/>
    </Style>

    <ControlTemplate x:Key="DXDesignWindowTemplate" TargetType="{x:Type ui:DXDesignWindow}">
        <AdornerDecorator>
            <Grid Background="Transparent" Margin="32">
                <Grid.Resources>
                    <Style TargetType="Hyperlink">
                        <Setter Property="Foreground" Value="{DynamicResource ResourceKey={ui:ThemeColorsKey Key=ColorOrange}}"/>
                    </Style>
                </Grid.Resources>
                <Border BorderBrush="#26000000" BorderThickness="1" Background="White" Grid.RowSpan="3">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="32" Direction="-90" Opacity="0.35" ShadowDepth="8"/>
                    </Border.Effect>
                </Border>

                <Button Style="{StaticResource DXDesignWindowCloseButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                        Command="{Binding CloseCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ui:DXDesignWindow}}}"
                      />
                <Grid Margin="40,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock HorizontalAlignment="Left" FontFamily="Segoe UI Light" Text="{Binding Title, Mode=OneWay}" FontSize="24" 
                                           Foreground="{DynamicResource ResourceKey={ui:ThemeColorsKey Key=ColorSilver}}" />
                    <ContentPresenter Grid.Row="1" Grid.RowSpan="2" Margin="0,5,0,0"/>
                    <StackPanel Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                        <Image Source="Images/DXLogo.png" Stretch="None" HorizontalAlignment="Left"/>
                        <TextBlock Foreground="{DynamicResource ResourceKey={ui:ThemeColorsKey Key=ColorSilver}}" Margin="0,5,0,0">
                            <Run Text="{Binding SupportTextLine1, Mode=OneWay}"/>
                            <LineBreak/>
                            <Run Text="{Binding SupportTextLine2, Mode=OneWay}"/>
                            <Hyperlink
                                   Command="{Binding MailToSupportCommand}"
                                   CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ui:DXDesignWindow}}}">
                                <Run Text="{Binding SupportMail, Mode=OneWay}"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </AdornerDecorator>
    </ControlTemplate>
    <Style TargetType="{x:Type ui:DXDesignWindow}">
        <Setter Property="Width" Value="904"/>
        <Setter Property="Height" Value="628"/>
        <Setter Property="Title" Value="{Binding Title, Mode=OneWay}"/>
        <Setter Property="Icon" Value="Images/DX.ico"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Template" Value="{StaticResource ResourceKey=DXDesignWindowTemplate}"/>
    </Style>
</ResourceDictionary>