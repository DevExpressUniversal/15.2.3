<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:DevExpress.Design.UI"
    >
    <ControlTemplate x:Key="MessageDialogCloseButtonTemplate" TargetType="{x:Type Button}">
        <Grid x:Name="grid" Background="Transparent">
            <Border x:Name="HoverState" Opacity="0" CornerRadius="1" 
                                  Background="{DynamicResource ResourceKey={ui:ThemeColorsKey Key=ColorOrange}}"/>
            <Path x:Name="path" Stretch="Fill" Fill="{DynamicResource ResourceKey={ui:ThemeColorsKey Key=ColorSilver}}" Opacity="0.5" 
                                  Data="F1 M 595,372L 597,372L 600,375L 603,372L 605,372L 601,376L 605,380L 603,380L 600,377L 597,380L 595,380L 599,376L 595,372 Z " 
                              HorizontalAlignment="Center" Height="8" Margin="5,6" VerticalAlignment="Center" Width="10"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" TargetName="HoverState" Value="1"/>
                <Setter Property="Fill" TargetName="path" Value="White"/>
                <Setter Property="Opacity" TargetName="path" Value="1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity" TargetName="path" Value="0.35"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" TargetName="path" Value="0.25"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="MessageDialogCloseButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{StaticResource  ResourceKey=MessageDialogCloseButtonTemplate}"/>
    </Style>
    <ControlTemplate x:Key="MessageDialogTemplate" TargetType="{x:Type ui:MessageDialog}">
        <Grid Margin="32" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="#26000000" BorderThickness="1" Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="32" Direction="-90" Opacity="0.35" ShadowDepth="8" />
                </Border.Effect>
            </Border>
            <DockPanel Margin="40,22,40,32">
                <TextBlock Width="300" DockPanel.Dock="Top" 
                        ui:HyperlinkInlineExpression.InlineExpression="{Binding Message, Mode=OneWay}"
                        Style="{DynamicResource ResourceKey={ui:ControlsThemeKey Key=Message}}" />
                <ItemsControl ItemsSource="{Binding Items}" BorderThickness="0" DockPanel.Dock="Bottom">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Result, Mode=OneWay}"     
                                    Command="{Binding OnClick}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ui:MessageDialog}}}"
                                    Style="{DynamicResource ResourceKey={ui:StandardControlsThemeKey Key= Button}}" Width="70" Height="30"
                                    HorizontalAlignment="Center" Margin="4,0,4,0"
                                    />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </Grid>
    </ControlTemplate>
    <Style TargetType="{x:Type ui:MessageDialog}">
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Title" Value="{Binding Title, Mode=OneWay}"/>
        <Setter Property="Icon" Value="Images/DX.ico"/>
        <Setter Property="Template" Value="{StaticResource ResourceKey=MessageDialogTemplate}"/>
    </Style>
</ResourceDictionary>