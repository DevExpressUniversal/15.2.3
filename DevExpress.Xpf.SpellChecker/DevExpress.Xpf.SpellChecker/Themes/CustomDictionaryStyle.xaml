<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:scl="clr-namespace:DevExpress.XtraSpellChecker.Localization"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:local="clr-namespace:DevExpress.Xpf.SpellChecker.Forms"
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core">
    <Style TargetType="{x:Type local:CustomDictionaryControl}">
        <Setter Property="AutomationProperties.AutomationId" Value="CustomDictionaryControl"/>
        <Setter Property="AutomationProperties.Name" Value="CustomDictionaryControl"/>
        <Setter Property="MinHeight" Value="200"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomDictionaryControl}">
                    <local:SizeLimitControl InitialWidth="200" InitialHeight="200">
                        <Grid x:Name="LayoutRoot">
                            <Grid.Resources>
                                <scl:SpellCheckerStringIdConverter x:Key="StringIdConverter" />
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <dxe:TextEdit x:Name="mmWords" Text="{Binding Path=Text, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" VerticalContentAlignment="Stretch" AcceptsReturn="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Visible" AutomationProperties.AutomationId="Words" AutomationProperties.Name="Words"/>
                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
                                <Button x:Name="btnOk" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_EditCustomDictionary_OkButton}" MinWidth="70" Margin="0,0,5,0" Command="{Binding OkCommand, RelativeSource={RelativeSource TemplatedParent}}"  core:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="Ok" AutomationProperties.Name="Ok"/>
                                <Button x:Name="btnCancel" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_EditCustomDictionary_CancelButton}" MinWidth="70" Command="{Binding CancelCommand, RelativeSource={RelativeSource TemplatedParent}}" core:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="Cancel" AutomationProperties.Name="Cancel"/>
                            </StackPanel>
                        </Grid>
                    </local:SizeLimitControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>