<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DevExpress.Xpf.SpellChecker.Forms"
                    xmlns:scl="clr-namespace:DevExpress.XtraSpellChecker.Localization"
                    xmlns:core="clr-namespace:DevExpress.Xpf.Core;assembly=DevExpress.Xpf.Core.v15.2"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:native="clr-namespace:DevExpress.Xpf.SpellChecker.Native">
    <Style TargetType="{x:Type local:SpellingWordStyleControl}">
        <Setter Property="AutomationProperties.AutomationId" Value="SpellingWordStyleControl"/>
        <Setter Property="AutomationProperties.Name" Value="SpellingWordStyleControl"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SpellingWordStyleControl}">
                    <Grid x:Name="LayoutRoot" Margin="5,5,5,5" MinWidth="450">
                        <Grid.Resources>
                            <core:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                            <scl:SpellCheckerStringIdConverter x:Key="StringIdConverter" />
                        </Grid.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="NotInDictionaryWordError_ChangeWord" />
                                <VisualState x:Name="NotInDictionaryWordError_DeleteWord">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnChange">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnDelete">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="RepeatedWordError">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="lblRepeatedWord">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="lblNotInDictionary">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnChange">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnDelete">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnIgnoreAll">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnChangeAll">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnAdd">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="FormEditorSelectionStartChanged">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="lbcSuggestions">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnIgnoreAll">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnIgnore">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnAdd">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnOptions">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnUndoLast">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnChange">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>True</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnChange">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnChangeAll">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.IsEnabled)" Storyboard.TargetName="btnChangeAll">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>True</sys:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="btnDelete">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" MinHeight="200"/>
                            <RowDefinition Height="*" MaxHeight="30" />
                        </Grid.RowDefinitions>
                        <local:SizeLimitControl>
                            <Grid Grid.Row="0" MinWidth="450">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="lblRepeatedWord" Grid.Column="0" Grid.Row="0" Margin="0 0 0 5" Text="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_RepeatedWord}" Visibility="Collapsed"/>
                                <TextBlock x:Name="lblNotInDictionary" Grid.Column="0" Grid.Row="0" Margin="0 0 0 5" Text="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_NotInDictionary}"/>
                                <dxe:TextEdit x:Name="FormEditor" Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" VerticalContentAlignment="Top" SelectAllOnGotFocus="False" AutomationProperties.AutomationId="NotInDictionary" AutomationProperties.Name="NotInDictionary"/>
                                <TextBlock Grid.Column="0" Grid.Row="2" Margin="0 0 0 5" Text="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_Suggestions}" />
                                <dxe:ListBoxEdit x:Name="lbcSuggestions" Grid.Column="0" Grid.Row="3" SelectedIndex="0" ItemsSource="{Binding Path=Suggestions, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" IsEnabled="{Binding Path=HasSuggestions, RelativeSource={RelativeSource TemplatedParent}}" SelectedItem="{native:BindingHelper Path=Suggestion}" native:DoubleClickHelper.DoubleClickCommand="{Binding ChangeCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="Suggestions" AutomationProperties.Name="Suggestions"/>
                                <Grid Grid.Column="1" Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btnIgnore" VerticalAlignment="Center" Margin="7 0 0 0" Grid.Row="0" MinWidth="70" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_IgnoreButton}" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding IgnoreCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="Ignore" AutomationProperties.Name="Ignore"/>
                                    <Button x:Name="btnIgnoreAll" VerticalAlignment="Center" Margin="7 5 0 0" Grid.Row="1" MinWidth="70" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_IgnoreAllButton}" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding IgnoreAllCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="IgnoreAll" AutomationProperties.Name="IgnoreAll"/>
                                    <Button x:Name="btnAdd" VerticalAlignment="Center" Margin="7 5 0 0" Grid.Row="2" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_AddButton}" MinWidth="70" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding AddToDictionaryCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="Add" AutomationProperties.Name="Add"/>
                                </Grid>
                                <Grid Grid.Column="1" Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btnDelete" VerticalAlignment="Center" Margin="7 0 0 0" Grid.Row="0" MinWidth="70" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_DeleteButton}" Visibility="Collapsed" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding DeleteCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="Delete" AutomationProperties.Name="Delete"/>
                                    <Button x:Name="btnChange" VerticalAlignment="Center" Margin="7 0 0 0" Grid.Row="1" MinWidth="70" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_ChangeButton}" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding ChangeCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="Change" AutomationProperties.Name="Change"/>
                                    <Button x:Name="btnChangeAll" VerticalAlignment="Center" Margin="7 5 0 0" Grid.Row="2" MinWidth="70" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_ChangeAllButton}" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding ChangeAllCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="ChangeAll" AutomationProperties.Name="ChangeAll"/>
                                </Grid>
                            </Grid>
                        </local:SizeLimitControl>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnOptions" Margin="0 7 0 0" Grid.Row="1" Grid.Column="0" MinWidth="70" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_OptionsButton}" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding ShowOptionsCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="Options" AutomationProperties.Name="Options"/>
                            <Button x:Name="btnUndoLast" Margin="20 7 0 0" Grid.Row="1" Grid.Column="1" MinWidth="70" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_UndoLastButton}" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding UndoCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="UndoLast" AutomationProperties.Name="UndoLast"/>
                            <Button x:Name="btnCancel" Margin="0 7 0 0" Grid.Row="1" Grid.Column="3" MinWidth="80" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_CancelButton}" core:StyleManager.ApplyApplicationTheme="True" Command="{Binding CancelCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="Cancel" AutomationProperties.Name="Cancel"/>
                            <Button x:Name="btnClose" Margin="0 7 0 0" Grid.Row="1" Grid.Column="3" MinWidth="80" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_CloseButton}" core:StyleManager.ApplyApplicationTheme="True" Visibility="{Binding Path=IsUndoAvailable, Converter={StaticResource BoolToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding CancelCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="Close" AutomationProperties.Name="Close"/>
                        </Grid>
                        <!--<Button x:Name="btnSuggest" Grid.Column="2" Grid.Row="4" MinWidth="70" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_Spelling_SuggestButton}" core:StyleManager.ApplyApplicationTheme="True" Opacity="0" />-->
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>