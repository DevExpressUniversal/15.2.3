<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:scl="clr-namespace:DevExpress.XtraSpellChecker.Localization"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:native="clr-namespace:DevExpress.Xpf.SpellChecker.Native"
                    xmlns:local="clr-namespace:DevExpress.Xpf.SpellChecker.Forms">
    <Style TargetType="{x:Type local:SpellingOptionsControl}">
        <Setter Property="AutomationProperties.AutomationId" Value="SpellingOptionsControl"/>
        <Setter Property="AutomationProperties.Name" Value="SpellingOptionsControl"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SpellingOptionsControl}">
                    <Grid x:Name="LayoutRoot">
                        <StackPanel Orientation="Vertical">
                            <StackPanel.Resources>
                                <scl:SpellCheckerStringIdConverter x:Key="StringIdConverter" />
                            </StackPanel.Resources>
                            <core:GroupFrame Grid.Row="0" Grid.ColumnSpan="2" Header="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_GeneralOptionsGroup}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Image x:Name="imgGeneralOptions" Source="{native:ImageSource Name=GeneralOptions.png}" Stretch="None" Margin="3" VerticalAlignment="Top" Grid.Row="1" />
                                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                                        <dxe:CheckEdit x:Name="chkUpperCase" IsChecked="{Binding Path=IgnoreUpperCase, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_IgnoreWordsInUppercase}" Margin="3" AutomationProperties.AutomationId="UpperCase" AutomationProperties.Name="UpperCase"/>
                                        <dxe:CheckEdit x:Name="chkMixedCase" IsChecked="{Binding Path=IgnoreMixedCaseWords, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_IgnoreWordsInMixedcase}" Margin="3" AutomationProperties.AutomationId="MixedCase" AutomationProperties.Name="MixedCase"/>
                                        <dxe:CheckEdit x:Name="chkNumbers" IsChecked="{Binding Path=IgnoreWordsWithDigits, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_IgnoreWordsWithNumbers}" Margin="3" AutomationProperties.AutomationId="Numbers" AutomationProperties.Name="Numbers"/>
                                        <dxe:CheckEdit x:Name="chkRepeatedWords" IsChecked="{Binding Path=IgnoreRepeatedWords, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_IgnoreRepeatedWords}" Margin="3" AutomationProperties.AutomationId="RepeatedWords" AutomationProperties.Name="RepeatedWords"/>
                                        <dxe:CheckEdit x:Name="chkEmails" IsChecked="{Binding Path=IgnoreEmails, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_IgnoreEmails}" Margin="3" AutomationProperties.AutomationId="Emails" AutomationProperties.Name="Emails"/>
                                        <dxe:CheckEdit x:Name="chkWebSites" IsChecked="{Binding Path=IgnoreUri, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_IgnoreWebSites}" Margin="3" AutomationProperties.AutomationId="WebSitesAndFiles" AutomationProperties.Name="WebSitesAndFiles"/>
                                    </StackPanel>
                                </Grid>
                            </core:GroupFrame>
                            <core:GroupFrame Header="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_EditCustomDictionaryGroup}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Image x:Name="imgCustomDictionary" Source="{native:ImageSource Name=EditCustomDictionary.png}" Stretch="None" Margin="3" VerticalAlignment="Top" Grid.Row="1" />
                                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                                        <TextBlock Text="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_EditCustomDictionary}" Margin="5" />
                                        <Button x:Name="btnEditDictionary" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_EditButton}" Margin="5" HorizontalAlignment="Right" core:StyleManager.ApplyApplicationTheme="True" Padding="15,0,15,0" MinWidth="70" Command="{Binding EditCommand, RelativeSource={RelativeSource TemplatedParent}}" AutomationProperties.AutomationId="EditDictionary" AutomationProperties.Name="EditDictionary"/>
                                    </StackPanel>
                                </Grid>
                            </core:GroupFrame>
                            <core:GroupFrame Header="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_InternationalDictionariesGroup}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Image x:Name="imgInternational" Source="{native:ImageSource Name=InternationalDictionaries.png}" Stretch="None" Margin="3" VerticalAlignment="Top" Grid.Row="1" />
                                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                                        <TextBlock Text="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_InternationalDictionaries}" Margin="5" />
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_Language}" Margin="5" />
                                            <dxe:ComboBoxEdit x:Name="cbLanguage" ItemsSource="{Binding Path=Languages, RelativeSource={RelativeSource TemplatedParent}}" Width="200" Margin="5" AutomationProperties.AutomationId="Language" AutomationProperties.Name="Language">
                                                <dxe:ComboBoxEdit.EditValue>
                                                    <Binding Path="CurrentLanguage" Mode="TwoWay" RelativeSource="{RelativeSource TemplatedParent}">
                                                        <!--BEGIN WPF-->
                                                        <Binding.UpdateSourceTrigger>
                                                            <UpdateSourceTrigger>
                                                                PropertyChanged
                                                            </UpdateSourceTrigger>
                                                        </Binding.UpdateSourceTrigger>
                                                        <!--END WPF-->
                                                    </Binding>
                                                </dxe:ComboBoxEdit.EditValue>
                                            </dxe:ComboBoxEdit>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </core:GroupFrame>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <Button x:Name="btnOk" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_OkButton}" Margin="5" HorizontalAlignment="Left" Command="{Binding OkCommand, RelativeSource={RelativeSource TemplatedParent}}" core:StyleManager.ApplyApplicationTheme="True" Padding="15,0,15,0" MinWidth="70" HorizontalContentAlignment="Center" AutomationProperties.AutomationId="Ok" AutomationProperties.Name="Ok"/>
                                <Button x:Name="btnCancel" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_CancelButton}" Margin="5" HorizontalAlignment="Left" Command="{Binding CancelCommand, RelativeSource={RelativeSource TemplatedParent}}" core:StyleManager.ApplyApplicationTheme="True" Padding="15,0,15,0" MinWidth="70" AutomationProperties.AutomationId="Cancel" AutomationProperties.Name="Cancel"/>
                                <Button x:Name="btnApply" IsEnabled="{Binding Path=IsModified}" Content="{Binding Source={StaticResource StringIdConverter}, Converter={StaticResource StringIdConverter}, ConverterParameter=Form_SpellingOptions_ApplyButton}" Margin="5" HorizontalAlignment="Left" Command="{Binding ApplyCommand, RelativeSource={RelativeSource TemplatedParent}}" core:StyleManager.ApplyApplicationTheme="True" Padding="15,0,15,0" MinWidth="70" AutomationProperties.AutomationId="Apply" AutomationProperties.Name="Apply"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>