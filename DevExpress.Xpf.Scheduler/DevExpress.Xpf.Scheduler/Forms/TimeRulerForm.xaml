<UserControl x:Class="DevExpress.Xpf.Scheduler.UI.EditTimeRulerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxsch="clr-namespace:DevExpress.Xpf.Scheduler"
             xmlns:dxschdui="clr-namespace:DevExpress.Xpf.Scheduler.UI"
             mc:Ignorable="d" 
             Width="310"
             dxsch:SchedulerFormBehavior.Title="{Binding Title}">
    <UserControl.Resources>
        <dxsch:SchedulerControlStringIdConverter x:Key="SchedulerControlStringIdConverter"/>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type dxe:TextEdit}">
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="22" />
        </Style>
        <Style TargetType="{x:Type dxschdui:TimeZoneEdit}">
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="22" />
        </Style>
        <Style TargetType="{x:Type dxe:CheckEdit}">
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="22" />
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="MinHeight" Value="25" />
            <Setter Property="MinWidth" Value="75" />
        </Style>

    </UserControl.Resources>
    <Grid Margin="12" x:Name="MainElement">
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="AUTO"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="AUTO"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_Label, Converter={StaticResource SchedulerControlStringIdConverter}}" HorizontalAlignment="Left" Name="lblCaption" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_TimeZone, Converter={StaticResource SchedulerControlStringIdConverter}}" Grid.Row ="1" HorizontalAlignment="Left" Name="label2" VerticalAlignment="Center" />
        <TextBlock Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_CurrentTime, Converter={StaticResource SchedulerControlStringIdConverter}}" Grid.Row ="3" HorizontalAlignment="Left" Name="label3" VerticalAlignment="Center"/>

        <dxe:TextEdit Grid.Column="1" Name="edtCaption" 
                      AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_Label, Converter={StaticResource SchedulerControlStringIdConverter}}"			
                      EditValue ="{Binding Caption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <dxschdui:TimeZoneEdit Grid.Row="1" Grid.Column="1" x:Name="cbTimeZoneEdit"
                               AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_TimeZone, Converter={StaticResource SchedulerControlStringIdConverter}}"
                               EditValue="{Binding TimeZoneId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <dxe:CheckEdit x:Name="chkDayLightSaving" Grid.Row="2" Grid.Column="1" Content="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_AdjustForDaylightSavingTime, Converter={StaticResource SchedulerControlStringIdConverter}}"
                       EditValue="{Binding AdjustForDaylightSavingTime, Mode=TwoWay}"/>
        <dxe:TextEdit x:Name="tbCurrentTime" Grid.Row="3" 
                      Grid.Column="1" IsReadOnly="True" EditValue="{Binding CurrentTime}"
                      AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_CurrentTime, Converter={StaticResource SchedulerControlStringIdConverter}}"/>
    </Grid>
</UserControl>
