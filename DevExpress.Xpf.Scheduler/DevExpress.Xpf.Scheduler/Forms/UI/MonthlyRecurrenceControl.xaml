<dxschdui:RecurrenceControlBase x:Class="DevExpress.Xpf.Scheduler.UI.MonthlyRecurrenceControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:dxschdui="clr-namespace:DevExpress.Xpf.Scheduler.UI"
            xmlns:dxsch="clr-namespace:DevExpress.Xpf.Scheduler"
            xmlns:dxschdw="clr-namespace:DevExpress.Xpf.Scheduler.Drawing"
            xmlns:dxec="clr-namespace:DevExpress.Xpf.Editors.Controls;assembly=DevExpress.Xpf.Core.v15.2"
             
            xmlns:sys="clr-namespace:System;assembly=mscorlib"
            mc:Ignorable="d" 
            d:DesignHeight="300" d:DesignWidth="300"
            x:Name="MonthlyUserControl">

    <dxschdui:RecurrenceControlBase.Resources>
        <dxschdw:DecimalToConverter x:Key="DecimalToConverter" />
        <dxsch:SchedulerControlStringIdConverter x:Key="SchedulerControlStringIdConverter" />
        <dx:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <dx:EnumToBoolConverter x:Key="EnumToBoolConverter" />
        <dxschdw:InvertedBoolConverter x:Key="invertedBoolConverter" />
    </dxschdui:RecurrenceControlBase.Resources>

    <Grid x:Name="MainElement">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" MinHeight="29" Grid.Row="0">
            <RadioButton GroupName="MonthlyRecurrenceGroup" Name="EveryNDayRadioButton" VerticalAlignment="Center" Checked="EveryNDayRadioButton_Checked"
                             Content="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_Day, Converter={StaticResource SchedulerControlStringIdConverter}}"/>
            <dxe:SpinEdit x:Name="spinMonthlyDay" VerticalAlignment="Center" IsFloatValue="False" 
                              AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_AccessibleText_EveryNDayText, Converter={StaticResource SchedulerControlStringIdConverter}}"
                              MinValue="1" 
                              MaxValue="31" 
                              EditValue="{Binding Path=DayNumber, Mode=TwoWay, Converter={StaticResource DecimalToConverter}, ConverterParameter={x:Type sys:Int32}, UpdateSourceTrigger=PropertyChanged}"
                              Margin="4,0,4,0" MinWidth="58" GotFocus="EveryNDayRadioButton_GotFocus"
                              IsReadOnly="{Binding IsReadOnly}" />
            <TextBlock Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_OfEvery, Converter={StaticResource SchedulerControlStringIdConverter}}" VerticalAlignment="Center" Margin="8,0,8,0" />
            <dxe:SpinEdit x:Name="spinMonthlyDayNumberCountForEveryNDay" VerticalAlignment="Center" IsFloatValue="False" 
                              MinValue="1" 
                              EditValue="{Binding Path=Periodicity, Mode=TwoWay, Converter={StaticResource DecimalToConverter}, ConverterParameter={x:Type sys:Int32}, UpdateSourceTrigger=PropertyChanged}"
                              Margin="4,0,4,0" MinWidth="58" GotFocus="EveryNDayRadioButton_GotFocus"
                              AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_AccessibleText_EveryNDayText, Converter={StaticResource SchedulerControlStringIdConverter}}"
                              IsReadOnly="{Binding IsReadOnly}" />
            <TextBlock Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_MonthOrMonths, Converter={StaticResource SchedulerControlStringIdConverter}}" VerticalAlignment="Center" Margin="8,0,0,0" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,8,0,0">
            <RadioButton GroupName="MonthlyRecurrenceGroup" Name="EveryWeekOfMonthRadioButton" Grid.Row="1" VerticalAlignment="Center" Checked="EveryWeekOfMonthRadioButton_Checked" 
                             Content="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_The, Converter={StaticResource SchedulerControlStringIdConverter}}"/>
            <dxschdui:WeekOfMonthEdit x:Name="weekOfMonth" VerticalAlignment="Center" 
                                       AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_AccessibleText_EveryWeekOfMonthText, Converter={StaticResource SchedulerControlStringIdConverter}}"	
                                       EditValue="{Binding Path=WeekOfMonthNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="4,0,8,0" GotFocus="EveryWeekOfMonthRadioButton_GotFocus" IsReadOnly="{Binding IsReadOnly}" />
            <dxschdui:WeekDaysEdit x:Name="weekDays" VerticalAlignment="Center" 
                                    AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_AccessibleText_EveryWeekOfMonthText, Converter={StaticResource SchedulerControlStringIdConverter}}"
                                    EditValue="{Binding Path=WeekDays, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,4,0" GotFocus="EveryWeekOfMonthRadioButton_GotFocus" IsReadOnly="{Binding IsReadOnly}" />
            <TextBlock Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_OfEvery, Converter={StaticResource SchedulerControlStringIdConverter}}" VerticalAlignment="Center" Margin="8,0,8,0" />
            <dxe:SpinEdit x:Name="spinMonthlyDayNumberCountForEveryWeekOfMonth" VerticalAlignment="Center" IsFloatValue="False" 
                              MinValue="1" 
                              EditValue="{Binding Path=Periodicity, Mode=TwoWay, Converter={StaticResource DecimalToConverter}, ConverterParameter={x:Type sys:Int32}, UpdateSourceTrigger=PropertyChanged}"
                              Margin="4,0,4,0" MinWidth="58" GotFocus="EveryWeekOfMonthRadioButton_GotFocus" 
                              AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_AccessibleText_EveryNDayText, Converter={StaticResource SchedulerControlStringIdConverter}}"
                              IsReadOnly="{Binding IsReadOnly}" />
            <TextBlock Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_MonthOrMonths, Converter={StaticResource SchedulerControlStringIdConverter}}" VerticalAlignment="Center" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>

</dxschdui:RecurrenceControlBase>
