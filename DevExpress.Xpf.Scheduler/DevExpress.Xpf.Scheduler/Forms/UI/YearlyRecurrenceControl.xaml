<dxschdui:RecurrenceControlBase x:Class="DevExpress.Xpf.Scheduler.UI.YearlyRecurrenceControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                xmlns:dxsch="clr-namespace:DevExpress.Xpf.Scheduler"
                xmlns:dxschdui="clr-namespace:DevExpress.Xpf.Scheduler.UI"
                xmlns:dxec="clr-namespace:DevExpress.Xpf.Editors.Controls;assembly=DevExpress.Xpf.Core.v15.2"
                 
                xmlns:sys="clr-namespace:System;assembly=mscorlib"
                xmlns:dxschdw="clr-namespace:DevExpress.Xpf.Scheduler.Drawing"
                x:Name="YearlyUserControl">

    <dxschdui:RecurrenceControlBase.Resources>
        <dxsch:SchedulerControlStringIdConverter x:Key="SchedulerControlStringIdConverter" />
        <dxschdw:DecimalToConverter x:Key="DecimalToConverter" />
        <dx:EnumToBoolConverter x:Key="EnumToBoolConverter" />
        <dx:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <dxschdw:InvertedBoolConverter x:Key="invertedBoolConverter" />
    </dxschdui:RecurrenceControlBase.Resources>

    <Grid x:Name="MainElement"> 
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" MinHeight="29">
            <RadioButton GroupName="YearlyRecurrenceGroup" Name="MonthDayRadioButton" VerticalAlignment="Center" Checked="MonthDayRadioButton_Checked" 
                         Content="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_On, Converter={StaticResource SchedulerControlStringIdConverter}}"/>
            <dxschdui:MonthEdit x:Name="cbYearlyMonth" EditValue="{Binding Path=Month, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 VerticalAlignment="Center" Margin="4,0,8,0" GotFocus="MonthDayRadioButton_GotFocus" IsReadOnly="{Binding IsReadOnly}" />
            <dxe:SpinEdit x:Name="spinYearlyDayNumber" 
                              EditValue="{Binding Path=DayNumber, Mode=TwoWay, Converter={StaticResource DecimalToConverter}, ConverterParameter={x:Type sys:Int32}, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center" IsFloatValue="False" MinValue="1" MaxValue="31" MinWidth="58" GotFocus="MonthDayRadioButton_GotFocus" IsReadOnly="{Binding IsReadOnly}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
            <RadioButton GroupName="YearlyRecurrenceGroup" Name="WeekOfMonthRadioButton" Grid.Row="1" VerticalAlignment="Center" Checked="WeekOfMonthRadioButton_Checked"
                         Content="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_OnThe, Converter={StaticResource SchedulerControlStringIdConverter}}"/>
            <dxschdui:WeekOfMonthEdit x:Name="weekOfMonthEdit" EditValue="{Binding Path=WeekOfMonthNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center" Margin="4,0,8,0" GotFocus="WeekOfMonthRadioButton_GotFocus" IsReadOnly="{Binding IsReadOnly}" />
            <dxschdui:WeekDaysEdit VerticalAlignment="Center" EditValue="{Binding Path=WeekDays, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="WeekOfMonthRadioButton_GotFocus" IsReadOnly="{Binding IsReadOnly}" />
            <TextBlock Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_of, Converter={StaticResource SchedulerControlStringIdConverter}}" VerticalAlignment="Center" Margin="8,0,8,0" />
            <dxschdui:MonthEdit VerticalAlignment="Center" EditValue="{Binding Path=Month, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 GotFocus="WeekOfMonthRadioButton_GotFocus" IsReadOnly="{Binding IsReadOnly}" />
        </StackPanel>
    </Grid>

</dxschdui:RecurrenceControlBase>
