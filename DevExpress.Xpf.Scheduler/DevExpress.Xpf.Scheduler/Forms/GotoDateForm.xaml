<UserControl x:Class="DevExpress.Xpf.Scheduler.UI.GotoDateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxsch="clr-namespace:DevExpress.Xpf.Scheduler"
             xmlns:dxschui="clr-namespace:DevExpress.Xpf.Scheduler.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="OnLoaded">
    <UserControl.Resources>
        <dxsch:SchedulerControlStringIdConverter x:Key="SchedulerControlStringIdConverter"/>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>                
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,4,8" Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_Date, Converter={StaticResource SchedulerControlStringIdConverter}}" />
        <dxe:DateEdit x:Name="edtGotoDate" Grid.Row="0" Margin="0,0,0,8" Grid.Column="1" 
                        EditValue ="{Binding Date, Mode=TwoWay}" Width="150"
                        AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_Date, Converter={StaticResource SchedulerControlStringIdConverter}}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,4,0" Text="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_ShowIn, Converter={StaticResource SchedulerControlStringIdConverter}}"></TextBlock>
        <dxe:ComboBoxEdit x:Name="viewsTypesComboBox" Grid.Row="1" Grid.Column="1"                    
                AutomationProperties.Name="{Binding Source={StaticResource SchedulerControlStringIdConverter}, ConverterParameter=Form_ShowIn, Converter={StaticResource SchedulerControlStringIdConverter}}"
                IsTextEditable="False"                                        
                ItemsSource="{Binding ActualViews}"                    
                EditValue="{Binding TargetViewType, Mode=TwoWay}" DisplayMember="Caption"
                ValueMember="Id" Width="150">
        </dxe:ComboBoxEdit>
    </Grid>
</UserControl>