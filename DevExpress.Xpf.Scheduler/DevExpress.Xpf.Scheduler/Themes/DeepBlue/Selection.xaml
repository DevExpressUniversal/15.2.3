<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:dxsch="clr-namespace:DevExpress.Xpf.Scheduler"
  xmlns:dxschd="clr-namespace:DevExpress.Xpf.Scheduler.Drawing"
  xmlns:dxscht="clr-namespace:DevExpress.Xpf.Scheduler.ThemeKeys"
  >

    <ControlTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=SelectionTemplate}" TargetType="dxschd:SchedulerSelection">
        <Grid IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Path StrokeThickness="2" Fill="#bad8fc" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.5">
                <Path.Data>
                    <PathGeometry x:Name="Geometry" FillRule="EvenOdd">
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>