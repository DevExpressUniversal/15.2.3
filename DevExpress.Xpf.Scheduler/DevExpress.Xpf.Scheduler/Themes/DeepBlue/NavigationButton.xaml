                        <Border x:Name="hover" Background="#FF668CC4" CornerRadius="3" Padding="1" Visibility="Collapsed">
                            <Border CornerRadius="2">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#FFD6E8FF" Offset="0"/>
                                        <GradientStop Color="#FFBAD5F9" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                        <Border x:Name="pressed" Background="#FF5A7CAF" CornerRadius="3" Padding="1" Visibility="Collapsed">
                            <Border CornerRadius="2" Background="#FF84A1C8"/>
                        </Border>
                        <Grid x:Name="glyph" HorizontalAlignment="Center" Height="10" VerticalAlignment="Center" Width="6" Margin="1,0,0,0" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                                    <SkewTransform AngleY="0" AngleX="0"/>
                                    <RotateTransform Angle="0"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Grid.RenderTransform>
                            <Path Stretch="Fill" Fill="White" Data="F1 M 1334,811L 1330,807L 1334,803L 1334,811 Z " UseLayoutRounding="False" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="1,2,1,0" Opacity="0.25"/>
                            <Path Stretch="Fill" Fill="#FF2F4C8A" Data="F1 M 1334,811L 1330,807L 1334,803L 1334,811 Z " UseLayoutRounding="False" Margin="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>


            </Setter.Value>
        </Setter>
    </Style>


    <DataTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=NavigationButtonsPair}">
        <Grid HorizontalAlignment="Stretch" >
            <dxschd:VisualNavigationButton HorizontalAlignment="Left"
                                           Cursor="Hand" IsHitTestVisible="True" dxsch:SchedulerControl.HitTestType="NavigationButton"
                                        VerticalAlignment="Center"
                                        Style="{Binding Path=View.NavigationButtonPrevStyle}"
                                        ButtonInfo="{Binding PrevNavButtonInfo}"/>
            <dxschd:VisualNavigationButton HorizontalAlignment="Right"
                                           Cursor="Hand" IsHitTestVisible="True" dxsch:SchedulerControl.HitTestType="NavigationButton"
                                        VerticalAlignment="Center"
                                        Style="{Binding Path=View.NavigationButtonNextStyle}"
                                        ButtonInfo="{Binding NextNavButtonInfo}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>
