<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxsch="clr-namespace:DevExpress.Xpf.Scheduler" 
    xmlns:dxscht="clr-namespace:DevExpress.Xpf.Scheduler.ThemeKeys" 
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" 
    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes;assembly=DevExpress.Xpf.Core.v15.2" 
    xmlns:dxtk="clr-namespace:DevExpress.Xpf.Core;assembly=DevExpress.Xpf.Core.v15.2" 
    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
     >

    <ControlTemplate x:Key="{dxscht:SchedulerControlThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <!--BEGIN TOSLONLY REPLACE 'ContextMenu="{x:Null}"''-->
        <Border ContextMenu="{x:Null}">
            <!--END TOSLONLY REPLACE 'ContextMenu="{x:Null}"''-->
                    <Grid>
                        <Border Background="#FF021743" CornerRadius="5" Opacity="1" Padding="1">
                            <Border Width="Auto" Height="Auto" CornerRadius="4" Padding="1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,0.992" StartPoint="0.5,0.003" SpreadMethod="Pad">
                                        <GradientStop Color="#FFE4F0FF" Offset="0" />
                                        <GradientStop Color="#FF88A6CC" Offset="1" />
                                        <GradientStop Color="#FFADD0FB" Offset="0.058" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border CornerRadius="3" Width="Auto" Height="Auto">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,0.992" StartPoint="0.5,0.003" SpreadMethod="Pad">
                                            <GradientStop Color="#FFB0D3FF" Offset="0" />
                                            <GradientStop Color="#FF88A6CC" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>
                        </Border>
                        <ContentPresenter Margin="4" />
                    </Grid>
                </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxscht:SchedulerControlThemeKey ResourceKey=InvisibleBorderTemplate}" TargetType="{x:Type ContentControl}">
        <!--BEGIN TOSLONLY REPLACE 'ContextMenu="{x:Null}"''-->
        <Border ContextMenu="{x:Null}">
            <!--END TOSLONLY REPLACE 'ContextMenu="{x:Null}"''-->
            <Grid>
                <Border Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,0.992" StartPoint="0.5,0.003" SpreadMethod="Pad">
                            <GradientStop Color="#FFE4F0FF" Offset="0" />
                            <GradientStop Color="#FF88A6CC" Offset="1" />
                            <GradientStop Color="#FFADD0FB" Offset="0.058" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0.992" StartPoint="0.5,0.003" SpreadMethod="Pad">
                                <GradientStop Color="#FFB0D3FF" Offset="0" />
                                <GradientStop Color="#FF88A6CC" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
                <ContentPresenter Margin="3" />
            </Grid>
        </Border>
    </ControlTemplate>
    <Style x:Key="{dxscht:SchedulerUIControlThemeKey ResourceKey=ColorMarkerStyle}" TargetType="{x:Type FrameworkElement}">
        <Setter Property="Margin" Value="2,1,0,1" />
    </Style>

    <Style x:Key="{dxscht:SchedulerControlThemeKey ResourceKey=SchedulerRoot}" TargetType="{x:Type dx:XPFContentControl}" />
    <!--ONLY SL
    <Style x:Key="{dxscht:SchedulerUIControlThemeKey ResourceKey=TextBlockStyle}" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="Margin" Value="4,2,4,2" />
    ONLY SL-->
    <!--BEGIN WPF-->
    <Style x:Key="{dxscht:SchedulerUIControlThemeKey ResourceKey=TextBlockStyle}" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {dxet:TextEditThemeKey ResourceKey=TextBlockStyle}}">
    <!--END WPF-->
        <Setter Property="Padding" Value="0" />
    </Style>
    <Style x:Key="{dxscht:SchedulerUIControlThemeKey ResourceKey=ItemTextBlockStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="4,2,4,2" />
    </Style>
</ResourceDictionary>