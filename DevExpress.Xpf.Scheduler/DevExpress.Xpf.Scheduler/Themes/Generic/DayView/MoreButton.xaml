<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxsch="clr-namespace:DevExpress.Xpf.Scheduler"
    xmlns:dxscht="clr-namespace:DevExpress.Xpf.Scheduler.ThemeKeys"
    xmlns:dxschd="clr-namespace:DevExpress.Xpf.Scheduler.Drawing"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core">

    <!--More Button-->
    <Style TargetType="{x:Type dxschd:DayViewMoreButtonControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dxschd:DayViewMoreButtonControl}">
                    <Canvas x:Name="moreButtonCanvas" Style="{DynamicResource {dxscht:DayViewThemeKey ResourceKey=MoreButtonContainerStyle}}">
                        <dxschd:StretchPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Canvas.Top="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ScrollViewer.VerticalOffset}" Height="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ScrollViewer.ViewportHeight, Converter={dxschd:DoubleLimitToInfinityConverter}}">
                            <Button VerticalAlignment="Top" HorizontalAlignment="Right"
                                    Style="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=View.MoreButtonUpStyle}"
                                    Command="{Binding DownMoreButton.Command, RelativeSource={RelativeSource TemplatedParent}}"
                                    CommandParameter="{Binding ScrollViewer, RelativeSource={RelativeSource TemplatedParent}}"
                                    Visibility="{Binding DownMoreButton.Visibility, RelativeSource={RelativeSource TemplatedParent}}"
                                    Margin="0,2,1,0" />
                            <Button VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                    Style="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=View.MoreButtonDownStyle}"
                                    Command="{Binding UpMoreButton.Command, RelativeSource={RelativeSource TemplatedParent}}"
                                    CommandParameter="{Binding ScrollViewer, RelativeSource={RelativeSource TemplatedParent}}"
                                    Visibility="{Binding UpMoreButton.Visibility, RelativeSource={RelativeSource TemplatedParent}}"
                                    Margin="0,0,1,3"/>
                        </dxschd:StretchPanel>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>